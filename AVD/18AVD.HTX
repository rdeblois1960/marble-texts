\v 6 <a name="01802700600006" ll="SDBH:חזק:000021:Engage">تَمَسَّكْتُ</a> <a name="01802700600004" ll="SDBH:צְדָקָה:000001:Right">بِبِرِّي</a> <a name="01802700600010" ll="SDBH:לֹא:000000:Negators">وَلاَ</a> <a name="01802700600012" ll="SDBH:רפה:000007:Non-Engage">أَرْخِيهِ</a>. <a name="01802700600018" ll="SDBH:לֵבָב:000001:Think">قَلْبِي</a> <a name="01802700600014" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01802700600016" ll="SDBH:חרף:000000:Shame">يُعَيِّرُ</a> <a name="01802700600022" ll="SDBH:יֹום:000004:Time">يَوْمًا</a> مِنْ أَيَّامِي.
\v 7 <a name="01802700700002">لِيَكُنْ</a> عَدُوِّي <a name="01802700700006" ll="SDBH:רָשָׁע:000000:Guilty">كَالشِّرِّيرِ</a>، <a name="01802700700012">وَمُعَانِدِي</a> <a name="01802700700016" ll="SDBH:עַוָּל:000000:Evil">كَفَاعِلِ</a> ٱلشَّرِّ.
\v 8 لأَنَّهُ مَا هُوَ <a name="01802700800006" ll="SDBH:תִּקְוָה:001000:Confident">رَجَاءُ</a> <a name="01802700800008" ll="SDBH:חָנֵף:000000:Evil">ٱلْفَاجِرِ</a> عِنْدَمَا <a name="01802700800012" ll="SDBH:בצע:000001:Dead" tl="HOTTP1945">يَقْطَعُهُ</a>، عِنْدَمَا يَسْلِبُ <a name="01802700800018" ll="SDBH:אֱלֹוהַּ:000001:Deities" tl="HOTTP1946">ٱللّٰهُ</a> <a name="01802700800020" ll="SDBH:נֶפֶשׁ:000001:Parts: Creatures">نَفْسَهُ</a>؟
\v 9 <a name="01802700900006">أَفَيَسْمَعُ</a> <a name="01802700900008" ll="SDBH:אֵל:000001:Deities">ٱللّٰهُ</a> <a name="01802700900004" ll="SDBH:צְעָקָה:000000:Sounds|Shout">صُرَاخَهُ</a> إِذَا <a name="01802700900012">جَاءَ</a> عَلَيْهِ <a name="01802700900016" ll="SDBH:צָרָה:000000:Unsafe">ضِيقٌ</a>؟
\v 10 أَمْ <a name="01802701000008" ll="SDBH:ענג:001000:Rejoice">يَتَلَذَّذُ</a> <a name="01802701000006" ll="SDBH:שַׁדַּי:000000:Names of Deities">بِالْقَدِيرِ</a>؟ هَلْ <a name="01802701000010" ll="SDBH:קרא:000000:Shout">يَدْعُو</a> <a name="01802701000012" ll="SDBH:אֱלֹוהַּ:000001:Deities">ٱللّٰهَ</a> فِي كُلِّ <a name="01802701000018" ll="SDBH:עֵת:000001:Time">حِينٍ</a>؟
\v 11 إِنِّي <a name="01802701100002" ll="SDBH:ירה:002000:Know">أُعَلِّمُكُمْ</a> <a name="01802701100008">بِيَدِ</a> <a name="01802701100010" ll="SDBH:אֵל:000001:Deities">ٱللّٰهِ</a>. <a name="01802701100018" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01802701100020" ll="SDBH:כחד:000001:Non-Know">أَكْتُمُ</a> مَا هُوَ عِنْدَ <a name="01802701100016" ll="SDBH:שַׁדַּי:000000:Names of Deities">ٱلْقَدِيرِ</a>.
\v 12 هَا أَنْتُمْ <a name="01802701200006">كُلُّكُمْ</a> قَدْ <a name="01802701200008" ll="SDBH:חזה:000003:Know">رَأَيْتُمْ</a>، فَلِمَاذَا <a name="01802701200018" ll="SDBH:הבל:000000:Fail">تَتَبَطَّلُونَ</a> تَبَطُّلاً؟ قَائِلِينَ:
\v 13 هٰذَا <a name="01802701300004" ll="SDBH:חֵלֶק:000004:Engage">نَصِيبُ</a> <a name="01802701300006" ll="SDBH:אָדָם:000000:People">ٱلْإِنْسَانِ</a> <a name="01802701300008" ll="SDBH:רָשָׁע:000000:Guilty">ٱلشِّرِّيرِ</a> مِنْ عِنْدِ <a name="01802701300012" ll="SDBH:אֵל:000001:Deities">ٱللّٰهِ</a>، وَمِيرَاثُ <a name="01802701300018" ll="SDBH:עָרִיץ:000000:Ferocious">ٱلْعُتَاةِ</a> ٱلَّذِي <a name="01802701300024" ll="SDBH:לקח:000000:Hold">يَنَالُونَهُ</a> مِنَ <a name="01802701300022" ll="SDBH:שַׁדַּי:000000:Names of Deities">ٱلْقَدِيرِ</a>.
\v 14 إِنْ <a name="01802701400004" ll="SDBH:רבה:000000:Quantity|Frequency">كَثُرَ</a> بَنُوهُ <a name="01802701400010" ll="SDBH:חֶרֶב:000003:Conflict" il="LB00202;NBGmk20130711a;NBGmk20130711b;NBGmk20130711c;adr1305240787">فَلِلسَّيْفِ</a>، وَذُرِّيَّتُهُ <a name="01802701400016" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01802701400018" ll="SDBH:שׂבע:000000:Contain">تَشْبَعُ</a> <a name="01802701400020" ll="SDBH:לֶחֶם:000000:Bread" il="Tandir_bread;tb061116157">خُبْزًا</a>.
\v 15 <a name="01802701500002" ll="SDBH:שָׂרִיד:000000:Exist">بَقِيَّتُهُ</a> <a name="01802701500012" ll="SDBH:קבר:000001:Dead">تُدْفَنُ</a> <a name="01802701500010" ll="SDBH:מָוֶת:000001:Dead">بِالْمَوْتَانِ</a>، <a name="01802701500016" ll="SDBH:אַלְמָנָה:000000:Classes">وَأَرَامِلُهُ</a> <a name="01802701500018" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01802701500020" ll="SDBH:בכה:000000:Grieve">تَبْكِي</a>.
\v 16 إِنْ <a name="01802701600004" ll="SDBH:צבר:000000:Gather">كَنَزَ</a> <a name="01802701600012" ll="SDBH:כֶּסֶף:000000:Metals" il="NBGpb20140401">فِضَّةً</a> <a name="01802701600010" ll="SDBH:עָפָר:000000:Dust">كَالتُّرَابِ</a>، <a name="01802701600022" ll="SDBH:כון:000001:Space">وَأَعَدَّ</a> مَلاَبِسَ <a name="01802701600020" ll="SDBH:חֹמֶר:000000:Dust">كَالطِّينِ</a>،
\v 17 فَهُوَ <a name="01802701700002" ll="SDBH:כון:000001:Space">يُعِدُّ</a> <a name="01802701700006" ll="SDBH:צַדִּיק:000000:Innocent">وَٱلْبَارُّ</a> <a name="01802701700008">يَلْبَسُهُ</a>، <a name="01802701700014" ll="SDBH:נָקִי:000000:Innocent">وَٱلْبَرِئُ</a> <a name="01802701700016" ll="SDBH:חלק:000005:Possess">يَقْسِمُ</a> <a name="01802701700012" ll="SDBH:כֶּסֶף:000000:Metals" il="NBGpb20140401">ٱلْفِضَّةَ</a>.
\v 18 <a name="01802701800002" ll="SDBH:בנה:000000:Exist">يَبْنِي</a> <a name="01802701800010" ll="SDBH:בַּיִת:000000:Buildings" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20140917;NBGmk20120826;NBGmk20120826a">بَيْتَهُ</a> <a name="01802701800008" ll="SDBH:עָשׁ:000000:Swarming Creatures" tl="HOTTP1947" il="Tineola_bisselliella-2;Tineola_bisselliella_larva;Fauna0057;Fauna0058">كَالْعُثِّ</a>، أَوْ <a name="01802701800016" ll="SDBH:סֻכָּה:000000:Tents" il="Bolen00432">كَمَظَلَّةٍ</a> <a name="01802701800018">صَنَعَهَا</a> <a name="01802701800020" ll="SDBH:נצר:000000:See">ٱلنَّاطُورُ</a>.
\v 19 <a name="01802701900004" ll="SDBH:שׁכב:000000:Stance">يَضْطَجعُ</a> <a name="01802701900002" ll="SDBH:עָשִׁיר:000000:Rich">غَنِيًّا</a> وَلكِنَّهُ <a name="01802701900008" ll="SDBH:לֹא:000000:Negators" tl="HOTTP1948">لاَ</a> يُضَمُّ. <a name="01802701900014" ll="SDBH:פקח:000001:Awake">يَفْتَحُ</a> <a name="01802701900012" ll="SDBH:עַיִן:000000:Parts: Creatures">عَيْنَيْهِ</a> وَلاَ يَكُونُ.
\v 20 <a name="01802702000010" ll="SDBH:בַּלָּהָה:000000:Afraid">ٱلْأَهْوَالُ</a> <a name="01802702000002" ll="SDBH:נשׂג:000001:Happen">تُدْرِكُهُ</a> <a name="01802702000008" ll="SDBH:מַיִם:000000:Liquids" tl="HOTTP1949" il="Water_drop_001">كَالْمِيَاهِ</a>. <a name="01802702000012" ll="SDBH:לַיְלָה:000000:Time">لَيْلاً</a> <a name="01802702000014" ll="SDBH:גנב:000000:Possess">تَخْتَطِفُهُ</a> <a name="01802702000016" ll="SDBH:סוּפָה:000000:Air" il="Whirlwind">ٱلزَّوْبَعَةُ</a>.
\v 21 <a name="01802702100002" ll="SDBH:נשׂא:000003:Hold">تَحْمِلُهُ</a> <a name="01802702100004" ll="SDBH:קָדִים:000002:Air" il="Gale_Force_Winds">ٱلشَّرْقِيَّةُ</a> فَيَذْهَبُ، <a name="01802702100012" ll="SDBH:שׂער:001002:Move">وَتَجْرُفُهُ</a> مِنْ <a name="01802702100016" ll="SDBH:מָקֹום:000000:Space">مَكَانِهِ</a>.
\v 22 <a name="01802702200004" ll="SDBH:שׁלך:000000:Move">يُلْقِي</a> ٱللّٰهُ عَلَيْهِ <a name="01802702200010" ll="SDBH:לֹא:000000:Negators">وَلاَ</a> <a name="01802702200012" ll="SDBH:חמל:000002:Lax">يُشْفِقُ</a>. مِنْ <a name="01802702200016">يَدِهِ</a> <a name="01802702200018" ll="SDBH:ברח:000000:Move">يَهْرُبُ</a> <a name="01802702200020" ll="SDBH:ברח:000000:Move">هَرْبًا</a>.
\v 23 <a name="01802702300002" ll="SDBH:שׂפק:000000:Despise">يَصْفِقُونَ</a> عَلَيْهِ <a name="01802702300006" ll="SDBH:כַּף:000005:Impact">بِأَيْدِيهِمْ</a>، <a name="01802702300010" ll="SDBH:שׁרק:000000:Sounds">وَيَصْفِرُونَ</a> عَلَيْهِ مِنْ <a name="01802702300016" ll="SDBH:מָקֹום:000000:Space">مَكَانِهِ</a>.
\c 28
\v 1 لأَنَّهُ <a name="01802800100004">يُوجَدُ</a> <a name="01802800100010" ll="SDBH:כֶּסֶף:000000:Metals" il="NBGpb20140401">لِلْفِضَّةِ</a> <a name="01802800100012" ll="SDBH:מֹוצָא:000002:Detach">مَعْدَنٌ</a>، <a name="01802800100016" ll="SDBH:מָקֹום:000000:Space">وَمَوْضِعٌ</a> <a name="01802800100022" ll="SDBH:זָהָב:000000:Metals" il="Bolen00041;Bolen00050;adr1306212575;adr1006039110">لِلذَّهَبِ</a> حَيْثُ <a name="01802800100024" ll="SDBH:זקק:000000:Clean">يُمَحِّصُونَهُ</a>.
\v 2 <a name="01802800200002" ll="SDBH:בַּרְזֶל:000000:Metals">ٱلْحَدِيدُ</a> <a name="01802800200008" ll="SDBH:לקח:000002:Possess">يُسْتَخْرَجُ</a> مِنَ <a name="01802800200006" ll="SDBH:עָפָר:000000:Dust">ٱلتُّرَابِ</a>، <a name="01802800200012" ll="SDBH:אֶבֶן:000001:Stone" il="tb041105516">وَٱلْحَجَرُ</a> يَسْكُبُ <a name="01802800200016" ll="SDBH:נְחוּשָׁה:000000:Metals">نُحَاسًا</a>.
\v 3 قَدْ <a name="01802800300004" ll="SDBH:שׂים:000013:Happen">جَعَلَ</a> <a name="01802800300010" ll="SDBH:חֹשֶׁךְ:000000:Dark">لِلظُّلْمَةِ</a> <a name="01802800300002" ll="SDBH:קֵץ:000000:Non-Happen">نَهَايَةً</a>، وَإِلَى كُلِّ <a name="01802800300018" ll="SDBH:תַּכְלִית:000000:Orientation">طَرَفٍ</a> هُوَ <a name="01802800300022" ll="SDBH:חקר:000000:Know">يَفْحَصُ</a>. <a name="01802800300024" ll="SDBH:אֶבֶן:000001:Stone" tl="HOTTP1950" il="tb041105516">حَجَرَ</a> <a name="01802800300026" ll="SDBH:אֹפֶל:000000:Dark" tl="HOTTP1950">ٱلظُّلْمَةِ</a> <a name="01802800300030" ll="SDBH:צַלְמָוֶת:000000:Dark" tl="HOTTP1950">وَظِلَّ</a> ٱلْمَوْتِ.
\v 4 <a name="01802800400002" ll="SDBH:פרץ:000001:Impact">حَفَرَ</a> <a name="01802800400004" ll="SDBH:נַחַל:000000:Landforms|Waterbodies" tl="HOTTP1951" il="NBGbs20090428-1_39;tb110603119">مَنْجَمًا</a> <a name="01802800400008" tl="HOTTP1951">بَعِيدًا</a> عَنِ <a name="01802800400010" ll="SDBH:גור:000000:Dwell" tl="HOTTP1951">ٱلسُّكَّانِ</a>. بِلاَ <a name="01802800400014" ll="SDBH:שׁכח:000000:Non-Know">مَوْطِئٍ</a> <a name="01802800400018" ll="SDBH:רֶגֶל:000014:Move">لِلْقَدَمِ</a>، <a name="01802800400020" ll="SDBH:דלל:001000:Hang" tl="HOTTP1952">مُتَدَلِّينَ</a> بَعِيدِينَ مِنَ <a name="01802800400024" ll="SDBH:אֱנֹושׁ:000000:People" tl="HOTTP1952">ٱلنَّاسِ</a> <a name="01802800400026" ll="SDBH:נוע:000000:Shake" tl="HOTTP1952">يَتَدَلْدَلُونَ</a>.
\v 5 <a name="01802800500002" ll="SDBH:אֶרֶץ:000000:Land">أَرْضٌ</a> <a name="01802800500006" ll="SDBH:יצא:000000:Move">يَخْرُجُ</a> مِنْهَا <a name="01802800500008" ll="SDBH:לֶחֶם:000000:Bread" il="Tandir_bread;tb061116157">ٱلْخُبْزُ</a>، <a name="01802800500012">أَسْفَلُهَا</a> <a name="01802800500014" ll="SDBH:הפך:000008:Different">يَنْقَلِبُ</a> كَمَا <a name="01802800500018" ll="SDBH:אֵשׁ:000000:Fire" il="Fire02">بِالنَّارِ</a>.
\v 6 <a name="01802800600006" ll="SDBH:אֶבֶן:000001:Stone" il="tb041105516">حِجَارَتُهَا</a> هِيَ <a name="01802800600002" ll="SDBH:מָקֹום:000000:Space">مَوْضِعُ</a> <a name="01802800600004" ll="SDBH:סַפִּיר:000000:Gemstones" il="Precious_stones;Sapphire">ٱلْيَاقُوتِ</a> ٱلْأَزْرَقِ، وَفِيهَا <a name="01802800600010" ll="SDBH:עָפָר:000000:Dust">تُرَابُ</a> <a name="01802800600012" ll="SDBH:זָהָב:000000:Metals" il="Bolen00041;Bolen00050;adr1306212575;adr1006039110">ٱلذَّهَبِ</a>.
\v 7 <a name="01802800700002" ll="SDBH:נָתִיב:000000:Roads">سَبِيلٌ</a> <a name="01802800700004" ll="SDBH:לֹא:000000:Negators">لَمْ</a> <a name="01802800700006">يَعْرِفْهُ</a> <a name="01802800700008" ll="SDBH:עַיִט:000000:Birds" il="HK00077;BK00074;LB00075;BK00073;Fauna:3.2f;Fauna:3.8b;Fauna:3.8a;Egyptian_Vulture_01;Neophron-1;Gaensegeier2;Fauna0031;Fauna0032">كَاسِرٌ</a>، <a name="01802800700012" ll="SDBH:לֹא:000000:Negators">وَلَمْ</a> <a name="01802800700014" ll="SDBH:שׁזף:000000:See">تُبْصِرْهُ</a> <a name="01802800700016" ll="SDBH:עַיִן:000000:Parts: Creatures">عَيْنُ</a> <a name="01802800700018" ll="SDBH:אַיָּה:000000:Birds" il="Fauna:3.10a;Fauna:3.10b;Fauna:3.10c">بَاشِق</a>،
\v 8 <a name="01802800800002" ll="SDBH:לֹא:000000:Negators">وَلَمْ</a> <a name="01802800800004" ll="SDBH:דרך:000000:Move">تَدُسْهُ</a> أَجْرَاءُ <a name="01802800800008" ll="SDBH:שַׁחַץ:000001:Wild Animals" il="LB00047;HK00046;Fauna:2.24a;Fauna:2.24b;Fauna:2.24c">ٱلسَّبْعِ</a>، <a name="01802800800010" ll="SDBH:לֹא:000000:Negators">وَلَمْ</a> <a name="01802800800012" ll="SDBH:עדה:000000:Move">يَعْدُهُ</a> <a name="01802800800016" ll="SDBH:שַׁחַל:000000:Wild Animals" il="LB00047;HK00046;Fauna:2.24a;Fauna:2.24b;Fauna:2.24c">ٱلزَّائِرُ</a>.
