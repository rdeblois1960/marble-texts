\v 15 أَمَّا <a name="01800601500002" ll="SDBH:אָח:000003:Friends">إِخْوَانِي</a> فَقَدْ <a name="01800601500004" ll="SDBH:בגד:000000:Unfaithful">غَدَرُوا</a> مِثْلَ <a name="01800601500008" ll="SDBH:נַחַל:000000:Landforms|Waterbodies" il="NBGbs20090428-1_39;tb110603119">ٱلْغَدِيرِ</a>. مِثْلَ سَاقِيَةِ <a name="01800601500012" ll="SDBH:אָפִיק:000000:Waterbodies">ٱلْوُدْيَانِ</a> <a name="01800601500016">يَعْبُرُونَ</a>،
\v 16 ٱلَّتِي هِيَ <a name="01800601600004" ll="SDBH:קדר:000000:Color">عَكِرَةٌ</a> مِنَ <a name="01800601600008" ll="SDBH:קֶרַח:000002:Water">ٱلْبَرَدِ</a>، <a name="01800601600012">وَيَخْتَفِي</a> فِيهَا <a name="01800601600014" ll="SDBH:שֶׁלֶג:000000:Rain" il="NBGbs20130728-115;Snow">ٱلْجَلِيدُ</a>.
\v 17 <a name="01800601700004" ll="SDBH:עֵת:000000:Time">إِذَا</a> <a name="01800601700006" ll="SDBH:זרב:000000:Soft">جَرَتِ</a> <a name="01800601700008" ll="SDBH:צמת:000000:Non-Exist">ٱنْقَطَعَتْ</a>. إِذَا حَمِيَتْ <a name="01800601700014" ll="SDBH:דעך:000001:Non-Exist">جَفَّتْ</a> مِنْ <a name="01800601700018" ll="SDBH:מָקֹום:000000:Space">مَكَانِهَا</a>.
\v 18 <a name="01800601800002" ll="SDBH:לפת:000001:Change">يُعَرِّجُ</a> <a name="01800601800004" ll="SDBH:אֹרַח:000003:Groups" il="Caravan_in_the_desert;Bolen00115">ٱلسَّفْرُ</a> عَنْ <a name="01800601800006" ll="SDBH:דֶּרֶךְ:000000:Roads">طَرِيقِهِمْ</a>، <a name="01800601800008" ll="SDBH:עלה:000004:Move">يَدْخُلُونَ</a> <a name="01800601800014" ll="SDBH:תֹּהוּ:000000:Non-Exist">ٱلتِّيهَ</a> <a name="01800601800018" ll="SDBH:אבד:000004:Non-Exist|Dead">فَيَهْلِكُونَ</a>.
\v 19 <a name="01800601900002" ll="SDBH:נבט:000000:See">نَظَرَتْ</a> <a name="01800601900004" ll="SDBH:אֹרַח:000003:Groups" il="Caravan_in_the_desert;Bolen00115">قَوَافِلُ</a> <a name="01800601900006" ll="SDBH:תֵּימָא:000002:Names of Locations">تَيْمَاءَ</a>. <a name="01800601900008" ll="SDBH:הֲלִיכָה:000002:Groups">سَيَّارَةُ</a> <a name="01800601900010" ll="SDBH:שְׁבָא:000003:Names of Locations">سَبَاءٍ</a> <a name="01800601900012" ll="SDBH:קוה:000000:Non-Engage|Confident">رَجَوْهَا</a>.
\v 20 <a name="01800602000002" ll="SDBH:בושׁ:000000:Shame">خَزُوا</a> فِي مَا كَانُوا <a name="01800602000006" ll="SDBH:בטח:000000:Confident">مُطْمَئِنِّينَ</a>. <a name="01800602000008">جَاءُوا</a> إِلَيْهَا فَخَجِلُوا.
\v 21 <a name="01800602100004">فَالآنَ</a> قَدْ <a name="01800602100006" tl="HOTTP1811">صِرْتُمْ</a> مِثْلَهَا. رَأَيْتُمْ <a name="01800602100014" ll="SDBH:חֲתַת:000000:Afraid">ضَرْبَةً</a> <a name="01800602100012" ll="SDBH:ירא:000000:Afraid">فَفَزِعْتُمْ</a>.
\v 22 هَلْ <a name="01800602200006" ll="SDBH:אמר:000000:Speak">قُلْتُ</a>: <a name="01800602200008">أَعْطُونِي</a> شَيْئًا، أَوْ مِنْ <a name="01800602200016" ll="SDBH:כֹּחַ:000002:Rich">مَالِكُمُ</a> <a name="01800602200018" ll="SDBH:שׁחד:000000:Non-Possess">ٱرْشُوا</a> مِنْ <a name="01800602200020" ll="SDBH:בַּעַד:000002:Association">أَجْلِي</a>؟
\v 23 أَوْ <a name="01800602300004" ll="SDBH:מלט:000001:Safe">نَجُّونِي</a> مِنْ <a name="01800602300008">يَدِ</a> <a name="01800602300010" ll="SDBH:צַר:000003:Enemies">ٱلْخَصْمِ</a>، أَوْ مِنْ <a name="01800602300016">يَدِ</a> <a name="01800602300018" ll="SDBH:עָרִיץ:000000:Ferocious">ٱلْعُتَاةِ</a> <a name="01800602300020" ll="SDBH:פדה:000002:Safe">ٱفْدُونِي</a>؟
\v 24 <a name="01800602400002" ll="SDBH:ירה:002000:Know">عَلِّمُونِي</a> <a name="01800602400006">فَأَنَا</a> <a name="01800602400008" ll="SDBH:חרשׁ:001001:Non-Speak|Non-Happen">أَسْكُتُ</a>، <a name="01800602400016" ll="SDBH:בין:000003:Know">وَفَهِّمُونِي</a> فِي أَيِّ <a name="01800602400012" ll="SDBH:מָה:000000:Object Referents">شَيْئٍ</a> <a name="01800602400014" ll="SDBH:שׁגה:000002:Sin">ضَلَلْتُ</a>.
\v 25 مَا <a name="01800602500004" ll="SDBH:מרץ:000000:Distress">أَشَدَّ</a> <a name="01800602500006" ll="SDBH:אֵמֶר:000000:Speak" tl="HOTTP1812">ٱلْكَلاَمَ</a> <a name="01800602500008" ll="SDBH:יֹשֶׁר:000000:Innocent" tl="HOTTP1812">ٱلْمُسْتَقِيمَ</a>، وَأَمَّا <a name="01800602500014" ll="SDBH:יכח:000003:Speak">ٱلتَّوْبِيخُ</a> مِنْكُمْ فَعَلَى مَاذَا <a name="01800602500016" ll="SDBH:יכח:000003:Speak" tl="HOTTP1813">يُبَرْهِنُ</a>؟
\v 26 هَلْ <a name="01800602600010" ll="SDBH:חשׁב:000001:Think">تَحْسِبُونَ</a> أَنْ <a name="01800602600006" ll="SDBH:יכח:000003:Speak">تُوَبِّخُوا</a> <a name="01800602600008" ll="SDBH:מִלָּה:000000:Speak">كَلِمَاتٍ</a>، <a name="01800602600018" ll="SDBH:אֵמֶר:000000:Speak">وَكَلاَمُ</a> <a name="01800602600020" ll="SDBH:יאשׁ:000000:Willing">ٱلْيَائِسِ</a> <a name="01800602600016" ll="SDBH:רוּחַ:000007:Fail">لِلرِّيحِ</a>؟
