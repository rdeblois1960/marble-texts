\v 20 لاَ <a name="01803602000004" ll="SDBH:שׁאף:000002:Wish">تَشْتَاقُ</a> إِلَى <a name="01803602000008" ll="SDBH:לַיְלָה:000000:Time" tl="HOTTP2025">ٱللَّيْلِ</a> ٱلَّذِي <a name="01803602000012" ll="SDBH:עלה:000024:Non-Exist">يَرْفَعُ</a> <a name="01803602000014" ll="SDBH:עַם:000000:Groups" tl="HOTTP2026">شُعُوبًا</a> مِنْ <a name="01803602000016">مَوَاضِعِهِمْ</a>.
\v 21 <a name="01803602100002" ll="SDBH:שׁמר:000006:Safe">اِحْذَرْ</a>. لاَ <a name="01803602100006" ll="SDBH:פנה:000002:Think">تَلْتَفِتْ</a> إِلَى <a name="01803602100010" ll="SDBH:אָוֶן:000000:Wrong">ٱلْإِثْمِ</a> لأَنَّكَ <a name="01803602100018" ll="SDBH:בחר:000000:Select;SDBH:בחר:001000:Know" tl="HOTTP2027">ٱخْتَرْتَ</a> هٰذَا عَلَى <a name="01803602100022" ll="SDBH:עֳנִי:000000:Unsafe">ٱلذِّلِّ</a>.
\v 22 <a name="01803602200002">هُوَذَا</a> <a name="01803602200004" ll="SDBH:אֵל:000001:Deities">ٱللّٰهُ</a> <a name="01803602200006" ll="SDBH:שׂגב:000002:Great">يَتَعَالَى</a> <a name="01803602200010" ll="SDBH:כֹּחַ:000000:Strong">بِقُدْرَتِهِ</a>. مَنْ مِثْلُهُ <a name="01803602200016" ll="SDBH:מֹורֶה:001000:Know">مُعَلِّمًا</a>؟
\v 23 مَنْ <a name="01803602300004" ll="SDBH:פקד:000007:Speak">فَرَضَ</a> عَلَيْهِ <a name="01803602300008" ll="SDBH:דֶּרֶךְ:000007:Act">طَرِيقَهُ</a>، أَوْ مَنْ <a name="01803602300014" ll="SDBH:אמר:000000:Speak">يَقُولُ</a> لَهُ: قَدْ <a name="01803602300016" ll="SDBH:פעל:000000:Exist|Happen">فَعَلْتَ</a> <a name="01803602300018" ll="SDBH:עַוְלָה:000000:Wrong">شَرًّا</a>؟
\v 24 <a name="01803602400002" ll="SDBH:זכר:000000:Know">اُذْكُرْ</a> أَنْ <a name="01803602400006" ll="SDBH:שׂגא:000001:Praise">تُعَظِّمَ</a> <a name="01803602400008" ll="SDBH:פֹּעַל:000000:Happen">عَمَلَهُ</a> ٱلَّذِي <a name="01803602400012" ll="SDBH:שׁיר:000000:Sing" il="HK00188">يُغَنِّي</a> بِهِ ٱلنَّاسُ.
\v 25 كُلُّ <a name="01803602500004" ll="SDBH:אָדָם:000000:People">إِنْسَانٍ</a> <a name="01803602500006" ll="SDBH:חזה:000001:See">يُبْصِرُ</a> بِهِ. <a name="01803602500010" ll="SDBH:אֱנֹושׁ:000000:People">ٱلنَّاسُ</a> <a name="01803602500012" ll="SDBH:נבט:000000:See">يَنْظُرُونَهُ</a> مِنْ <a name="01803602500016" ll="SDBH:רָחֹוק:000000:Space">بَعِيدٍ</a>.
\v 26 <a name="01803602600002">هُوَذَا</a> <a name="01803602600004" ll="SDBH:אֵל:000001:Deities">ٱللّٰهُ</a> <a name="01803602600006" ll="SDBH:שַׂגִּיא:000002:Great">عَظِيمٌ</a> <a name="01803602600010" ll="SDBH:לֹא:000000:Negators">وَلاَ</a> <a name="01803602600012">نَعْرِفُهُ</a> <a name="01803602600014" ll="SDBH:מִסְפָּר:000002:Quantity|Frequency">وَعَدَدُ</a> <a name="01803602600016" ll="SDBH:שָׁנָה:000000:Time">سِنِيهِ</a> لاَ <a name="01803602600022" ll="SDBH:חֵקֶר:000000:Know">يُفْحَصُ</a>.
\v 27 لأَنَّهُ <a name="01803602700004" ll="SDBH:גרע:000001:Detach">يَجْذُبُ</a> <a name="01803602700006" ll="SDBH:נֶטֶף:000000:Rain" tl="HOTTP2028">قِطَارَ</a> <a name="01803602700008" ll="SDBH:מַיִם:000000:Liquids" tl="HOTTP2028" il="Water_drop_001">ٱلْمَاءِ</a>. <a name="01803602700010" ll="SDBH:זקק:000000:Clean">تَسُحُّ</a> <a name="01803602700012" ll="SDBH:מָטָר:000000:Rain" il="Rain;Rain2">مَطَرًا</a> مِنْ <a name="01803602700016" ll="SDBH:אֵד:000000:Waterbodies">ضَبَابِهَا</a>
\v 28 ٱلَّذِي <a name="01803602800004" ll="SDBH:נזל:000000:Flow" tl="HOTTP2029">تَهْطِلُهُ</a> <a name="01803602800006" ll="SDBH:שַׁחַק:000002:Universe">ٱلسُّحُبُ</a> <a name="01803602800008" ll="SDBH:רעף:000000:Flow">وَتَقْطُرُهُ</a> عَلَى <a name="01803602800012" ll="SDBH:אָדָם:000000:People">أُنَاسٍ</a> <a name="01803602800014" ll="SDBH:רַב:000002:Intense">كَثِيرِينَ</a>.
\v 29 فَهَلْ <a name="01803602900006" ll="SDBH:בין:000001:Know">يُعَلِّلُ</a> أَحَدٌ عَنْ <a name="01803602900008" ll="SDBH:מִפְרָשׂ:000001:Shape">شَقِّ</a> <a name="01803602900010" ll="SDBH:עָב:000000:Clouds" il="Altocumulus_cloud;White_cloud_111">ٱلْغَيْمِ</a> أَوْ <a name="01803602900012" ll="SDBH:תְּשֻׁאָה:000000:Shout" tl="HOTTP2030">قَصِيفِ</a> <a name="01803602900014" ll="SDBH:סֻכָּה:000000:Tents">مِظَلَّتِهِ</a>؟
\v 30 <a name="01803603000002">هُوَذَا</a> <a name="01803603000004" ll="SDBH:פרשׂ:000002:Scatter">بَسَطَ</a> <a name="01803603000008" ll="SDBH:אֹור:000000:Shine">نُورَهُ</a> عَلَى نَفْسِهِ، ثُمَّ <a name="01803603000018" ll="SDBH:כסה:000000:Cover">يَتَغَطَّى</a> <a name="01803603000012" ll="SDBH:שֹׁרֶשׁ:000000:Parts: Vegetation" il="Tree_root">بِأُصُولِ</a> <a name="01803603000016" ll="SDBH:יָם:000000:Waterbodies" il="Rough_seas">ٱلْيَمِّ</a>.
\v 31 لأَنَّهُ بِهذِهِ <a name="01803603100006" ll="SDBH:דין:000000:Judge|Relief|Safe">يَدِينُ</a> <a name="01803603100008" ll="SDBH:עַם:000000:Groups">ٱلشُّعُوبَ</a>، <a name="01803603100010">وَيَرْزِقُ</a> ٱلْقُوتَ بِكَثْرَةٍ.
\v 32 <a name="01803603200006" ll="SDBH:כסה:000000:Cover;SDBH:כסה:000001:Hide">يُغَطِّي</a> <a name="01803603200004" ll="SDBH:כַּף:000000:Parts: People">كَفَّيْهِ</a> <a name="01803603200008" ll="SDBH:אֹור:000000:Shine">بِالنُّورِ</a>، <a name="01803603200012" ll="SDBH:צוה:000000:Happen">وَيَأْمُرُهُ</a> عَلَى <a name="01803603200018" ll="SDBH:פגע:000003:Meet">ٱلْعَدُوِّ</a>.
\v 33 <a name="01803603300002" ll="SDBH:נגד:000000:Speak">يُخْبِرُ</a> بِهِ <a name="01803603300006" ll="SDBH:רֵעַ:000001:Sounds">رَعْدُه</a>، <a name="01803603300008" ll="SDBH:מִקְנֶה:000001:Domestic Animals" il="NBGbs20120208-08">ٱلْمَوَاشِيَ</a> أَيْضًا <a name="01803603300014" ll="SDBH:עַוְלָה:000000:Wrong;SDBH:עלה:000017:Happen">بِصُعُودِهِ</a>.
\c 37
\v 1 <a name="01803700100006" ll="SDBH:זֶה:000000:Identifiers;SDBH:זֹה:000000:Identifiers">فَلِهذَا</a> <a name="01803700100008" ll="SDBH:חרד:000002:Afraid">ٱضْطَرَبَ</a> <a name="01803700100010" ll="SDBH:לֵב:000001:Think">قَلْبِي</a> <a name="01803700100014" ll="SDBH:נתר:000000:Shake">وَخَفَقَ</a> مِنْ <a name="01803700100018" ll="SDBH:מָקֹום:000000:Space">مَوْضِعِهِ</a>.
\v 2 <a name="01803700200002">ٱسْمَعُوا</a> سَمَاعًا <a name="01803700200008" ll="SDBH:רֹגֶז:000002:Sounds">رَعْدَ</a> <a name="01803700200010">صَوْتِهِ</a> <a name="01803700200014" ll="SDBH:הֶגֶה:000000:Sounds">وَٱلزَّمْزَمَةَ</a> <a name="01803700200020" ll="SDBH:יצא:000040:Speak">ٱلْخَارِجَةَ</a> مِنْ <a name="01803700200018" ll="SDBH:פֶּה:000000:Parts: Creatures">فِيهِ</a>.
\v 3 <a name="01803700300002">تَحْتَ</a> <a name="01803700300004">كُلِّ</a> <a name="01803700300008" ll="SDBH:שָׁמַיִם:000000:Universe">ٱلسَّمَاوَاتِ</a> <a name="01803700300010" ll="SDBH:שׁרה:000000:Free">يُطْلِقُهَا</a>، كَذَا <a name="01803700300014" ll="SDBH:אֹור:000000:Shine">نُورُهُ</a> إِلَى <a name="01803700300018" ll="SDBH:כָּנָף:000001:Parts">أَكْنَافِ</a> <a name="01803700300022" ll="SDBH:אֶרֶץ:000000:Land">ٱلْأَرْضِ</a>.
\v 4 <a name="01803700400002" ll="SDBH:אַחַר:001002:Time">بَعْدُ</a> <a name="01803700400004" ll="SDBH:שׁאג:000000:Sounds">يُزَمْجِرُ</a> <a name="01803700400006">صَوْتٌ</a>، <a name="01803700400008" ll="SDBH:רעם:000001:Speak">يُرْعِدُ</a> <a name="01803700400012">بِصَوْتِ</a> <a name="01803700400014" ll="SDBH:גָּאֹון:001000:Great">جَلاَلِهِ</a>، وَلاَ <a name="01803700400020" ll="SDBH:עקב:000001:Non-Happen">يُؤَخِّرُهَا</a> إِذْ <a name="01803700400024">سُمِعَ</a> <a name="01803700400026">صَوْتُهُ</a>.
\v 5 <a name="01803700500004" ll="SDBH:אֵל:000001:Deities" tl="HOTTP2036">اَللّٰهُ</a> <a name="01803700500002" ll="SDBH:רעם:000001:Speak" tl="HOTTP2036">يُرْعِدُ</a> <a name="01803700500008" tl="HOTTP2036">بِصَوْتِهِ</a> <a name="01803700500010" ll="SDBH:פלא:000000:Extraordinary">عَجَبًا</a>. <a name="01803700500012">يَصْنَعُ</a> <a name="01803700500014" ll="SDBH:גָּדֹול:000003:Intense">عَظَائِمَ</a> <a name="01803700500018" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01803700500020">نُدْرِكُهَا</a>.
\v 6 لأَنَّهُ <a name="01803700600010" ll="SDBH:אמר:000000:Speak">يَقُولُ</a> <a name="01803700600008" ll="SDBH:שֶׁלֶג:000000:Rain" il="NBGbs20130728-115;Snow">لِلثَّلْجِ</a>: <a name="01803700600012" ll="SDBH:הוה:000000:Space">ٱسْقُطْ</a> عَلَى <a name="01803700600014" ll="SDBH:אֶרֶץ:000000:Land">ٱلْأَرْضِ</a>. كَذَا <a name="01803700600018" ll="SDBH:גֶּשֶׁם:000000:Rain" il="Rain;Rain2">لِوَابِلِ</a> <a name="01803700600020" ll="SDBH:מָטָר:000000:Rain" il="Rain;Rain2">ٱلْمَطَرِ</a>، وَٱبِلِ <a name="01803700600026" ll="SDBH:מָטָר:000000:Rain" il="Rain;Rain2">أَمْطَارِ</a> <a name="01803700600028" ll="SDBH:עֹז:000005:Intense" tl="HOTTP2037">عِزِّهِ</a>.
\v 7 <a name="01803700700010" ll="SDBH:חתם:000003:Non-Happen">يَخْتِمُ</a> عَلَى <a name="01803700700004">يَدِ</a> كُلِّ <a name="01803700700008" ll="SDBH:אָדָם:000000:People">إِنْسَانٍ</a>، <a name="01803700700014">لِيَعْلَمَ</a> كُلُّ ٱلنَّاسِ <a name="01803700700020" ll="SDBH:מַעֲשֶׂה:000003:Artifacts">خَالِقَهُمْ</a>،
\v 8 <a name="01803700800004">فَتَدْخُلُ</a> <a name="01803700800006" ll="SDBH:חַיָּה:000001:Animals">ٱلْحَيَوَانَاتُ</a> <a name="01803700800010" ll="SDBH:אֶרֶב:000000:Hide">ٱلْمَآوِيَ</a>، <a name="01803700800018" ll="SDBH:שׁכן:000000:Dwell">وَتَسْتَقِرُّ</a> فِي <a name="01803700800016" ll="SDBH:מְעֹנָה:000000:Dwell">أَوْجِرَتِهَا</a>.
\v 9 مِنَ <a name="01803700900006" ll="SDBH:חֶדֶר:000001:Parts: Universe">ٱلْجَنُوبِ</a> <a name="01803700900008">تَأْتِي</a> <a name="01803700900010" ll="SDBH:סוּפָה:000000:Air" il="Whirlwind">ٱلْأَعْصَارُ</a>، وَمِنَ <a name="01803700900018" ll="SDBH:קָרָה:000000:Cold">ٱلشَّمَالِ</a> ٱلْبَرَدُ.
\v 10 مِنْ <a name="01803701000004" ll="SDBH:נְשָׁמָה:000000:Substances">نَسَمَةِ</a> <a name="01803701000006" ll="SDBH:אֵל:000001:Deities">ٱللّٰهِ</a> <a name="01803701000008">يُجْعَلُ</a> <a name="01803701000010" ll="SDBH:קֶרַח:000002:Water">ٱلْجَمْدُ</a>، <a name="01803701000020" ll="SDBH:מוּצָק:001001:Solid">وَتَتَضَيَّقُ</a> <a name="01803701000014" ll="SDBH:רֹחַב:000000:Dimension">سِعَةُ</a> <a name="01803701000016" ll="SDBH:מַיִם:000000:Liquids" il="Water_drop_001">ٱلْمِيَاهِ</a>.
\v 11 أَيْضًا <a name="01803701100006" ll="SDBH:רִי:000000:Rain">بِرِيٍّ</a> <a name="01803701100008" ll="SDBH:טרח:000000:Space">يَطْرَحُ</a> <a name="01803701100010" ll="SDBH:עָב:000000:Clouds" il="Altocumulus_cloud;White_cloud_111">ٱلْغَيْمَ</a>. يُبَدِّدُ <a name="01803701100014" ll="SDBH:עָנָן:000000:Clouds" il="Altocumulus_cloud;White_cloud_111">سَحَابَ</a> <a name="01803701100016" ll="SDBH:אֹור:000000:Shine" tl="HOTTP2038">نُورِهِ</a>.
\v 12 فَهِيَ <a name="01803701200008" ll="SDBH:הפך:000004:Turn|Move">مُدَوَّرَةٌ</a> <a name="01803701200006" ll="SDBH:מְסִבָּה:000000:Move">مُتَقَلِّبَةٌ</a> <a name="01803701200012" ll="SDBH:תַּחְבּוּלֹות:000000:Know">بِإِدَارَتِهِ</a>، لِتَفْعَلَ كُلَّ مَا <a name="01803701200026" ll="SDBH:צוה:000000:Happen">يَأْمُرُ</a> بِهِ عَلَى <a name="01803701200030">وَجْهِ</a> <a name="01803701200034" ll="SDBH:אֶרֶץ:000000:Land">ٱلْأَرْضِ</a> <a name="01803701200032" ll="SDBH:תֵּבֵל:000000:Land">ٱلْمَسْكُونَةِ</a>،
\v 13 <a name="01803701300002">سَوَاءٌ</a> كَانَ <a name="01803701300006" ll="SDBH:שֵׁבֶט:000005:Chastise">لِلتَّأْدِيبِ</a> أَوْ <a name="01803701300012" ll="SDBH:אֶרֶץ:000000:Land" tl="HOTTP2039">لأَرْضِهِ</a> أَوْ <a name="01803701300018" ll="SDBH:חֶסֶד:000000:Faithful">لِلرَّحْمَةِ</a> <a name="01803701300020" ll="SDBH:מצא:000010:Happen">يُرْسِلُهَا</a>.
\v 14 <a name="01803701400002" ll="SDBH:אזן:000000:Hear">اُنْصُتْ</a> إِلَى هٰذَا يَا <a name="01803701400006" ll="SDBH:אִיֹּוב:000000:Names of People">أَيُّوبُ</a>، <a name="01803701400008">وَقِفْ</a> <a name="01803701400012" ll="SDBH:בין:000002:Know">وَتَأَمَّلْ</a> <a name="01803701400014" ll="SDBH:פלא:000000:Extraordinary">بِعَجَائِبِ</a> <a name="01803701400016" ll="SDBH:אֵל:000001:Deities">ٱللّٰهِ</a>.
\v 15 <a name="01803701500004">أَتُدْرِكُ</a> <a name="01803701500008" ll="SDBH:שׂים:000002:Bear">ٱنْتِبَاهَ</a> <a name="01803701500010" ll="SDBH:אֱלֹוהַּ:000001:Deities">ٱللّٰهِ</a> إِلَيْهَا، أَوْ <a name="01803701500016" ll="SDBH:יפע:000001:Shine">إِضَاءَةَ</a> <a name="01803701500018" ll="SDBH:אֹור:000000:Shine">نُورِ</a> <a name="01803701500020" ll="SDBH:עָנָן:000000:Clouds" il="Altocumulus_cloud;White_cloud_111">سَحَابِهِ</a>؟
\v 16 <a name="01803701600004">أَتُدْرِكُ</a> <a name="01803701600008" ll="SDBH:מִפְלָשׂ:000000:Arrange">مُوازَنَةَ</a> <a name="01803701600010" ll="SDBH:עָב:000000:Clouds" il="Altocumulus_cloud;White_cloud_111">ٱلسَّحَابِ</a>، <a name="01803701600012" ll="SDBH:מִפְלָאָה:000000:Extraordinary">مُعْجِزَاتِ</a> <a name="01803701600014" ll="SDBH:תָּמִים:000002:Well">ٱلْكَامِلِ</a> <a name="01803701600016" ll="SDBH:דֵּעַ:000000:Know">ٱلْمَعَارِفِ</a>؟
\v 17 كَيْفَ <a name="01803701700006" ll="SDBH:חָם:001000:Hot">تَسْخُنُ</a> <a name="01803701700004" ll="SDBH:בֶּגֶד:000001:Clothing" il="NBGmk20140519a;NBGmk20140519c;NBGmk20140519d">ثِيَابُكَ</a> إِذَا <a name="01803701700010" ll="SDBH:שׁקט:000001:Non-Happen">سَكَنَتِ</a> <a name="01803701700012" ll="SDBH:אֶרֶץ:000000:Land">ٱلْأَرْضُ</a> مِنْ رِيحِ <a name="01803701700016" ll="SDBH:דָּרֹום:000001:Air">ٱلْجَنُوبِ</a>؟
