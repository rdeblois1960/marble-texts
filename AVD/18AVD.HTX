\v 25 <a name="01801202500002" ll="SDBH:משׁשׁ:000000:Touch">يَتَلَمَّسُونَ</a> فِي <a name="01801202500004" ll="SDBH:חֹשֶׁךְ:000000:Dark">ٱلظَّلاَمِ</a> وَلَيْسَ <a name="01801202500010" ll="SDBH:אֹור:000000:Shine">نُورٌ</a>، <a name="01801202500014" ll="SDBH:תעה:000001:Move">وَيُرَنِّحُهُمْ</a> مِثْلَ <a name="01801202500020" ll="SDBH:שִׁכֹּור:000000:Ingest">ٱلسَّكْرَانِ</a>.
\c 13
\v 1 <a name="01801300100002">هٰذَا</a> كُلُّهُ <a name="01801300100006" ll="SDBH:ראה:000000:See">رَأَتْهُ</a> <a name="01801300100008" ll="SDBH:עַיִן:000000:Parts: Creatures">عَيْنِي</a>. <a name="01801300100010">سَمِعَتْهُ</a> <a name="01801300100012" ll="SDBH:אֹזֶן:000000:Parts: Creatures">أُذُنِي</a> <a name="01801300100016" ll="SDBH:בין:000001:Know">وَفَطِنَتْ</a> بِهِ.
\v 2 مَا <a name="01801300200004" ll="SDBH:דַּעַת:000000:Know">تَعْرِفُونَهُ</a> <a name="01801300200006">عَرَفْتُهُ</a> أَنَا أَيْضًا. <a name="01801300200012" ll="SDBH:לֹא:000000:Negators">لَسْتُ</a> <a name="01801300200014" ll="SDBH:נפל:000035:Small">دُونَكُمْ</a>.
\v 3 وَلكِنِّي <a name="01801300300020" ll="SDBH:חפץ:000002:Wish">أُرِيدُ</a> أَنْ <a name="01801300300010" ll="SDBH:דבר:001000:Speak">أُكَلِّمَ</a> <a name="01801300300008" ll="SDBH:שַׁדַּי:000000:Names of Deities">ٱلْقَدِيرَ</a>، وَأَنْ <a name="01801300300014" ll="SDBH:יכח:000003:Speak">أُحَاكَمَ</a> إِلَى ٱللّٰهِ.
\v 4 أَمَّا أَنْتُمْ <a name="01801300400008" ll="SDBH:טפל:000000:Cover">فَمُلَفِّقُو</a> <a name="01801300400010" ll="SDBH:שֶׁקֶר:000000:Wrong">كَذِبٍ</a>. <a name="01801300400012" ll="SDBH:רפא:000004:Professions">أَطِبَّاءُ</a> <a name="01801300400014" ll="SDBH:אֱלִיל:000001:Worthless">بَطَّالُونَ</a> <a name="01801300400016">كُلُّكُمْ</a>.
\v 5 <a name="01801300500004">لَيْتَكُمْ</a> تَصْمُتُونَ <a name="01801300500006" ll="SDBH:חרשׁ:001001:Non-Speak|Non-Happen">صَمْتًا</a>. <a name="01801300500012">يَكُونُ</a> ذلِكَ لَكُمْ <a name="01801300500018" ll="SDBH:חָכְמָה:000000:Wise">حِكْمَةً</a>.
\v 6 <a name="01801300600002">اِسْمَعُوا</a> ٱلْآنَ <a name="01801300600006" ll="SDBH:תֹּוכַחַת:000000:Speak">حُجَّتِي</a>، <a name="01801300600014" ll="SDBH:קשׁב:000000:Hear">وَٱصْغُوا</a> إِلَى دَعَاوِي <a name="01801300600012" ll="SDBH:שָׂפָה:000001:Speak">شَفَتَيَّ</a>.
\v 7 <a name="01801300700008" ll="SDBH:דבר:001000:Speak">أَتَقُولُونَ</a> لأَجْلِ <a name="01801300700006" ll="SDBH:אֵל:000001:Deities">ٱللّٰهِ</a> <a name="01801300700010" ll="SDBH:עַוְלָה:000000:Wrong">ظُلْمًا</a>، <a name="01801300700016" ll="SDBH:דבר:001000:Speak">وَتَتَكَلَّمُونَ</a> <a name="01801300700018" ll="SDBH:רְמִיָּה:001000:Wrong">بِغِشٍّ</a> لأَجْلِهِ؟
\v 8 <a name="01801300800006" ll="SDBH:נשׂא:000050:Willing">أَتُحَابُونَ</a> <a name="01801300800004" ll="SDBH:פָּנֶה:000000:">وَجْهَهُ</a>، أَمْ عَنِ <a name="01801300800014" ll="SDBH:אֵל:000001:Deities">ٱللّٰهِ</a> <a name="01801300800016" ll="SDBH:ריב:000000:Conflict">تُخَاصِمُونَ</a>؟
\v 9 أَخَيْرٌ لَكُمْ أَنْ <a name="01801300900008" ll="SDBH:חקר:000000:Know">يَفْحَصَكُمْ</a>، أَمْ <a name="01801300900016" ll="SDBH:תלל:000000:Unfaithful">تُخَاتِلُونَهُ</a> كَمَا <a name="01801300900022" ll="SDBH:תלל:000000:Unfaithful">يُخَاتَلُ</a> <a name="01801300900020" ll="SDBH:אֱנֹושׁ:000000:People">ٱلْإِنْسَانُ</a>؟
\v 10 <a name="01801301000002" ll="SDBH:יכח:000004:Chastise">تَوْبِيخًا</a> <a name="01801301000004" ll="SDBH:יכח:000004:Chastise">يُوَبِّخُكُمْ</a> إِنْ <a name="01801301000018" ll="SDBH:נשׂא:000050:Willing">حَابَيْتُمُ</a> <a name="01801301000016" ll="SDBH:פָּנֶה:000000:">ٱلْوُجُوهَ</a> <a name="01801301000014" ll="SDBH:סֵתֶר:000001:Non-Know">خِفْيَةً</a>.
\v 11 <a name="01801301100004" ll="SDBH:לֹא:000000:Negators">فَهَلاَّ</a> <a name="01801301100008" ll="SDBH:בעת:000001:Distress">يُرْهِبُكُمْ</a> <a name="01801301100006" ll="SDBH:שְׂאֵת:000001:Great">جَلاَلُهُ</a>، <a name="01801301100016" ll="SDBH:נפל:000021:Happen">وَيَسْقُطُ</a> عَلَيْكُمْ <a name="01801301100014" ll="SDBH:פַּחַד:000000:Afraid">رُعْبُهُ</a>؟
\v 12 خُطَبُكُمْ <a name="01801301200004" ll="SDBH:מָשָׁל:000000:Speak">أَمْثَالُ</a> <a name="01801301200006" ll="SDBH:אֵפֶר:000000:Dust" il="Ash">رَمَادٍ</a>، <a name="01801301200010" ll="SDBH:גַּב:000004:Speak">وَحُصُونُكُمْ</a> <a name="01801301200014" ll="SDBH:גַּב:000004:Speak">حُصُونٌ</a> مِنْ <a name="01801301200012" ll="SDBH:חֹמֶר:000000:Dust">طِينٍ</a>.
\v 13 <a name="01801301300002" ll="SDBH:חרשׁ:001001:Non-Speak|Non-Happen">اُسْكُتُوا</a> عَنِّي <a name="01801301300008" ll="SDBH:דבר:001000:Speak">فَأَتَكَلَّمَ</a> أَنَا، <a name="01801301300014">وَلْيُصِبْنِي</a> مَهْمَا أَصَابَ.
\v 14 لِمَاذَا <a name="01801301400006" ll="SDBH:נשׂא:000003:Hold">آخُذُ</a> <a name="01801301400008" ll="SDBH:בָּשָׂר:000001:Parts: Creatures" il="The_Meat_Market">لَحْمِي</a> <a name="01801301400012" ll="SDBH:שֵׁן:000000:Parts: Creatures">بِأَسْنَانِي</a>، <a name="01801301400018" ll="SDBH:שׂים:000032:Think">وَأَضَعُ</a> <a name="01801301400016" ll="SDBH:נֶפֶשׁ:000001:Parts: Creatures">نَفْسِي</a> فِي <a name="01801301400022" ll="SDBH:כַּף:000002:Confident">كَفِّي</a>؟
\v 15 <a name="01801301500002">هُوَذَا</a> <a name="01801301500004" ll="SDBH:קטל:000000:Dead">يَقْتُلُنِي</a>. لاَ أَنْتَظِرُ شَيْئًا. فَقَطْ <a name="01801301500020" ll="SDBH:יכח:000003:Speak">أُزَكِّي</a> <a name="01801301500014" ll="SDBH:דֶּרֶךְ:000007:Act">طَرِيقِي</a> <a name="01801301500018" ll="SDBH:פָּנֶה:000000:">قُدَّامَهُ</a>.
\v 16 <a name="01801301600004">فَهذَا</a> يَعُودُ إِلَى <a name="01801301600010" ll="SDBH:יְשׁוּעָה:000000:Safe">خَلاَصِي</a>، أَنَّ <a name="01801301600020" ll="SDBH:חָנֵף:000000:Evil">ٱلْفَاجِرَ</a> <a name="01801301600014" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01801301600022">يَأْتِي</a> <a name="01801301600018">قُدَّامَهُ</a>.
\v 17 <a name="01801301700002">سَمْعًا</a> <a name="01801301700004">ٱسْمَعُوا</a> <a name="01801301700006" ll="SDBH:מִלָּה:000000:Speak">أَقْوَالِي</a> وَتَصْرِيحِي <a name="01801301700014" ll="SDBH:אֹזֶן:000000:Parts: Creatures">بِمَسَامِعِكُمْ</a>.
\v 18 هٰأَنَذَا قَدْ <a name="01801301800006" ll="SDBH:ערך:000001:Arrange">أَحْسَنْتُ</a> <a name="01801301800008" ll="SDBH:מִשְׁפָּט:000003:Conflict">ٱلدَّعْوَى</a>. <a name="01801301800010">أَعْلَمُ</a> أَنِّي <a name="01801301800016" ll="SDBH:צדק:000000:Innocent">أَتَبَرَّرُ</a>.
\v 19 <a name="01801301900002" ll="SDBH:מִי:000000:Object Referents">مَنْ</a> <a name="01801301900004">هُوَ</a> ٱلَّذِي <a name="01801301900006" ll="SDBH:ריב:000000:Conflict">يُخَاصِمُنِي</a> حَتَّى <a name="01801301900014" ll="SDBH:חרשׁ:001001:Non-Speak|Non-Happen">أَصْمُتَ</a> <a name="01801301900012">ٱلْآنَ</a> <a name="01801301900018" ll="SDBH:גוע:000000:Dead">وَأُسْلِمَ</a> ٱلرُّوحَ؟
\v 20 إِنَّمَا <a name="01801302000004" ll="SDBH:שְׁנַיִם:000000:Quantity|Frequency">أَمْرَيْنِ</a> لاَ <a name="01801302000008">تَفْعَلْ</a> بِي، <a name="01801302000012" ll="SDBH:אָז:000002:Event Referents: Occurrence">فَحِينَئِذٍ</a> <a name="01801302000018" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01801302000020" ll="SDBH:סתר:000001:Hide">أَخْتَفِي</a> مِنْ <a name="01801302000016">حَضْرَتِكَ</a>.
\v 21 <a name="01801302100008" ll="SDBH:רחק:000001:Space">أَبْعِدْ</a> <a name="01801302100002" ll="SDBH:כַּף:000004:Control">يَدَيْكَ</a> عَنِّي، وَلاَ تَدَعْ <a name="01801302100012" ll="SDBH:אֵימָה:000000:Afraid">هَيْبَتَكَ</a> <a name="01801302100016" ll="SDBH:בעת:000001:Distress">تُرْعِبُنِي</a>.
\v 22 ثُمَّ <a name="01801302200004" ll="SDBH:קרא:000000:Shout">ٱدْعُ</a> <a name="01801302200008">فَأَنَا</a> <a name="01801302200010" ll="SDBH:ענה:000000:Speak">أُجِيبُ</a>، أَوْ <a name="01801302200014" ll="SDBH:דבר:001000:Speak">أَتَكَلَّمُ</a> <a name="01801302200018" ll="SDBH:שׁוב:000050:Speak">فَتُجَاوِبُنِي</a>.
\v 23 <a name="01801302300004" ll="SDBH:מָה:000000:Object Referents">كَمْ</a> لِي مِنَ ٱلْآثَامِ <a name="01801302300012" ll="SDBH:חַטָּאת:000000:Sin">وَٱلْخَطَايَا</a>؟ <a name="01801302300020">أَعْلِمْنِي</a> <a name="01801302300014" ll="SDBH:פֶּשַׁע:000000:Wrong">ذَنْبِي</a> <a name="01801302300018" ll="SDBH:חַטָּאת:000000:Sin">وَخَطِيَّتِي</a>.
\v 24 لِمَاذَا <a name="01801302400006" ll="SDBH:סתר:000004:Non-Engage">تَحْجُبُ</a> <a name="01801302400004" ll="SDBH:פָּנֶה:000000:">وَجْهَكَ</a>، <a name="01801302400010" ll="SDBH:חשׁב:000007:Know">وَتَحْسِبُنِي</a> عَدُوًّا لَكَ؟
\v 25 <a name="01801302500008" ll="SDBH:ערץ:000000:Afraid">أَتُرْعِبُ</a> <a name="01801302500004" ll="SDBH:עָלֶה:000000:Parts: Trees">وَرَقَةً</a> <a name="01801302500006" ll="SDBH:נדף:000000:Move">مُنْدَفَعَةً</a>، <a name="01801302500018" ll="SDBH:רדף:000000:Pursue">وَتُطَارِدُ</a> <a name="01801302500014" ll="SDBH:קַשׁ:000000:Parts: Plants" il="Bolen00126">قَشًّا</a> <a name="01801302500016" ll="SDBH:יָבֵשׁ:000000:Dry">يَابِسًا</a>؟
\v 26 لأَنَّكَ <a name="01801302600004" ll="SDBH:כתב:000000:Write|Know" il="Scribe at work;WritingScroll-ReedPen-01-065d;tb032014452">كَتَبْتَ</a> عَلَيَّ أُمُورًا مُرَّةً، <a name="01801302600012" ll="SDBH:ירשׁ:000006:Bear">وَوَرَّثْتَنِي</a> آثَامَ <a name="01801302600016" ll="SDBH:נְעוּרִים:000000:Time">صِبَايَ</a>،
\v 27 فَجَعَلْتَ <a name="01801302700012" ll="SDBH:רֶגֶל:000000:Parts: Creatures">رِجْلَيَّ</a> فِي <a name="01801302700010" ll="SDBH:סַד:000000:Cords">ٱلْمِقْطَرَةِ</a>، <a name="01801302700016" ll="SDBH:שׁמר:000000:See" tl="HOTTP1850">وَلاَحَظْتَ</a> <a name="01801302700018" tl="HOTTP1850">جَمِيعَ</a> <a name="01801302700020" ll="SDBH:אֹרַח:000002:Act" tl="HOTTP1850">مَسَالِكِي</a>، وَعَلَى <a name="01801302700024" ll="SDBH:שֹׁרֶשׁ:000000:Parts: Vegetation" il="Tree_root">أُصُولِ</a> <a name="01801302700026" ll="SDBH:רֶגֶל:000000:Parts: Creatures">رِجْلَيَّ</a> <a name="01801302700028" ll="SDBH:חקה:000001:Write">نَبَشْتَ</a>.
