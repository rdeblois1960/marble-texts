\c 24
\v 1 لِمَاذَا إِذْ <a name="01802400100008" ll="SDBH:לֹא:000000:Negators">لَمْ</a> <a name="01802400100010" ll="SDBH:צפן:000008:Happen">تَخْتَبِئِ</a> <a name="01802400100012" ll="SDBH:עֵת:000000:Time">ٱلْأَزْمِنَةُ</a> مِنَ <a name="01802400100006" ll="SDBH:שַׁדַּי:000000:Names of Deities">ٱلْقَدِيرِ</a>، <a name="01802400100022" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01802400100024" ll="SDBH:חזה:000000:See">يَرَى</a> <a name="01802400100016">عَارِفُوهُ</a> <a name="01802400100026" ll="SDBH:יֹום:000004:Time">يَوْمَهُ</a>؟
\v 2 يَنْقُلُونَ <a name="01802400200002" ll="SDBH:גְּבוּלָה:000000:Detach" tl="HOTTP1927" il="tb061406529;Bolen00191">ٱلتُّخُومَ</a>. <a name="01802400200008" ll="SDBH:גזל:000000:Possess">يَغْتَصِبُونَ</a> قَطِيعًا وَيَرْعَوْنَهُ.
\v 3 <a name="01802400300006">يَسْتَاقُونَ</a> <a name="01802400300002" ll="SDBH:חֲמֹור:000000:Domestic Animals" il="HK00033;Fauna:2.4a;Fauna:2.4b;NBGbs20120712-446;Fauna0002">حِمَارَ</a> <a name="01802400300004" ll="SDBH:יָתֹום:000000:Classes">ٱلْيَتَامَى</a>، <a name="01802400300008" ll="SDBH:חבל:000000:Non-Possess">وَيَرْتَهِنُونَ</a> <a name="01802400300010" ll="SDBH:שֹׁור:000000:Domestic Animals" il="LB00022;LB00012;LB00018;HK00096;LB00021;Fauna:2.10;Realia:8.2b;NBGpb20140210;tb072705204;tb032905283">ثَوْرَ</a> <a name="01802400300012" ll="SDBH:אַלְמָנָה:000000:Classes">ٱلْأَرْمَلَةِ</a>.
\v 4 <a name="01802400400002" ll="SDBH:נטה:002003:Move">يَصُدُّونَ</a> <a name="01802400400004" ll="SDBH:אֶבְיֹון:000000:Poor">ٱلْفُقَرَاءَ</a> عَنِ <a name="01802400400008" ll="SDBH:דֶּרֶךְ:000000:Roads">ٱلطَّرِيقِ</a>. <a name="01802400400014" ll="SDBH:עָנִי:000000:Classes|Unsafe|Poor">مَسَاكِينُ</a> <a name="01802400400016" ll="SDBH:אֶרֶץ:000000:Land">ٱلْأَرْضِ</a> <a name="01802400400012" ll="SDBH:חבא:001000:Hide">يَخْتَبِئُونَ</a> <a name="01802400400010">جَمِيعًا</a>.
\v 5 هَا هُمْ <a name="01802400500004" ll="SDBH:פֶּרֶא:000000:Wild Animals" il="Fauna:2.32a;Fauna:2.32b">كَالْفَرَاءِ</a> فِي <a name="01802400500010" ll="SDBH:מִדְבָּר:000000:Landscapes" il="RS26447_ISR91T-418;Sinai178;Sinai-3;Sinai190;Sinai-220;Sinai-191;tb113006604">ٱلْقَفْرِ</a> <a name="01802400500012" ll="SDBH:יצא:000000:Move">يَخْرُجُونَ</a> إِلَى <a name="01802400500016" ll="SDBH:פֹּעַל:000002:Serve">عَمَلِهِمْ</a> يُبَكِّرُونَ <a name="01802400500024" ll="SDBH:טֶרֶף:000001:Food">لِلطَّعَامِ</a>. ٱلْبَادِيَةُ لَهُمْ <a name="01802400500030" ll="SDBH:לֶחֶם:000000:Bread" tl="HOTTP1929" il="Tandir_bread;tb061116157">خُبْزٌ</a> <a name="01802400500036" ll="SDBH:נַעַר:000000:People">لأَوْلاَدِهِمْ</a>.
\v 6 فِي <a name="01802400600006" ll="SDBH:שָׂדֶה:000001:Landscapes">ٱلْحَقْلِ</a> <a name="01802400600010" ll="SDBH:קצר:000006:Gather" il="LB00102;LB00101;Flora:3.1.1a;Stooks_of_barley_in_West_Somerset">يَحْصُدُونَ</a> <a name="01802400600008" ll="SDBH:בְּלִיל:000000:Food" tl="HOTTP1930">عَلَفَهُمْ</a>، <a name="01802400600020" ll="SDBH:לקשׁ:000000:Gather">وَيُعَلِّلُونَ</a> <a name="01802400600016" ll="SDBH:כֶּרֶם:000000:Landscapes" il="HK00112;LB00107;Flora:2.12a;grapes1662, rp;grapes1686, rp;tb061504248;Bolen00212;Bolen00213;Bolen00214;Rit00100">كَرْمَ</a> <a name="01802400600018" ll="SDBH:רָשָׁע:000000:Guilty">ٱلشِّرِّيرِ</a>.
\v 7 <a name="01802400700004" ll="SDBH:לין:000000:Space">يَبِيتُونَ</a> <a name="01802400700002" ll="SDBH:עָרֹום:000000:Undress">عُرَاةً</a> بِلاَ <a name="01802400700010" ll="SDBH:לְבוּשׁ:000000:Clothing">لِبْسٍ</a>، وَلَيْسَ لَهُمْ <a name="01802400700016" ll="SDBH:כְּסוּת:000000:Coverings|Clothing">كَسْوَةٌ</a> فِي <a name="01802400700022" ll="SDBH:קָרָה:000000:Cold">ٱلْبَرْدِ</a>.
\v 8 <a name="01802400800008" ll="SDBH:רטב:000000:Wet">يَبْتَلُّونَ</a> مِنْ <a name="01802400800004" ll="SDBH:זֶרֶם:000000:Rain">مَطَرِ</a> <a name="01802400800006" ll="SDBH:הַר:000000:Landforms">ٱلْجِبَالِ</a>، <a name="01802400800014" ll="SDBH:בְּלִי:000000:Negators">وَلِعَدَمِ</a> <a name="01802400800016" ll="SDBH:מַחְסֶה:000000:Hide">ٱلْمَلْجَإِ</a> <a name="01802400800018" ll="SDBH:חבק:000001:Space">يَعْتَنِقُونَ</a> <a name="01802400800020" ll="SDBH:צוּר:000001:Landforms">ٱلصَّخْرَ</a>.
\v 9 <a name="01802400900002" ll="SDBH:גזל:000000:Possess">يَخْطَفُونَ</a> <a name="01802400900008" ll="SDBH:יָתֹום:000000:Classes">ٱلْيَتِيمَ</a> عَنِ <a name="01802400900006" ll="SDBH:שֹׁד:001000:Parts: Creatures" tl="HOTTP1931" il="Bolen00195">ٱلثُّدِيِّ</a>، وَمِنَ <a name="01802400900014" ll="SDBH:עָנִי:000000:Classes|Unsafe|Poor" tl="HOTTP1932">ٱلْمَسَاكِينِ</a> <a name="01802400900016" ll="SDBH:חבל:000000:Non-Possess">يَرْتَهِنُونَ</a>.
\v 10 <a name="01802401000002" ll="SDBH:עָרֹום:000000:Undress">عُرَاةً</a> <a name="01802401000004" ll="SDBH:הלך:000002:Move">يَذْهَبُونَ</a> بِلاَ <a name="01802401000008" ll="SDBH:לְבוּשׁ:000000:Clothing">لِبْسٍ</a>، <a name="01802401000012" ll="SDBH:רָעֵב:000000:Hunger">وَجَائِعِينَ</a> <a name="01802401000014" ll="SDBH:נשׂא:000003:Hold">يَحْمِلُونَ</a> <a name="01802401000016" ll="SDBH:עֹמֶר:000000:Bind" il="LB00102;LB00101;Flora:3.1.1a;Stooks_of_barley_in_West_Somerset">حُزَمًا</a>.
\v 11 <a name="01802401100006" ll="SDBH:צהר:000000:Involvement" il="il_oil_press_d01">يَعْصِرُونَ</a> ٱلزَّيْتَ <a name="01802401100002" tl="HOTTP1933">دَاخِلَ</a> <a name="01802401100004" ll="SDBH:שׁוּרָה:000000:Arrange" tl="HOTTP1933">أَسْوَارِهِمْ</a>. <a name="01802401100010" ll="SDBH:דרך:000003:Impact">يَدُوسُونَ</a> <a name="01802401100008" ll="SDBH:יֶקֶב:000001:Constructions" il="LB00106;Realia:1.1.10;NBGpb20140225;Bolen00496;Bolen00497">ٱلْمَعَاصِرَ</a> <a name="01802401100014" ll="SDBH:צמא:000000:Thirst">وَيَعْطَشُونَ</a>.
\v 12 مِنَ ٱلْوَجَعِ أُنَاسٌ <a name="01802401200008" ll="SDBH:נאק:000000:Sounds">يَئِنُّونَ</a>، <a name="01802401200012" ll="SDBH:נֶפֶשׁ:000005:Parts: People">وَنَفْسُ</a> <a name="01802401200014" ll="SDBH:חָלָל:000000:Impact">ٱلْجَرْحَى</a> <a name="01802401200016" ll="SDBH:שׁוע:000000:Shout">تَسْتَغِيثُ</a>، <a name="01802401200020" ll="SDBH:אֱלֹוהַּ:000001:Deities">وَٱللهُ</a> <a name="01802401200022" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01802401200024" ll="SDBH:שׂים:000002:Bear">يَنْتَبِهُ</a> إِلَى <a name="01802401200026" ll="SDBH:תִּפְלָה:000000:Wrong" tl="HOTTP1935">ٱلظُّلْمِ</a>.
\v 13 <a name="01802401300002">أُولئِكَ</a> <a name="01802401300004">يَكُونُونَ</a> بَيْنَ <a name="01802401300008" ll="SDBH:מרד:000000:Unwilling">ٱلْمُتَمَرِّدِينَ</a> عَلَى <a name="01802401300010" ll="SDBH:אֹור:000000:Shine">ٱلنُّورِ</a>. <a name="01802401300012" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01802401300014" ll="SDBH:נכר:000000:Know">يَعْرِفُونَ</a> <a name="01802401300016" ll="SDBH:דֶּרֶךְ:000000:Roads">طُرُقَهُ</a> <a name="01802401300020" ll="SDBH:לֹא:000000:Negators">وَلاَ</a> <a name="01802401300022">يَلْبَثُونَ</a> فِي <a name="01802401300026" ll="SDBH:נְתִיבָה:000000:Roads">سُبُلِهِ</a>.
\v 14 مَعَ <a name="01802401400006" ll="SDBH:אֹור:000000:Shine" tl="HOTTP1936">ٱلنُّورِ</a> <a name="01802401400008">يَقُومُ</a> <a name="01802401400010" ll="SDBH:רצח:000001:Dead">ٱلْقَاتِلُ</a>، <a name="01802401400012" ll="SDBH:קטל:000000:Dead">يَقْتُلُ</a> <a name="01802401400014" ll="SDBH:עָנִי:000000:Classes|Unsafe|Poor">ٱلْمِسْكِينَ</a> <a name="01802401400018" ll="SDBH:אֶבְיֹון:000000:Poor">وَٱلْفَقِيرَ</a>، وَفِي <a name="01802401400026" ll="SDBH:לַיְלָה:000000:Time">ٱللَّيْلِ</a> يَكُونُ <a name="01802401400034" ll="SDBH:גַּנָּב:000000:People" tl="HOTTP1937">كَاللِّصِّ</a>.
\v 15 <a name="01802401500004" ll="SDBH:עַיִן:000000:Parts: Creatures">وَعَيْنُ</a> <a name="01802401500006" ll="SDBH:נאף:000000:Unfaithful">ٱلزَّانِي</a> <a name="01802401500008" ll="SDBH:שׁמר:000000:See">تُلاَحِظُ</a> <a name="01802401500010" ll="SDBH:נֶשֶׁף:000000:Time">ٱلْعِشَاءَ</a>. <a name="01802401500014" ll="SDBH:אמר:000000:Speak">يَقُولُ</a>: <a name="01802401500016" ll="SDBH:לֹא:000000:Negators">لاَ</a> تُرَاقِبُنِي <a name="01802401500020" ll="SDBH:עַיִן:000000:Parts: Creatures">عَيْنٌ</a>. <a name="01802401500028" ll="SDBH:שׂים:000001:Space">فَيَجْعَلُ</a> <a name="01802401500024" ll="SDBH:סֵתֶר:000000:Hide">سِتْرًا</a> عَلَى <a name="01802401500026" ll="SDBH:פָּנֶה:000000:">وَجْهِهِ</a>.
\v 16 <a name="01802401600002" ll="SDBH:חתר:000000:Open">يَنْقُبُونَ</a> <a name="01802401600010" ll="SDBH:בַּיִת:000000:Buildings" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20140917;NBGmk20120826;NBGmk20120826a">ٱلْبُيُوتَ</a> فِي <a name="01802401600008" ll="SDBH:חֹשֶׁךְ:000000:Dark">ٱلظَّلاَمِ</a>. فِي <a name="01802401600012" ll="SDBH:יֹומָם:000000:Time">ٱلنَّهَارِ</a> <a name="01802401600014" ll="SDBH:חתם:000002:Hide">يُغْلِقُونَ</a> عَلَى أَنْفُسِهِمْ. <a name="01802401600018" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01802401600020">يَعْرِفُونَ</a> <a name="01802401600022" ll="SDBH:אֹור:000000:Shine">ٱلنُّورَ</a>.
\v 17 لأَنَّهُ <a name="01802401700004">سَوَاءٌ</a> عَلَيْهِمُ <a name="01802401700006" ll="SDBH:בֹּקֶר:000000:Time">ٱلصَّبَاحُ</a> <a name="01802401700010" ll="SDBH:צַלְמָוֶת:000000:Dark">وَظِلُّ</a> ٱلْمَوْتِ. لأَنَّهُمْ <a name="01802401700014" ll="SDBH:נכר:000000:Know">يَعْلَمُونَ</a> <a name="01802401700016" ll="SDBH:בַּלָּהָה:000000:Afraid">أَهْوَالَ</a> <a name="01802401700018" ll="SDBH:צַלְמָוֶת:000000:Dark">ظِلِّ</a> ٱلْمَوْتِ.
\v 18 <a name="01802401800002" ll="SDBH:קַל:000000:Agile">خَفِيفٌ</a> هُوَ عَلَى <a name="01802401800008">وَجْهِ</a> <a name="01802401800010" ll="SDBH:מַיִם:000000:Liquids" il="Water_drop_001">ٱلْمِيَاهِ</a>. <a name="01802401800012" ll="SDBH:קלל:000005:Curse">مَلْعُونٌ</a> <a name="01802401800014" ll="SDBH:חֶלְקָה:000000:Objects">نَصِيبُهُمْ</a> فِي <a name="01802401800020" ll="SDBH:אֶרֶץ:000000:Land">ٱلْأَرْضِ</a>. لاَ <a name="01802401800024" ll="SDBH:פנה:000000:Move">يَتَوَجَّهُ</a> إِلَى <a name="01802401800026" ll="SDBH:דֶּרֶךְ:000006:Orientation">طَرِيقِ</a> <a name="01802401800028" ll="SDBH:כֶּרֶם:000000:Landscapes" il="HK00112;LB00107;Flora:2.12a;grapes1662, rp;grapes1686, rp;tb061504248;Bolen00212;Bolen00213;Bolen00214;Rit00100">ٱلْكُرُومِ</a>.
\v 19 <a name="01802401900002" ll="SDBH:צִיָּה:000000:Dry">ٱلْقَحْطُ</a> <a name="01802401900006" ll="SDBH:חֹם:000001:Hot">وَٱلْقَيْظُ</a> <a name="01802401900008" ll="SDBH:גזל:000000:Possess">يَذْهَبَانِ</a> <a name="01802401900010" ll="SDBH:מַיִם:000000:Liquids" tl="HOTTP1938" il="Water_drop_001">بِمِيَاهِ</a> <a name="01802401900012" ll="SDBH:שֶׁלֶג:000000:Rain" tl="HOTTP1938" il="NBGbs20130728-115;Snow">ٱلثَّلْجِ</a>، كَذَا <a name="01802401900014" ll="SDBH:שְׁאֹול:000000:Universe" tl="HOTTP1938">ٱلْهَاوِيَةُ</a> بِالَّذِينَ <a name="01802401900016" ll="SDBH:חטא:001005:Sin" tl="HOTTP1938">أَخْطَأُوا</a>.
\v 20 <a name="01802402000002" ll="SDBH:שׁכח:000000:Non-Know" tl="HOTTP1939">تَنْسَاهُ</a> ٱلرَّحِمُ، يَسْتَحْلِيهِ <a name="01802402000008" ll="SDBH:רִמָּה:000000:Swarming Creatures" tl="HOTTP1939" il="Fauna:6.13">ٱلدُّودُ</a>. لاَ <a name="01802402000014" ll="SDBH:זכר:000000:Know">يُذْكَرُ</a> <a name="01802402000010">بَعْدُ</a>، <a name="01802402000018" ll="SDBH:שׁבר:000004:Non-Happen">وَيَنْكَسِرُ</a> <a name="01802402000026" ll="SDBH:עַוְלָה:000000:Wrong">ٱلْأَثِيمُ</a> <a name="01802402000024" ll="SDBH:עֵץ:000000:Trees">كَشَجَرَةٍ</a>.
\v 21 <a name="01802402100002" ll="SDBH:רעה:000000:Ingest;SDBH:רעה:001002:Copulate" tl="HOTTP1940">يُسِيئُ</a> إِلَى <a name="01802402100004" ll="SDBH:עָקָר:000000:Unable">ٱلْعَاقِرِ</a> ٱلَّتِي لَمْ <a name="01802402100008" ll="SDBH:ילד:000000:Birth" il="Children_of_Kabul,_Afghanistan;Baby_boy_after_birth;Motherhood1912;Birth;Bolen00304">تَلِدْ</a>، <a name="01802402100006" ll="SDBH:לֹא:000000:Negators">وَلاَ</a> <a name="01802402100016" ll="SDBH:יטב:000007:Right">يُحْسِنُ</a> إِلَى <a name="01802402100012" ll="SDBH:אַלְמָנָה:000000:Classes">ٱلْأَرْمَلَةِ</a>.
\v 22 <a name="01802402200004" ll="SDBH:משׁך:000002:Move">يُمْسِكُ</a> <a name="01802402200006" ll="SDBH:אַבִּיר:000004:Strong">ٱلْأَعِزَّاءَ</a> <a name="01802402200010" ll="SDBH:כֹּחַ:000000:Strong">بِقُوَّتِهِ</a>. <a name="01802402200012">يَقُومُ</a> <a name="01802402200016" ll="SDBH:לֹא:000000:Negators">فَلاَ</a> <a name="01802402200018" ll="SDBH:אמן:000005:Confident">يَأْمَنُ</a> أَحَدٌ بِحَيَاتِهِ.
\v 23 <a name="01802402300002">يُعْطِيهِ</a> <a name="01802402300008" ll="SDBH:בֶּטַח:000000:Confident">طُمَأْنِينَةً</a> <a name="01802402300012" ll="SDBH:שׁען:000001:Confident">فَيَتَوَكَّلُ</a>، وَلكِنْ <a name="01802402300016" ll="SDBH:עַיִן:000000:Parts: Creatures">عَيْنَاهُ</a> عَلَى <a name="01802402300020" ll="SDBH:דֶּרֶךְ:000007:Act">طُرُقِهِمْ</a>.
\v 24 يَتَرَفَّعُونَ <a name="01802402400004" ll="SDBH:מְעַט:000001:Frequency">قَلِيلاً</a> ثُمَّ لاَ يَكُونُونَ <a name="01802402400012" ll="SDBH:מכך:000002:Dry">وَيُحَطُّونَ</a>. كَالْكُلِّ <a name="01802402400020" ll="SDBH:קפץ:000002:Non-Exist">يُجْمَعُونَ</a>، <a name="01802402400026" ll="SDBH:רֹאשׁ:000000:Parts: Creatures">وَكَرَأْسِ</a> <a name="01802402400028" ll="SDBH:שִׁבֹּלֶת:001000:">ٱلسُّنْبُلَةِ</a> يُقْطَعُونَ.
