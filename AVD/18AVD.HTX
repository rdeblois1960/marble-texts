\v 20 <a name="01800702000002" ll="SDBH:חטא:001005:Sin">أَأَخْطَأْتُ</a>؟ <a name="01800702000004" ll="SDBH:מָה:000000:Object Referents">مَاذَا</a> <a name="01800702000006" ll="SDBH:פעל:000000:Exist|Happen">أَفْعَلُ</a> لَكَ يَا <a name="01800702000010" ll="SDBH:נצר:000000:See" tl="HOTTP1818">رَقِيبَ</a> <a name="01800702000014" ll="SDBH:אָדָם:000000:People">ٱلنَّاسِ</a>؟ لِمَاذَا <a name="01800702000018" ll="SDBH:שׂים:000005:Different">جَعَلْتَنِي</a> <a name="01800702000022" ll="SDBH:מִפְגָּע:000000:People">عَاثُورًا</a> لِنَفْسِكَ حَتَّى <a name="01800702000028">أَكُونَ</a> عَلَى <a name="01800702000030" tl="HOTTP1819">نَفْسِي</a> حِمْلاً؟
\v 21 وَلِمَاذَا <a name="01800702100006" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01800702100008" ll="SDBH:נשׂא:000009:Innocent">تَغْفِرُ</a> <a name="01800702100010" ll="SDBH:פֶּשַׁע:000000:Wrong">ذَنْبِي</a>، وَلاَ <a name="01800702100014">تُزِيلُ</a> إِثْمِي؟ لأَنِّي <a name="01800702100022">ٱلْآنَ</a> <a name="01800702100030" ll="SDBH:שׁכב:000000:Stance">أَضْطَجِعُ</a> فِي <a name="01800702100028" ll="SDBH:עָפָר:000000:Dust">ٱلتُّرَابِ</a>، تَطْلُبُنِي <a name="01800702100038">فَلاَ</a> أَكُونُ.
\c 8
\v 1 <a name="01800800100004" ll="SDBH:ענה:000000:Speak">فَأَجَابَ</a> <a name="01800800100006" ll="SDBH:בִּלְדַּד:000000:Names of People">بِلْدَدُ</a> <a name="01800800100010" ll="SDBH:שׁוּחִי:000000:Names of Groups">ٱلشُّوحِيُّ</a> <a name="01800800100014" ll="SDBH:אמר:000000:Speak">وَقَالَ</a>:
\v 2 <a name="01800800200004" ll="SDBH:אָן:000001:Event Referents: Time">إِلَى</a> مَتَى تَقُولُ هٰذَا، وَتَكُونُ <a name="01800800200016" ll="SDBH:אֵמֶר:000000:Speak">أَقْوَالُ</a> فِيكَ <a name="01800800200012" ll="SDBH:רוּחַ:000007:Fail">رِيحًا</a> <a name="01800800200014" ll="SDBH:כַּבִּיר:000002:Intense">شَدِيدَةً</a>؟
\v 3 هَلِ <a name="01800800300004" ll="SDBH:אֵל:000001:Deities">اللهُ</a> يُعَوِّجُ <a name="01800800300008" ll="SDBH:מִשְׁפָּט:000007:Right">ٱلْقَضَاءَ</a>، أَوِ <a name="01800800300014" ll="SDBH:שַׁדַּי:000000:Names of Deities">ٱلْقَدِيرُ</a> يَعْكِسُ <a name="01800800300018" ll="SDBH:צֶדֶק:000001:Right">ٱلْحَقَّ</a>؟
\v 4 إِذْ <a name="01800800400006" ll="SDBH:חטא:001005:Sin">أَخْطَأَ</a> إِلَيْهِ بَنُوكَ، <a name="01800800400012" ll="SDBH:שׁלח:000019:Unwilling">دَفَعَهُمْ</a> إِلَى <a name="01800800400016">يَدِ</a> <a name="01800800400018" ll="SDBH:פֶּשַׁע:000000:Wrong">مَعْصِيَتِهِمْ</a>.
\v 5 فَإِنْ بَكَّرْتَ أَنْتَ إِلَى <a name="01800800500010" ll="SDBH:אֵל:000001:Deities">ٱللّٰهِ</a> <a name="01800800500018" ll="SDBH:חנן:000001:Merciful">وَتَضَرَّعْتَ</a> إِلَى <a name="01800800500016" ll="SDBH:שַׁדַּי:000000:Names of Deities">ٱلْقَدِيرِ</a>،
\v 6 إِنْ كُنْتَ أَنْتَ <a name="01800800600004" ll="SDBH:זַךְ:000001:Innocent">زَكِيًّا</a> <a name="01800800600008" ll="SDBH:יָשָׁר:000004:Innocent">مُسْتَقِيمًا</a>، فَإِنَّهُ <a name="01800800600014">ٱلْآنَ</a> <a name="01800800600016" ll="SDBH:עור:000002:Act" tl="HOTTP1820">يَتَنَبَّهُ</a> لَكَ <a name="01800800600022" ll="SDBH:שׁלם:000006:Non-Possess">وَيُسْلِمُ</a> <a name="01800800600024" ll="SDBH:נָוָה:000000:Space">مَسْكَنَ</a> <a name="01800800600026" ll="SDBH:צֶדֶק:000001:Right">بِرِّكَ</a>.
\v 7 وَإِنْ تَكُنْ <a name="01800800700006" ll="SDBH:רֵאשִׁית:000000:Aspect">أُولاَكَ</a> <a name="01800800700008" ll="SDBH:מִצְעָר:000003:Trivial">صَغِيرَةً</a> <a name="01800800700012" ll="SDBH:אַחֲרִית:000001:Orientation">فَآخِرَتُكَ</a> <a name="01800800700014" ll="SDBH:שׂגה:000001:Extraordinary">تَكْثُرُ</a> <a name="01800800700016" ll="SDBH:מְאֹד:000001:Intense">جِدًّا</a>.
\v 8 <a name="01800800800004" ll="SDBH:שׁאל:000000:Ask">اِسْأَلِ</a> <a name="01800800800010" ll="SDBH:דֹּור:001000:Groups">ٱلْقُرُونَ</a> <a name="01800800800012" ll="SDBH:רִאשֹׁון:000000:Quantity|Frequency">ٱلْأُولَى</a> <a name="01800800800016" ll="SDBH:כון:000014:Know">وَتَأَكَّدْ</a> <a name="01800800800020" ll="SDBH:חֵקֶר:000000:Know">مَبَاحِثَ</a> <a name="01800800800022" ll="SDBH:אָב:000001:Kinship">آبَائِهِمْ</a>،
\v 9 لأَنَّنَا <a name="01800800900006">نَحْنُ</a> مِنْ <a name="01800800900004" ll="SDBH:תְּמֹול:000000:Event Referents: Time">أَمْسٍ</a> <a name="01800800900010" ll="SDBH:לֹא:000000:Negators">وَلاَ</a> <a name="01800800900012">نَعْلَمُ</a>، لأَنَّ <a name="01800800900018" ll="SDBH:יֹום:000004:Time">أَيَّامَنَا</a> عَلَى <a name="01800800900022" ll="SDBH:אֶרֶץ:000000:Land">ٱلْأَرْضِ</a> <a name="01800800900016" ll="SDBH:צֵל:000000:Dark">ظِلٌّ</a>.
\v 10 <a name="01800801000004" ll="SDBH:לֹא:000000:Negators">فَهَلاَّ</a> <a name="01800801000008" ll="SDBH:ירה:002000:Know">يُعْلِمُونَكَ</a>؟ <a name="01800801000010" ll="SDBH:אמר:000000:Speak">يَقُولُونَ</a> لَكَ، وَمِنْ <a name="01800801000018" ll="SDBH:לֵב:000001:Think">قُلُوبِهِمْ</a> <a name="01800801000020" ll="SDBH:יצא:000041:Speak">يُخْرِجُونَ</a> <a name="01800801000022" ll="SDBH:מִלָּה:000000:Speak">أَقْوَالاً</a> قَائِلِينَ:
\v 11 هَلْ يَنْمُي <a name="01800801100006" ll="SDBH:גֹּמֶא:000000:Plants" il="Flora:5.1.3a;Flora:5.1.3b">ٱلْبَرْدِيُّ</a> فِي غَيْرِ <a name="01800801100012" ll="SDBH:בִּצָּה:000000:Waterbodies">ٱلْغَمِقَةِ</a>، أَوْ <a name="01800801100014" ll="SDBH:שׂגה:000000:Large">تَنْبُتُ</a> <a name="01800801100016" ll="SDBH:אָחוּ:000000:Plants" il="Flora:5.1.2">ٱلْحَلْفَاءُ</a> <a name="01800801100018" ll="SDBH:בְּלִי:000000:Negators">بِلاَ</a> <a name="01800801100020" ll="SDBH:מַיִם:000000:Liquids" il="Water_drop_001">مَاءٍ</a>؟
\v 12 وَهُوَ <a name="01800801200002">بَعْدُ</a> فِي <a name="01800801200006" ll="SDBH:אֵב:000001:Stage">نَضَارَتِهِ</a> <a name="01800801200008" ll="SDBH:לֹא:000000:Negators">لَمْ</a> <a name="01800801200010" ll="SDBH:קטף:000000:Detach">يُقْطَعْ</a>، يَيْبَسُ <a name="01800801200016">قَبْلَ</a> كُلِّ <a name="01800801200020" ll="SDBH:חָצִיר:000001:Plants" il="Flora:5.1.2">ٱلْعُشْبِ</a>.
\v 13 <a name="01800801300002">هٰكَذَا</a> <a name="01800801300004" ll="SDBH:אֹרַח:000002:Act">سُبُلُ</a> كُلِّ <a name="01800801300008" ll="SDBH:שׁכח:000000:Non-Know">ٱلنَّاسِينَ</a> <a name="01800801300010" ll="SDBH:אֵל:000001:Deities">ٱللّٰهَ</a>، <a name="01800801300014" ll="SDBH:תִּקְוָה:001000:Confident">وَرَجَاءُ</a> <a name="01800801300016" ll="SDBH:חָנֵף:000000:Evil">ٱلْفَاجِرِ</a> <a name="01800801300018" ll="SDBH:אבד:000006:Non-Happen">يَخِيبُ</a>،
\v 14 فَيَنْقَطِعُ <a name="01800801400006" ll="SDBH:כֶּסֶל:001000:Confident">ٱعْتِمَادُهُ</a>، <a name="01800801400014" ll="SDBH:מִבְטָח:000000:Confident">وَمُتَّكَلُهُ</a> <a name="01800801400010" ll="SDBH:בַּיִת:000000:Buildings" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20140917;NBGmk20120826;NBGmk20120826a">بَيْتُ</a> <a name="01800801400012" ll="SDBH:עַכָּבִישׁ:000000:Swarming Creatures" il="Fauna:6.12a;Fauna:6.12b">ٱلْعَنْكَبُوتِ</a>!
\v 15 <a name="01800801500002" ll="SDBH:שׁען:000000:Stance">يَسْتَنِدُ</a> إِلَى <a name="01800801500006" ll="SDBH:בַּיִת:000000:Buildings" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20140917;NBGmk20120826;NBGmk20120826a">بَيْتِهِ</a> <a name="01800801500010" ll="SDBH:לֹא:000000:Negators">فَلاَ</a> <a name="01800801500012">يَثْبُتُ</a>. <a name="01800801500014" ll="SDBH:חזק:000017:Hold">يَتَمَسَّكُ</a> بِهِ <a name="01800801500020" ll="SDBH:לֹא:000000:Negators">فَلاَ</a> <a name="01800801500022">يَقُومُ</a>.
\v 16 <a name="01800801600002" ll="SDBH:רָטֹב:000000:Stage">هُوَرَطْبٌ</a> <a name="01800801600008">تُجَاهَ</a> <a name="01800801600010" ll="SDBH:שֶׁמֶשׁ:000000:Universe" il="Sunrise;Sunset;Sun">ٱلشَّمْسِ</a> وَعَلَى <a name="01800801600016" ll="SDBH:גַּנָּה:000000:Landscapes">جَنَّتِهِ</a> <a name="01800801600020" ll="SDBH:יצא:000042:Stage">تَنْبُتُ</a> <a name="01800801600018" ll="SDBH:יֹונֶקֶת:000000:Parts: Trees" il="A_Tamarind_tree_seedling">خَرَاعِيبُبهُ</a>.
\v 17 <a name="01800801700006" ll="SDBH:שֹׁרֶשׁ:000000:Parts: Vegetation" il="Tree_root;Root_swelling">وَأُصُولُهُ</a> <a name="01800801700008" ll="SDBH:סבך:000000:Weave">مُشْتَبِكَةٌ</a> فِي <a name="01800801700004" ll="SDBH:גַּל:000001:Quantity">ٱلرُّجْمَةِ</a>، <a name="01800801700014" ll="SDBH:חזה:000002:Search" tl="HOTTP1821">فَتَرَى</a> <a name="01800801700010" ll="SDBH:בַּיִת:000000:Buildings" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20140917;NBGmk20120826;NBGmk20120826a">مَحَلَّ</a> <a name="01800801700012" ll="SDBH:אֶבֶן:000001:Stone" il="tb041105516">ٱلْحِجَارَةِ</a>.
\v 18 إِنِ <a name="01800801800004" ll="SDBH:בלע:000001:Non-Exist">ٱقْتَلَعَهُ</a> مِنْ <a name="01800801800008" ll="SDBH:מָקֹום:000000:Space">مَكَانِهِ</a>، <a name="01800801800012" ll="SDBH:כחשׁ:000004:Unfaithful">يَجْحَدُهُ</a> قَائِلاً: <a name="01800801800016" ll="SDBH:לֹא:000000:Negators">مَا</a> <a name="01800801800018" ll="SDBH:ראה:000000:See">رَأَيْتُكَ</a>!
\v 19 هٰذَا هُوَ <a name="01800801900006" ll="SDBH:מָשֹׂושׂ:000000:Rejoice">فَرَحُ</a> <a name="01800801900008" ll="SDBH:דֶּרֶךְ:000007:Act">طَرِيقِهِ</a>، وَمِنَ <a name="01800801900014" ll="SDBH:עָפָר:000000:Dust">ٱلتُّرَابِ</a> <a name="01800801900018" ll="SDBH:צמח:000000:Stage">يَنْبُتُ</a> <a name="01800801900016" ll="SDBH:אַחֵר:000000:Different">آخَرُ</a>.
\v 20 <a name="01800802000002">هُوَذَا</a> <a name="01800802000004" ll="SDBH:אֵל:000001:Deities">ٱللّٰهُ</a> <a name="01800802000006" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01800802000008" ll="SDBH:מאס:000000:Unwilling">يَرْفُضُ</a> <a name="01800802000010" ll="SDBH:תָּם:000002:Innocent">ٱلْكَامِلَ</a>، وَلاَ <a name="01800802000016" ll="SDBH:חזק:000017:Hold">يَأْخُذُ</a> <a name="01800802000020">بِيَدِ</a> فَاعِلِي ٱلشَّرِّ.
\v 21 عِنْدَمَا <a name="01800802100004" ll="SDBH:מלא:000009:Engage">يَمْلأُ</a> <a name="01800802100008" ll="SDBH:פֶּה:000000:Parts: Creatures">فَاكَ</a> <a name="01800802100006" ll="SDBH:שְׂחֹוק:000000:Rejoice">ضِحْكًا</a>، <a name="01800802100012" ll="SDBH:שָׂפָה:000001:Speak">وَشَفَتَيْكَ</a> <a name="01800802100014" ll="SDBH:תְּרוּעָה:000000:Sounds|Shout" il="HK00188">هُتَافًا</a>،
\v 22 <a name="01800802200004">يَلْبِسُ</a> <a name="01800802200002" ll="SDBH:שׂנא:000001:Enemies">مُبْغِضُوكَ</a> <a name="01800802200006" ll="SDBH:בֹּשֶׁת:000000:Shame">خَزْيًا</a>، أَمَّا <a name="01800802200010" ll="SDBH:אֹהֶל:000003:Dwell">خَيْمَةُ</a> <a name="01800802200012" ll="SDBH:רָשָׁע:000000:Guilty">ٱلْأَشْرَارِ</a> <a name="01800802200014">فَلاَ</a> تَكُونُ.
\c 9
\v 1 <a name="01800900100004" ll="SDBH:ענה:000000:Speak">فَأَجَابَ</a> <a name="01800900100006" ll="SDBH:אִיֹּוב:000000:Names of People">أَيُّوبُ</a> <a name="01800900100010" ll="SDBH:אמר:000000:Speak">وَقَالَ</a>:
\v 2 <a name="01800900200002" ll="SDBH:אָמְנָם:000000:Affirmers">صَحِيحٌ</a>. قَدْ <a name="01800900200004">عَلِمْتُ</a> أَنَّهُ <a name="01800900200008" ll="SDBH:כֵּן:002000:Right">كَذَا</a>، <a name="01800900200012" ll="SDBH:מָה:000000:Object Referents">فَكَيْفَ</a> <a name="01800900200014" ll="SDBH:צדק:000000:Innocent">يَتَبَرَّرُ</a> <a name="01800900200016" ll="SDBH:אֱנֹושׁ:000000:People">ٱلْإِنْسَانُ</a> عِنْدَ <a name="01800900200020" ll="SDBH:אֵל:000001:Deities">ٱللّٰهِ</a>؟
\v 3 إِنْ <a name="01800900300004" ll="SDBH:חפץ:000002:Wish">شَاءَ</a> أَنْ <a name="01800900300008" ll="SDBH:ריב:000000:Conflict">يُحَاجَّهُ</a>، <a name="01800900300012" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01800900300014" ll="SDBH:ענה:000000:Speak">يُجِيبُهُ</a> عَنْ <a name="01800900300016" ll="SDBH:אֶחָד:000000:Quantity|Frequency">وَٱحِدٍ</a> مِنْ أَلْفٍ.
\v 4 <a name="01800900400002" ll="SDBH:חָכָם:000000:Wise">هُوَحَكِيمُ</a> <a name="01800900400004" ll="SDBH:לֵבָב:000001:Think">ٱلْقَلْبِ</a> <a name="01800900400010" ll="SDBH:כֹּחַ:000000:Strong">وَشَدِيدُ</a> <a name="01800900400008" ll="SDBH:אַמִּיץ:000000:Strong">ٱلْقُوَّةِ</a>. مَنْ <a name="01800900400014" ll="SDBH:קשׁה:000003:Unwilling">تَصَلَّبَ</a> عَلَيْهِ <a name="01800900400020" ll="SDBH:שׁלם:000000:Intact">فَسَلِمَ</a>؟
\v 5 <a name="01800900500004" ll="SDBH:עתק:000002:Move">ٱلْمُزَحْزِحُ</a> <a name="01800900500006" ll="SDBH:הַר:000000:Landforms">ٱلْجِبَالَ</a> <a name="01800900500010" ll="SDBH:לֹא:000000:Negators">وَلاَ</a> <a name="01800900500012">تَعْلَمُ</a>، ٱلَّذِي <a name="01800900500016" ll="SDBH:הפך:000002:Turn|Impact">يَقْلِبُهَا</a> فِي غَضَبِهِ.
\v 6 <a name="01800900600004" ll="SDBH:רגז:000001:Shake">ٱلْمُزَعْزِعُ</a> <a name="01800900600006" ll="SDBH:אֶרֶץ:000000:Land">ٱلْأَرْضَ</a> مِنْ <a name="01800900600010" ll="SDBH:מָקֹום:000000:Space">مَقَرِّهَا</a>، <a name="01800900600016" ll="SDBH:פלץ:000000:Shake">فَتَتَزَلْزَلُ</a> <a name="01800900600014" ll="SDBH:עַמּוּד:000002:Parts: Universe">أَعْمِدَتُهَا</a>.
\v 7 <a name="01800900700004" ll="SDBH:אמר:000000:Speak">ٱلْآمِرُ</a> <a name="01800900700010" ll="SDBH:חֶרֶס:001000:Universe" il="Sun">ٱلشَّمْسَ</a> <a name="01800900700014" ll="SDBH:לֹא:000000:Negators">فَلاَ</a> <a name="01800900700016" ll="SDBH:זרח:000000:Move">تُشْرِقُ</a>، <a name="01800900700024" ll="SDBH:חתם:000003:Non-Happen">وَيَخْتِمُ</a> عَلَى <a name="01800900700022" ll="SDBH:כֹּוכָב:000000:Universe" il="Stars">ٱلنُّجُومِ</a>.
\v 8 <a name="01800900800002" ll="SDBH:נטה:001001:Exist">ٱلْبَاسِطُ</a> <a name="01800900800004" ll="SDBH:שָׁמַיִם:000000:Universe">ٱلسَّمَاوَاتِ</a> وَحْدَهُ، <a name="01800900800012" ll="SDBH:דרך:000003:Impact">وَٱلْمَاشِي</a> عَلَى <a name="01800900800016" ll="SDBH:בָּמָה:000001:Landforms">أَعَالِي</a> <a name="01800900800018" ll="SDBH:יָם:000000:Waterbodies" il="Rough_seas">ٱلْبَحْرِ</a>.
