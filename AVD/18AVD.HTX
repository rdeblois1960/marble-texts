\v 20 <a name="01801802000006" ll="SDBH:שׁמם:000003:Grieve">يَتَعَجَّبُ</a> مِنْ <a name="01801802000004" ll="SDBH:יֹום:000004:Time">يَوْمِهِ</a> <a name="01801802000008" ll="SDBH:אַחֲרֹון:000000:Orientation">ٱلْمُتَأَخِّرُونَ</a>، <a name="01801802000016" ll="SDBH:שַׂעַר:000000:Afraid">وَيَقْشَعِرُّ</a> <a name="01801802000012" ll="SDBH:קַדְמֹנִי:000000:Orientation">ٱلْأَقْدَمُونَ</a>.
\v 21 إِنَّمَا <a name="01801802100004" ll="SDBH:אֵלֶּה:000000:Identifiers">تِلْكَ</a> <a name="01801802100006" ll="SDBH:מִשְׁכָּן:000000:Dwell">مَسَاكِنُ</a> <a name="01801802100008" ll="SDBH:עַוָּל:000000:Evil">فَاعِلِي</a> ٱلشَّرِّ، وَهذَا <a name="01801802100014" ll="SDBH:מָקֹום:000000:Space">مَقَامُ</a> مَنْ <a name="01801802100016" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="01801802100018">يَعْرِفُ</a> <a name="01801802100020" ll="SDBH:אֵל:000001:Deities">ٱللّٰهَ</a>.
\c 19
\v 1 <a name="01801900100004" ll="SDBH:ענה:000000:Speak">فَأَجَابَ</a> <a name="01801900100006" ll="SDBH:אִיֹּוב:000000:Names of People">أَيُّوبُ</a> <a name="01801900100010" ll="SDBH:אמר:000000:Speak">وَقَالَ</a>:
\v 2 حَتَّى مَتَى <a name="01801900200006" ll="SDBH:יגה:000001:Grieve|Distress">تُعَذِّبُونَ</a> <a name="01801900200008" ll="SDBH:נֶפֶשׁ:000001:Parts: Creatures">نَفْسِي</a> <a name="01801900200012" ll="SDBH:דכא:000002:Distress">وَتَسْحَقُونَنِي</a> <a name="01801900200016" ll="SDBH:מִלָּה:000000:Speak">بِالْكَلاَمِ</a>؟
\v 3 هٰذِهِ <a name="01801900300004" ll="SDBH:עֶשֶׂר:000000:Quantity|Frequency">عَشَرَ</a> <a name="01801900300006">مَرَّاتٍ</a> <a name="01801900300008" ll="SDBH:כלם:000001:Shame">أَخْزَيْتُمُونِي</a>. <a name="01801900300010" ll="SDBH:לֹא:000000:Negators">لَمْ</a> <a name="01801900300012" ll="SDBH:בושׁ:000000:Shame">تَخْجَلُوا</a> مِنْ أَنْ <a name="01801900300014" ll="SDBH:הכר:000000:Unsafe">تَحْكِرُونِي</a>.
\v 4 <a name="01801900400004" ll="SDBH:אַף:001002:Affirmers">وَهَبْنِي</a> <a name="01801900400008" ll="SDBH:שׁגה:000002:Sin">ضَلَلْتُ</a> <a name="01801900400006" ll="SDBH:אָמְנָם:000000:Affirmers">حَقًّا</a>. عَلَيَّ <a name="01801900400012" ll="SDBH:לין:000002:Happen">تَسْتَقِرُّ</a> <a name="01801900400014" ll="SDBH:מְשׁוּגָה:000000:Sin">ضَلاَلَتِي</a>!
\v 5 <a name="01801900500002">إِنْ</a> كُنْتُمْ <a name="01801900500004" ll="SDBH:אָמְנָם:000000:Affirmers">بِالْحَقِّ</a> <a name="01801900500008" ll="SDBH:גדל:000007:Great">تَسْتَكْبِرُونَ</a> عَلَيَّ، <a name="01801900500012" ll="SDBH:יכח:000003:Speak">فَثَبِّتُوا</a> عَلَيَّ <a name="01801900500016" ll="SDBH:חֶרְפָּה:000000:Shame">عَارِي</a>.
\v 6 <a name="01801900600002">فَاعْلَمُوا</a> <a name="01801900600004" ll="SDBH:אֵפֹוא:000000:Linkers: Perception">إِذًا</a> أَنَّ <a name="01801900600008" ll="SDBH:אֱלֹוהַּ:000001:Deities">ٱللّٰهَ</a> قَدْ عَوَّجَنِي، <a name="01801900600018" ll="SDBH:נקף:001001:Space">وَلَفَّ</a> عَلَيَّ أُحْبُولَتَهُ.
\v 7 <a name="01801900700002">هَا</a> إِنِّي <a name="01801900700004" ll="SDBH:צעק:000000:Sounds|Shout">أَصْرُخُ</a> <a name="01801900700006" ll="SDBH:חָמָס:000000:Unsafe">ظُلْمًا</a> <a name="01801900700010" ll="SDBH:לֹא:000000:Negators">فَلاَ</a> <a name="01801900700012" ll="SDBH:ענה:000000:Speak">أُسْتَجَابُ</a>. <a name="01801900700014" ll="SDBH:שׁוע:000000:Shout">أَدْعُو</a> وَلَيْسَ <a name="01801900700020" ll="SDBH:מִשְׁפָּט:000007:Right">حُكْمٌ</a>.
\v 8 قَدْ <a name="01801900800004" ll="SDBH:גדר:000002:Close">حَوَّطَ</a> <a name="01801900800002" ll="SDBH:אֹרַח:000002:Act">طَرِيقِي</a> <a name="01801900800008" ll="SDBH:לֹא:000000:Negators">فَلاَ</a> <a name="01801900800010" ll="SDBH:עבר:000000:Move">أَعْبُرُ</a>، وَعَلَى <a name="01801900800016" ll="SDBH:נְתִיבָה:000000:Roads">سُبُلِي</a> <a name="01801900800020" ll="SDBH:שׂים:000013:Happen">جَعَلَ</a> <a name="01801900800018" ll="SDBH:חֹשֶׁךְ:000000:Dark">ظَلاَمًا</a>.
\v 9 <a name="01801900900008" ll="SDBH:פשׁט:000003:Undress">أَزَالَ</a> عَنِّي <a name="01801900900002" ll="SDBH:כָּבֹוד:000000:Great">كَرَامَتِي</a> <a name="01801900900012" ll="SDBH:סור:000006:Space">وَنَزَعَ</a> تَاجَ <a name="01801900900016" ll="SDBH:רֹאשׁ:000000:Parts: Creatures">رَأْسِي</a>.
\v 10 <a name="01801901000002" ll="SDBH:נתץ:000000:Impact">هَدَمَنِي</a> مِنْ كُلِّ <a name="01801901000004" ll="SDBH:סָבִיב:000000:Orientation">جِهَةٍ</a> فَذَهَبْتُ، <a name="01801901000012" ll="SDBH:נסע:000000:Detach">وَقَلَعَ</a> مِثْلَ <a name="01801901000018" ll="SDBH:עֵץ:000000:Trees">شَجَرَةٍ</a> <a name="01801901000020" ll="SDBH:תִּקְוָה:001000:Confident">رَجَائِي</a>،
\v 11 <a name="01801901100004" ll="SDBH:חרה:000001:Happen">وَأَضْرَمَ</a> عَلَيَّ غَضَبَهُ، <a name="01801901100012" ll="SDBH:חשׁב:000007:Know">وَحَسِبَنِي</a> <a name="01801901100018" ll="SDBH:צַר:000003:Enemies">كَأَعْدَائِهِ</a>.
\v 12 <a name="01801901200002">مَعًا</a> <a name="01801901200004">جَاءَتْ</a> <a name="01801901200006" ll="SDBH:גְּדוּד:000000:Groups|Soldiers" il="Lachish_Relief-Booty">غُزَاتُهُ</a>، <a name="01801901200010" ll="SDBH:סלל:000000:Exist" tl="HOTTP1884">وَأَعَدُّوا</a> عَلَيَّ <a name="01801901200014" ll="SDBH:דֶּרֶךְ:000000:Roads" tl="HOTTP1884">طَرِيقَهُمْ</a>، <a name="01801901200018" ll="SDBH:חנה:000001:Dwell">وَحَلُّوا</a> <a name="01801901200020" ll="SDBH:סָבִיב:000000:Orientation">حَوْلَ</a> <a name="01801901200024" ll="SDBH:אֹהֶל:000003:Dwell">خَيْمَتِي</a>.
\v 13 قَدْ <a name="01801901300008" ll="SDBH:רחק:000001:Space" tl="HOTTP1885">أَبْعَدَ</a> عَنِّي <a name="01801901300002" ll="SDBH:אָח:000000:Kinship" tl="HOTTP1885">إِخْوَتِي</a>، <a name="01801901300012">وَمَعَارِفِي</a> <a name="01801901300016" ll="SDBH:זור:001000:Dissociate">زَاغُوا</a> عَنِّي.
\v 14 <a name="01801901400004" ll="SDBH:קָרֹוב:000000:Friends">أَقَارِبِي</a> قَدْ <a name="01801901400002" ll="SDBH:חדל:000000:Non-Exist">خَذَلُونِي</a>، وَٱلَّذِينَ <a name="01801901400008">عَرَفُونِي</a> <a name="01801901400010" ll="SDBH:שׁכח:000000:Non-Know">نَسُونِي</a>.
\v 15 <a name="01801901500002" ll="SDBH:גור:000000:Dwell">نُزَلاَءُ</a> <a name="01801901500004" ll="SDBH:בַּיִת:000003:Groups">بَيْتِي</a> <a name="01801901500008" ll="SDBH:אָמָה:000000:Classes">وَإِمَائِي</a> <a name="01801901500014" ll="SDBH:חשׁב:000007:Know">يَحْسِبُونَنِي</a> <a name="01801901500012" ll="SDBH:זָר:000000:Classes">أَجْنَبِيًّا</a>. صِرْتُ فِي <a name="01801901500022" ll="SDBH:עַיִן:000000:Parts: Creatures">أَعْيُنِهِمْ</a> <a name="01801901500016" ll="SDBH:נָכְרִי:000002:Classes">غَرِيبًا</a>.
\v 16 <a name="01801901600004" ll="SDBH:עֶבֶד:000000:Classes|Officials|Serve" il="Bolen00049">عَبْدِي</a> <a name="01801901600006" ll="SDBH:קרא:000003:Move">دَعَوْتُ</a> <a name="01801901600010" ll="SDBH:לֹא:000000:Negators">فَلَمْ</a> <a name="01801901600012" ll="SDBH:ענה:000000:Speak">يُجِبْ</a>. <a name="01801901600016" ll="SDBH:פֶּה:000000:Parts: Creatures">بِفَمِي</a> <a name="01801901600018" ll="SDBH:חנן:000001:Merciful">تَضَرَّعْتُ</a> إِلَيْهِ.
\v 17 <a name="01801901700002" ll="SDBH:רוּחַ:000003:Parts: Creatures">نَكْهَتِي</a> <a name="01801901700004" ll="SDBH:זור:002000:Hate">مَكْرُوهَةٌ</a> عِنْدَ <a name="01801901700008" ll="SDBH:אִשָּׁה:000000:People">ٱمْرَأَتِي</a>، وَخَمَمْتُ عِنْدَ أَبْنَاءِ <a name="01801901700018" ll="SDBH:בֶּטֶן:000000:Parts: Creatures">أَحْشَائِي</a>.
\v 18 <a name="01801901800004" ll="SDBH:עֲוִיל:000000:People">اَلْأَوْلاَدُ</a> أَيْضًا قَدْ <a name="01801901800006" ll="SDBH:מאס:000000:Unwilling">رَذَلُونِي</a>. إِذَا <a name="01801901800010">قُمْتُ</a> <a name="01801901800014" ll="SDBH:דבר:001000:Speak">يَتَكَلَّمُونَ</a> عَلَيَّ.
\v 19 <a name="01801901900002" ll="SDBH:תעב:000000:Hate">كَرِهَنِي</a> كُلُّ <a name="01801901900008" ll="SDBH:סֹוד:000002:Friends">رِجَالِي</a>، وَٱلَّذِينَ <a name="01801901900014" ll="SDBH:אהב:000000:Love">أَحْبَبْتُهُمُ</a> <a name="01801901900016" ll="SDBH:הפך:000008:Different">ٱنْقَلَبُوا</a> عَلَيَّ.
\v 20 <a name="01801902000014" ll="SDBH:עֶצֶם:000000:Parts: Creatures" tl="HOTTP1888">عَظْمِي</a> قَدْ <a name="01801902000012" ll="SDBH:דבק:000001:Attach" tl="HOTTP1887">لَصِقَ</a> <a name="01801902000004" ll="SDBH:עֹור:000000:Parts: Creatures">بِجِلْدِي</a> <a name="01801902000010" ll="SDBH:בָּשָׂר:000000:Parts: Creatures" tl="HOTTP1886" il="The_Meat_Market">وَلَحْمِي</a>، <a name="01801902000018" ll="SDBH:מלט:000000:Flee" tl="HOTTP1888">وَنَجَوْتُ</a> <a name="01801902000022" ll="SDBH:עֹור:000000:Parts: Creatures" tl="HOTTP1888">بِجِلْدِ</a> <a name="01801902000024" ll="SDBH:שֵׁן:000000:Parts: Creatures" tl="HOTTP1888">أَسْنَانِي</a>.
\v 21 <a name="01801902100002" ll="SDBH:חנן:000000:Merciful">تَرَاءَفُوا</a>، <a name="01801902100004" ll="SDBH:חנן:000000:Merciful">تَرَاءَفُوا</a> أَنْتُمْ عَلَيَّ يَا أَصْحَابِي، لأَنَّ <a name="01801902100012">يَدَ</a> <a name="01801902100014" ll="SDBH:אֱלֹוהַּ:000001:Deities">ٱللّٰهِ</a> قَدْ <a name="01801902100016" ll="SDBH:נגע:000001:Impact">مَسَّتْنِي</a>.
\v 22 لِمَاذَا <a name="01801902200004" ll="SDBH:רדף:000004:Oppress">تُطَارِدُونَنِي</a> كَمَا <a name="01801902200008" ll="SDBH:אֵל:000001:Deities">ٱللّٰهُ</a>، <a name="01801902200016" ll="SDBH:לֹא:000000:Negators">وَلاَ</a> <a name="01801902200018" ll="SDBH:שׂבע:000000:Contain">تَشْبَعُونَ</a> مِنْ <a name="01801902200014" ll="SDBH:בָּשָׂר:000000:Parts: Creatures" il="The_Meat_Market">لَحْمِي</a>؟
\v 23 <a name="01801902300004">لَيْتَ</a> <a name="01801902300012" ll="SDBH:מִלָּה:000000:Speak">كَلِمَاتِي</a> ٱلْآنَ <a name="01801902300010" ll="SDBH:כתב:000001:Write|Know" il="tb032014452">تُكْتَبُ</a>. يَا <a name="01801902300016">لَيْتَهَا</a> <a name="01801902300026" ll="SDBH:חקק:000000:Write">رُسِمَتْ</a> فِي <a name="01801902300022">سِفْرٍ</a>،
\v 24 <a name="01801902400022" ll="SDBH:חצב:000004:Write" il="tb123016984;Bolen00165">وَنُقِرَتْ</a> إِلَى <a name="01801902400014" ll="SDBH:עַד:001000:Time">ٱلْأَبَدِ</a> فِي <a name="01801902400020" ll="SDBH:צוּר:000000:Stone">ٱلصَّخْرِ</a> <a name="01801902400004" ll="SDBH:עֵט:000001:Tools" il="NBGpb20140728a;tb123016984;tb032014452">بِقَلَمِ</a> <a name="01801902400006" ll="SDBH:בַּרְזֶל:000000:Metals">حَدِيدٍ</a> <a name="01801902400010" ll="SDBH:עֹופֶרֶת:000000:Metals" tl="HOTTP1889">وَبِرَصَاصٍ</a>.
\v 25 أَمَّا <a name="01801902500004">أَنَا</a> فَقَدْ <a name="01801902500006">عَلِمْتُ</a> أَنَّ <a name="01801902500008" ll="SDBH:גאל:000003:Safe">وَلِيِّي</a> <a name="01801902500010" ll="SDBH:חַי:000000:Alive">حَيٌّ</a>، <a name="01801902500014" ll="SDBH:אַחֲרֹון:000001:Time">وَٱلْآخِرَ</a> عَلَى <a name="01801902500018" ll="SDBH:עָפָר:000000:Dust">ٱلْأَرْضِ</a> <a name="01801902500020">يَقُومُ</a>،
\v 26 <a name="01801902600004" ll="SDBH:אַחַר:001002:Time" tl="HOTTP1890">وَبَعْدَ</a> أَنْ <a name="01801902600008" ll="SDBH:נקף:000000:Detach" tl="HOTTP1890">يُفْنَى</a> <a name="01801902600006" ll="SDBH:עֹור:000000:Parts: Creatures" tl="HOTTP1890">جِلْدِي</a> هٰذَا، وَبِدُونِ <a name="01801902600016" ll="SDBH:בָּשָׂר:000000:Parts: Creatures" tl="HOTTP1891" il="The_Meat_Market">جَسَدِي</a> <a name="01801902600018" ll="SDBH:חזה:000001:See">أَرَى</a> <a name="01801902600020" ll="SDBH:אֱלֹוהַּ:000001:Deities">ٱللّٰهَ</a>.
