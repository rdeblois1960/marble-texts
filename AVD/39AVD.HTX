\v 14 <a name="03900101400004" ll="SDBH:ארר:000000:Curse">وَمَلْعُونٌ</a> <a name="03900101400006" ll="SDBH:נכל:000000:Wrong">ٱلْمَاكِرُ</a> ٱلَّذِي <a name="03900101400010">يُوجَدُ</a> فِي قَطِيعِهِ <a name="03900101400016" ll="SDBH:זָכָר:000000:Sex">ذَكَرٌ</a> <a name="03900101400020" ll="SDBH:נדר:000000:Vow">وَيَنْذُرُ</a> <a name="03900101400024" ll="SDBH:זבח:000001:Sacrifice">وَيَذْبَحُ</a> <a name="03900101400030" ll="SDBH:אֲדֹנָי:000000:Titles" tl="HOTTP4502">لِلسَّيِّدِ</a> <a name="03900101400026" ll="SDBH:שׁחת:000000:Impact">عَائِبًا</a>. لأَنِّي <a name="03900101400038">أَنَا</a> <a name="03900101400034" ll="SDBH:מֶלֶךְ:000000:Leaders">مَلِكٌ</a> <a name="03900101400036" ll="SDBH:גָּדֹול:000002:Great">عَظِيمٌ</a>، <a name="03900101400040" ll="SDBH:אמר:000000:Speak">قَالَ</a> <a name="03900101400042" ll="SDBH:יהוה:000000:Names of Deities">رَبُّ</a> <a name="03900101400044" ll="SDBH:צָבָא:000006:Deities">ٱلْجُنُودِ</a>، <a name="03900101400048" ll="SDBH:שֵׁם:000002:Know">وَٱسْمِي</a> <a name="03900101400050" ll="SDBH:ירא:000001:Afraid">مَهِيبٌ</a> بَيْنَ <a name="03900101400056" ll="SDBH:גֹּוי:000000:Groups">ٱلْأُمَمِ</a>.
\c 2
\v 1 <a name="03900200100004">وَٱلْآنَ</a> <a name="03900200100006">إِلَيْكُمْ</a> <a name="03900200100014" ll="SDBH:זֶה:000000:Identifiers;SDBH:זֹה:000000:Identifiers">هٰذِهِ</a> <a name="03900200100010" ll="SDBH:מִצְוָה:000000:Laws">ٱلْوَصِيَّةُ</a> أَيُّهَا <a name="03900200100018" ll="SDBH:כֹּהֵן:000000:Priests">ٱلْكَهَنَةُ</a>:
\v 2 <a name="03900200200002">إِنْ</a> كُنْتُمْ <a name="03900200200004" ll="SDBH:לֹא:000000:Negators">لاَ</a> <a name="03900200200006">تَسْمَعُونَ</a> <a name="03900200200012" ll="SDBH:לֹא:000000:Negators">وَلاَ</a> <a name="03900200200014" ll="SDBH:שׂים:000028:Think">تَجْعَلُونَ</a> <a name="03900200200016">فِي</a> <a name="03900200200018" ll="SDBH:לֵב:000001:Think">ٱلْقَلْبِ</a> <a name="03900200200022">لِتُعْطُوا</a> <a name="03900200200024" ll="SDBH:כָּבֹוד:000000:Great">مَجْدًا</a> <a name="03900200200028" ll="SDBH:שֵׁם:000003:Self">لاسْمِي</a>، <a name="03900200200030" ll="SDBH:אמר:000000:Speak">قَالَ</a> <a name="03900200200032" ll="SDBH:יהוה:000000:Names of Deities">رَبُّ</a> <a name="03900200200034" ll="SDBH:צָבָא:000006:Deities">ٱلْجُنُودِ</a>. فَإِنِّي <a name="03900200200038" ll="SDBH:שׁלח:000020:Happen">أُرْسِلُ</a> عَلَيْكُمُ <a name="03900200200046" ll="SDBH:מְאֵרָה:000000:Curse">ٱللَّعْنَ</a>، <a name="03900200200050" ll="SDBH:ארר:000000:Curse">وَأَلْعَنُ</a> <a name="03900200200054" ll="SDBH:בְּרָכָה:000000:Blessed">بَرَكَاتِكُمْ</a>، <a name="03900200200058" ll="SDBH:גַּם:000001:Position: Affirmation">بَلْ</a> قَدْ <a name="03900200200060" ll="SDBH:ארר:000000:Curse">لَعَنْتُهَا</a>، لأَنَّكُمْ <a name="03900200200064">لَسْتُمْ</a> <a name="03900200200066" ll="SDBH:שׂים:000028:Think">جَاعِلِينَ</a> <a name="03900200200068">فِي</a> <a name="03900200200070" ll="SDBH:לֵב:000001:Think">ٱلْقَلْبِ</a>.
\v 3 هٰأَنَذَا <a name="03900200300004" ll="SDBH:גער:000000:Rebuke" tl="HOTTP4503">أَنْتَهِرُ</a> لَكُمُ ٱلزَّرْعَ،وَأَمُدُّ ٱلْفَرْثَ <a name="03900200300020">عَلَى</a> <a name="03900200300022">وُجُوهِكُمْ</a>، فَرْثَ <a name="03900200300026" ll="SDBH:חַג:000001:Animals">أَعْيَادِكُمْ</a>، <a name="03900200300030" ll="SDBH:נשׂא:000003:Hold" tl="HOTTP4504">فَتُنْزَعُونَ</a> <a name="03900200300034" tl="HOTTP4504">مَعَهُ</a>.
\v 4 <a name="03900200400004">فَتَعْلَمُونَ</a> أَنِّي <a name="03900200400008" ll="SDBH:שׁלח:000005:Move">أَرْسَلْتُ</a> <a name="03900200400010">إِلَيْكُمْ</a> <a name="03900200400020" ll="SDBH:זֶה:000000:Identifiers;SDBH:זֹה:000000:Identifiers">هٰذِهِ</a> <a name="03900200400016" ll="SDBH:מִצְוָה:000000:Laws">ٱلْوَصِيَّةَ</a> <a name="03900200400024">لِكَوْنِ</a> <a name="03900200400026" ll="SDBH:בְּרִית:000000:Covenant">عَهْدِي</a> مَعَ <a name="03900200400030" ll="SDBH:לֵוִי:000000:Names of People|Names of Groups">لاَوِي</a>، <a name="03900200400032" ll="SDBH:אמר:000000:Speak">قَالَ</a> <a name="03900200400034" ll="SDBH:יהוה:000000:Names of Deities">رَبُّ</a> <a name="03900200400036" ll="SDBH:צָבָא:000006:Deities">ٱلْجُنُودِ</a>.
\v 5 <a name="03900200500004">كَانَ</a> <a name="03900200500002" ll="SDBH:בְּרִית:000000:Covenant">عَهْدِي</a> مَعَهُ لِلْحَيَاةِ <a name="03900200500016" ll="SDBH:שָׁלֹום:000000:Safe">وَٱلسَّلاَمِ</a>، <a name="03900200500020">وَأَعْطَيْتُهُ</a> إِيَّاهُمَا <a name="03900200500024" ll="SDBH:מֹורָא:000000:Afraid">لِلتَّقْوَى</a>. <a name="03900200500028" ll="SDBH:ירא:000000:Afraid">فَاتَّقَانِي</a>، <a name="03900200500032">وَمِنِ</a> <a name="03900200500036" ll="SDBH:שֵׁם:000003:Self">ٱسْمِي</a> <a name="03900200500038" ll="SDBH:חתת:000007:Respect">ٱرْتَاعَ</a> <a name="03900200500040">هُوَ</a>.
\v 6 <a name="03900200600002" ll="SDBH:תֹּורָה:000000:Laws">شَرِيعَةُ</a> ٱلْحَقِّ <a name="03900200600006">كَانَتْ</a> فِي <a name="03900200600010" ll="SDBH:פֶּה:000000:Parts: Creatures">فِيهِ</a>، <a name="03900200600014" ll="SDBH:עַוְלָה:000000:Wrong">وَإِثْمٌ</a> <a name="03900200600016" ll="SDBH:לֹא:000000:Negators">لَمْ</a> <a name="03900200600018" ll="SDBH:מצא:000009:Happen">يُوجَدْ</a> فِي <a name="03900200600022" ll="SDBH:שָׂפָה:000001:Speak">شَفَتَيْهِ</a>. <a name="03900200600034" ll="SDBH:הלך:000004:Act">سَلَكَ</a> مَعِي فِي <a name="03900200600026" ll="SDBH:שָׁלֹום:000000:Safe">ٱلسَّلاَمِ</a> <a name="03900200600032" ll="SDBH:מִישֹׁור:000002:Right">وَٱلْاسْتِقَامَةِ</a>، <a name="03900200600042" ll="SDBH:שׁוב:000014:Non-Engage">وَأَرْجَعَ</a> <a name="03900200600040" ll="SDBH:רַב:000001:Quantity|Frequency">كَثِيرِينَ</a> <a name="03900200600044">عَنِ</a> ٱلْإِثْمِ.
\v 7 لأَنَّ <a name="03900200700004" ll="SDBH:שָׂפָה:000001:Speak">شَفَتَيِ</a> <a name="03900200700006" ll="SDBH:כֹּהֵן:000000:Priests">ٱلْكَاهِنِ</a> <a name="03900200700008" ll="SDBH:שׁמר:000002:Engage">تَحْفَظَانِ</a> <a name="03900200700010" ll="SDBH:דַּעַת:000000:Know">مَعْرِفَةً</a>، <a name="03900200700018">وَمِنْ</a> <a name="03900200700020" ll="SDBH:פֶּה:000000:Parts: Creatures">فَمِهِ</a> <a name="03900200700016" ll="SDBH:בקשׁ:000007:Happen">يَطْلُبُونَ</a> <a name="03900200700014" ll="SDBH:תֹּורָה:000000:Laws">ٱلشَّرِيعَةَ</a>، <a name="03900200700030">لأَنَّهُ</a> <a name="03900200700024" ll="SDBH:מַלְאָךְ:000000:Messengers">رَسُولُ</a> <a name="03900200700026" ll="SDBH:יהוה:000000:Names of Deities">رَبِّ</a> <a name="03900200700028" ll="SDBH:צָבָא:000006:Deities">ٱلْجُنُودِ</a>.
\v 8 أَمَّا <a name="03900200800004">أَنْتُمْ</a> <a name="03900200800006" ll="SDBH:סור:000002:Act">فَحِدْتُمْ</a> <a name="03900200800008">عَنِ</a> <a name="03900200800012" ll="SDBH:דֶּרֶךְ:000007:Act">ٱلطَّرِيقِ</a> <a name="03900200800014" ll="SDBH:כשׁל:000002:Fail">وَأَعْثَرْتُمْ</a> <a name="03900200800016" ll="SDBH:רַב:000001:Quantity|Frequency">كَثِيرِينَ</a> <a name="03900200800022" ll="SDBH:תֹּורָה:000000:Laws">بِالشَّرِيعَةِ</a>. <a name="03900200800024" ll="SDBH:שׁחת:000002:Non-Happen">أَفْسَدْتُمْ</a> <a name="03900200800026" ll="SDBH:בְּרִית:000000:Covenant">عَهْدَ</a> <a name="03900200800030" ll="SDBH:לֵוִי:000001:Names of Groups">لاَوِي</a>، <a name="03900200800032" ll="SDBH:אמר:000000:Speak">قَالَ</a> <a name="03900200800034" ll="SDBH:יהוה:000000:Names of Deities">رَبُّ</a> <a name="03900200800036" ll="SDBH:צָבָא:000006:Deities">ٱلْجُنُودِ</a>.
\v 9 <a name="03900200900006">فَأَنَا</a> <a name="03900200900004" ll="SDBH:גַּם:000003:Perception: Consequence">أَيْضًا</a> <a name="03900200900008">صَيَّرْتُكُمْ</a> <a name="03900200900012" ll="SDBH:בזה:000000:Despise|Revile">مُحْتَقَرِينَ</a> <a name="03900200900016" ll="SDBH:שָׁפָל:000001:Insignificant">وَدَنِيئِينَ</a> عِنْدَ <a name="03900200900020">كُلِّ</a> <a name="03900200900024" ll="SDBH:עַם:000000:Groups">ٱلشَّعْبِ</a>,، <a name="03900200900030">كَمَا</a> أَنَّكُمْ <a name="03900200900032">لَمْ</a> <a name="03900200900034" ll="SDBH:שׁמר:000003:Happen">تَحْفَظُوا</a> <a name="03900200900038" ll="SDBH:דֶּרֶךְ:000007:Act">طُرُقِي</a> بَلْ <a name="03900200900044" ll="SDBH:פָּנֶה:000000:">حَابَيْتُمْ</a> فِي <a name="03900200900050" ll="SDBH:תֹּורָה:000000:Laws">ٱلشَّرِيعَةِ</a>.
\v 10 <a name="03900201000004" ll="SDBH:לֹא:000000:Negators">أَلَيْسَ</a> <a name="03900201000006" ll="SDBH:אָב:000004:Exist">أَبٌ</a> <a name="03900201000008" ll="SDBH:אֶחָד:000000:Quantity|Frequency">وَٱحِدٌ</a> <a name="03900201000012">لِكُلِّنَا</a>؟ <a name="03900201000016" ll="SDBH:לֹא:000000:Negators">أَلَيْسَ</a> <a name="03900201000018" ll="SDBH:אֵל:000001:Deities">إِلهٌ</a> <a name="03900201000020" ll="SDBH:אֶחָד:000000:Quantity|Frequency">وَٱحِدٌ</a> <a name="03900201000022" ll="SDBH:ברא:000001:Exist">خَلَقَنَا</a>؟ <a name="03900201000024" ll="SDBH:מַדּוּעַ:000000:Event Referents: Cognition">فَلِمَ</a> <a name="03900201000026" ll="SDBH:בגד:000000:Unfaithful">نَغْدُرُ</a> <a name="03900201000028" ll="SDBH:אִישׁ:000002:">ٱلرَّجُلُ</a> <a name="03900201000032" ll="SDBH:אָח:000005:Object Referents">بِأَخِيهِ</a> <a name="03900201000036" ll="SDBH:חלל:000004:Despise">لِتَدْنِيسِ</a> <a name="03900201000038" ll="SDBH:בְּרִית:000000:Covenant">عَهْدِ</a> <a name="03900201000040" ll="SDBH:אָב:000001:Kinship">آبَائِنَا</a>؟
