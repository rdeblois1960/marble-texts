\v 19 <a name="02100701900004" ll="SDBH:חָכְמָה:000000:Wise">اَلْحِكْمَةُ</a> <a name="02100701900006" ll="SDBH:עזז:000002:Strong">تُقَوِّي</a> <a name="02100701900012" ll="SDBH:חָכָם:000000:Wise">ٱلْحَكِيمَ</a> أَكْثَرَ مِنْ <a name="02100701900016" ll="SDBH:עֶשֶׂר:000000:Quantity|Frequency">عَشَرَةِ</a> <a name="02100701900018" ll="SDBH:שַׁלִּיט:000000:Leaders">مُسَلَّطِينَ</a>، ٱلَّذِينَ هُمْ فِي <a name="02100701900028" ll="SDBH:עִיר:000000:Towns">ٱلْمَدِينَةِ</a>.
\v 20 لأَنَّهُ <a name="02100702000006">لاَ</a> <a name="02100702000004" ll="SDBH:אָדָם:000000:People">إِنْسَانٌ</a> <a name="02100702000008" ll="SDBH:צַדִּיק:000000:Innocent">صِدِّيقٌ</a> فِي <a name="02100702000014" ll="SDBH:אֶרֶץ:000000:Land">ٱلْأَرْضِ</a> <a name="02100702000018">يَعْمَلُ</a> <a name="02100702000020" ll="SDBH:טֹוב:000002:Right">صَلاَحًا</a> وَلاَ <a name="02100702000026" ll="SDBH:חטא:001005:Sin">يُخْطِئُ</a>.
\v 21 <a name="02100702100002" ll="SDBH:גַּם:000000:Connection: Extension">أَيْضًا</a> لاَ <a name="02100702100018">تَضَعْ</a> <a name="02100702100020" ll="SDBH:לֵב:000001:Think">قَلْبَكَ</a> عَلَى كُلِّ <a name="02100702100010" ll="SDBH:דָּבָר:000000:Speak">ٱلْكَلاَمِ</a> ٱلَّذِي <a name="02100702100014" ll="SDBH:דבר:001000:Speak">يُقَالُ</a>، لِئَلاَّ <a name="02100702100026">تَسْمَعَ</a> <a name="02100702100030" ll="SDBH:עֶבֶד:000000:Classes|Officials|Serve" il="Bolen00049">عَبْدَكَ</a> <a name="02100702100032" ll="SDBH:קלל:000005:Curse">يَسِبُّكَ</a>.
\v 22 لأَنَّ <a name="02100702200012" ll="SDBH:לֵב:000001:Think">قَلْبَكَ</a> <a name="02100702200004" ll="SDBH:גַּם:000000:Connection: Extension">أَيْضًا</a> <a name="02100702200010">يَعْلَمُ</a> أَنَّكَ أَنْتَ كَذلِكَ <a name="02100702200006">مِرَارًا</a> <a name="02100702200008" ll="SDBH:רַב:000001:Quantity|Frequency">كَثِيرَةً</a> <a name="02100702200022" ll="SDBH:קלל:000005:Curse">سَبَبْتَ</a> <a name="02100702200024" ll="SDBH:אַחֵר:000000:Different">آخَرِينَ</a>.
