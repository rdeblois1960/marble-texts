\v 2 Tinha ele <a name="00900100200006" ll="SDBH:שְׁנַיִם:000000">duas</a> <a name="00900100200008" ll="SDBH:אִשָּׁה:000000">mulheres</a>: <a name="00900100200012" ll="SDBH:אֶחָד:000003">uma</a> <a name="00900100200010" ll="SDBH:שֵׁם:000000">se</a> <a name="00900100200010" ll="SDBH:שֵׁם:000000">chamava</a> <a name="00900100200014" ll="SDBH:חַנָּה:000000">Ana</a>, e a <a name="00900100200022" ll="SDBH:שֵׁנִי:000000">outra</a>, <a name="00900100200024" ll="SDBH:פְּנִנָּה:000000">Penina</a>; <a name="00900100200032" ll="SDBH:פְּנִנָּה:000000">Penina</a> tinha <a name="00900100200034" ll="SDBH:יֶלֶד:000000" il="Baby_boy_after_birth;Motherhood1912">filhos</a>; <a name="00900100200040" ll="SDBH:חַנָּה:000000">Ana</a>, porém, não <a name="00900100200044" ll="SDBH:יֶלֶד:000000" il="Baby_boy_after_birth;Motherhood1912">os</a> tinha.
    
\v 3 <a name="00900100300012">Este</a> <a name="00900100300008" ll="SDBH:אִישׁ:000000">homem</a> <a name="00900100300004" ll="SDBH:עלה:000004">subia</a> da <a name="00900100300016" ll="SDBH:עִיר:000000">sua</a> <a name="00900100300016" ll="SDBH:עִיר:000000">cidade</a> de <a name="00900100300020;00900100300022" ll="SDBH:יֹום:000002">ano</a> <a name="00900100300020;00900100300022" ll="SDBH:יֹום:000002">em</a> <a name="00900100300020;00900100300022" ll="SDBH:יֹום:000002">ano</a> a <a name="00900100300026" ll="SDBH:חוה:001000" il="Prostrate_figures">adorar</a> e a <a name="00900100300032" ll="SDBH:זבח:000001">sacrificar</a> ao <a name="00900100300036" ll="SDBH:יהוה:000000">Senhor</a> <a name="00900100300038" ll="SDBH:צָבָא:000006">dos</a> <a name="00900100300038" ll="SDBH:צָבָא:000006">Exércitos</a>, em <a name="00900100300042" ll="SDBH:שִׁילֹה:000001" il="Satellite Bible Atlas00014;Satellite Bible Atlas00051;il_shiloh_house_d01;tb060616101;tb060616117;tb060616122">Siló</a>. Estavam ali os <a name="00900100300048" ll="SDBH:שְׁנַיִם:000000">dois</a> <a name="00900100300050" ll="SDBH:בֵּן:000000">filhos</a> <a name="00900100300052" ll="SDBH:עֵלִי:000000">de</a> <a name="00900100300052" ll="SDBH:עֵלִי:000000">Eli</a>, <a name="00900100300054" ll="SDBH:חָפְנִי:000000">Hofni</a> e <a name="00900100300058" ll="SDBH:פִּינְחָס:000001">Fineias</a>, como <a name="00900100300060" ll="SDBH:כֹּהֵן:000000" il="LB00263">sacerdotes</a> do <a name="00900100300064" ll="SDBH:יהוה:000000">Senhor</a>. 
\v 4 No <a name="00900100400008" ll="SDBH:יֹום:000001">dia</a> em que <a name="00900100400014" ll="SDBH:אֶלְקָנָה:000001">Elcana</a> <a name="00900100400012" ll="SDBH:זבח:000001">oferecia</a> o seu <a name="00900100400012" ll="SDBH:זבח:000001">sacrifício</a>, <a name="00900100400018">dava</a> ele <a name="00900100400038" ll="SDBH:מָנָה:000000">porções</a> deste a <a name="00900100400022" ll="SDBH:פְּנִנָּה:000000">Penina</a>, <a name="00900100400024" ll="SDBH:אִשָּׁה:000000">sua</a> <a name="00900100400024" ll="SDBH:אִשָּׁה:000000">mulher</a>, e a todos os <a name="00900100400032" ll="SDBH:בֵּן:000000">seus</a> <a name="00900100400032" ll="SDBH:בֵּן:000000">filhos</a> e <a name="00900100400036" ll="SDBH:בַּת:000000" il="Children_of_Kabul,_Afghanistan">filhas</a>. 
\v 5 A <a name="00900100500006" ll="SDBH:חַנָּה:000000">Ana</a>, porém, <a name="00900100500008">dava</a> <a name="00900100500010" ll="SDBH:מָנָה:000000" tl="HOTTP980">porção</a> <a name="00900100500012;00900100500014" ll="SDBH:אֶחָד:000000;SDBH:אֶפֶס:000004;SDBH:אַף:002000" tl="HOTTP980">dupla</a>, porque ele <a name="00900100500020" ll="SDBH:חַנָּה:000000">a</a> <a name="00900100500022" ll="SDBH:אהב:000000">amava</a>, ainda mesmo que o <a name="00900100500026" ll="SDBH:יהוה:000000">Senhor</a> <a name="00900100500028;00900100500030" ll="SDBH:סגר:000001;SDBH:רֶחֶם:000000">a</a> <a name="00900100500028;00900100500030" ll="SDBH:סגר:000001;SDBH:רֶחֶם:000000">houvesse</a> <a name="00900100500028;00900100500030" ll="SDBH:סגר:000001;SDBH:רֶחֶם:000000">deixado</a> <a name="00900100500028;00900100500030" ll="SDBH:סגר:000001;SDBH:רֶחֶם:000000">estéril</a>. 
\v 6 (A <a name="00900100600006" ll="SDBH:צָרָה:001000">sua</a> <a name="00900100600006" ll="SDBH:צָרָה:001000">rival</a> <a name="00900100600004" ll="SDBH:כעס:000001">a</a> <a name="00900100600004" ll="SDBH:כעס:000001">provocava</a> <a name="00900100600010" ll="SDBH:כַּעַס:000001">excessivamente</a> para a <a name="00900100600016" ll="SDBH:רעם:001001">irritar</a>, porquanto o <a name="00900100600022" ll="SDBH:יהוה:000000">Senhor</a> <a name="00900100600024;00900100600026" ll="SDBH:בַּעַד:000000;SDBH:רֶחֶם:000000">lhe</a> <a name="00900100600020" ll="SDBH:סגר:000001">havia</a> <a name="00900100600020" ll="SDBH:סגר:000001">cerrado</a> <a name="00900100600024;00900100600026" ll="SDBH:בַּעַד:000000;SDBH:רֶחֶם:000000">a</a> <a name="00900100600024;00900100600026" ll="SDBH:בַּעַד:000000;SDBH:רֶחֶם:000000">madre</a>.) 
\v 7 E assim o <a name="00900100700006">fazia</a> ele de <a name="00900100700008" ll="SDBH:שָׁנָה:000000">ano</a> em <a name="00900100700012" ll="SDBH:שָׁנָה:000000">ano</a>; e, <a name="00900100700016" ll="SDBH:דַּי:000006">todas</a> <a name="00900100700016" ll="SDBH:דַּי:000006">as</a> <a name="00900100700016" ll="SDBH:דַּי:000006">vezes</a> que Ana <a name="00900100700018" ll="SDBH:עלה:000004">subia</a> à <a name="00900100700022" ll="SDBH:בַּיִת:000000" il="HK00232;HK00245;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGlo20140606;NBGlo20140606b;NBGlo20140708c;NBGlo20140825;NBGmk20120826;NBGmk20120826a;NBGmk20140917;jlm_sol_complex_ann;jlm_soltemp_altar_m01;jlm_soltemp_d01;jlm_soltemp_m06;jlm_soltemp_pillars_m01">Casa</a> do <a name="00900100700024" ll="SDBH:יהוה:000000">Senhor</a>, a outra <a name="00900100700028" ll="SDBH:כעס:000001">a</a> <a name="00900100700028" ll="SDBH:כעס:000001">irritava</a>; pelo que <a name="00900100700032" ll="SDBH:בכה:000000">chorava</a> e não <a name="00900100700038" ll="SDBH:אכל:000000">comia</a>. 
\v 8 Então, <a name="00900100800008" ll="SDBH:אֶלְקָנָה:000001">Elcana</a>, <a name="00900100800010" ll="SDBH:אִישׁ:000000">seu</a> <a name="00900100800010" ll="SDBH:אִישׁ:000000">marido</a>, lhe <a name="00900100800004" ll="SDBH:אמר:000000">disse</a>: <a name="00900100800012" ll="SDBH:חַנָּה:000000">Ana</a>, por que <a name="00900100800016" ll="SDBH:בכה:000000">choras</a>? E por que não <a name="00900100800024" ll="SDBH:אכל:000000">comes</a>? E por que <a name="00900100800030" ll="SDBH:רעע:000004">estás</a> <a name="00900100800032" ll="SDBH:לֵבָב:000001">de</a> <a name="00900100800032" ll="SDBH:לֵבָב:000001">coração</a> <a name="00900100800030" ll="SDBH:רעע:000004">triste</a>? <a name="00900100800036" ll="SDBH:לֹא:000000">Não</a> te sou eu <a name="00900100800040" ll="SDBH:טֹוב:000002">melhor</a> do que <a name="00900100800046" ll="SDBH:עֶשֶׂר:000000">dez</a> <a name="00900100800048" ll="SDBH:בֵּן:000000">filhos</a>?
    
\v 9 <a name="00900100900008" ll="SDBH:אַחַר:001002" tl="HOTTP981">Após</a> <a name="00900100900010" ll="SDBH:אכל:000000" tl="HOTTP981">terem</a> <a name="00900100900010" ll="SDBH:אכל:000000" tl="HOTTP981">comido</a> e <a name="00900100900020" ll="SDBH:שׁתה:000000" tl="HOTTP982">bebido</a> em <a name="00900100900014" ll="SDBH:שִׁילֹה:000001" il="Satellite Bible Atlas00014;Satellite Bible Atlas00051;il_shiloh_house_d01;tb060616101;tb060616117;tb060616122" tl="HOTTP981">Siló</a>, estando <a name="00900100900024" ll="SDBH:עֵלִי:000000">Eli</a>, o <a name="00900100900028" ll="SDBH:כֹּהֵן:000000" il="LB00263">sacerdote</a>, <a name="00900100900030">assentado</a> numa <a name="00900100900036" ll="SDBH:כִּסֵּא:000000" il="Ashur-nasir-pal_II_throne;Darius_In_Parse;Roman_throne;Throne_Greek;Throne_Toutankamon;adr1603194845;mb120901102">cadeira</a>, junto a um <a name="00900100900040" ll="SDBH:מְזוּזָה:000000" il="Realia:3.1.2.4">pilar</a> do <a name="00900100900042" ll="SDBH:הֵיכָל:000001">templo</a> do <a name="00900100900044" ll="SDBH:יהוה:000000">Senhor</a>, 
\v 10 <a name="00900100900004">levantou</a>-<a name="00900100900004">se</a> <a name="00900100900006" ll="SDBH:חַנָּה:000000">Ana</a>, e, com <a name="00900101000006" ll="SDBH:מַר:001002">amargura</a> de <a name="00900101000008" ll="SDBH:נֶפֶשׁ:000001">alma</a>, <a name="00900101000012" ll="SDBH:פלל:000002" il="LB00269;LB00270;LB00271;NBGbs20110228-1_61-2;NBGmk20140526">orou</a> ao <a name="00900101000016" ll="SDBH:יהוה:000000">Senhor</a>, e <a name="00900101000020" ll="SDBH:בכה:000000">chorou</a> <a name="00900101000022" ll="SDBH:בכה:000000">abundantemente</a>. 
\v 11 E <a name="00900101100004" ll="SDBH:נדר:000000">fez</a> um <a name="00900101100006" ll="SDBH:נֶדֶר:000000">voto</a>, <a name="00900101100010" ll="SDBH:אמר:000000">dizendo</a>: <a name="00900101100012" ll="SDBH:יהוה:000000">Senhor</a> <a name="00900101100014" ll="SDBH:צָבָא:000006">dos</a> <a name="00900101100014" ll="SDBH:צָבָא:000006">Exércitos</a>, se <a name="00900101100018" ll="SDBH:ראה:000000">benignamente</a> <a name="00900101100020" ll="SDBH:ראה:000000">atentares</a> para a <a name="00900101100024" ll="SDBH:עֳנִי:000000">aflição</a> da <a name="00900101100026" ll="SDBH:אָמָה:000000">tua</a> <a name="00900101100026" ll="SDBH:אָמָה:000000">serva</a>, e <a name="00900101100030" ll="SDBH:זכר:000000">de</a> <a name="00900101100030" ll="SDBH:זכר:000000">mim</a> <a name="00900101100030" ll="SDBH:זכר:000000">te</a> <a name="00900101100030" ll="SDBH:זכר:000000">lembrares</a>, e <a name="00900101100040" ll="SDBH:אָמָה:000000">da</a> <a name="00900101100040" ll="SDBH:אָמָה:000000">tua</a> <a name="00900101100040" ll="SDBH:אָמָה:000000">serva</a> te não <a name="00900101100036" ll="SDBH:שׁכח:000000">esqueceres</a>, e <a name="00900101100048" ll="SDBH:אָמָה:000000">lhe</a> <a name="00900101100044">deres</a> um <a name="00900101100050" ll="SDBH:זֶרַע:000004" il="Children_of_Kabul,_Afghanistan">filho</a> varão, ao <a name="00900101100060" ll="SDBH:יהוה:000000">Senhor</a> <a name="00900101100056">o</a> <a name="00900101100056">darei</a> por todos os <a name="00900101100064" ll="SDBH:יֹום:000004">dias</a> da <a name="00900101100066" ll="SDBH:חַיִּים:000000">sua</a> <a name="00900101100066" ll="SDBH:חַיִּים:000000">vida</a>, e sobre a <a name="00900101100078" ll="SDBH:רֹאשׁ:000000">sua</a> <a name="00900101100078" ll="SDBH:רֹאשׁ:000000">cabeça</a> não <a name="00900101100074" ll="SDBH:עלה:000010">passará</a> <a name="00900101100070" ll="SDBH:מֹורָה:000000" il="Realia:1.9.1">navalha</a>.
    
\v 12 <a name="00900101200008">Demorando</a>-<a name="00900101200008">se</a> <a name="00900101200008">ela</a> no <a name="00900101200012" ll="SDBH:פלל:000002" il="LB00269;LB00270;LB00271;NBGbs20110228-1_61-2;NBGmk20140526">orar</a> <a name="00900101200016">perante</a> o <a name="00900101200018" ll="SDBH:יהוה:000000">Senhor</a>, passou <a name="00900101200022" ll="SDBH:עֵלִי:000000">Eli</a> a <a name="00900101200024" ll="SDBH:שׁמר:000000">observar</a>-lhe o movimento dos <a name="00900101200028" ll="SDBH:פֶּה:000000">lábios</a>, 
