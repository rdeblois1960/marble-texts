\v 12 As <a name="00900601200008" ll="SDBH:פָּרָה:000000" il="Fauna:2.10;LB00022;tb032905283">vacas</a> <a name="00900601200004" ll="SDBH:ישׁר:000001">se</a> <a name="00900601200004" ll="SDBH:ישׁר:000001">encaminharam</a> <a name="00900601200004" ll="SDBH:ישׁר:000001">diretamente</a> para <a name="00900601200020" ll="SDBH:בֵּית שֶׁמֶשׁ:000000" il="Satellite Bible Atlas00051">Bete</a>-<a name="00900601200020" ll="SDBH:בֵּית שֶׁמֶשׁ:000000" il="Satellite Bible Atlas00051">Semes</a> e, <a name="00900601200028" ll="SDBH:הלך:000001">andando</a> e <a name="00900601200034" ll="SDBH:געה:000000">berrando</a>, <a name="00900601200030" ll="SDBH:הלך:000001">seguiam</a> sempre por esse <a name="00900601200024;00900601200026" ll="SDBH:אֶחָד:000000;SDBH:מְסִלָּה:000000">mesmo</a> <a name="00900601200024;00900601200026" ll="SDBH:אֶחָד:000000;SDBH:מְסִלָּה:000000">caminho</a>, sem se <a name="00900601200040" ll="SDBH:סור:000000">desviarem</a> nem para a <a name="00900601200042" ll="SDBH:יָמִין:000000">direita</a> nem para a <a name="00900601200046" ll="SDBH:שְׂמֹאל:000000">esquerda</a>; os <a name="00900601200050" ll="SDBH:סֶרֶן:001000">príncipes</a> dos <a name="00900601200052" ll="SDBH:פְּלִשְׁתִּי:000000" il="il_qasile_houses;il_qasile_temple_d01">filisteus</a> <a name="00900601200054" ll="SDBH:הלך:000001">foram</a> <a name="00900601200056" ll="SDBH:אַחַר:001000">atrás</a> <a name="00900601200056" ll="SDBH:אַחַר:001000">delas</a>, até ao <a name="00900601200060" ll="SDBH:גְּבוּל:000000">território</a> de <a name="00900601200062" ll="SDBH:בֵּית שֶׁמֶשׁ:000000" il="Satellite Bible Atlas00051">Bete</a>-<a name="00900601200062" ll="SDBH:בֵּית שֶׁמֶשׁ:000000" il="Satellite Bible Atlas00051">Semes</a>.
    
\v 13 <a name="00900601300006" ll="SDBH:קצר:000006" il="Bolen00107;Flora:3.1.1a;LB00102;Stooks_of_barley_in_West_Somerset">Andavam</a> os de <a name="00900601300004" ll="SDBH:בֵּית שֶׁמֶשׁ:000000" il="Satellite Bible Atlas00051">Bete</a>-<a name="00900601300004" ll="SDBH:בֵּית שֶׁמֶשׁ:000000" il="Satellite Bible Atlas00051">Semes</a> <a name="00900601300006" ll="SDBH:קצר:000006" il="Bolen00107;Flora:3.1.1a;LB00102;Stooks_of_barley_in_West_Somerset">fazendo</a> a <a name="00900601300008" ll="SDBH:קָצִיר:000002">sega</a> <a name="00900601300010" ll="SDBH:חִטָּה:000000" il="Flora:3.1.4a;Flora:3.1.4b;PikiWiki_Israel_7817">do</a> <a name="00900601300010" ll="SDBH:חִטָּה:000000" il="Flora:3.1.4a;Flora:3.1.4b;PikiWiki_Israel_7817">trigo</a> no <a name="00900601300016" ll="SDBH:עֵמֶק:000000">vale</a> e, <a name="00900601300020" ll="SDBH:נשׂא:000039">levantando</a> os <a name="00900601300024" ll="SDBH:עַיִן:000000">olhos</a>, <a name="00900601300028" ll="SDBH:ראה:000000">viram</a> a <a name="00900601300034" ll="SDBH:אֲרֹון:000001" il="LB00283;NBGlo20140501;NBGlo20140501e;NBGlo20140509;Realia:4.1a">arca</a>; e, <a name="00900601300042" ll="SDBH:ראה:000000">vendo</a>-a, <a name="00900601300038" ll="SDBH:שׂמח:000000">se</a> <a name="00900601300038" ll="SDBH:שׂמח:000000">alegraram</a>. 
