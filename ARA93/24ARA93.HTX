\v 29 Não <a name="02400502900010" ll="SDBH:פקד:000006">castigaria</a> <a name="02400502900010" ll="SDBH:פקד:000006">eu</a> estas coisas? — <a name="02400502900012;02400502900014" ll="SDBH:יהוה:000000;SDBH:נְאֻם:000000">diz</a> <a name="02400502900012;02400502900014" ll="SDBH:יהוה:000000;SDBH:נְאֻם:000000">o</a> <a name="02400502900012;02400502900014" ll="SDBH:יהוה:000000;SDBH:נְאֻם:000000">Senhor</a>; não me <a name="02400502900030" ll="SDBH:נקם:000000">vingaria</a> <a name="02400502900032" ll="SDBH:נֶפֶשׁ:000001">eu</a> de <a name="02400502900020" ll="SDBH:גֹּוי:000000">nação</a> como esta?
    
\v 30 <a name="02400503000002" ll="SDBH:שַׁמָּה:000001">Coisa</a> <a name="02400503000002" ll="SDBH:שַׁמָּה:000001">espantosa</a> e <a name="02400503000006" ll="SDBH:שַׁעֲרוּר:000000">horrenda</a> <a name="02400503000008">se</a> <a name="02400503000008">anda</a> <a name="02400503000008">fazendo</a> na <a name="02400503000014" ll="SDBH:אֶרֶץ:000000">terra</a>: 
\v 31 os <a name="02400503100004" ll="SDBH:נָבִיא:000000">profetas</a> <a name="02400503100006" ll="SDBH:נבא:000000">profetizam</a> <a name="02400503100012" ll="SDBH:שֶׁקֶר:000000">falsamente</a>, e os <a name="02400503100018" ll="SDBH:כֹּהֵן:000000" il="LB00263">sacerdotes</a> <a name="02400503100020" ll="SDBH:רדה:000000">dominam</a> de <a name="02400503100024">mãos</a> <a name="02400503100024">dadas</a> <a name="02400503100024">com</a> <a name="02400503100024">eles</a>; e é o que <a name="02400503100030" ll="SDBH:אהב:000000">deseja</a> o <a name="02400503100028" ll="SDBH:עַם:000000">meu</a> <a name="02400503100028" ll="SDBH:עַם:000000">povo</a>. Porém que <a name="02400503100038">fareis</a> quando estas coisas <a name="02400503100042" ll="SDBH:אַחֲרִית:000001">chegarem</a> <a name="02400503100042" ll="SDBH:אַחֲרִית:000001">ao</a> <a name="02400503100042" ll="SDBH:אַחֲרִית:000001">seu</a> <a name="02400503100042" ll="SDBH:אַחֲרִית:000001">fim</a>?
\c 6
\v 1 <a name="02400600100002" ll="SDBH:עוז:000001">Fugi</a>, <a name="02400600100004" ll="SDBH:בֵּן:000000">filhos</a> de <a name="02400600100006" ll="SDBH:בִּנְיָמִן:000000">Benjamim</a>, do <a name="02400600100010">meio</a> de <a name="02400600100012" ll="SDBH:יְרוּשָׁלַ͏ִם:000000" il="NBGbs20090227-1_14;NBGbs20090227-1_34;NBGbs20090425-1_54;NBGbs20110228-1_79;Satellite Bible Atlas00024;jlm_hezekiah_city_d03;jlm_topography_d04">Jerusalém</a>; <a name="02400600100020" ll="SDBH:תקע:000006">tocai</a> a <a name="02400600100022" ll="SDBH:שֹׁופָר:000000" il="BK00179;HK00188;LB00186;NBGmk20140407c;Realia:7.3.1c">trombeta</a> em <a name="02400600100018" ll="SDBH:תְּקֹועַ:000000" il="IMG_2326;tb111706002;tb111706028">Tecoa</a> e <a name="02400600100030" ll="SDBH:נשׂא:000002">levantai</a> o <a name="02400600100032" ll="SDBH:מַשְׂאֵת:000002">facho</a> sobre <a name="02400600100028" ll="SDBH:בֵּית הַכֶּרֶם:000000">Bete</a>-<a name="02400600100028" ll="SDBH:בֵּית הַכֶּרֶם:000000">Haquerém</a>, porque do lado do <a name="02400600100042" ll="SDBH:צָפֹון:000001">Norte</a> <a name="02400600100038">surge</a> um grande <a name="02400600100036" ll="SDBH:רָעָה:000002">mal</a>, uma <a name="02400600100048" ll="SDBH:גָּדֹול:000003">grande</a> <a name="02400600100046" ll="SDBH:שֶׁבֶר:000000;SDBH:שֶׁבֶר:000001">calamidade</a>. 
\v 2 A formosa e <a name="02400600200010" ll="SDBH:ענג:000000" tl="HOTTP3310">delicada</a>, a <a name="02400600200014" ll="SDBH:בַּת:000002">filha</a> <a name="02400600200016" ll="SDBH:צִיֹּון:000000" il="tb060716478">de</a> <a name="02400600200016" ll="SDBH:צִיֹּון:000000" il="tb060716478">Sião</a>, eu <a name="02400600200012" ll="SDBH:דמה:000001" tl="HOTTP3310">deixarei</a> <a name="02400600200012" ll="SDBH:דמה:000001" tl="HOTTP3310">em</a> <a name="02400600200012" ll="SDBH:דמה:000001" tl="HOTTP3310">ruínas</a>. 
\v 3 Contra ela <a name="02400600300004">virão</a> <a name="02400600300020" ll="SDBH:רעה:000001" il="BK00005;BK00010;HK00009;LB00001;LB00013;NBGpb20140401b;Realia:1.2.1;Shepherd">pastores</a> com os <a name="02400600300010" ll="SDBH:עֵדֶר:000000" il="LB00012;LB00015;LB00017;NBGbs20120208-08;NBGbs20120710-139;NBGpb20140401b;Realia:1.2.1;tb111706002">seus</a> <a name="02400600300010" ll="SDBH:עֵדֶר:000000" il="LB00012;LB00015;LB00017;NBGbs20120208-08;NBGbs20120710-139;NBGpb20140401b;Realia:1.2.1;tb111706002">rebanhos</a>; <a name="02400600300012" ll="SDBH:תקע:000004">levantarão</a> suas <a name="02400600300016" ll="SDBH:אֹהֶל:000000" il="HK00223;NBGbs20090406-1_27;NBGbs20090428_2;NBGbs20120713-532">tendas</a> <a name="02400600300018" ll="SDBH:סָבִיב:000000">em</a> <a name="02400600300018" ll="SDBH:סָבִיב:000000">redor</a>, e <a name="02400600300022">cada</a> <a name="02400600300022">um</a> <a name="02400600300020" ll="SDBH:רעה:000001" il="BK00005;BK00010;HK00009;LB00001;LB00013;NBGpb20140401b;Realia:1.2.1;Shepherd">apascentará</a> no <a name="02400600300026">seu</a> <a name="02400600300026">devido</a> <a name="02400600300026">lugar</a>. 
\v 4 <a name="02400600400002" ll="SDBH:קדשׁ:000011">Preparai</a> a <a name="02400600400006" ll="SDBH:מִלְחָמָה:000000">guerra</a> contra ela, <a name="02400600400008">disponde</a>-<a name="02400600400008">vos</a>, e <a name="02400600400012" ll="SDBH:עלה:000004">subamos</a> ao <a name="02400600400018" ll="SDBH:צָהֳרַיִם:000000" il="Sun">meio</a>-<a name="02400600400018" ll="SDBH:צָהֳרַיִם:000000" il="Sun">dia</a>. <a name="02400600400020" ll="SDBH:אֹוי:000000">Ai</a> de nós, que já <a name="02400600400026" ll="SDBH:פנה:000003">declina</a> o <a name="02400600400030" ll="SDBH:יֹום:000000">dia</a>, já <a name="02400600400034" ll="SDBH:נטה:001003">se</a> <a name="02400600400034" ll="SDBH:נטה:001003">vão</a> <a name="02400600400034" ll="SDBH:נטה:001003">estendendo</a> as <a name="02400600400036" ll="SDBH:צֵל:000000">sombras</a> <a name="02400600400038" ll="SDBH:עֶרֶב:000000">da</a> <a name="02400600400038" ll="SDBH:עֶרֶב:000000">tarde</a>! 
\v 5 <a name="02400600500002">Disponde</a>-<a name="02400600500002">vos</a>, e <a name="02400600500006" ll="SDBH:עלה:000004">subamos</a> de <a name="02400600500012" ll="SDBH:לַיְלָה:000000">noite</a> e <a name="02400600500016" ll="SDBH:שׁחת:000001">destruamos</a> os <a name="02400600500018" ll="SDBH:אַרְמֹון:000000">seus</a> <a name="02400600500018" ll="SDBH:אַרְמֹון:000000">castelos</a>. 
\v 6 Porque assim <a name="02400600600006" ll="SDBH:אמר:000000">diz</a> o <a name="02400600600008" ll="SDBH:יהוה:000000">Senhor</a> <a name="02400600600010" ll="SDBH:צָבָא:000006">dos</a> <a name="02400600600010" ll="SDBH:צָבָא:000006">Exércitos</a>: <a name="02400600600012" ll="SDBH:כרת:000000">Cortai</a> <a name="02400600600014" ll="SDBH:עֵצָה:001000">árvores</a> e <a name="02400600600018" ll="SDBH:שׁפך:000000">levantai</a> <a name="02400600600024" ll="SDBH:סֹלְלָה:000000" il="Aerial_view_of_Masada_(Israel);Aerial_view_of_Masada_(Israel)a;Assyrian_siege;MasadaP1010027;Siegeworks-02-029b;tb010703293">tranqueiras</a> contra <a name="02400600600022" ll="SDBH:יְרוּשָׁלַ͏ִם:000000" il="NBGbs20090227-1_14;NBGbs20090227-1_34;NBGbs20090425-1_54;NBGbs20110228-1_79;Satellite Bible Atlas00024;jlm_hezekiah_city_d03;jlm_topography_d04">Jerusalém</a>. Esta é a <a name="02400600600030" ll="SDBH:עִיר:000000" tl="HOTTP3311">cidade</a> que <a name="02400600600032" ll="SDBH:פקד:000006" tl="HOTTP3311">há</a> <a name="02400600600032" ll="SDBH:פקד:000006" tl="HOTTP3311">de</a> <a name="02400600600032" ll="SDBH:פקד:000006" tl="HOTTP3311">ser</a> <a name="02400600600032" ll="SDBH:פקד:000006" tl="HOTTP3311">punida</a>; só <a name="02400600600036" ll="SDBH:עֹשֶׁק:000001">opressão</a> há no <a name="02400600600040">meio</a> <a name="02400600600040">dela</a>. 
\v 7 Como o <a name="02400600700008" ll="SDBH:בַּיִר:000000">poço</a> <a name="02400600700004" ll="SDBH:קרר:001000">conserva</a> <a name="02400600700004" ll="SDBH:קרר:001000">frescas</a> as <a name="02400600700010" ll="SDBH:מַיִם:000000" il="Water_drop_001">suas</a> <a name="02400600700010" ll="SDBH:מַיִם:000000" il="Water_drop_001">águas</a>, assim <a name="02400600700014" ll="SDBH:קרר:001001">ela</a>, a <a name="02400600700016" ll="SDBH:רָעָה:000000">sua</a> <a name="02400600700016" ll="SDBH:רָעָה:000000">malícia</a>; <a name="02400600700018" ll="SDBH:חָמָס:000000">violência</a> e <a name="02400600700022" ll="SDBH:שֹׁד:000000">estrago</a> <a name="02400600700024">se</a> <a name="02400600700024">ouvem</a> nela; <a name="02400600700034" ll="SDBH:חֳלִי:000000">enfermidade</a> e <a name="02400600700038" ll="SDBH:מַכָּה:000000">feridas</a> há diante <a name="02400600700030">de</a> <a name="02400600700030">mim</a> <a name="02400600700032" ll="SDBH:תָּמִיד:000000">continuamente</a>. 
\v 8 Aceita a <a name="02400600800002" ll="SDBH:יסר:000001">disciplina</a>, ó <a name="02400600800004" ll="SDBH:יְרוּשָׁלַ͏ִם:000000" il="NBGbs20090227-1_14;NBGbs20090227-1_34;NBGbs20090425-1_54;NBGbs20110228-1_79;Satellite Bible Atlas00024;jlm_hezekiah_city_d03;jlm_topography_d04">Jerusalém</a>, para que <a name="02400600800010" ll="SDBH:נֶפֶשׁ:000001">eu</a> não <a name="02400600800008" ll="SDBH:יקע:000002">me</a> <a name="02400600800008" ll="SDBH:יקע:000002">aparte</a> de ti; para que eu não <a name="02400600800016" ll="SDBH:שׂים:000005">te</a> <a name="02400600800016" ll="SDBH:שׂים:000005">torne</a> em <a name="02400600800018" ll="SDBH:שְׁמָמָה:000000" il="RS26447_ISR91T-418;tb113006604">assolação</a> e <a name="02400600800020" ll="SDBH:אֶרֶץ:000000">terra</a> não <a name="02400600800024">habitada</a>.
    
\v 9 Assim <a name="02400600900004" ll="SDBH:אמר:000000">diz</a> o <a name="02400600900006" ll="SDBH:יהוה:000000">Senhor</a> <a name="02400600900008" ll="SDBH:צָבָא:000006">dos</a> <a name="02400600900008" ll="SDBH:צָבָא:000006">Exércitos</a>: <a name="02400600900010" ll="SDBH:עלל:003000" tl="HOTTP3312">Diligentemente</a> <a name="02400600900012" tl="HOTTP3312">se</a> <a name="02400600900012" tl="HOTTP3312">rebuscarão</a> os <a name="02400600900020" ll="SDBH:שְׁאֵרִית:000000">resíduos</a> de <a name="02400600900022" ll="SDBH:יִשְׂרָאֵל:000000">Israel</a> como uma <a name="02400600900018" ll="SDBH:גֶּפֶן:000001" il="Flora:2.12a;Flora:2.12b;HK00112;LB00107;tb061504248;vineyard1679, rp">vinha</a>; vai <a name="02400600900024" ll="SDBH:שׁוב:000051">metendo</a> a <a name="02400600900026">mão</a>, como o <a name="02400600900030" ll="SDBH:בצר:000001">vindimador</a>, por entre os <a name="02400600900034" ll="SDBH:סַלְסִלָּה:000000">sarmentos</a>. 
\v 10 A quem <a name="02400601000006" ll="SDBH:דבר:001000">falarei</a> e <a name="02400601000010" ll="SDBH:עוד:000002">testemunharei</a>, para <a name="02400601000014">que</a> <a name="02400601000014">ouçam</a>? Eis que os <a name="02400601000020" ll="SDBH:אֹזֶן:000000">seus</a> <a name="02400601000020" ll="SDBH:אֹזֶן:000000">ouvidos</a> estão <a name="02400601000018" ll="SDBH:עָרֵל:000002">incircuncisos</a> e não <a name="02400601000026" ll="SDBH:יכל:000000">podem</a> <a name="02400601000030" ll="SDBH:קשׁב:000000">ouvir</a>; eis que a <a name="02400601000034" ll="SDBH:דָּבָר:000000">palavra</a> <a name="02400601000036" ll="SDBH:יהוה:000000">do</a> <a name="02400601000036" ll="SDBH:יהוה:000000">Senhor</a> é para eles <a name="02400601000044" ll="SDBH:חֶרְפָּה:000004">coisa</a> <a name="02400601000044" ll="SDBH:חֶרְפָּה:000004">vergonhosa</a>; não <a name="02400601000048" ll="SDBH:חפץ:000002">gostam</a> dela. 
\v 11 Pelo que <a name="02400601100010" ll="SDBH:מלא:000008">estou</a> <a name="02400601100010" ll="SDBH:מלא:000008">cheio</a> da <a name="02400601100006" ll="SDBH:חֵמָה:001001">ira</a> do <a name="02400601100008" ll="SDBH:יהוה:000000">Senhor</a>; <a name="02400601100012" ll="SDBH:לאה:000001">estou</a> <a name="02400601100012" ll="SDBH:לאה:000001">cansado</a> de a <a name="02400601100014" ll="SDBH:כול:000000">conter</a>. <a name="02400601100016" ll="SDBH:שׁפך:000003" tl="HOTTP3313">Derramá</a>-la-<a name="02400601100016" ll="SDBH:שׁפך:000003" tl="HOTTP3313">ei</a> sobre as <a name="02400601100020" ll="SDBH:עֹולָל:000000">crianças</a> pelas <a name="02400601100026" ll="SDBH:חוּץ:000000" il="HK00169;Realia:3.13.2;tb052001215">ruas</a> e nas <a name="02400601100032" ll="SDBH:סֹוד:000000">reuniões</a> de <a name="02400601100034;02400601100036" ll="SDBH:בָּחוּר:000000">todos</a> <a name="02400601100034;02400601100036" ll="SDBH:בָּחוּר:000000">os</a> <a name="02400601100034;02400601100036" ll="SDBH:בָּחוּר:000000">jovens</a>; porque até o <a name="02400601100042">marido</a> com a <a name="02400601100046" ll="SDBH:אִשָּׁה:000002">mulher</a> <a name="02400601100048" ll="SDBH:לכד:000000">serão</a> <a name="02400601100048" ll="SDBH:לכד:000000">presos</a>, e o <a name="02400601100050" ll="SDBH:זָקֵן:000001">velho</a>, com o <a name="02400601100054;02400601100056" ll="SDBH:יֹום:000004;SDBH:מָלֵא:000003">decrépito</a>. 
\v 12 As <a name="02400601200006" ll="SDBH:בַּיִת:000000" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20120826;NBGmk20120826a;NBGmk20140917">suas</a> <a name="02400601200006" ll="SDBH:בַּיִת:000000" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20120826;NBGmk20120826a;NBGmk20140917">casas</a> <a name="02400601200004">passarão</a> a <a name="02400601200010" ll="SDBH:אַחֵר:000000">outrem</a>, os <a name="02400601200012" ll="SDBH:שָׂדֶה:000001">campos</a> e <a name="02400601200018">também</a> as <a name="02400601200016" ll="SDBH:אִשָּׁה:000000">mulheres</a>, porque <a name="02400601200022" ll="SDBH:נטה:001006">estenderei</a> a <a name="02400601200026">mão</a> contra os <a name="02400601200030">habitantes</a> desta <a name="02400601200034" ll="SDBH:אֶרֶץ:000000">terra</a>, <a name="02400601200036;02400601200038" ll="SDBH:יהוה:000000;SDBH:נְאֻם:000000">diz</a> <a name="02400601200036;02400601200038" ll="SDBH:יהוה:000000;SDBH:נְאֻם:000000">o</a> <a name="02400601200036;02400601200038" ll="SDBH:יהוה:000000;SDBH:נְאֻם:000000">Senhor</a>, 
