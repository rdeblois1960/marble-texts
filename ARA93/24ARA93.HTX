\v 23 <a name="02404602300002" ll="SDBH:כרת:000000">Cortarão</a> o <a name="02404602300004" ll="SDBH:יַעַר:000001" il="Flora:1.18.2;Flora:1.21b;Tree_root">seu</a> <a name="02404602300004" ll="SDBH:יַעַר:000001" il="Flora:1.18.2;Flora:1.21b;Tree_root">bosque</a>, <a name="02404602300006;02404602300008" ll="SDBH:יהוה:000000;SDBH:נְאֻם:000000">diz</a> <a name="02404602300006;02404602300008" ll="SDBH:יהוה:000000;SDBH:נְאֻם:000000">o</a> <a name="02404602300006;02404602300008" ll="SDBH:יהוה:000000;SDBH:נְאֻם:000000">Senhor</a>, ainda que <a name="02404602300012;02404602300014" ll="SDBH:חקר:000000;SDBH:לֹא:000000" tl="HOTTP3507">impenetrável</a>; porque <a name="02404602300018" ll="SDBH:רבב:000000">se</a> <a name="02404602300018" ll="SDBH:רבב:000000">multiplicaram</a> mais do <a name="02404602300022" ll="SDBH:אַרְבֶּה:000000" il="Fauna:6.9a;Fauna:6.9b;Fauna:6.9d;Fauna:6.9e;Locusta_migratoria_(gregarious_phase)_(5012171245)">que</a> os <a name="02404602300022" ll="SDBH:אַרְבֶּה:000000" il="Fauna:6.9a;Fauna:6.9b;Fauna:6.9d;Fauna:6.9e;Locusta_migratoria_(gregarious_phase)_(5012171245)">gafanhotos</a>; são <a name="02404602300026;02404602300030" ll="SDBH:מִסְפָּר:000001">inumeráveis</a>. 
\v 24 A <a name="02404602400004" ll="SDBH:בַּת:000002">filha</a> <a name="02404602400006" ll="SDBH:מִצְרַיִם:000001" il="Egyptian_temple;Gizah_Pyramids;Goshen;NBGbs20120205-81;NBGbs20120205-82;NBGbs20120207-20;NBGbs20140204-40;tb010705951">do</a> <a name="02404602400006" ll="SDBH:מִצְרַיִם:000001" il="Egyptian_temple;Gizah_Pyramids;Goshen;NBGbs20120205-81;NBGbs20120205-82;NBGbs20120207-20;NBGbs20140204-40;tb010705951">Egito</a> <a name="02404602400002" ll="SDBH:בושׁ:000000">está</a> <a name="02404602400002" ll="SDBH:בושׁ:000000">envergonhada</a>; <a name="02404602400008">foi</a> <a name="02404602400008">entregue</a> nas <a name="02404602400012">mãos</a> do <a name="02404602400014" ll="SDBH:עַם:000000">povo</a> <a name="02404602400016" ll="SDBH:צָפֹון:000001">do</a> <a name="02404602400016" ll="SDBH:צָפֹון:000001">Norte</a>. 
