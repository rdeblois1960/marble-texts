\v 6 <a name="02100300600002" ll="SDBH:עֵת:000000">tempo</a> de <a name="02100300600006" ll="SDBH:בקשׁ:000000">buscar</a> e <a name="02100300600010" ll="SDBH:עֵת:000000">tempo</a> de <a name="02100300600014" ll="SDBH:אבד:000003">perder</a>; <a name="02100300600016" ll="SDBH:עֵת:000000">tempo</a> de <a name="02100300600020" ll="SDBH:שׁמר:000007">guardar</a> e <a name="02100300600024" ll="SDBH:עֵת:000000">tempo</a> de <a name="02100300600028" ll="SDBH:שׁלך:000000">deitar</a> <a name="02100300600028" ll="SDBH:שׁלך:000000">fora</a>; 
