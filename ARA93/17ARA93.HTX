\c 5
\v 1 Ao <a name="01700500100014" ll="SDBH:שְׁלִישִׁי:000000">terceiro</a> <a name="01700500100010" ll="SDBH:יֹום:000001">dia</a>, <a name="01700500100020" ll="SDBH:אֶסְתֵּר:000000">Ester</a> <a name="01700500100018" ll="SDBH:לבשׁ:000000">se</a> <a name="01700500100018" ll="SDBH:לבשׁ:000000">aprontou</a> com seus trajes <a name="01700500100022" ll="SDBH:מַלְכוּת:000000">reais</a> e <a name="01700500100026">se</a> <a name="01700500100026">pôs</a> no <a name="01700500100030" ll="SDBH:חָצֵר:000001" il="Bolen00038;tb030706620">pátio</a> <a name="01700500100040">interior</a> da <a name="01700500100032" ll="SDBH:בַּיִת:000000" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20120826;NBGmk20120826a;NBGmk20140917">casa</a> do <a name="01700500100036" ll="SDBH:מֶלֶךְ:000000">rei</a>, <a name="01700500100042" ll="SDBH:נֹכַח:000000">defronte</a> da <a name="01700500100044" ll="SDBH:בַּיִת:000000" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20120826;NBGmk20120826a;NBGmk20140917">residência</a> do <a name="01700500100048" ll="SDBH:מֶלֶךְ:000000">rei</a>; o <a name="01700500100054" ll="SDBH:מֶלֶךְ:000000">rei</a> estava <a name="01700500100056">assentado</a> no <a name="01700500100062" ll="SDBH:מַלְכוּת:000000">seu</a> <a name="01700500100060" ll="SDBH:כִּסֵּא:000000" il="Ashur-nasir-pal_II_throne;Darius_In_Parse;Roman_throne;Throne_Greek;Throne_Toutankamon;adr1603194845;mb120901102">trono</a> <a name="01700500100062" ll="SDBH:מַלְכוּת:000000">real</a> <a name="01700500100072" ll="SDBH:נֹכַח:000000">fronteiro</a> à <a name="01700500100074" ll="SDBH:פֶּתַח:000000" il="HK00239;Realia:3.1.2a;Realia:3.1.2b;mat01418">porta</a> da <a name="01700500100078" ll="SDBH:בַּיִת:000000" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20120826;NBGmk20120826a;NBGmk20140917">residência</a>. 
