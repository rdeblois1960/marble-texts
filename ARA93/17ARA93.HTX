\c 6
\v 1 Naquela <a name="01700600100006" ll="SDBH:לַיְלָה:000000">noite</a>, o <a name="01700600100018" ll="SDBH:מֶלֶךְ:000000">rei</a> <a name="01700600100012;01700600100014" ll="SDBH:נדד:000000;SDBH:שֵׁנָה:000000">não</a> <a name="01700600100012;01700600100014" ll="SDBH:נדד:000000;SDBH:שֵׁנָה:000000">pôde</a> <a name="01700600100012;01700600100014" ll="SDBH:נדד:000000;SDBH:שֵׁנָה:000000">dormir</a>; então, <a name="01700600100022" ll="SDBH:אמר:000000">mandou</a> <a name="01700600100026">trazer</a> o <a name="01700600100030">Livro</a> <a name="01700600100034;01700600100036;01700600100040" ll="SDBH:דָּבָר:000003;SDBH:זִכָּרֹון:000003;SDBH:יֹום:000002">dos</a> <a name="01700600100034;01700600100036;01700600100040" ll="SDBH:דָּבָר:000003;SDBH:זִכָּרֹון:000003;SDBH:יֹום:000002">Feitos</a> <a name="01700600100034;01700600100036;01700600100040" ll="SDBH:דָּבָר:000003;SDBH:זִכָּרֹון:000003;SDBH:יֹום:000002">Memoráveis</a>, e nele <a name="01700600100046" ll="SDBH:קרא:000001">se</a> <a name="01700600100046" ll="SDBH:קרא:000001">leu</a> <a name="01700600100050">diante</a> do <a name="01700600100054" ll="SDBH:מֶלֶךְ:000000">rei</a>. 
\v 2 <a name="01700600200004" ll="SDBH:מצא:000011">Achou</a>-<a name="01700600200004" ll="SDBH:מצא:000011">se</a> <a name="01700600200006" ll="SDBH:כתב:000000" il="WritingScroll-ReedPen-01-065d;tb032014452">escrito</a> que <a name="01700600200012" ll="SDBH:מָרְדֳּכַי:000001">Mordecai</a> é quem <a name="01700600200010" ll="SDBH:נגד:000000">havia</a> <a name="01700600200010" ll="SDBH:נגד:000000">denunciado</a> a <a name="01700600200016" ll="SDBH:בִּגְתָן:000000">Bigtã</a> e a <a name="01700600200020" ll="SDBH:תֶּרֶשׁ:000000">Teres</a>, os <a name="01700600200022" ll="SDBH:שְׁנַיִם:000000">dois</a> <a name="01700600200024" ll="SDBH:סָרִיס:000000" il="adr060218017">eunucos</a> do <a name="01700600200028" ll="SDBH:מֶלֶךְ:000000">rei</a>, <a name="01700600200032" ll="SDBH:שׁמר:000007">guardas</a> da <a name="01700600200036" ll="SDBH:סַף:001000" il="Realia:3.1.2.6b">porta</a>, que <a name="01700600200040" ll="SDBH:בקשׁ:000005">tinham</a> <a name="01700600200040" ll="SDBH:בקשׁ:000005">procurado</a> <a name="01700600200044;01700600200046" ll="SDBH:שׁלח:000015">matar</a> o <a name="01700600200052" ll="SDBH:מֶלֶךְ:000000">rei</a> <a name="01700600200054" ll="SDBH:אֲחַשְׁוֵרֹושׁ:000000" il="Foundation_slab_of_Xerxes;tb061616803;tb072705204">Assuero</a>. 
