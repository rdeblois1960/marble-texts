\v 16 Eles <a name="02800701600002" ll="SDBH:שׁוב:000023">voltam</a>, mas não para o <a name="02800701600006" tl="HOTTP4138">Altíssimo</a>. Fizeram-se como um <a name="02800701600012" ll="SDBH:קֶשֶׁת:000000" il="Realia:2.14.1a;Realia:2.14.1b">arco</a> <a name="02800701600014" ll="SDBH:רְמִיָּה:000001">enganoso</a>; <a name="02800701600016" ll="SDBH:נפל:000038">caem</a> à <a name="02800701600022" ll="SDBH:חֶרֶב:000003" il="NBGmk20130711a;NBGmk20130711b;NBGmk20130711c;adr1305240787">espada</a> os <a name="02800701600024" ll="SDBH:שַׂר:000000">seus</a> <a name="02800701600024" ll="SDBH:שַׂר:000000">príncipes</a>, por causa da <a name="02800701600028" ll="SDBH:זַעַם:000000">insolência</a> <a name="02800701600030" ll="SDBH:לָשֹׁון:000000">da</a> <a name="02800701600030" ll="SDBH:לָשֹׁון:000000">sua</a> <a name="02800701600030" ll="SDBH:לָשֹׁון:000000">língua</a>; <a name="02800701600032" ll="SDBH:זֹו:001000">este</a> será o <a name="02800701600034" ll="SDBH:לַעַג:000000">seu</a> <a name="02800701600034" ll="SDBH:לַעַג:000000">escárnio</a> na <a name="02800701600038" ll="SDBH:אֶרֶץ:000000">terra</a> do <a name="02800701600040" ll="SDBH:מִצְרַיִם:000001" il="Egyptian_temple;Gizah_Pyramids;Goshen;NBGbs20120205-81;NBGbs20120205-82;NBGbs20120207-20;NBGbs20140204-40;tb010705951">Egito</a>.
\c 8
\v 1 <a name="02800800100004" ll="SDBH:חֵךְ:000001">Emboca</a> a <a name="02800800100006" ll="SDBH:שֹׁופָר:000000" il="BK00179;HK00188;LB00186;NBGmk20140407c;Realia:7.3.1c">trombeta</a>! Ele vem como a <a name="02800800100012" ll="SDBH:נֶשֶׁר:000000" il="Eagle_wing_Spread;Egyptian_Vulture_01;Fauna:3.8a;Fauna:3.8b;Gaensegeier2;HK00077;LB00075;Neophron-1" tl="HOTTP4139">águia</a> contra a <a name="02800800100016" ll="SDBH:בַּיִת:000000" il="HK00232;HK00245;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGlo20140606;NBGlo20140606a;NBGlo20140606b;NBGlo20140708c;NBGlo20140825;NBGmk20120826;NBGmk20120826a;NBGmk20140917;jlm_sol_complex_ann;jlm_soltemp_altar_m01;jlm_soltemp_d01;jlm_soltemp_m06;jlm_soltemp_pillars_m01">casa</a> do <a name="02800800100018" ll="SDBH:יהוה:000000">Senhor</a>, porque <a name="02800800100022">transgrediram</a> a <a name="02800800100024" ll="SDBH:בְּרִית:000000">minha</a> <a name="02800800100024" ll="SDBH:בְּרִית:000000">aliança</a> e <a name="02800800100032" ll="SDBH:פשׁע:000000">se</a> <a name="02800800100032" ll="SDBH:פשׁע:000000">rebelaram</a> contra a <a name="02800800100030" ll="SDBH:תֹּורָה:000000">minha</a> <a name="02800800100030" ll="SDBH:תֹּורָה:000000">lei</a>. 
\v 2 A mim, me <a name="02800800200004" ll="SDBH:זעק:000000">invocam</a>: Nosso <a name="02800800200006" ll="SDBH:אֱלֹהִים:000001" tl="HOTTP4140">Deus</a>! <a name="02800800200008" tl="HOTTP4140">Nós</a>, <a name="02800800200010" ll="SDBH:יִשְׂרָאֵל:000000" tl="HOTTP4140">Israel</a>, <a name="02800800200008" tl="HOTTP4140">te</a> <a name="02800800200008" tl="HOTTP4140">conhecemos</a>. 
\v 3 <a name="02800800300004" ll="SDBH:יִשְׂרָאֵל:000000">Israel</a> <a name="02800800300002" ll="SDBH:זנח:000001">rejeitou</a> o <a name="02800800300006" ll="SDBH:טֹוב:000002">bem</a>; o <a name="02800800300008" ll="SDBH:איב:000001">inimigo</a> <a name="02800800300010" ll="SDBH:רדף:000000">o</a> <a name="02800800300010" ll="SDBH:רדף:000000">perseguirá</a>. 
\v 4 Eles <a name="02800800400004" ll="SDBH:מלך:000001">estabeleceram</a> <a name="02800800400004" ll="SDBH:מלך:000001">reis</a>, mas não da minha parte; constituíram príncipes, mas <a name="02800800400018">eu</a> não <a name="02800800400018">o</a> <a name="02800800400018">soube</a>; da <a name="02800800400020" ll="SDBH:כֶּסֶף:000000" il="NBGpb20140401">sua</a> <a name="02800800400020" ll="SDBH:כֶּסֶף:000000" il="NBGpb20140401">prata</a> e do <a name="02800800400024" ll="SDBH:זָהָב:000000" il="Bolen00041;Bolen00050;Bolen00053;adr1006039110;adr1305240906;adr1306212575">seu</a> <a name="02800800400024" ll="SDBH:זָהָב:000000" il="Bolen00041;Bolen00050;Bolen00053;adr1006039110;adr1305240906;adr1306212575">ouro</a> <a name="02800800400026">fizeram</a> <a name="02800800400030" ll="SDBH:עָצָב:000000" il="Realia:4.6b;adr1305227007">ídolos</a> para si, para <a name="02800800400034" ll="SDBH:כרת:000002">serem</a> <a name="02800800400034" ll="SDBH:כרת:000002">destruídos</a>. 
\v 5 O <a name="02800800500004" ll="SDBH:עֵגֶל:000000" il="Fauna:2.10;LB00022;tb032014107">teu</a> <a name="02800800500004" ll="SDBH:עֵגֶל:000000" il="Fauna:2.10;LB00022;tb032014107">bezerro</a>, ó <a name="02800800500006" ll="SDBH:שֹׁמְרֹון:000000" il="Satellite Bible Atlas00014;tb070507860">Samaria</a>, <a name="02800800500002" ll="SDBH:זנח:000001" tl="HOTTP4141">é</a> <a name="02800800500002" ll="SDBH:זנח:000001" tl="HOTTP4141">rejeitado</a>; a <a name="02800800500010" ll="SDBH:אַף:000008">minha</a> <a name="02800800500010" ll="SDBH:אַף:000008">ira</a> <a name="02800800500008" ll="SDBH:חרה:000001">se</a> <a name="02800800500008" ll="SDBH:חרה:000001">acende</a> contra eles; até quando <a name="02800800500018;02800800500020" ll="SDBH:יכל:000000;SDBH:לֹא:000000">serão</a> <a name="02800800500018;02800800500020" ll="SDBH:יכל:000000;SDBH:לֹא:000000">eles</a> <a name="02800800500018;02800800500020" ll="SDBH:יכל:000000;SDBH:לֹא:000000">incapazes</a> da <a name="02800800500022" ll="SDBH:נִקָּיֹון:000001">inocência</a>? 
\v 6 Porque vem de <a name="02800800600006" ll="SDBH:יִשְׂרָאֵל:000000" tl="HOTTP4142">Israel</a>, é <a name="02800800600012" ll="SDBH:חָרָשׁ:000000" il="Realia:1.11.2">obra</a> de <a name="02800800600014">artífice</a>, não é <a name="02800800600020" ll="SDBH:אֱלֹהִים:000001">Deus</a>; mas em <a name="02800800600026" ll="SDBH:שְׁבָבִים:000000">pedaços</a> será desfeito o <a name="02800800600030" ll="SDBH:עֵגֶל:000000" il="Fauna:2.10;LB00022;tb032014107">bezerro</a> <a name="02800800600032" ll="SDBH:שֹׁמְרֹון:000000" il="Satellite Bible Atlas00014;tb070507860">de</a> <a name="02800800600032" ll="SDBH:שֹׁמְרֹון:000000" il="Satellite Bible Atlas00014;tb070507860">Samaria</a>.
    
\v 7 Porque <a name="02800800700006" ll="SDBH:זרע:000000">semeiam</a> <a name="02800800700004" ll="SDBH:רוּחַ:000004" il="Gale_Force_Winds">ventos</a> e <a name="02800800700012" ll="SDBH:קצר:000006" il="Bolen00107;Flora:3.1.1a;LB00102;Stooks_of_barley_in_West_Somerset">segarão</a> <a name="02800800700010" ll="SDBH:סוּפָה:000000" il="Whirlwind">tormentas</a>; não haverá <a name="02800800700014;02800800700020" ll="SDBH:צֶמַח:000001;SDBH:קָמָה:000000" il="Flora:3.1">seara</a>; a erva não <a name="02800800700024">dará</a> <a name="02800800700026" ll="SDBH:קֶמַח:000000" il="Wheat-flour;tb061804531">farinha</a>; e, <a name="02800800700028" ll="SDBH:אוּלַי:000000">se</a> a <a name="02800800700030">der</a>, <a name="02800800700034" ll="SDBH:בלע:000000">comê</a>-<a name="02800800700034" ll="SDBH:בלע:000000">la</a>-<a name="02800800700034" ll="SDBH:בלע:000000">ão</a> os <a name="02800800700032" ll="SDBH:זָר:000000">estrangeiros</a>. 
\v 8 <a name="02800800800004" ll="SDBH:יִשְׂרָאֵל:000000">Israel</a> <a name="02800800800002" ll="SDBH:בלע:000000">foi</a> <a name="02800800800002" ll="SDBH:בלע:000000">devorado</a>; agora, está entre as <a name="02800800800014" ll="SDBH:גֹּוי:000000">nações</a> como <a name="02800800800018" ll="SDBH:כְּלִי:000000">coisa</a> de que ninguém <a name="02800800800022" ll="SDBH:חֵפֶץ:000001">se</a> <a name="02800800800022" ll="SDBH:חֵפֶץ:000001">agrada</a>, 
