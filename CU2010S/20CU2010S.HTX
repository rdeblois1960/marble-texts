\v 21 <a name="02001302100006" ll="SDBH:רָעָה:000002">祸患</a>​<a name="02001302100004" ll="SDBH:רדף:000002">追赶</a>​<a name="02001302100002" ll="SDBH:חַטָּא:000001">罪人</a>​；​<a name="02001302100012" ll="SDBH:צַדִּיק:000000">义人</a>​却​<a name="02001302100014;02001302100016" ll="SDBH:טֹוב:000002;SDBH:שׁלם:000007">得</a>​<a name="02001302100014;02001302100016" ll="SDBH:טֹוב:000002;SDBH:שׁלם:000007">善报</a>​。
    
\v 22 <a name="02001302200002" ll="SDBH:טֹוב:000001">善人</a>​给​<a name="02001302200006;02001302200008" ll="SDBH:בֵּן:000000">子孙</a>​<a name="02001302200004" ll="SDBH:נחל:000001">遗留</a>​<a name="02001302200004" ll="SDBH:נחל:000001">产业</a>​；​<a name="02001302200022" ll="SDBH:חטא:001005">罪人</a>​<a name="02001302200012" ll="SDBH:צפן:000002">积</a>​<a name="02001302200020" ll="SDBH:חַיִל:000001">财</a>​却​归​<a name="02001302200018" ll="SDBH:צַדִּיק:000000">义人</a>​。
    
\v 23 <a name="02001302300008" ll="SDBH:רושׁ:000001">穷乏人</a>​开垦​的​<a name="02001302300006" ll="SDBH:נִיר:001000">地</a>​虽​<a name="02001302300002" ll="SDBH:רֹב:000000">多产</a>​<a name="02001302300004" ll="SDBH:אֹכֶל:000000">粮食</a>​，​却​因​<a name="02001302300020" ll="SDBH:מִשְׁפָּט:000007">不公</a>​而​被​<a name="02001302300014" ll="SDBH:ספה:000000">夺走</a>​。
    
\v 24 <a name="02001302400002" ll="SDBH:חשׂך:000002">不忍</a>​用​<a name="02001302400004" ll="SDBH:שֵׁבֶט:000000">杖</a>​打​<a name="02001302400008" ll="SDBH:בֵּן:000000">儿子</a>​的​，​是​<a name="02001302400006" ll="SDBH:שׂנא:000000">恨恶</a>​他​；​<a name="02001302400012" ll="SDBH:אהב:000000">疼爱</a>​儿子​的​，​<a name="02001302400014" ll="SDBH:שׁחר:001002">勤</a>​<a name="02001302400014" ll="SDBH:שׁחר:001002">加</a>​<a name="02001302400016" ll="SDBH:מוּסָר:000000">管教</a>​。
    
\v 25 <a name="02001302500002" ll="SDBH:צַדִּיק:000000">义人</a>​<a name="02001302500004" ll="SDBH:אכל:000000">吃喝</a>​<a name="02001302500010" ll="SDBH:נֶפֶשׁ:000001">食欲</a>​<a name="02001302500008" ll="SDBH:שֹׂבַע:000000">满足</a>​；​<a name="02001302500016" ll="SDBH:רָשָׁע:000000">恶人</a>​<a name="02001302500014" ll="SDBH:בֶּטֶן:000000">肚腹</a>​却​是​<a name="02001302500018" ll="SDBH:חסר:000001">缺乏</a>​。
\c 14
\v 1 <a name="02001400100004" ll="SDBH:אִשָּׁה:000000" tl="HOTTP2723">妇人</a>​的​<a name="02001400100002" ll="SDBH:חָכָם, קסם:000000" tl="HOTTP2723">智慧</a>​<a name="02001400100006" ll="SDBH:בנה:000000">建立</a>​<a name="02001400100008" ll="SDBH:בַּיִת:000000">家室</a>​；​<a name="02001400100012" ll="SDBH:אִוֶּלֶת:000000">愚昧</a>​却​<a name="02001400100016">亲手</a>​<a name="02001400100018" ll="SDBH:הרס:000001">拆毁</a>​它​。
    
