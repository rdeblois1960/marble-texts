\v 25 他​用​<a name="02002602500004;02002602500006" ll="SDBH:חנן:000004">甜言蜜语</a>​，​你​<a name="02002602500008" ll="SDBH:אַל:000000">不</a>​能​<a name="02002602500010" ll="SDBH:אמן:000005">相信</a>​他​，​因为​他​<a name="02002602500022" ll="SDBH:לֵב:000001">心</a>​中​有​<a name="02002602500016" ll="SDBH:שֶׁבַע:000000">七</a>​样​<a name="02002602500018" ll="SDBH:תֹּועֵבָה:000000">可</a>​<a name="02002602500018" ll="SDBH:תֹּועֵבָה:000000">憎恶</a>​<a name="02002602500018" ll="SDBH:תֹּועֵבָה:000000">的</a>​<a name="02002602500018" ll="SDBH:תֹּועֵבָה:000000">事</a>​。
    
\v 26 他​虽​用​<a name="02002602600008" ll="SDBH:מַשָּׁאֹון:000000">诡诈</a>​<a name="02002602600002" ll="SDBH:כסה:000008">掩饰</a>​<a name="02002602600004" ll="SDBH:שִׂנְאָה:000000">怨恨</a>​，​他​的​<a name="02002602600012" ll="SDBH:רָעָה:000000">邪恶</a>​必​在​<a name="02002602600016" ll="SDBH:קָהָל:000000">集会</a>​中​<a name="02002602600010" ll="SDBH:גלה:000010">显露</a>​。
    
\v 27 <a name="02002602700002" ll="SDBH:כרה:000000">挖</a>​<a name="02002602700004" ll="SDBH:שַׁחַת:000000">陷坑</a>​的​，​自己​必​<a name="02002602700008" ll="SDBH:נפל:000000">陷</a>​在​其中​；​<a name="02002602700012" ll="SDBH:גלל:000000">滚</a>​<a name="02002602700014" ll="SDBH:אֶבֶן:000001">石头</a>​的​，​石头​反​滚​在​他​身​上​。
    
\v 28 <a name="02002602800004" ll="SDBH:שֶׁקֶר:000000">虚谎</a>​的​<a name="02002602800002" ll="SDBH:לָשֹׁון:000000">舌</a>​<a name="02002602800006" ll="SDBH:שׂנא:000000" tl="HOTTP2819">憎恨</a>​他​<a name="02002602800008" ll="SDBH:דַּךְ:000000" tl="HOTTP2819">所</a>​<a name="02002602800008" ll="SDBH:דַּךְ:000000" tl="HOTTP2819">压伤</a>​<a name="02002602800008" ll="SDBH:דַּךְ:000000" tl="HOTTP2819">的</a>​人​；​<a name="02002602800014" ll="SDBH:חָלָק:000001">谄媚</a>​的​<a name="02002602800012" ll="SDBH:פֶּה:000000">口</a>​<a name="02002602800018" ll="SDBH:מִדְחֶה:000000">败坏</a>​人​的​事​。
\c 27
\v 1 <a name="02002700100002" ll="SDBH:אַל:000000">不要</a>​为​<a name="02002700100008;02002700100010" ll="SDBH:יֹום:000005;SDBH:מָחָר:000000">明天</a>​<a name="02002700100004" ll="SDBH:הלל:001002">自夸</a>​，​因为​你​不​<a name="02002700100016">知道</a>​<a name="02002700100022" ll="SDBH:יֹום:000001">每天</a>​会​<a name="02002700100020" ll="SDBH:ילד:000005">发生</a>​何事​。
    
\v 2 要​让​<a name="02002700200004" ll="SDBH:זָר:000000">陌生人</a>​<a name="02002700200002" ll="SDBH:הלל:001000">夸奖</a>​你​，​不​可​用​<a name="02002700200010" ll="SDBH:פֶּה:000000">口</a>​自夸​；​让​<a name="02002700200012" ll="SDBH:נָכְרִי:000000">外邦人</a>​称赞​你​，​<a name="02002700200016" ll="SDBH:אַל:000000">不</a>​可​用​<a name="02002700200018" ll="SDBH:שָׂפָה:000001">嘴唇</a>​称赞​自己​。
    
\v 3 <a name="02002700300004" ll="SDBH:אֶבֶן:000001">石头</a>​<a name="02002700300002" ll="SDBH:כֹּבֶד:000000">沉</a>​，​<a name="02002700300012" ll="SDBH:חֹול:000000">沙土</a>​<a name="02002700300008" ll="SDBH:נֵטֶל:000000">重</a>​，​<a name="02002700300018" ll="SDBH:אֱוִיל:000000">愚妄人</a>​的​<a name="02002700300016" ll="SDBH:כַּעַס:000001">恼怒</a>​比​这​<a name="02002700300024" ll="SDBH:שְׁנַיִם:000000">两</a>​样​更​<a name="02002700300020" ll="SDBH:כָּבֵד:000002">沉重</a>​。
    
\v 4 <a name="02002700400004" ll="SDBH:חֵמָה:001001">愤怒</a>​为​<a name="02002700400002" ll="SDBH:אַכְזְרִיּוּת:000000">残忍</a>​，​<a name="02002700400010" ll="SDBH:אַף:000008">怒气</a>​像​<a name="02002700400008" ll="SDBH:שֶׁטֶף:000001">狂澜</a>​，​惟有​<a name="02002700400022" ll="SDBH:קִנְאָה:000001">嫉妒</a>​，​谁​能​<a name="02002700400016;02002700400020">挡得住</a>​呢​？
    
\v 5 <a name="02002700500006" ll="SDBH:גלה:000010">当面</a>​的​<a name="02002700500004" ll="SDBH:תֹּוכַחַת:000000">责备</a><a name="02002700500002" ll="SDBH:טֹוב:000002">胜过</a>​<a name="02002700500012" ll="SDBH:סתר:000007">隐藏</a>​的​<a name="02002700500010" ll="SDBH:אַהֲבָה:000000">爱情</a>​。
    
\v 6 <a name="02002700600006" ll="SDBH:אהב:000001">朋友</a>​加​的​<a name="02002700600004" ll="SDBH:פֶּצַע:000000">伤痕</a>​出于​<a name="02002700600002" ll="SDBH:אמן:000006">忠诚</a>​；​<a name="02002700600014" ll="SDBH:שׂנא:000001">敌人</a>​的​<a name="02002700600012" ll="SDBH:נְשִׁיקָה:000000" tl="HOTTP2820">亲吻</a>​却​是​<a name="02002700600010" ll="SDBH:עתר:001000" tl="HOTTP2820">多余</a>​。
    
\v 7 <a name="02002700700002" ll="SDBH:נֶפֶשׁ:000001">人</a>​<a name="02002700700004" ll="SDBH:שָׂבֵעַ:000000">吃饱</a>​了​，​<a name="02002700700006" ll="SDBH:בוס:000002">厌恶</a>​<a name="02002700700008" ll="SDBH:נֹפֶת:000000">蜂房</a>​<a name="02002700700008" ll="SDBH:נֹפֶת:000000">的</a>​<a name="02002700700008" ll="SDBH:נֹפֶת:000000">蜜</a>​；​<a name="02002700700012" ll="SDBH:נֶפֶשׁ:000001">人</a>​<a name="02002700700014" ll="SDBH:רָעֵב:000000">饥饿</a>​了​，​<a name="02002700700016">一切</a>​<a name="02002700700018" ll="SDBH:מַר:001000">苦物</a>​都​觉​<a name="02002700700020" ll="SDBH:מָתֹוק:000000">甘甜</a>​。
    
\v 8 <a name="02002700800014">人</a>​离​<a name="02002700800020" ll="SDBH:מָקֹום:000000">故乡</a>​<a name="02002700800016" ll="SDBH:נדד:000001">漂泊</a>​，​就像​<a name="02002700800004" ll="SDBH:צִפֹּור:000000">雀鸟</a>​离​<a name="02002700800010" ll="SDBH:קֵן:000000">窝</a>​四处​<a name="02002700800006" ll="SDBH:נדד:000001">飞翔</a>​。
    
\v 9 <a name="02002700900002" ll="SDBH:שֶׁמֶן:000000">膏油</a>​与​<a name="02002700900006" ll="SDBH:קְטֹרֶת:000001">香料</a>​使​<a name="02002700900010" ll="SDBH:לֵב:000001">人心</a>​<a name="02002700900008" ll="SDBH:שׂמח:000001">喜悦</a>​，​<a name="02002700900016" ll="SDBH:רֵעַ:001000" tl="HOTTP2821">朋友</a>​<a name="02002700900022" ll="SDBH:נֶפֶשׁ:000001" tl="HOTTP2821">诚心</a>​的​<a name="02002700900020" ll="SDBH:עֵצָה:000001" tl="HOTTP2821">劝勉</a>​也​是​如此​<a name="02002700900014" ll="SDBH:מָתֵק:000000" tl="HOTTP2821">甘美</a>​。
    
\v 10 你​的​<a name="02002701000002" ll="SDBH:רֵעַ:001000">朋友</a>​和​<a name="02002701000010" ll="SDBH:רֵעַ:001000">父亲</a>​的​<a name="02002701000008">朋友</a>​，​你​都​<a name="02002701000012" ll="SDBH:אָב:000000">不</a>​可​<a name="02002701000014" ll="SDBH:אַל:000000">离弃</a>​。​你​<a name="02002701000030" ll="SDBH:יֹום:000003" tl="HOTTP2822">遭难</a>​<a name="02002701000028">时</a>​，​<a name="02002701000022" ll="SDBH:אָח:000000" tl="HOTTP2822">不要</a>​<a name="02002701000024" ll="SDBH:אַל:000000" tl="HOTTP2822">上</a>​<a name="02002701000020" ll="SDBH:בַּיִת:000000" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20120826;NBGmk20120826a;NBGmk20140917" tl="HOTTP2822">兄弟</a>​的​<a name="02002701000018">家</a>​去​；​<a name="02002701000036" ll="SDBH:שָׁכֵן:000000">相近</a>​的​<a name="02002701000034" ll="SDBH:טֹוב:000002">邻舍</a>​<a name="02002701000032" ll="SDBH:אֵיד:000000" tl="HOTTP2822">强如</a>​<a name="02002701000042" ll="SDBH:אָח:000000">远方</a>​<a name="02002701000042" ll="SDBH:אָח:000000">的</a>​<a name="02002701000040">兄弟</a>​。
    
\v 11 我​<a name="02002701100004" ll="SDBH:בֵּן:000009">儿</a>​啊​，​你​要​<a name="02002701100002" ll="SDBH:חכם:000000">做</a>​<a name="02002701100002" ll="SDBH:חכם:000000">智慧人</a>​，​好​叫​我​的​<a name="02002701100010" ll="SDBH:לֵב:000001">心</a>​<a name="02002701100008" ll="SDBH:שׂמח:000001">欢喜</a>​，​使​我​可以​<a name="02002701100014;02002701100018" ll="SDBH:דָּבָר:000000;SDBH:שׁוב:000049">回答</a>​那​<a name="02002701100016" ll="SDBH:חרף:000000">辱骂</a>​我​的​人​。
    
\v 12 <a name="02002701200002" ll="SDBH:עָרוּם:000000">通达人</a>​<a name="02002701200004" ll="SDBH:ראה:000000">见</a>​<a name="02002701200006" ll="SDBH:רָעָה:000002">祸</a>​就​<a name="02002701200008" ll="SDBH:סתר:000001">藏躲</a>​；​<a name="02002701200010" ll="SDBH:פֶּתִי:000000">愚蒙人</a>​却​<a name="02002701200012" ll="SDBH:עבר:000000">前往</a>​<a name="02002701200014" ll="SDBH:ענשׁ:000001">受害</a>​。
    
\v 13 谁​为​<a name="02002701300010" ll="SDBH:זָר:000000">陌生人</a>​<a name="02002701300008" ll="SDBH:ערב:000000">担保</a>​，​就​<a name="02002701300002" ll="SDBH:לקח:000000">拿</a>​谁​的​<a name="02002701300004" ll="SDBH:בֶּגֶד:000001">衣服</a>​；​谁​为​<a name="02002701300016" ll="SDBH:נָכְרִי:000002" tl="HOTTP2823">外邦</a>​女子​<a name="02002701300018" ll="SDBH:חבל:000000">作保</a>​，​谁​就​要​承当​。
    
\v 14 <a name="02002701400016" ll="SDBH:בֹּקֶר:000000" tl="HOTTP2824">清晨</a>​<a name="02002701400018" ll="SDBH:שׁכם:000000" tl="HOTTP2824">起来</a>​<a name="02002701400008;02002701400010" ll="SDBH:גָּדֹול:000003">大声</a>​给​<a name="02002701400004" ll="SDBH:רֵעַ:001000">朋友</a>​<a name="02002701400002" ll="SDBH:ברך:001001">祝福</a>​的​，​就​<a name="02002701400022" ll="SDBH:חשׁב:000008">算是</a>​<a name="02002701400020" ll="SDBH:קְלָלָה:000000">诅咒</a>​他​。
    
\v 15 <a name="02002701500008;02002701500010" ll="SDBH:יֹום:000003;SDBH:סַגְרִיר:000000">下雨天</a>​<a name="02002701500004" ll="SDBH:טרד:000000">连连</a>​<a name="02002701500002" ll="SDBH:דֶּלֶף:000000">滴漏</a>​，​好​<a name="02002701500018" ll="SDBH:מִדְיָן:000000">争吵</a>​的​<a name="02002701500014" ll="SDBH:אִשָּׁה:000000">妇人</a>​就像​这样​；
    
\v 16 <a name="02002701600002" ll="SDBH:צפן:000009">拦阻</a>​她​的​，​就​是​<a name="02002701600004" ll="SDBH:צפן:000009">拦阻</a>​<a name="02002701600006" ll="SDBH:רוּחַ:000004">风</a>​，​又​像​用​<a name="02002701600012" ll="SDBH:יָמִין:000000">右手</a>​<a name="02002701600014" ll="SDBH:קרא:000007">抓</a>​<a name="02002701600010" ll="SDBH:שֶׁמֶן:000000">油</a>​。
    
\v 17 以​<a name="02002701700006" ll="SDBH:בַּרְזֶל:000000">铁</a>​<a name="02002701700008" ll="SDBH:חדד:000000" tl="HOTTP2825">磨</a>​<a name="02002701700002" ll="SDBH:בַּרְזֶל:000000">铁</a>​，​越​磨​越​<a name="02002701700014" ll="SDBH:חדד:000002" tl="HOTTP2825">利</a>​，​<a name="02002701700018" ll="SDBH:רֵעַ:001000">朋友</a>​<a name="02002701700016" ll="SDBH:פָּנֶה:000000">当面</a>​琢磨​，​也​是​如此​。
    
\v 18 <a name="02002701800002" ll="SDBH:נצר:000007">看守</a>​<a name="02002701800004" ll="SDBH:תְּאֵנָה:000000">无花果树</a>​的​，​必​<a name="02002701800006" ll="SDBH:אכל:000000">吃</a>​树​上​的​<a name="02002701800008" ll="SDBH:פְּרִי:000000">果子</a>​；​<a name="02002701800012" ll="SDBH:שׁמר:000007">敬奉</a>​<a name="02002701800014" ll="SDBH:אָדֹון:000000">主人</a>​的​，​必​<a name="02002701800016" ll="SDBH:כבד:000014">得</a>​<a name="02002701800016" ll="SDBH:כבד:000014">尊荣</a>​。
    
\v 19 <a name="02002701900006" ll="SDBH:מַיִם:000000">水</a>​中​照​<a name="02002701900010" ll="SDBH:פָּנֶה:000000">脸</a>​，​彼此​相符​；​<a name="02002701900020;02002701900024" ll="SDBH:אָדָם:000000;SDBH:לֵב:000001">人心</a>​相映​，​也​是​<a name="02002701900018">如此</a>​。
    
\v 20 <a name="02002702000002" ll="SDBH:שְׁאֹול:000000">阴间</a>​和​<a name="02002702000006">冥府</a>​永不​<a name="02002702000012" ll="SDBH:לֹא:000000">满足</a>​，​<a name="02002702000020">人</a>​的​<a name="02002702000016">眼目</a>​也​是​如此​。
    
\v 21 <a name="02002702100002" ll="SDBH:מַצְרֵף:000000">鼎</a>​为​炼​<a name="02002702100008" ll="SDBH:כֶּסֶף:000000">银</a>​，​<a name="02002702100012" ll="SDBH:כּוּר:000000">炉</a>​为​炼​<a name="02002702100018" ll="SDBH:זָהָב:000000">金</a>​，​<a name="02002702100026">口</a>​中​的​<a name="02002702100028" ll="SDBH:מַהֲלָל:000000">称赞</a>​也​试炼​<a name="02002702100022">人</a>​。
    
\v 22 用​<a name="02002702200030" ll="SDBH:עֱלִי:000000" il="NBGbs20110223-020;NBGmk20140119" tl="HOTTP2826">杵</a>​把​<a name="02002702200010" ll="SDBH:אֱוִיל:000000">愚妄人</a>​<a name="02002702200020" ll="SDBH:תָּוֶךְ:000000" tl="HOTTP2826">与</a>​<a name="02002702200024" ll="SDBH:רִיפֹות:000000" tl="HOTTP2826">谷粒</a>​<a name="02002702200020" ll="SDBH:תָּוֶךְ:000000" tl="HOTTP2826">一同</a>​<a name="02002702200004" ll="SDBH:כתשׁ:000000">捣</a>​在​<a name="02002702200016" ll="SDBH:מַכְתֵּשׁ:000000" il="NBGbs20110223-020;NBGmk20140119" tl="HOTTP2826">臼</a>​中​，​他​的​<a name="02002702200040" ll="SDBH:אִוֶּלֶת:000000">愚昧</a>​还是​<a name="02002702200034" ll="SDBH:סור:000007">离</a>​不​了​他​。
    
\v 23 你​要​详细​<a name="02002702300002;02002702300004">知道</a>​你​<a name="02002702300008" ll="SDBH:צֹאן:000000">羊群</a>​的​<a name="02002702300006" ll="SDBH:פָּנֶה:000000">景况</a>​，​<a name="02002702300010;02002702300012" ll="SDBH:לֵב:000001;SDBH:שׁית:000011">留心</a>​<a name="02002702300010;02002702300012" ll="SDBH:לֵב:000001;SDBH:שׁית:000011">照顾</a>​你​的​<a name="02002702300016" ll="SDBH:עֵדֶר:000000">牛群</a>​，
    
\v 24 因为​<a name="02002702400010" ll="SDBH:חֹסֶן:000000">财富</a>​不​能​<a name="02002702400008" ll="SDBH:עֹולָם:000000">永</a>​留​，​<a name="02002702400016" ll="SDBH:נֵזֶר:000004" il="BK00158;EgyptianCrown-01-083;Realia:1.10.2a" tl="HOTTP2827">冠冕</a>​岂​能​存​到​<a name="02002702400020;02002702400026" ll="SDBH:דֹּור:001000">万代</a>​？
    
\v 25 <a name="02002702500004" ll="SDBH:חָצִיר:000001">青草</a>​除去​，​<a name="02002702500010" ll="SDBH:דֶּשֶׁא:000000">嫩草</a>​<a name="02002702500008" ll="SDBH:ראה:000001">长出</a>​，​<a name="02002702500018" ll="SDBH:הַר:000000">山</a>​上​的​<a name="02002702500016" ll="SDBH:עֵשֶׂב:000000">菜蔬</a>​也​被​<a name="02002702500014" ll="SDBH:אסף:000001">采收</a>​。
    
\v 26 <a name="02002702600002" ll="SDBH:כֶּבֶשׂ:000000">绵羊</a>​可以​做​<a name="02002702600006" ll="SDBH:לְבוּשׁ:000000">衣服</a>​，​<a name="02002702600014" ll="SDBH:עַתּוּד:000000">公</a>​<a name="02002702600014" ll="SDBH:עַתּוּד:000000">山羊</a>​可​作​<a name="02002702600012" ll="SDBH:שָׂדֶה:000001">田地</a>​的​<a name="02002702600010" ll="SDBH:מְחִיר:000000">价值</a>​，
    
\v 27 并​有​<a name="02002702700008" ll="SDBH:עֵז:000000">母</a>​<a name="02002702700008" ll="SDBH:עֵז:000000">山羊</a>​<a name="02002702700006" ll="SDBH:חָלָב:000000">奶</a>​<a name="02002702700004" ll="SDBH:דַּי:000000">够</a>​你​<a name="02002702700012" ll="SDBH:לֶחֶם:000000">吃</a>​，​够​你​<a name="02002702700018" ll="SDBH:בַּיִת:000003" tl="HOTTP2828">养家</a>​和​<a name="02002702700026" ll="SDBH:נַעֲרָה:000001" tl="HOTTP2828">女仆</a>​的​<a name="02002702700022" ll="SDBH:חַיִּים:000000" tl="HOTTP2828">生活</a>​。
\c 28
\v 1 <a name="02002800100010" ll="SDBH:רָשָׁע:000000">恶人</a>​虽​<a name="02002800100006">无</a>​人​<a name="02002800100008" ll="SDBH:רדף:000000">追赶</a>​也​<a name="02002800100002" ll="SDBH:נוס:000000">逃跑</a>​；​<a name="02002800100014" ll="SDBH:צַדִּיק:000000">义人</a>​却​<a name="02002800100020" ll="SDBH:בטח:000000">胆壮</a>​像​<a name="02002800100018" ll="SDBH:כְּפִיר:000000">狮子</a>​。
    
\v 2 <a name="02002800200006" ll="SDBH:אֶרֶץ:000000" tl="HOTTP2829">地</a>​<a name="02002800200006" ll="SDBH:אֶרֶץ:000000" tl="HOTTP2829">上</a>​因​有​<a name="02002800200004" ll="SDBH:פֶּשַׁע:000000">罪过</a>​，​<a name="02002800200010" ll="SDBH:שַׂר:000000" tl="HOTTP2829">君王</a>​就​<a name="02002800200008" ll="SDBH:רַב:000001" tl="HOTTP2829">多</a>​更换​；​因​<a name="02002800200018" ll="SDBH:בין:000000" tl="HOTTP2830">聪明</a>​和​<a name="02002800200020">有</a>​<a name="02002800200020">见识</a>​的​<a name="02002800200016" ll="SDBH:אָדָם:000000" tl="HOTTP2830">人</a>​，​国​必​<a name="02002800200024" ll="SDBH:ארך:000005" tl="HOTTP2830">长存</a>​。
    
\v 3 <a name="02002800300002;02002800300004" ll="SDBH:גֶּבֶר:001000;SDBH:רושׁ:000001" tl="HOTTP2831">穷乏人</a>​<a name="02002800300008" ll="SDBH:עשׁק:000001">欺压</a>​<a name="02002800300010" ll="SDBH:דַּל:001000">贫寒人</a>​，​好像​<a name="02002800300012;02002800300014" ll="SDBH:מָטָר:000000;SDBH:סחף:000000">暴雨</a>​扫过​，​<a name="02002800300018">不</a>​留​<a name="02002800300020" ll="SDBH:לֶחֶם:000000">粮食</a>​。
    
\v 4 <a name="02002800400002" ll="SDBH:עזב:000006">离弃</a>​<a name="02002800400004" ll="SDBH:תֹּורָה:000000">律法</a>​的​，​<a name="02002800400006" ll="SDBH:הלל:001000">夸奖</a>​<a name="02002800400008" ll="SDBH:רָשָׁע:000000">恶人</a>​；​<a name="02002800400012" ll="SDBH:שׁמר:000003">遵守</a>​<a name="02002800400014" ll="SDBH:תֹּורָה:000000">律法</a>​的​，​却​与​恶人​<a name="02002800400016" ll="SDBH:גרה:000000">相争</a>​。
    
\v 5 <a name="02002800500002;02002800500004" ll="SDBH:רַע:000001">恶人</a>​不​<a name="02002800500008" ll="SDBH:בין:000001">明白</a>​<a name="02002800500010" ll="SDBH:מִשְׁפָּט:000007">公义</a>​；​惟有​<a name="02002800500014" ll="SDBH:בקשׁ:000003">寻求</a>​<a name="02002800500016" ll="SDBH:יהוה:000000">耶和华</a>​的​，​<a name="02002800500018;02002800500020" ll="SDBH:בין:000001" tl="HOTTP2832">无</a>​<a name="02002800500018;02002800500020" ll="SDBH:בין:000001" tl="HOTTP2832">不</a>​<a name="02002800500018;02002800500020" ll="SDBH:בין:000001" tl="HOTTP2832">明白</a>​。
    
\v 6 <a name="02002800600006" ll="SDBH:הלך:000004">行为</a>​<a name="02002800600010" ll="SDBH:תֹּם:000001">纯正</a>​的​<a name="02002800600004" ll="SDBH:רושׁ:000001">穷乏人</a><a name="02002800600002" ll="SDBH:טֹוב:000002">胜过</a>​<a name="02002800600016" ll="SDBH:דֶּרֶךְ:000007">行事</a>​<a name="02002800600014" ll="SDBH:עִקֵּשׁ:000001">歪曲</a>​的​<a name="02002800600022" ll="SDBH:עָשִׁיר:000000">有钱人</a>​。
    
\v 7 <a name="02002800700002" ll="SDBH:נצר:000001">谨守</a>​<a name="02002800700004" ll="SDBH:תֹּורָה:000000">教诲</a>​的​，​是​<a name="02002800700008" ll="SDBH:בין:000000">聪明</a>​之​<a name="02002800700006" ll="SDBH:בֵּן:000000">子</a>​；​与​<a name="02002800700014" ll="SDBH:זלל:000000">贪食者</a>​<a name="02002800700012" ll="SDBH:רעה:001001">为伍</a>​的​，​却​<a name="02002800700016" ll="SDBH:כלם:000001">羞辱</a>​其​<a name="02002800700018" ll="SDBH:אָב:000000">父</a>​。
    
\v 8 人​以​<a name="02002800800008" ll="SDBH:נֶשֶׁךְ:000000">厚利</a>​<a name="02002800800002">增加</a>​<a name="02002800800004" ll="SDBH:הֹון:000000">财富</a>​，​是​给​那​<a name="02002800800018">怜悯</a>​<a name="02002800800020" ll="SDBH:חנן:000000">贫寒人</a>​的​<a name="02002800800014;02002800800022" ll="SDBH:דַּל:001000">积财</a>​。
    
\v 9 <a name="02002800900002;02002800900004" ll="SDBH:אֹזֶן:000000;SDBH:סור:000002">转耳</a>​不​<a name="02002800900008">听</a>​<a name="02002800900010" ll="SDBH:תֹּורָה:000000">教诲</a>​的​，​他​的​<a name="02002800900014" ll="SDBH:תְּפִלָּה:000000">祈祷</a>​也​<a name="02002800900016" ll="SDBH:תֹּועֵבָה:000000">可憎</a>​。
    
\v 10 <a name="02002801000002" ll="SDBH:שׁגה:000003">诱惑</a>​<a name="02002801000004" ll="SDBH:יָשָׁר:000004">正直人</a>​行​<a name="02002801000008;02002801000010" ll="SDBH:דֶּרֶךְ:000007;SDBH:רַע:000005">恶道</a>​的​，​必​<a name="02002801000018" ll="SDBH:נפל:000000">掉</a>​在​自己​的​<a name="02002801000014" ll="SDBH:שְׁחוּת:000000">坑</a>​里​；​惟有​<a name="02002801000022" ll="SDBH:תָּמִים:000004" tl="HOTTP2833">完全人</a>​必​<a name="02002801000024" ll="SDBH:נחל:000000" tl="HOTTP2833">承受</a>​<a name="02002801000026" ll="SDBH:טֹוב:000002" tl="HOTTP2833">福分</a>​。
    
\v 11 <a name="02002801100008;02002801100010" ll="SDBH:עָשִׁיר:000000">有钱人</a>​自​<a name="02002801100006" ll="SDBH:עַיִן:000000">以为</a>​有​<a name="02002801100002" ll="SDBH:חָכָם, קסם:000000">智慧</a>​，​但​<a name="02002801100016" ll="SDBH:בין:000000">聪明</a>​的​<a name="02002801100014" ll="SDBH:דַּל:001000">贫寒人</a>​能​<a name="02002801100018" ll="SDBH:חקר:000000">看穿</a>​他​。
    
\v 12 <a name="02002801200006" ll="SDBH:צַדִּיק:000000">义人</a>​<a name="02002801200004" ll="SDBH:עלץ:000000">高升</a>​，​有​<a name="02002801200008" ll="SDBH:רַב:000002">大</a>​<a name="02002801200010" ll="SDBH:תִּפְאֶרֶת:000000">荣耀</a>​；​<a name="02002801200018" ll="SDBH:רָשָׁע:000000">恶人</a>​<a name="02002801200016">兴起</a>​，​<a name="02002801200022" ll="SDBH:אָדָם:000000">人</a>​就​<a name="02002801200020" ll="SDBH:חפשׂ:000002">躲藏</a>​。
    
\v 13 <a name="02002801300002" ll="SDBH:כסה:000000;SDBH:כסה:000001">遮掩</a>​自己​<a name="02002801300004" ll="SDBH:פֶּשַׁע:000000">过犯</a>​的​，​必​不​<a name="02002801300008" ll="SDBH:צלח:001003">顺利</a>​；​<a name="02002801300012" ll="SDBH:ידה:000001">承认</a>​且​<a name="02002801300016" ll="SDBH:עזב:000006">离弃</a>​过犯​的​，​必​<a name="02002801300018" ll="SDBH:רחם:000002">蒙</a>​<a name="02002801300018" ll="SDBH:רחם:000002">怜悯</a>​。
    
\v 14 <a name="02002801400006;02002801400008" ll="SDBH:פחד:000000;SDBH:תָּמִיד:000000">常存</a>​<a name="02002801400006;02002801400008" ll="SDBH:פחד:000000;SDBH:תָּמִיד:000000">敬畏</a>​的​，​这​<a name="02002801400004" ll="SDBH:אָדָם:000000">人</a>​有​福​了​；​<a name="02002801400014" ll="SDBH:לֵב:000001">心</a>​<a name="02002801400014" ll="SDBH:לֵב:000001">里</a>​<a name="02002801400012" ll="SDBH:קשׁה:000004">刚硬</a>​的​，​必​<a name="02002801400016" ll="SDBH:נפל:000012">陷</a>​在​<a name="02002801400020" ll="SDBH:רָעָה:000002">祸患</a>​里​。
    
\v 15 <a name="02002801500014" ll="SDBH:רָשָׁע:000000">邪恶</a>​的​<a name="02002801500012" ll="SDBH:משׁל:001002">君王</a>​压制​<a name="02002801500018;02002801500020" ll="SDBH:דַּל:001000;SDBH:עַם:000000">贫民</a>​，​好像​<a name="02002801500004" ll="SDBH:נהם:000000">吼叫</a>​的​<a name="02002801500002" ll="SDBH:אֲרִי:000000">狮子</a>​，​又​如​<a name="02002801500010" ll="SDBH:שׁקק:000000">觅食</a>​的​<a name="02002801500008" ll="SDBH:דֹּב:000000">熊</a>​。
    
\v 16 <a name="02002801600004;02002801600006" ll="SDBH:חָסֵר:000001;SDBH:תְּבוּנָה:000000">无知</a>​<a name="02002801600004;02002801600006" ll="SDBH:חָסֵר:000001;SDBH:תְּבוּנָה:000000">的</a>​<a name="02002801600002" ll="SDBH:נָגִיד:000000" tl="HOTTP2834">君王</a>​<a name="02002801600010" ll="SDBH:רַב:000002">多</a>​行​<a name="02002801600012" ll="SDBH:מַעֲשַׁקֹּות:000000">暴虐</a>​；​<a name="02002801600016" ll="SDBH:שׂנא:000000">恨恶</a>​<a name="02002801600018" ll="SDBH:בֶּצַע:000001">非分</a>​<a name="02002801600018" ll="SDBH:בֶּצַע:000001">之</a>​<a name="02002801600018" ll="SDBH:בֶּצַע:000001">财</a>​的​，​必​<a name="02002801600020;02002801600022" ll="SDBH:ארך:000005;SDBH:יֹום:000004">年长日久</a>​。
    
\v 17 <a name="02002801700004" ll="SDBH:עשׁק:001000">背负</a>​<a name="02002801700008;02002801700010" ll="SDBH:דָּם:000003;SDBH:נֶפֶשׁ:000005">流人</a>​<a name="02002801700008;02002801700010" ll="SDBH:דָּם:000003;SDBH:נֶפֶשׁ:000005">血</a>​<a name="02002801700008;02002801700010" ll="SDBH:דָּם:000003;SDBH:נֶפֶשׁ:000005">之</a>​<a name="02002801700008;02002801700010" ll="SDBH:דָּם:000003;SDBH:נֶפֶשׁ:000005">罪</a>​的​，​必​<a name="02002801700016" ll="SDBH:נוס:000000">逃跑</a>​直到​<a name="02002801700014" ll="SDBH:בֹּור:000002">地府</a>​；​愿​<a name="02002801700018" ll="SDBH:אַל:000000">无</a>​人​<a name="02002801700020" ll="SDBH:תמך:000004">帮助</a>​他​！
    
\v 18 <a name="02002801800002" ll="SDBH:הלך:000004">行为</a>​<a name="02002801800004" ll="SDBH:תָּמִים:000002">正直</a>​的​，​必​蒙​<a name="02002801800006" ll="SDBH:ישׁע:000001">拯救</a>​；​<a name="02002801800012" ll="SDBH:דֶּרֶךְ:000007">行事</a>​<a name="02002801800010" ll="SDBH:עקשׁ:000000">弯曲</a>​的​，​<a name="02002801800018" ll="SDBH:אֶחָד:000000" tl="HOTTP2835">立时</a>​<a name="02002801800014" ll="SDBH:נפל:000045" tl="HOTTP2835">跌倒</a>​。
    
\v 19 <a name="02002801900002" ll="SDBH:עבד:000004">耕种</a>​自己​<a name="02002801900004" ll="SDBH:אֲדָמָה:000000">田地</a>​的​，​<a name="02002801900008" ll="SDBH:לֶחֶם:000000">粮食</a>​<a name="02002801900006" ll="SDBH:שׂבע:000000">充足</a>​；​<a name="02002801900012" ll="SDBH:רדף:000001">追求</a>​<a name="02002801900014" ll="SDBH:רֵיק:000001">虚浮</a>​的​，​<a name="02002801900016;02002801900018" ll="SDBH:רֵישׁ:000000;SDBH:שׂבע:000002">穷困</a>​<a name="02002801900016;02002801900018" ll="SDBH:רֵישׁ:000000;SDBH:שׂבע:000002">潦倒</a>​。
    
\v 20 <a name="02002802000002;02002802000004" ll="SDBH:אֱמוּנָה:000002">诚实人</a>​必​<a name="02002802000006" ll="SDBH:רַב:000002">多</a>​得​<a name="02002802000008" ll="SDBH:בְּרָכָה:000000">福</a>​；​想要​<a name="02002802000012" ll="SDBH:אוץ:000000">急速</a>​<a name="02002802000016" ll="SDBH:עשׁר:000000">发财</a>​的​，​<a name="02002802000020" ll="SDBH:נקה:000002">难免</a>​<a name="02002802000020" ll="SDBH:נקה:000002">受罚</a>​。
    
\v 21 <a name="02002802100002;02002802100004" ll="SDBH:נכר:000002;SDBH:פָּנֶה:000000">看</a>​<a name="02002802100002;02002802100004" ll="SDBH:נכר:000002;SDBH:פָּנֶה:000000">人</a>​<a name="02002802100002;02002802100004" ll="SDBH:נכר:000002;SDBH:פָּנֶה:000000">情面</a>​是​不​<a name="02002802100008" ll="SDBH:טֹוב:000002">好</a>​的​；​却​有​<a name="02002802100020" ll="SDBH:גֶּבֶר:001000">人</a>​因​一​<a name="02002802100014" ll="SDBH:פַּת:000000">块</a>​<a name="02002802100016" ll="SDBH:לֶחֶם:000000">饼</a>​而​<a name="02002802100018" ll="SDBH:פשׁע:000000">犯法</a>​。
    
\v 22 <a name="02002802200010;02002802200012;02002802200014" ll="SDBH:עַיִן:000000;SDBH:רַע:000001">守财奴</a>​想要​<a name="02002802200002" ll="SDBH:בהל:000000">急速</a>​<a name="02002802200008" ll="SDBH:הֹון:000000">发财</a>​，​却​不​<a name="02002802200020">知</a>​<a name="02002802200024" ll="SDBH:חֶסֶר:000000">穷乏</a>​必​<a name="02002802200026">临到</a>​他​身​上​。
    
\v 23 <a name="02002802300002" ll="SDBH:יכח:000003">责备</a>​<a name="02002802300004" ll="SDBH:אָדָם:000000">人</a>​的​，​<a name="02002802300006" ll="SDBH:אַחַר:002001" tl="HOTTP2836">后来</a>​<a name="02002802300010" ll="SDBH:מצא:000007">蒙</a>​人​<a name="02002802300008" ll="SDBH:חֵן:000001">喜悦</a>​，​多于​那​用​<a name="02002802300016" ll="SDBH:לָשֹׁון:000000">舌头</a>​<a name="02002802300014" ll="SDBH:חלק:001002">谄媚</a>​人​的​。
    
\v 24 <a name="02002802400002" ll="SDBH:גזל:000000">抢夺</a>​<a name="02002802400004;02002802400008" ll="SDBH:אֵם:000000;SDBH:אָב:000000">父母</a>​竟​<a name="02002802400012" ll="SDBH:אמר:000000">说</a>​“​这​<a name="02002802400014">不</a>​<a name="02002802400014">是</a>​<a name="02002802400016" ll="SDBH:פֶּשַׁע:000000">罪过</a>​”​，​此​人​与​<a name="02002802400024;02002802400026" ll="SDBH:שׁחת:000001">毁灭者</a>​<a name="02002802400018" ll="SDBH:חָבֵר:000000">同类</a>​。
    
\v 25 <a name="02002802500002;02002802500004" ll="SDBH:נֶפֶשׁ:000001;SDBH:רָחָב:000005">心</a>​<a name="02002802500002;02002802500004" ll="SDBH:נֶפֶשׁ:000001;SDBH:רָחָב:000005">中</a>​<a name="02002802500002;02002802500004" ll="SDBH:נֶפֶשׁ:000001;SDBH:רָחָב:000005">贪婪</a>​<a name="02002802500002;02002802500004" ll="SDBH:נֶפֶשׁ:000001;SDBH:רָחָב:000005">的</a>​，​<a name="02002802500006" ll="SDBH:גרה:000000">挑起</a>​<a name="02002802500008" ll="SDBH:מָדֹון:000000">争端</a>​；​<a name="02002802500012" ll="SDBH:בטח:000001">倚靠</a>​<a name="02002802500016" ll="SDBH:יהוה:000000">耶和华</a>​的​，​必​得​<a name="02002802500018" ll="SDBH:דשׁן:000006">丰裕</a>​。
    
\v 26 <a name="02002802600006" ll="SDBH:לֵב:000001">心</a>​<a name="02002802600006" ll="SDBH:לֵב:000001">中</a>​<a name="02002802600002" ll="SDBH:בטח:000001">自以为是</a>​的​，​就是​<a name="02002802600010" ll="SDBH:כְּסִיל:000000">愚昧人</a>​；​凭​<a name="02002802600018" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02002802600014" ll="SDBH:הלך:000004">行事</a>​的​，​必​蒙​<a name="02002802600022" ll="SDBH:מלט:000000">拯救</a>​。
    
\v 27 <a name="02002802700002">周济</a>​<a name="02002802700008" ll="SDBH:רושׁ:000001">穷乏人</a>​的​，​<a name="02002802700010">不致</a>​<a name="02002802700012" ll="SDBH:מַחְסֹור:000000">缺乏</a>​；​<a name="02002802700016;02002802700018" ll="SDBH:עַיִן:000000;SDBH:עלם:000007">遮眼</a>​<a name="02002802700016;02002802700018" ll="SDBH:עַיִן:000000;SDBH:עלם:000007">不</a>​<a name="02002802700016;02002802700018" ll="SDBH:עַיִן:000000;SDBH:עלם:000007">看</a>​的​，​<a name="02002802700020" ll="SDBH:רַב:000002">多</a>​受​<a name="02002802700022" ll="SDBH:מְאֵרָה:000000">诅咒</a>​。
    
\v 28 <a name="02002802800006" ll="SDBH:רָשָׁע:000000">恶人</a>​<a name="02002802800004">兴起</a>​，​<a name="02002802800010" ll="SDBH:אָדָם:000000">人</a>​就​<a name="02002802800008" ll="SDBH:סתר:000001">躲藏</a>​；​恶人​<a name="02002802800016" ll="SDBH:אבד:000004">败亡</a>​，​<a name="02002802800020" ll="SDBH:צַדִּיק:000000">义人</a>​必​<a name="02002802800018">增多</a>​。
\c 29
\v 1 <a name="02002900100002">人</a>​屡次​受​<a name="02002900100004" ll="SDBH:תֹּוכַחַת:000000">责罚</a>​，​仍然​<a name="02002900100006" ll="SDBH:קשׁה:000004">硬</a>​着​<a name="02002900100008" ll="SDBH:עֹרֶף:000000">颈项</a>​，​他​必​<a name="02002900100010" ll="SDBH:פֶּתַע:000000">顷刻</a>​被​<a name="02002900100012" ll="SDBH:שׁבר:000000">毁</a>​，​<a name="02002900100016">无从</a>​<a name="02002900100018" ll="SDBH:מַרְפֵּא:000000">医治</a>​。
    
\v 2 <a name="02002900200006" ll="SDBH:צַדִּיק:000000">义人</a>​<a name="02002900200004">增多</a>​，​<a name="02002900200012" ll="SDBH:עַם:000000">民</a>​就​<a name="02002900200008" ll="SDBH:שׂמח:000000">喜乐</a>​；​<a name="02002900200020" ll="SDBH:רָשָׁע:000000">恶人</a>​<a name="02002900200018" ll="SDBH:משׁל:001000">掌权</a>​，​<a name="02002900200024">民</a>​就​<a name="02002900200022" ll="SDBH:אנח:000000">叹息</a>​。
    
\v 3 <a name="02002900300004" ll="SDBH:אהב:000000">爱慕</a>​<a name="02002900300006" ll="SDBH:חָכְמָה:000000">智慧</a>​的​，​使​<a name="02002900300010" ll="SDBH:אָב:000000">父亲</a>​<a name="02002900300008" ll="SDBH:שׂמח:000001">喜乐</a>​；​<a name="02002900300014" ll="SDBH:רעה:001001">结交</a>​<a name="02002900300016" ll="SDBH:זֹנָה:000000">妓女</a>​的​，​却​<a name="02002900300018" ll="SDBH:אבד:000005">浪费</a>​<a name="02002900300020" ll="SDBH:הֹון:000000">钱财</a>​。
    
\v 4 <a name="02002900400002" ll="SDBH:מֶלֶךְ:000000">王</a>​藉​<a name="02002900400006" ll="SDBH:מִשְׁפָּט:000007">公平</a>​，​使​<a name="02002900400010" ll="SDBH:אֶרֶץ:000000">国</a>​<a name="02002900400008">坚定</a>​；​<a name="02002900400014;02002900400016" ll="SDBH:תְּרוּמָה:000000">强索</a>​<a name="02002900400014;02002900400016" ll="SDBH:תְּרוּמָה:000000">贡物</a>​<a name="02002900400014;02002900400016" ll="SDBH:תְּרוּמָה:000000">的</a>​，​<a name="02002900400018" ll="SDBH:הרס:000001">使</a>​它​<a name="02002900400018" ll="SDBH:הרס:000001">毁坏</a>​。
    
\v 5 <a name="02002900500002;02002900500004" ll="SDBH:גֶּבֶר:001000;SDBH:חלק:001002">谄媚</a>​<a name="02002900500008" ll="SDBH:רֵעַ:001000">邻舍</a>​<a name="02002900500002;02002900500004" ll="SDBH:גֶּבֶר:001000;SDBH:חלק:001002">的</a>​，​就​是​<a name="02002900500012" ll="SDBH:פרשׂ:000000">设</a>​<a name="02002900500010" ll="SDBH:רֶשֶׁת:000000">网罗</a>​绊​他​的​<a name="02002900500016">脚</a>​。
    
\v 6 <a name="02002900600006;02002900600008" ll="SDBH:רַע:000001">恶人</a>​<a name="02002900600004" ll="SDBH:פֶּשַׁע:000000">犯罪</a>​，​自陷​<a name="02002900600010" ll="SDBH:מֹוקֵשׁ:000000">圈套</a>​；​惟独​<a name="02002900600014" ll="SDBH:צַדִּיק:000000">义人</a>​<a name="02002900600016" ll="SDBH:רנן:000000" tl="HOTTP2837">欢呼</a>​<a name="02002900600020" ll="SDBH:שָׂמֵחַ:000000">喜乐</a>​。
    
\v 7 <a name="02002900700004" ll="SDBH:צַדִּיק:000000">义人</a>​<a name="02002900700002">关注</a>​<a name="02002900700008" ll="SDBH:דַּל:001000">贫寒人</a>​的​<a name="02002900700006" ll="SDBH:דִּין:000001">案情</a>​；​<a name="02002900700010" ll="SDBH:רָשָׁע:000000">恶人</a>​不​<a name="02002900700014" ll="SDBH:בין:000001">明了</a>​这种​<a name="02002900700016" ll="SDBH:דַּעַת:000000">知识</a>​。
    
\v 8 <a name="02002900800002;02002900800004" ll="SDBH:לָצֹון:000000">傲慢人</a>​<a name="02002900800006" ll="SDBH:פוח:000001">煽动</a>​全​<a name="02002900800008" ll="SDBH:קִרְיָה:000000">城</a>​；​<a name="02002900800012" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​<a name="02002900800014" ll="SDBH:שׁוב:000020">止息</a>​<a name="02002900800016" ll="SDBH:אַף:000008">众怒</a>​。
    
\v 9 <a name="02002900900002;02002900900004" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​与​<a name="02002900900010;02002900900012" ll="SDBH:אֱוִיל:000000">愚妄人</a>​<a name="02002900900006" ll="SDBH:שׁפט:000007">有</a>​<a name="02002900900006" ll="SDBH:שׁפט:000007">争讼</a>​，​或​<a name="02002900900016" ll="SDBH:רגז:000003">怒</a>​或​<a name="02002900900020" ll="SDBH:שׂחק:000000">笑</a>​，​总​<a name="02002900900024">不</a>​得​<a name="02002900900026" ll="SDBH:נַחַת:001001">安宁</a>​。
    
\v 10 <a name="02002901000002;02002901000004" ll="SDBH:דָּם:000003">好</a>​<a name="02002901000002;02002901000004" ll="SDBH:דָּם:000003">流</a>​<a name="02002901000002;02002901000004" ll="SDBH:דָּם:000003">人</a>​<a name="02002901000002;02002901000004" ll="SDBH:דָּם:000003">血</a>​<a name="02002901000002;02002901000004" ll="SDBH:דָּם:000003">的</a>​，​<a name="02002901000006" ll="SDBH:שׂנא:000000">恨恶</a>​<a name="02002901000008" ll="SDBH:תָּם:000002">完全人</a>​，​<a name="02002901000012" ll="SDBH:יָשָׁר:000004" tl="HOTTP2838">正直人</a>​却​<a name="02002901000014" ll="SDBH:בקשׁ:000000;SDBH:בקשׁ:000006" tl="HOTTP2839">顾惜</a>​他​的​<a name="02002901000016" ll="SDBH:נֶפֶשׁ:000001">性命</a>​。
    
\v 11 <a name="02002901100008" ll="SDBH:כְּסִיל:000000">愚昧人</a>​<a name="02002901100004" ll="SDBH:רוּחַ:000002">怒气</a>​<a name="02002901100002">全</a>​<a name="02002901100006" ll="SDBH:יצא:000004">发</a>​；​<a name="02002901100012" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​自我​<a name="02002901100018" ll="SDBH:שׁבח:001000">平息</a>​。
    
\v 12 <a name="02002901200002" ll="SDBH:משׁל:001002">君王</a>​若​<a name="02002901200004" ll="SDBH:קשׁב:000000">听</a>​<a name="02002901200008;02002901200010" ll="SDBH:דָּבָר:000000;SDBH:שֶׁקֶר:000000">谎言</a>​，​他​<a name="02002901200012">一切</a>​<a name="02002901200014" ll="SDBH:שׁרת:000001">臣仆</a>​都​是​<a name="02002901200016" ll="SDBH:רָשָׁע:000000">奸恶</a>​。
    
\v 13 <a name="02002901300002" ll="SDBH:רושׁ:000001">穷乏人</a>​和​<a name="02002901300006;02002901300008" ll="SDBH:תֹּךְ:000000">欺压者</a>​<a name="02002901300010" ll="SDBH:פגשׁ:000001">相遇</a>​，​<a name="02002901300018" ll="SDBH:יהוה:000000">耶和华</a>​使​他们​的​<a name="02002901300014" ll="SDBH:עַיִן:000000">眼目</a>​<a name="02002901300012" ll="SDBH:אור:000001">明亮</a>​。
    
