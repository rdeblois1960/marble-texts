\v 17 <a name="02001901700006" ll="SDBH:חנן:000000">怜悯</a>​<a name="02001901700008" ll="SDBH:דַּל:001000">贫寒人</a>​的​，​就​是​<a name="02001901700002" ll="SDBH:לוה:001001">借给</a>​<a name="02001901700004" ll="SDBH:יהוה:000000">耶和华</a>​，​他​的​<a name="02001901700012" ll="SDBH:גְּמוּל:000000">报偿</a>​，​耶和华​必​<a name="02001901700014" ll="SDBH:שׁלם:000007">归还</a>​他​。
    
\v 18 趁​还​<a name="02001901800008">有</a>​<a name="02001901800010" ll="SDBH:תִּקְוָה:001000">指望</a>​，​<a name="02001901800002" ll="SDBH:יסר:000000">管教</a>​你​的​<a name="02001901800004" ll="SDBH:בֵּן:000000">儿子</a>​，​<a name="02001901800018" ll="SDBH:אַל:000000">不</a>​可​<a name="02001901800020;02001901800022" ll="SDBH:נֶפֶשׁ:000001;SDBH:נשׂא:000052">执意</a>​<a name="02001901800016" ll="SDBH:מות:000001">摧毁</a>​他​。
    
\v 19 <a name="02001901900004;02001901900006" ll="SDBH:גָּדֹול:000003;SDBH:חֵמָה:001001">暴怒</a>​的​人​必​<a name="02001901900008;02001901900010" ll="SDBH:נשׂא:000015;SDBH:עֹנֶשׁ:000000">受</a>​<a name="02001901900008;02001901900010" ll="SDBH:נשׂא:000015;SDBH:עֹנֶשׁ:000000">惩罚</a>​，​你​若​<a name="02001901900016" ll="SDBH:נצל:000005">救</a>​他​，​必须​<a name="02001901900020;02001901900022">再</a>​救​。
    
\v 20 要​<a name="02001902000002">听</a>​<a name="02001902000004" ll="SDBH:עֵצָה:000001">劝言</a>​，​<a name="02001902000008" ll="SDBH:קבל:000002">接受</a>​<a name="02001902000010" ll="SDBH:מוּסָר:000000">训诲</a>​，​使​你​<a name="02001902000018" ll="SDBH:אַחֲרִית:000001">终久</a>​<a name="02001902000014" ll="SDBH:חכם:000000">有</a>​<a name="02001902000014" ll="SDBH:חכם:000000">智慧</a>​。
    
\v 21 <a name="02001902100008;02001902100010" ll="SDBH:לֵב:000001">人心</a>​<a name="02001902100002" ll="SDBH:רַב:000001">多</a>​有​<a name="02001902100004" ll="SDBH:מַחֲשָׁבָה:000000">计谋</a>​；​惟有​<a name="02001902100016" ll="SDBH:יהוה:000000">耶和华</a>​的​<a name="02001902100014" ll="SDBH:עֵצָה:000002">筹算</a>​才​能​<a name="02001902100020">成就</a>​。
    
\v 22 <a name="02001902200006" ll="SDBH:חֶסֶד:000000">仁慈</a>​<a name="02001902200006" ll="SDBH:חֶסֶד:000000">的</a>​<a name="02001902200006" ll="SDBH:חֶסֶד:000000">人</a>​令​<a name="02001902200004" ll="SDBH:אָדָם:000000">人</a>​<a name="02001902200002" ll="SDBH:תַּאֲוָה:000001">喜爱</a>​，​<a name="02001902200012" ll="SDBH:רושׁ:000001">穷乏人</a>​<a name="02001902200010" ll="SDBH:טֹוב:000002">强如</a>​<a name="02001902200016;02001902200018" ll="SDBH:כָּזָב:000001">说</a>​<a name="02001902200016;02001902200018" ll="SDBH:כָּזָב:000001">谎言</a>​<a name="02001902200016;02001902200018" ll="SDBH:כָּזָב:000001">的</a>​。
    
\v 23 <a name="02001902300002" ll="SDBH:יִרְאָה:000000">敬畏</a>​<a name="02001902300004" ll="SDBH:יהוה:000000">耶和华</a>​的​，​得着​<a name="02001902300008" ll="SDBH:חַיִּים:000000">生命</a>​，​他​必​<a name="02001902300012" ll="SDBH:שָׂבֵעַ:000003">饱足</a>​<a name="02001902300014" ll="SDBH:לין:000001">安居</a>​，​<a name="02001902300016" ll="SDBH:בַּל:000000">不</a>​<a name="02001902300018" ll="SDBH:פקד:000011">遭</a>​<a name="02001902300020" ll="SDBH:רַע:000004">祸患</a>​。
    
\v 24 <a name="02001902400004" ll="SDBH:עָצֵל:000000">懒惰人</a>​把​<a name="02001902400006">手</a>​<a name="02001902400002" ll="SDBH:טמן:000001">埋入</a>​<a name="02001902400012" ll="SDBH:צַלַּחַת:000000">盘</a>​里​，​连​<a name="02001902400022" ll="SDBH:שׁוב:000051">缩回</a>​送进​<a name="02001902400018" ll="SDBH:פֶּה:000000">口</a>​中​也​不​肯​。
    
\v 25 <a name="02001902500004">责打</a>​<a name="02001902500002" ll="SDBH:ליץ:000000">傲慢人</a>​，​能​使​<a name="02001902500008" ll="SDBH:פֶּתִי:000000">无知</a>​<a name="02001902500008" ll="SDBH:פֶּתִי:000000">的</a>​<a name="02001902500008" ll="SDBH:פֶּתִי:000000">人</a>​<a name="02001902500010" ll="SDBH:ערם:001000">变</a>​<a name="02001902500010" ll="SDBH:ערם:001000">精明</a>​；​<a name="02001902500014" ll="SDBH:יכח:000004">责备</a>​<a name="02001902500018" ll="SDBH:בין:000000">聪明人</a>​，​他​就​<a name="02001902500020" ll="SDBH:בין:000001">明白</a>​<a name="02001902500022" ll="SDBH:דַּעַת:000000">知识</a>​。
    
\v 26 <a name="02001902600002" ll="SDBH:שׁדד:000000">虐待</a>​<a name="02001902600004" ll="SDBH:אָב:000000">父亲</a>​、​<a name="02001902600006" ll="SDBH:ברח:000001">驱逐</a>​<a name="02001902600008" ll="SDBH:אֵם:000000">母亲</a>​的​，​是​<a name="02001902600012" ll="SDBH:בושׁ:000002">蒙羞</a>​<a name="02001902600016" ll="SDBH:חפר:001001">致</a>​<a name="02001902600016" ll="SDBH:חפר:001001">辱</a>​之​<a name="02001902600010" ll="SDBH:בֵּן:000000">子</a>​。
    
\v 27 我​<a name="02001902700004" ll="SDBH:בֵּן:000009" tl="HOTTP2755">儿</a>​啊​，​<a name="02001902700002" ll="SDBH:חדל:000003" tl="HOTTP2755">停止</a>​<a name="02001902700008">听</a>那​叫​你​<a name="02001902700014" ll="SDBH:שׁגה:000002">偏离</a>​<a name="02001902700020" ll="SDBH:דַּעַת:000000">知识</a>​<a name="02001902700018" ll="SDBH:אֵמֶר:000000">言语</a>​的​<a name="02001902700010" ll="SDBH:מוּסָר:000000">教导</a>​。
    
\v 28 <a name="02001902800004" ll="SDBH:בְּלִיַּעַל:000000">卑劣</a>​的​<a name="02001902800002" ll="SDBH:עֵד:000000">见证</a>​<a name="02001902800006" ll="SDBH:ליץ:000003">嘲笑</a>​<a name="02001902800008" ll="SDBH:מִשְׁפָּט:000007">公平</a>​，​<a name="02001902800014" ll="SDBH:רָשָׁע:000000">恶人</a>​的​<a name="02001902800012" ll="SDBH:פֶּה:000000">口</a>​<a name="02001902800016" ll="SDBH:בלע:000000">吞下</a>​<a name="02001902800018" ll="SDBH:אָוֶן:000000">罪孽</a>​。
    
\v 29 <a name="02001902900010" ll="SDBH:שֶׁפֶט:000000" tl="HOTTP2756">刑罚</a>​是​为​<a name="02001902900008" ll="SDBH:ליץ:000000">傲慢人</a>​<a name="02001902900002" ll="SDBH:כון:000012">预备</a>​的​，​<a name="02001902900014" ll="SDBH:מַהֲלֻמֹות:000000">鞭打</a>​则​是​为​<a name="02001902900020" ll="SDBH:כְּסִיל:000000">愚昧人</a>​的​<a name="02001902900018" ll="SDBH:גֵּו:000000">背</a>​预备​的​。
\c 20
\v 1 <a name="02002000100006" ll="SDBH:יַיִן:000000">酒</a>​能​使​人​<a name="02002000100002" ll="SDBH:ליץ:000000">傲慢</a>​，​<a name="02002000100010" ll="SDBH:שֵׁכָר:000000">烈酒</a>​使​人​<a name="02002000100008" ll="SDBH:המה:000001">喧嚷</a>​，​<a name="02002000100014">凡</a>​<a name="02002000100016" ll="SDBH:שׁגה:000002">沉溺</a>​其中​的​，​都​无​<a name="02002000100022" ll="SDBH:חכם:000000">智慧</a>​。
    
\v 2 <a name="02002000200012" ll="SDBH:מֶלֶךְ:000000">王</a>​的​<a name="02002000200010" ll="SDBH:אֵימָה:000001">威吓</a>​如​<a name="02002000200008" ll="SDBH:כְּפִיר:000000">狮子</a>​<a name="02002000200002" ll="SDBH:נַהַם:000000">吼叫</a>​，​<a name="02002000200014">激怒</a>​他​的​是​自​<a name="02002000200016" ll="SDBH:חטא:001000">害</a>​己​<a name="02002000200018" ll="SDBH:נֶפֶשׁ:000001">命</a>​。
    
\v 3 <a name="02002000300010" ll="SDBH:שֶׁבֶת:000001">止息</a>​<a name="02002000300014" ll="SDBH:רִיב:000000">纷争</a>​是​<a name="02002000300008">人</a>​的​<a name="02002000300002" ll="SDBH:כָּבֹוד:000000">尊荣</a>​，​<a name="02002000300020" ll="SDBH:אֱוִיל:000000">愚妄人</a>​<a name="02002000300022" ll="SDBH:גלע:000000">争闹</a>​不休​。
    
\v 4 <a name="02002000400006" ll="SDBH:עָצֵל:000000">懒惰人</a>​因​<a name="02002000400004" ll="SDBH:חֹרֶף:000000">冬寒</a>​不​去​<a name="02002000400010" ll="SDBH:חרשׁ:000001">耕种</a>​，​到​<a name="02002000400022">收割</a>​时​，​他​去​<a name="02002000400016">寻找</a>​，​<a name="02002000400026">一无所得</a>​。
    
\v 5 <a name="02002000500012">人</a>​<a name="02002000500010" ll="SDBH:לֵב:000001">心</a>​<a name="02002000500010" ll="SDBH:לֵב:000001">中</a>​的​<a name="02002000500006" ll="SDBH:עֵצָה:000002">筹算</a>​如同​<a name="02002000500002;02002000500004" ll="SDBH:מַיִם:000000;SDBH:עָמֹק:000000">深水</a>​，​惟​<a name="02002000500016;02002000500018" ll="SDBH:תְּבוּנָה:000000">聪明人</a>​才​能​<a name="02002000500020" ll="SDBH:דלה:000000">汲引</a>​<a name="02002000500020" ll="SDBH:דלה:000000">出来</a>​。
    
\v 6 <a name="02002000600002" ll="SDBH:רֹב:000000">很多</a>​<a name="02002000600004" ll="SDBH:אָדָם:000000">人</a>​<a name="02002000600006" ll="SDBH:קרא:000006">声称</a>​自己​<a name="02002000600010" ll="SDBH:חֶסֶד:000000">忠信</a>​，​但​<a name="02002000600016" ll="SDBH:אֵמוּן:000000">诚信</a>​的​<a name="02002000600014">人</a>​谁​能​<a name="02002000600020" ll="SDBH:מצא:000012">遇着</a>​呢​？
    
\v 7 <a name="02002000700008" ll="SDBH:צַדִּיק:000000">义人</a>​<a name="02002000700002" ll="SDBH:הלך:000004">行为</a>​<a name="02002000700006" ll="SDBH:תֹּם:000001">纯正</a>​，​他​后代​的​<a name="02002000700012" ll="SDBH:בֵּן:000000">子孙</a>​有​福​了​！
    
\v 8 <a name="02002000800002" ll="SDBH:מֶלֶךְ:000000">王</a>​<a name="02002000800004">坐</a>​在​<a name="02002000800010" ll="SDBH:דִּין:000000">审判</a>​的​<a name="02002000800008" ll="SDBH:כִּסֵּא:000000">位</a>​上​，​以​<a name="02002000800016" ll="SDBH:עַיִן:000000">眼目</a>​<a name="02002000800012" ll="SDBH:זרה:000004">驱散</a>​<a name="02002000800018">一切</a>​<a name="02002000800020" ll="SDBH:רַע:000005">邪恶</a>​。
    
\v 9 谁​能​<a name="02002000900004" ll="SDBH:אמר:000000">说</a>​：​“​我​已经​<a name="02002000900006" ll="SDBH:זכה:000002">洁净</a>​了​我​的​<a name="02002000900008" ll="SDBH:לֵב:000001">心</a>​，​<a name="02002000900010" ll="SDBH:טהר:000001">脱净</a>​了​我​的​<a name="02002000900014" ll="SDBH:חַטָּאת:000000">罪</a>​？​”
    
\v 10 <a name="02002001000020" ll="SDBH:שְׁנַיִם:000000">两</a>​样​的​<a name="02002001000002" ll="SDBH:אֶבֶן:000001">法码</a>​和​两​样​的​<a name="02002001000008" ll="SDBH:אֵיפָה:000000">伊法</a>​，​都​为​<a name="02002001000016" ll="SDBH:יהוה:000000">耶和华</a>​<a name="02002001000014" ll="SDBH:תֹּועֵבָה:000000">所</a>​<a name="02002001000014" ll="SDBH:תֹּועֵבָה:000000">憎恶</a>​。
    
\v 11 <a name="02002001100010" ll="SDBH:נַעַר:000000">孩童</a>​的​<a name="02002001100006" ll="SDBH:מַעֲלָל:000001">行动</a>​或​<a name="02002001100014" ll="SDBH:זַךְ:000001">纯洁</a>​，​或​<a name="02002001100020" ll="SDBH:יָשָׁר:000003">正直</a>​，​都​以​行为​<a name="02002001100008" ll="SDBH:נכר:000000">显明</a>​自己​。
    
\v 12 能​<a name="02002001200004">听</a>​的​<a name="02002001200002" ll="SDBH:אֹזֶן:000000">耳</a>​，​能​<a name="02002001200010" ll="SDBH:ראה:000000">看</a>​的​<a name="02002001200008" ll="SDBH:עַיִן:000000">眼</a>​，​<a name="02002001200018" ll="SDBH:שְׁנַיִם:000000">二者</a>​都​为​<a name="02002001200012" ll="SDBH:יהוה:000000">耶和华</a>​所​<a name="02002001200014">造</a>​。
    
\v 13 <a name="02002001300002" ll="SDBH:אַל:000000">不要</a>​<a name="02002001300004;02002001300006" ll="SDBH:אהב:000000;SDBH:שֵׁנָה:000000">贪睡</a>​，​免​致​<a name="02002001300010" ll="SDBH:ירשׁ:000004">贫穷</a>​；​<a name="02002001300014" ll="SDBH:עַיִן:000000">眼</a>​要​<a name="02002001300012" ll="SDBH:פקח:000002">睁开</a>​，​就​可​<a name="02002001300016;02002001300018" ll="SDBH:לֶחֶם:000000;SDBH:שׂבע:000000">吃饱</a>​。
    
\v 14 <a name="02002001400010" ll="SDBH:קנה:000000">买</a>​东西​的​<a name="02002001400006" ll="SDBH:אמר:000000">说</a>​：​“​<a name="02002001400002" ll="SDBH:רַע:000004">不</a>​<a name="02002001400002" ll="SDBH:רַע:000004">好</a>​，​<a name="02002001400004" ll="SDBH:רַע:000004">不</a>​<a name="02002001400004" ll="SDBH:רַע:000004">好</a>​！​”​及至​<a name="02002001400014" ll="SDBH:אזל:000000">离去</a>​，​他​却​<a name="02002001400020" ll="SDBH:הלל:001002">自夸</a>​。
    
\v 15 有​<a name="02002001500004" ll="SDBH:זָהָב:000000">金子</a>​和​<a name="02002001500008" ll="SDBH:רֹב:000000">许多</a>​<a name="02002001500010" ll="SDBH:פְּנִינִים:000000">宝石</a>​，​惟​<a name="02002001500020" ll="SDBH:דַּעַת:000000">知识</a>​的​<a name="02002001500018" ll="SDBH:שָׂפָה:000001">嘴唇</a>​是​<a name="02002001500016" ll="SDBH:יְקָר:000000">贵重</a>​的​<a name="02002001500014" ll="SDBH:כְּלִי:000000">珍宝</a>​。
    
\v 16 谁​为​<a name="02002001600010" ll="SDBH:זָר:000000">陌生人</a>​<a name="02002001600008" ll="SDBH:ערב:000000">担保</a>​，​就​<a name="02002001600002" ll="SDBH:לקח:000000">拿</a>​谁​的​<a name="02002001600004" ll="SDBH:בֶּגֶד:000001">衣服</a>​；​谁​为​<a name="02002001600018" ll="SDBH:נָכְרִי:000002" tl="HOTTP2757">外邦人</a>​<a name="02002001600020" ll="SDBH:חבל:000000">作保</a>​，​谁​就​要​承当​。
    
\v 17 靠​<a name="02002001700012" ll="SDBH:שֶׁקֶר:000000">谎言</a>​而​得​的​<a name="02002001700010" ll="SDBH:לֶחֶם:000000">食物</a>​，​令​<a name="02002001700008">人</a>​<a name="02002001700002" ll="SDBH:עָרֵב:000000">愉悦</a>​；​<a name="02002001700016" ll="SDBH:אַחַר:002001">到</a>​<a name="02002001700016" ll="SDBH:אַחַר:002001">后来</a>​，​他​的​<a name="02002001700020" ll="SDBH:פֶּה:000000">口</a>​必​<a name="02002001700018" ll="SDBH:מלא:000000">充满</a>​<a name="02002001700022" ll="SDBH:חָצָץ:000000">碎石</a>​。
    
\v 18 <a name="02002001800002" ll="SDBH:מַחֲשָׁבָה:000000">计谋</a>​凭​<a name="02002001800006" ll="SDBH:עֵצָה:000001">筹算</a>​<a name="02002001800008" ll="SDBH:כון:000027">立定</a>​，​<a name="02002001800016;02002001800018" ll="SDBH:מִלְחָמָה:000000">打仗</a>​要​凭​<a name="02002001800014" ll="SDBH:תַּחְבּוּלֹות:000000">智谋</a>​。
    
\v 19 <a name="02002001900006;02002001900008" ll="SDBH:הלך:000004;SDBH:רָכִיל:000000">到处</a>​<a name="02002001900006;02002001900008" ll="SDBH:הלך:000004;SDBH:רָכִיל:000000">传话</a>​的​，​<a name="02002001900002" ll="SDBH:גלה:000011">泄漏</a>​<a name="02002001900004" ll="SDBH:סֹוד:000003">机密</a>​；​<a name="02002001900014;02002001900016" ll="SDBH:פתה:001001;SDBH:שָׂפָה:000001">口无遮拦</a>​的​，​不​可​与​他​<a name="02002001900020" ll="SDBH:ערב:001002">结交</a>​。
    
\v 20 <a name="02002002000002" ll="SDBH:קלל:000005">咒骂</a>​<a name="02002002000004;02002002000008" ll="SDBH:אֵם:000000;SDBH:אָב:000000">父母</a>​的​，​他​的​<a name="02002002000012" ll="SDBH:נֵר:000000">灯</a>​必​<a name="02002002000010" ll="SDBH:דעך:000000">熄灭</a>​，​在​<a name="02002002000018;02002002000020" ll="SDBH:אֱשׁוּן:000000" tl="HOTTP2758">漆黑</a>​中​。
    
\v 21 <a name="02002002100012" ll="SDBH:רִאשֹׁון:000000">起初</a>​<a name="02002002100004;02002002100006" ll="SDBH:בהל:000002;SDBH:בחל:001000" tl="HOTTP2759">很快</a>​<a name="02002002100004;02002002100006" ll="SDBH:בהל:000002;SDBH:בחל:001000" tl="HOTTP2759">得来</a>​的​<a name="02002002100002" ll="SDBH:נַחֲלָה:000000">产业</a>​，​<a name="02002002100016" ll="SDBH:אַחֲרִית:000001">终久</a>​却​不​是​<a name="02002002100020" ll="SDBH:ברך:001001">福</a>​。
    
\v 22 你​<a name="02002002200002" ll="SDBH:אַל:000000">不要</a>​<a name="02002002200004" ll="SDBH:אמר:000000">说</a>​：​“​我​要​以​恶​<a name="02002002200006" ll="SDBH:שׁלם:000007">报</a>​<a name="02002002200008" ll="SDBH:רַע:000005">恶</a>​”​；​要​<a name="02002002200010" ll="SDBH:קוה:000000">等候</a>​<a name="02002002200014" ll="SDBH:יהוה:000000">耶和华</a>​，​他​必​<a name="02002002200018" ll="SDBH:ישׁע:000001">拯救</a>​你​。
    
\v 23 两​样​的​<a name="02002002300006" ll="SDBH:אֶבֶן:000001">法码</a>​为​<a name="02002002300004" ll="SDBH:יהוה:000000">耶和华</a>​<a name="02002002300002" ll="SDBH:תֹּועֵבָה:000000">所</a>​<a name="02002002300002" ll="SDBH:תֹּועֵבָה:000000">憎恶</a>​，​<a name="02002002300016" ll="SDBH:מִרְמָה:000000">诡诈</a>​的​<a name="02002002300014" ll="SDBH:מֹאזְנַיִם:000000">天平</a>​也​为​<a name="02002002300020" ll="SDBH:טֹוב:000002" tl="HOTTP2760">不善</a>​。
    
\v 24 <a name="02002002400008" ll="SDBH:גֶּבֶר:001000">人</a>​的​<a name="02002002400006" ll="SDBH:מִצְעָד:000000">脚步</a>​为​<a name="02002002400004" ll="SDBH:יהוה:000000">耶和华</a>​所​定​，​<a name="02002002400012" ll="SDBH:אָדָם:000000">人</a>​岂​能​<a name="02002002400016" ll="SDBH:בין:000001">明白</a>​自己​的​<a name="02002002400018" ll="SDBH:דֶּרֶךְ:000007">道路</a>​呢​？
    
\v 25 人​<a name="02002002500006" ll="SDBH:לעע:000000">冒失</a>​<a name="02002002500006" ll="SDBH:לעע:000000">地</a>​<a name="02002002500006" ll="SDBH:לעע:000000">声称</a>​：​“​这​是​<a name="02002002500008" ll="SDBH:קֹדֶשׁ:000001">神圣</a>​的​！​”​<a name="02002002500014" ll="SDBH:נֶדֶר:000000">许愿</a>​<a name="02002002500012" ll="SDBH:אַחַר:001002">之后</a>​才​<a name="02002002500018" ll="SDBH:בקר:000001">细想</a>​，​就​是​自​陷​<a name="02002002500002" ll="SDBH:מֹוקֵשׁ:000000">圈套</a>​。
    
\v 26 <a name="02002002600008" ll="SDBH:חָכָם, קסם:000000">智慧</a>​的​<a name="02002002600006" ll="SDBH:מֶלֶךְ:000000">王</a>​<a name="02002002600002" ll="SDBH:זרה:000004">驱散</a>​<a name="02002002600004" ll="SDBH:רָשָׁע:000000">恶人</a>​，​用​<a name="02002002600016" ll="SDBH:אֹופַן:000000">轮子</a>​<a name="02002002600012" ll="SDBH:שׁוב:000003">滚过</a>​他们​。
    
\v 27 <a name="02002002700008" ll="SDBH:אָדָם:000000">人</a>​的​<a name="02002002700006" ll="SDBH:נְשָׁמָה:000001">灵</a>​是​<a name="02002002700004" ll="SDBH:יהוה:000000">耶和华</a>​的​<a name="02002002700002" ll="SDBH:נֵר:000000" il="LB00148;NBGmk20131129b;NBGmk20131129c;NBGmk20131204;Realia:5.1a" tl="HOTTP2761">灯</a>​，​<a name="02002002700010" ll="SDBH:חפשׂ:000000">鉴察</a>​人​的​<a name="02002002700014;02002002700016" ll="SDBH:בֶּטֶן:000000;SDBH:חֶדֶר:000002">内心</a>​<a name="02002002700014;02002002700016" ll="SDBH:בֶּטֶן:000000;SDBH:חֶדֶר:000002">深处</a>​。
    
\v 28 <a name="02002002800002" ll="SDBH:חֶסֶד:000000">慈爱</a>​和​<a name="02002002800006" ll="SDBH:אֱמֶת:000000">诚实</a>​<a name="02002002800008" ll="SDBH:נצר:000007">庇护</a>​<a name="02002002800010" ll="SDBH:מֶלֶךְ:000000">君王</a>​，​他​的​<a name="02002002800022" ll="SDBH:כִּסֵּא:000002">王位</a>​因​<a name="02002002800020" ll="SDBH:חֶסֶד:000000" tl="HOTTP2762">慈爱</a>​而​<a name="02002002800014" ll="SDBH:סעד:000000">立稳</a>​。
    
\v 29 <a name="02002002900006" ll="SDBH:כֹּחַ:000000">强壮</a>​是​<a name="02002002900004" ll="SDBH:בָּחוּר:000000">青年</a>​的​<a name="02002002900002" ll="SDBH:תִּפְאֶרֶת:000000">荣耀</a>​；​<a name="02002002900014" ll="SDBH:שֵׂיבָה:000000">白发</a>​为​<a name="02002002900012" ll="SDBH:זָקֵן:000001">老人</a>​的​<a name="02002002900010" ll="SDBH:הָדָר:000000">尊荣</a>​。
    
\v 30 <a name="02002003000002" ll="SDBH:חַבּוּרָה:000000">鞭</a>​<a name="02002003000004" ll="SDBH:פֶּצַע:000000">伤</a>​<a name="02002003000008" ll="SDBH:תַּמְרוּק:000001">除净</a>​<a name="02002003000012" ll="SDBH:רַע:000005" tl="HOTTP2763">邪恶</a>​，​<a name="02002003000016" ll="SDBH:מַכָּה:000000">责打</a>​可​洁净​<a name="02002003000018;02002003000020" ll="SDBH:בֶּטֶן:000000;SDBH:חֶדֶר:000002">人心</a>​<a name="02002003000018;02002003000020" ll="SDBH:בֶּטֶן:000000;SDBH:חֶדֶר:000002">深处</a>​。
\c 21
\v 1 <a name="02002100100008" ll="SDBH:מֶלֶךְ:000000">王</a>​的​<a name="02002100100006" ll="SDBH:לֵב:000001">心</a>​在​<a name="02002100100014" ll="SDBH:יהוה:000000">耶和华</a>​<a name="02002100100012">手</a>​中​像​<a name="02002100100002;02002100100004" ll="SDBH:מַיִם:000000;SDBH:פֶּלֶג:000000">河水</a>​，​他​能​使​它​<a name="02002100100022" ll="SDBH:חפץ:000002">随意</a>​<a name="02002100100024" ll="SDBH:נטה:002013">流转</a>​。
    
\v 2 <a name="02002100200006">人</a>​<a name="02002100200002">一切</a>​<a name="02002100200004" ll="SDBH:דֶּרֶךְ:000007">所</a>​<a name="02002100200004" ll="SDBH:דֶּרֶךְ:000007">行</a>​<a name="02002100200004" ll="SDBH:דֶּרֶךְ:000007">的</a>​，​在​自己​<a name="02002100200012" ll="SDBH:עַיִן:000000">眼</a>​中​看为​<a name="02002100200008" ll="SDBH:יָשָׁר:000003">正直</a>​，​惟有​<a name="02002100200020" ll="SDBH:יהוה:000000">耶和华</a>​<a name="02002100200016" ll="SDBH:תכן:000000">衡量</a>​<a name="02002100200018" ll="SDBH:לֵב:000001">人心</a>​。
    
\v 3 <a name="02002100300002">行</a>​<a name="02002100300004" ll="SDBH:צְדָקָה:000001">公义</a>​和​<a name="02002100300008" ll="SDBH:מִשְׁפָּט:000007">公平</a>比​<a name="02002100300018" ll="SDBH:זֶבַח:000000">献祭</a>​更​蒙​<a name="02002100300014" ll="SDBH:יהוה:000000">耶和华</a>​<a name="02002100300010" ll="SDBH:בחר:000002">悦纳</a>​。
    
\v 4 <a name="02002100400004" ll="SDBH:עַיִן:000000">眼</a>​<a name="02002100400002" ll="SDBH:רוּם:000001">高</a>​<a name="02002100400010" ll="SDBH:לֵב:000001">心</a>​<a name="02002100400008" ll="SDBH:רָחָב:000001">傲</a>​，​就​是​<a name="02002100400014" ll="SDBH:רָשָׁע:000000">恶人</a>​的​<a name="02002100400012" ll="SDBH:נִיר:000000" il="NBGmk20131129b;NBGmk20131129c;NBGmk20131204;Realia:5.1a" tl="HOTTP2764">灯</a>​，​都​是​<a name="02002100400016" ll="SDBH:חַטָּאת:000000">罪</a>​。
    
\v 5 <a name="02002100500004" ll="SDBH:חָרוּץ:003000" tl="HOTTP2765">殷勤</a>​<a name="02002100500002" ll="SDBH:מַחֲשָׁבָה:000000" tl="HOTTP2765">筹划</a>​的​，​足​致​<a name="02002100500010" ll="SDBH:מֹותָר:000000" tl="HOTTP2765">丰裕</a>​；​<a name="02002100500016" ll="SDBH:אוץ:000000" tl="HOTTP2765">行事</a>​<a name="02002100500016" ll="SDBH:אוץ:000000" tl="HOTTP2765">急躁</a>​的​，​<a name="02002100500018" ll="SDBH:אַךְ:000003" tl="HOTTP2765">必</a>​致​<a name="02002100500022" ll="SDBH:מַחְסֹור:000000" tl="HOTTP2765">缺乏</a>​。
    
\v 6 用​<a name="02002100600010" ll="SDBH:שֶׁקֶר:000000">诡诈</a>​之​<a name="02002100600008" ll="SDBH:לָשֹׁון:000000">舌</a>​所​得​的​<a name="02002100600004" ll="SDBH:אֹוצָר:000000">财富</a>如​被​<a name="02002100600014" ll="SDBH:נדף:000000" tl="HOTTP2767">吹散</a>​的​<a name="02002100600012" ll="SDBH:הֶבֶל:000002" tl="HOTTP2767">雾气</a>​，​<a name="02002100600016" ll="SDBH:בקשׁ:000007" tl="HOTTP2768">趋向</a>​<a name="02002100600018" ll="SDBH:מָוֶת:000000" tl="HOTTP2768">灭亡</a>​。
    
\v 7 <a name="02002100700004" ll="SDBH:רָשָׁע:000000">恶人</a>​的​<a name="02002100700002" ll="SDBH:שֹׁד:000000">残暴</a>​必​<a name="02002100700006" ll="SDBH:גרר:000000">扫去</a>​自己​，​因​他们​<a name="02002100700010" ll="SDBH:מאן:000000">不</a>​<a name="02002100700010" ll="SDBH:מאן:000000">肯</a>​按​<a name="02002100700016" ll="SDBH:מִשְׁפָּט:000007">公平</a>​<a name="02002100700014">行事</a>​。
    
\v 8 <a name="02002100800008" ll="SDBH:וָזָר:000000">有罪</a>​<a name="02002100800008" ll="SDBH:וָזָר:000000">的</a>​<a name="02002100800006">人</a>​其​<a name="02002100800004" ll="SDBH:דֶּרֶךְ:000007">路</a>​<a name="02002100800002" ll="SDBH:הֲפַכְפַּךְ:000000">弯曲</a>​；​<a name="02002100800012" ll="SDBH:זַךְ:000001">纯洁</a>​的​人​<a name="02002100800016" ll="SDBH:פֹּעַל:000001">行为</a>​<a name="02002100800014" ll="SDBH:יָשָׁר:000004">正直</a>​。
    
\v 9 <a name="02002100900002" ll="SDBH:טֹוב:000002">宁可</a>​<a name="02002100900006">住</a>​在​<a name="02002100900012" ll="SDBH:גָּג:000000">房顶</a>​的​一​<a name="02002100900010" ll="SDBH:פִּנָּה:000000">角</a>​，​<a name="02002100900002" ll="SDBH:טֹוב:000002">也</a>​<a name="02002100900002" ll="SDBH:טֹוב:000002">不</a>​与​好​<a name="02002100900018" ll="SDBH:מִדְיָן:000000">争吵</a>​的​<a name="02002100900016" ll="SDBH:אִשָּׁה:000000">妇人</a>​<a name="02002100900024" ll="SDBH:חֶבֶר:000000">同住</a>​。
    
