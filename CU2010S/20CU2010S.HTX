\c 17
\v 1 一​块​<a name="02001700100004;02001700100006" ll="SDBH:חָרֵב:000000;SDBH:פַּת:000000">干饼</a>​，​大家​<a name="02001700100010" ll="SDBH:שַׁלְוָה:000000">相安</a>​；​<a name="02001700100002" ll="SDBH:טֹוב:000002">胜过</a>​<a name="02001700100020" ll="SDBH:זֶבַח:000000">宴席</a>​<a name="02001700100016;02001700100018" ll="SDBH:בַּיִת:000000;SDBH:מלא:000000">满屋</a>​，​大家​<a name="02001700100022" ll="SDBH:רִיב:000000">相争</a>​。
    
\v 2 <a name="02001700200004" ll="SDBH:שׂכל:001000">明智</a>​的​<a name="02001700200002" ll="SDBH:עֶבֶד:000000">仆人</a>​必​<a name="02001700200006" ll="SDBH:משׁל:001000">管辖</a>​<a name="02001700200012" ll="SDBH:בושׁ:000002">蒙羞</a>​的​<a name="02001700200010" ll="SDBH:בֵּן:000000">儿子</a>​，​并​在​<a name="02001700200020" ll="SDBH:אָח:000000">兄弟</a>​<a name="02001700200018" ll="SDBH:תָּוֶךְ:000000">中</a>​<a name="02001700200022" ll="SDBH:חלק:000005">同</a>​<a name="02001700200022" ll="SDBH:חלק:000005">分</a>​<a name="02001700200024" ll="SDBH:נַחֲלָה:000000">产业</a>​。
    
\v 3 <a name="02001700300002" ll="SDBH:מַצְרֵף:000000">鼎</a>​为​炼​<a name="02001700300008" ll="SDBH:כֶּסֶף:000000">银</a>​，​<a name="02001700300012" ll="SDBH:כּוּר:000000">炉</a>​为​炼​<a name="02001700300018" ll="SDBH:זָהָב:000000">金</a>​，​惟有​<a name="02001700300026" ll="SDBH:יהוה:000000">耶和华</a>​<a name="02001700300022" ll="SDBH:בחן:000000">熬炼</a>​<a name="02001700300024" ll="SDBH:לֵב:000001">人心</a>​。
    
\v 4 <a name="02001700400002" ll="SDBH:רעע:000000">行恶</a>​的​，​<a name="02001700400004" ll="SDBH:קשׁב:000000">留心</a>​<a name="02001700400004" ll="SDBH:קשׁב:000000">听</a>​<a name="02001700400010" ll="SDBH:אָוֶן:000000">恶毒</a>​的​<a name="02001700400008" ll="SDBH:שָׂפָה:000001">嘴唇</a>​；​<a name="02001700400012" ll="SDBH:שֶׁקֶר:000000">说谎</a>​<a name="02001700400012" ll="SDBH:שֶׁקֶר:000000">的</a>​，​<a name="02001700400014" ll="SDBH:אזן:000001">侧耳</a>​<a name="02001700400014" ll="SDBH:אזן:000001">听</a>​<a name="02001700400020" ll="SDBH:הַוָּה:001000">邪恶</a>​的​<a name="02001700400018" ll="SDBH:לָשֹׁון:000000">舌头</a>​。
    
\v 5 <a name="02001700500002" ll="SDBH:לעג:000000">讥笑</a>​<a name="02001700500008" ll="SDBH:רושׁ:000001">穷乏人</a>​的​，​是​<a name="02001700500010" ll="SDBH:חרף:000000">蔑视</a>​<a name="02001700500012">造</a>​他​的​主​；​<a name="02001700500014;02001700500018" ll="SDBH:אֵיד:000000;SDBH:שָׂמֵחַ:000000">幸灾乐祸</a>​<a name="02001700500014;02001700500018" ll="SDBH:אֵיד:000000;SDBH:שָׂמֵחַ:000000">的</a>​，​<a name="02001700500022" ll="SDBH:נקה:000002">难免</a>​<a name="02001700500022" ll="SDBH:נקה:000002">受罚</a>​。
    
\v 6 <a name="02001700600006;02001700600008" ll="SDBH:בֵּן:000000">子孙</a>​为​<a name="02001700600004" ll="SDBH:זָקֵן:000001">老人</a>​的​<a name="02001700600002" ll="SDBH:עֲטָרָה:000000">冠冕</a>​；​<a name="02001700600016" ll="SDBH:אָב:000000">父母</a>​是​<a name="02001700600014" ll="SDBH:בֵּן:000000">儿女</a>​的​<a name="02001700600012" ll="SDBH:תִּפְאֶרֶת:000000">荣耀</a>​。
    
\v 7 <a name="02001700700008" ll="SDBH:נָבָל:000000">愚顽人</a>​<a name="02001700700010;02001700700012" ll="SDBH:יֶתֶר:000005;SDBH:שָׂפָה:000001">说</a>​<a name="02001700700010;02001700700012" ll="SDBH:יֶתֶר:000005;SDBH:שָׂפָה:000001">美言</a>​并​不​<a name="02001700700004" ll="SDBH:נָאוֶה:000001">相宜</a>​，​<a name="02001700700020" ll="SDBH:נָדִיב:000001">君子</a>​<a name="02001700700022;02001700700024" ll="SDBH:שֶׁקֶר:000000;SDBH:שָׂפָה:000001">说</a>​<a name="02001700700022;02001700700024" ll="SDBH:שֶׁקֶר:000000;SDBH:שָׂפָה:000001">谎言</a>​也​不​合宜​。
    
\v 8 <a name="02001700800008" ll="SDBH:שֹׁחַד:000000">贿赂</a>​在​<a name="02001700800014" ll="SDBH:בַּעַל:000000">馈赠者</a>​的​<a name="02001700800012" ll="SDBH:עַיִן:000000">眼</a>​中​看为​<a name="02001700800002;02001700800004" ll="SDBH:אֶבֶן:000008;SDBH:חֵן:000000">玉石</a>​，​<a name="02001700800018">随处</a>​<a name="02001700800022" ll="SDBH:פנה:000002">运转</a>​都​得​<a name="02001700800024" ll="SDBH:שׂכל:000000">顺利</a>​。
    
\v 9 <a name="02001700900002" ll="SDBH:כסה:000000;SDBH:כסה:000004">包容</a>​<a name="02001700900004" ll="SDBH:פֶּשַׁע:000000">过错</a>​的​，​<a name="02001700900006" ll="SDBH:בקשׁ:000007">寻求</a>​<a name="02001700900008" ll="SDBH:אַהֲבָה:000000">友爱</a>​；​<a name="02001700900012;02001700900016" ll="SDBH:דָּבָר:000002;SDBH:שׁנה:000007">喋喋不休</a>​的​，​<a name="02001700900018" ll="SDBH:פרד:000003">离间</a>​<a name="02001700900020" ll="SDBH:אַלּוּף:002000">密友</a>​。
    
\v 10 一​句​<a name="02001701000004" ll="SDBH:גְּעָרָה:000000">责备</a>​<a name="02001701000004" ll="SDBH:גְּעָרָה:000000">的</a>​<a name="02001701000004" ll="SDBH:גְּעָרָה:000000">话</a>​<a name="02001701000002" ll="SDBH:נחת:000002">深入</a>​<a name="02001701000008" ll="SDBH:בין:000000">聪明人</a>​的​心​，​强如​<a name="02001701000012">打</a>​<a name="02001701000014" ll="SDBH:כְּסִיל:000000">愚昧人</a>​<a name="02001701000016" ll="SDBH:מֵאָה:000000">一百</a>​下​。
    
\v 11 <a name="02001701100008" ll="SDBH:רַע:000001">恶人</a>​<a name="02001701100002" ll="SDBH:אַךְ:000003">只</a>​<a name="02001701100006" ll="SDBH:בקשׁ:000007">寻求</a>​<a name="02001701100004" ll="SDBH:מְרִי:000000">背叛</a>​，​<a name="02001701100014" ll="SDBH:אַכְזָרִי:000000">残忍</a>​的​<a name="02001701100012" ll="SDBH:מַלְאָךְ:000000">使者</a>​必​<a name="02001701100016" ll="SDBH:שׁלח:000002">奉差</a>​攻击​他​。
    
\v 12 宁可​<a name="02001701200002" ll="SDBH:פגשׁ:000000">遇见</a>​<a name="02001701200006" ll="SDBH:שַׁכּוּל:000000">失丧</a>​<a name="02001701200010">小熊</a>​<a name="02001701200006" ll="SDBH:שַׁכּוּל:000000">的</a>​<a name="02001701200004" ll="SDBH:דֹּב:000000">母熊</a>​，​也​<a name="02001701200014" ll="SDBH:אַל:000000">不</a>​愿​遇见​正​行​<a name="02001701200020" ll="SDBH:אִוֶּלֶת:000000">愚昧</a>​的​<a name="02001701200016" ll="SDBH:כְּסִיל:000000">愚昧人</a>​。
    
\v 13 <a name="02001701300002;02001701300004;02001701300008" ll="SDBH:טֹובָה:000002;SDBH:רָעָה:000000;SDBH:שׁוב:000032">以恶报善</a>​的​，​<a name="02001701300016" ll="SDBH:רָעָה:000000">祸患</a>​必​不​<a name="02001701300014" ll="SDBH:מושׁ:000003">离</a>​他​的​<a name="02001701300020" ll="SDBH:בַּיִת:000003">家</a>​。
    
\v 14 <a name="02001701400008" ll="SDBH:מָדֹון:000000">纷争</a>​掀起​，​如同​<a name="02001701400002" ll="SDBH:פטר:000002">缺口</a>​的​<a name="02001701400004" ll="SDBH:מַיִם:000000">水</a>​；​因此​，​<a name="02001701400020" ll="SDBH:רִיב:000000">争端</a>​尚未​<a name="02001701400016" ll="SDBH:גלע:000001">爆发</a>​就​当​<a name="02001701400022" ll="SDBH:נטשׁ:000006">制止</a>​。
    
\v 15 <a name="02001701500002" ll="SDBH:צדק:000003">定</a>​<a name="02001701500004" ll="SDBH:רָשָׁע:000000">恶人</a>​<a name="02001701500002" ll="SDBH:צדק:000003">为</a>​<a name="02001701500002" ll="SDBH:צדק:000003">义</a>​的​，​<a name="02001701500008" ll="SDBH:רשׁע:000001">定</a>​<a name="02001701500010" ll="SDBH:צַדִּיק:000000">义人</a>​<a name="02001701500008" ll="SDBH:רשׁע:000001">为</a>​<a name="02001701500008" ll="SDBH:רשׁע:000001">有罪</a>​的​，​都​为​<a name="02001701500014" ll="SDBH:יהוה:000000">耶和华</a>​所​<a name="02001701500012" ll="SDBH:תֹּועֵבָה:000001">憎恶</a>​。
    
\v 16 <a name="02001701600012" ll="SDBH:כְּסִיל:000000">愚昧人</a>​既​<a name="02001701600022;02001701600024" ll="SDBH:לֵב:000003">无知</a>​，​为何​<a name="02001701600010">手</a>​拿​<a name="02001701600006" ll="SDBH:מְחִיר:000000">银钱</a>​去​<a name="02001701600016" ll="SDBH:קנה:000000;SDBH:קנה:000002">买</a>​<a name="02001701600018" ll="SDBH:חָכְמָה:000000">智慧</a>​呢​？
    
\v 17 <a name="02001701700012" ll="SDBH:רֵעַ:001000">朋友</a>​<a name="02001701700004;02001701700006" ll="SDBH:עֵת:000001">时常</a>​<a name="02001701700008" ll="SDBH:אהב:000001">亲爱</a>​，​<a name="02001701700016" ll="SDBH:אָח:000003">弟兄</a>​为​<a name="02001701700020" ll="SDBH:צָרָה:000000">患难</a>​而​<a name="02001701700022" ll="SDBH:ילד:000000">生</a>​。
    
\v 18 在​<a name="02001701800020" ll="SDBH:רֵעַ:001000">邻舍</a>​<a name="02001701800018">面前</a>​<a name="02001701800008;02001701800010" ll="SDBH:כַּף:000007;SDBH:תקע:000002">击掌</a>​<a name="02001701800012;02001701800014" ll="SDBH:עֲרֻבָּה:000000;SDBH:ערב:000000">担保</a>​的​，​是​<a name="02001701800004;02001701800006" ll="SDBH:חָסֵר:000001;SDBH:לֵב:000003">无知</a>​的​<a name="02001701800002" ll="SDBH:אָדָם:000000">人</a>​。
    
\v 19 <a name="02001701900006" ll="SDBH:אהב:000000">喜爱</a>​<a name="02001701900008" ll="SDBH:מַצָּה:001000">争吵</a>​的​，​是​<a name="02001701900002" ll="SDBH:אהב:000000">喜爱</a>​<a name="02001701900004" ll="SDBH:פֶּשַׁע:000000">过犯</a>​；​<a name="02001701900012" ll="SDBH:פֶּתַח:000000">门</a>​盖​得​<a name="02001701900010" ll="SDBH:גבהּ:000001">高</a>​的​，​<a name="02001701900014" ll="SDBH:בקשׁ:000007">自取</a>​<a name="02001701900016" ll="SDBH:שֶׁבֶר:000000;SDBH:שֶׁבֶר:000001">败坏</a>​。
    
\v 20 <a name="02001702000004" ll="SDBH:לֵב:000001">心</a>​<a name="02001702000004" ll="SDBH:לֵב:000001">中</a>​<a name="02001702000002" ll="SDBH:עִקֵּשׁ:000001">歪曲</a>​的​，​<a name="02001702000008" ll="SDBH:מצא:000011">得</a>​不​<a name="02001702000008" ll="SDBH:מצא:000011">着</a>​<a name="02001702000010" ll="SDBH:טֹוב:000002">福乐</a>​；​<a name="02001702000018" ll="SDBH:לָשֹׁון:000000">舌头</a>​<a name="02001702000014" ll="SDBH:הפך:000008">颠倒是非</a>​的​，​<a name="02001702000020" ll="SDBH:נפל:000012">陷</a>​在​<a name="02001702000024" ll="SDBH:רָעָה:000002">祸患</a>​中​。
    
\v 21 <a name="02001702100002" ll="SDBH:ילד:000001">生</a>​<a name="02001702100004" ll="SDBH:כְּסִיל:000000">愚昧</a>​<a name="02001702100004" ll="SDBH:כְּסִיל:000000">之</a>​<a name="02001702100004" ll="SDBH:כְּסִיל:000000">子</a>​的​，​自己​必​<a name="02001702100008" ll="SDBH:תּוּגָה:000000">愁苦</a>​；​<a name="02001702100020" ll="SDBH:נָבָל:000000">愚顽人</a>​的​<a name="02001702100018" ll="SDBH:אָב:000000">父亲</a>​毫无​<a name="02001702100016" ll="SDBH:שׂמח:000000">喜乐</a>​。
    
\v 22 <a name="02001702200004" ll="SDBH:שָׂמֵחַ:000000">喜乐</a>​的​<a name="02001702200002" ll="SDBH:לֵב:000001">心</a>​能​治好​疾病​；​<a name="02001702200014" ll="SDBH:נָכֵא:000000">忧伤</a>​的​<a name="02001702200012" ll="SDBH:רוּחַ:000002">灵</a>​使​<a name="02001702200018" ll="SDBH:גֶּרֶם:000000">骨头</a>​<a name="02001702200016" ll="SDBH:יבשׁ:000003">枯干</a>​。
    
\v 23 <a name="02001702300008" ll="SDBH:רָשָׁע:000000">恶人</a>​<a name="02001702300006" ll="SDBH:חֵיק:000000">暗中</a>​<a name="02001702300010" ll="SDBH:לקח:000000">受</a>​<a name="02001702300002" ll="SDBH:שֹׁחַד:000000">贿赂</a>​，​以致​<a name="02001702300014" ll="SDBH:נטה:000010">弯曲</a>​<a name="02001702300018" ll="SDBH:מִשְׁפָּט:000007">公正</a>​的​<a name="02001702300016" ll="SDBH:אֹרַח:000002">路</a>​。
    
\v 24 <a name="02001702400006" ll="SDBH:בין:000000">聪明人</a>​<a name="02001702400004" ll="SDBH:פָּנֶה:000000">面前</a>​有​<a name="02001702400008" ll="SDBH:חָכְמָה:000000">智慧</a>​；​<a name="02001702400014" ll="SDBH:כְּסִיל:000000">愚昧人</a>​<a name="02001702400012" ll="SDBH:עַיִן:000000">眼望</a>​<a name="02001702400020" ll="SDBH:אֶרֶץ:000000">地</a>​的​<a name="02001702400018" ll="SDBH:קָצֶה:000002">尽头</a>​。
    
\v 25 <a name="02001702500010" ll="SDBH:כְּסִיל:000000">愚昧</a>​<a name="02001702500010" ll="SDBH:כְּסִיל:000000">的</a>​<a name="02001702500008" ll="SDBH:בֵּן:000000">儿子</a>​使​<a name="02001702500006" ll="SDBH:אָב:000000">父亲</a>​<a name="02001702500002" ll="SDBH:כַּעַס:000000;SDBH:כַּעַס:000001">愁烦</a>​，​使​那​<a name="02001702500018" ll="SDBH:ילד:000000">生</a>​他​的​母亲​<a name="02001702500014" ll="SDBH:מֶמֶר:000000">忧苦</a>​。
    
\v 26 <a name="02001702600004" ll="SDBH:ענשׁ:000000">刑罚</a>​<a name="02001702600010" ll="SDBH:צַדִּיק:000000">义人</a>​实​为​<a name="02001702600014" ll="SDBH:טֹוב:000002">不善</a>​，​<a name="02001702600018">责打</a>​<a name="02001702600024" ll="SDBH:יֹשֶׁר:000000">正直</a>​的​<a name="02001702600020" ll="SDBH:נָדִיב:000001">君子</a>​也​不宜​。
    
\v 27 <a name="02001702700002" ll="SDBH:חשׂך:000001">节制</a>​<a name="02001702700004" ll="SDBH:אֵמֶר:000000">言语</a>​的​，​<a name="02001702700006;02001702700008" ll="SDBH:דַּעַת:000000">有</a>​<a name="02001702700006;02001702700008" ll="SDBH:דַּעַת:000000">见识</a>​；​<a name="02001702700014" ll="SDBH:רוּחַ:000002">性情</a>​<a name="02001702700012" ll="SDBH:יָקָר:000000">温良</a>​的​<a name="02001702700016">人</a>​，​有​<a name="02001702700018" ll="SDBH:תְּבוּנָה:000000">聪明</a>​。
    
\v 28 <a name="02001702800004" ll="SDBH:אֱוִיל:000000">愚妄人</a>​若​<a name="02001702800006" ll="SDBH:חרשׁ:001001">静默不言</a>​，​可​<a name="02001702800010" ll="SDBH:חשׁב:000007">算为</a>​<a name="02001702800008" ll="SDBH:חָכָם, קסם:000000">智慧</a>​，​<a name="02001702800012" ll="SDBH:אטם:000001">闭上</a>​<a name="02001702800014" ll="SDBH:שָׂפָה:000001">嘴唇</a>​也​可​<a name="02001702800016" ll="SDBH:בין:000000">算为</a>​<a name="02001702800016" ll="SDBH:בין:000000">聪明</a>​。
\c 18
\v 1 <a name="02001800100008" ll="SDBH:פרד:000002">孤僻</a>​<a name="02001800100008" ll="SDBH:פרד:000002">的</a>​人​只顾​自己​的​<a name="02001800100004" ll="SDBH:תַּאֲוָה:000001" tl="HOTTP2745">心愿</a>​，​他​<a name="02001800100016" ll="SDBH:גלע:000000">鄙视</a>​<a name="02001800100012">一切</a>​<a name="02001800100014" ll="SDBH:תּוּשִׁיָּה:000000">健全</a>​<a name="02001800100014" ll="SDBH:תּוּשִׁיָּה:000000">的</a>​<a name="02001800100014" ll="SDBH:תּוּשִׁיָּה:000000">知识</a>​。
    
\v 2 <a name="02001800200006" ll="SDBH:כְּסִיל:000000">愚昧人</a>​不​<a name="02001800200004" ll="SDBH:חפץ:000002">喜爱</a>​<a name="02001800200010" ll="SDBH:תְּבוּנָה:000000">聪明</a>​，​只​喜爱​<a name="02001800200018" ll="SDBH:גלה:000011">表达</a>​自己​的​<a name="02001800200020" ll="SDBH:לֵב:000001">心意</a>​。
    
