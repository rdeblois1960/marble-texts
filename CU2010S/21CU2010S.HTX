\id ECC
\c 1
\v 1 在​<a name="02100100100014" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​作​<a name="02100100100010" ll="SDBH:מֶלֶךְ:000000">王</a>​、​<a name="02100100100008" ll="SDBH:דָּוִד:000000">大卫</a>​的​<a name="02100100100006" ll="SDBH:בֵּן:000000">儿子</a>​、​<a name="02100100100004" ll="SDBH:קֹהֶלֶת:000000">传道者</a>​的​<a name="02100100100002" ll="SDBH:דָּבָר:000000">言语</a>​。
    
\v 2 <a name="02100100200008" ll="SDBH:קֹהֶלֶת:000000">传道者</a>​<a name="02100100200006" ll="SDBH:אמר:000000">说</a>​：​<a name="02100100200004" ll="SDBH:הֶבֶל:000002">虚空</a>​的​<a name="02100100200002" ll="SDBH:הֶבֶל:000002">虚空</a>​，​<a name="02100100200012" ll="SDBH:הֶבֶל:000002">虚空</a>​的​<a name="02100100200010" ll="SDBH:הֶבֶל:000002">虚空</a>​，​<a name="02100100200016">全</a>​是​<a name="02100100200018" ll="SDBH:הֶבֶל:000002">虚空</a>​。
    
\v 3 <a name="02100100300010" ll="SDBH:אָדָם:000000">人</a>​<a name="02100100300014">一切</a>​的​<a name="02100100300016" ll="SDBH:עָמָל:000000">劳碌</a>​，​就是​他​在​<a name="02100100300026" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​的​<a name="02100100300020" ll="SDBH:עמל:000000">劳碌</a>​，​有​什么​<a name="02100100300004" ll="SDBH:יִתְרֹון:000000">益处</a>​呢​？
    
\v 4 一​<a name="02100100400002" ll="SDBH:דֹּור:001000">代</a>​<a name="02100100400004" ll="SDBH:הלך:000008">过去</a>​，​一​<a name="02100100400008" ll="SDBH:דֹּור:001000">代</a>​又​<a name="02100100400010">来</a>​，​<a name="02100100400016" ll="SDBH:אֶרֶץ:000000">地</a>​却​<a name="02100100400020" ll="SDBH:עֹולָם:000000">永远</a>​<a name="02100100400022">长存</a>​。
    
\v 5 <a name="02100100500008" ll="SDBH:שֶׁמֶשׁ:000000">太阳</a>​<a name="02100100500004" ll="SDBH:זרח:000000">上升</a>​，​<a name="02100100500016" ll="SDBH:שֶׁמֶשׁ:000000">太阳</a>​<a name="02100100500012">落下</a>​，​<a name="02100100500024" ll="SDBH:שׁאף:000000">急归</a>​所​<a name="02100100500026" ll="SDBH:זרח:000000">出</a>​之​<a name="02100100500022" ll="SDBH:מָקֹום:000000">地</a>​。
    
\v 6 <a name="02100100600024" ll="SDBH:רוּחַ:000004">风</a>​往​<a name="02100100600006" ll="SDBH:דָּרֹום:000000">南</a>​<a name="02100100600002" ll="SDBH:הלך:000000">刮</a>​，​又​向​<a name="02100100600014" ll="SDBH:צָפֹון:000001">北</a>​<a name="02100100600010">转</a>​，​<a name="02100100600016;02100100600018;02100100600020" ll="SDBH:הלך:000000">不停</a>​<a name="02100100600016;02100100600018;02100100600020" ll="SDBH:הלך:000000">旋转</a>​，​<a name="02100100600030;02100100600032" ll="SDBH:סָבִיב:000000;SDBH:שׁוב:000022">绕</a>​<a name="02100100600030;02100100600032" ll="SDBH:סָבִיב:000000;SDBH:שׁוב:000022">回</a>​<a name="02100100600030;02100100600032" ll="SDBH:סָבִיב:000000;SDBH:שׁוב:000022">原路</a>​。
    
\v 7 <a name="02100100700006" ll="SDBH:נַחַל:000000">江河</a>​<a name="02100100700002">都</a>​往​<a name="02100100700014" ll="SDBH:יָם:000000">海</a>​里​<a name="02100100700008" ll="SDBH:הלך:000000">流</a>​，​<a name="02100100700020" ll="SDBH:יָם:000000">海</a>​却​<a name="02100100700022">不</a>​<a name="02100100700024" ll="SDBH:מָלֵא:000000">满</a>​；​<a name="02100100700034" ll="SDBH:נַחַל:000000">江河</a>​从​<a name="02100100700028" ll="SDBH:מָקֹום:000000">何处</a>​<a name="02100100700036" ll="SDBH:הלך:000000">流</a>​，​仍​<a name="02100100700042;02100100700046" ll="SDBH:הלך:000000;SDBH:שׁוב:000022">归回</a>​原处​。
    
\v 8 <a name="02100100800002;02100100800006" ll="SDBH:דָּבָר:000002">万事</a>​<a name="02100100800008" ll="SDBH:יָגֵעַ:000000">令</a>​<a name="02100100800008" ll="SDBH:יָגֵעַ:000000">人</a>​<a name="02100100800008" ll="SDBH:יָגֵעַ:000000">厌倦</a>​，​<a name="02100100800014">人</a>​不​<a name="02100100800012" ll="SDBH:יכל:000000">能</a>​<a name="02100100800018" ll="SDBH:דבר:001000">说尽</a>​。​<a name="02100100800024" ll="SDBH:עַיִן:000000">眼</a>​<a name="02100100800028" ll="SDBH:ראה:000000">看</a>​，​看​不​<a name="02100100800022" ll="SDBH:שׂבע:000006">饱</a>​；​<a name="02100100800036" ll="SDBH:אֹזֶן:000000">耳</a>​<a name="02100100800040">听</a>​，​听​<a name="02100100800034" ll="SDBH:מלא:000015">不足</a>​。
    
\v 9 已​<a name="02100100900006">有</a>​的​事​，​后​必​再​<a name="02100100900012">有</a>​；​已​<a name="02100100900020">行</a>​的​事​，​后​必​再​<a name="02100100900026">行</a>​。​<a name="02100100900040" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​并​<a name="02100100900030">无</a>​<a name="02100100900034" ll="SDBH:חָדָשׁ:000001">新</a>​事​。
    
\v 10 <a name="02100101000002">有</a>​一​件​<a name="02100101000004" ll="SDBH:דָּבָר:000002">事</a>​人​指​着​<a name="02100101000008" ll="SDBH:אמר:000000">说</a>​：​“​<a name="02100101000010" ll="SDBH:ראה:000000">看</a>​，​这​是​<a name="02100101000014" ll="SDBH:חָדָשׁ:000001">新</a>​的​！​”​它​在​我们​<a name="02100101000034">以前</a>​的​<a name="02100101000024" ll="SDBH:עֹולָם:000000">世代</a>​早已​<a name="02100101000028">有</a>​了​。
    
\v 11 <a name="02100101100010" ll="SDBH:רִאשֹׁון:000000">已过</a>​的​事​，​<a name="02100101100002">无</a>​人​<a name="02100101100004" ll="SDBH:זִכָּרֹון:000000">记念</a>​；​<a name="02100101100020" ll="SDBH:אַחֲרֹון:000001">将来</a>​的​事​，​<a name="02100101100044" ll="SDBH:אַחֲרֹון:000001">后来</a>​的​人​也​不​<a name="02100101100032" ll="SDBH:זִכָּרֹון:000000">记念</a>​。
    
\v 12 我​<a name="02100101200004" ll="SDBH:קֹהֶלֶת:000000">传道者</a>​在​<a name="02100101200016" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​<a name="02100101200006">作</a>​过​<a name="02100101200012" ll="SDBH:יִשְׂרָאֵל:000000">以色列</a>​的​<a name="02100101200008" ll="SDBH:מֶלֶךְ:000000">王</a>​。 
\v 13 我​用​<a name="02100101300024" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100101300004;02100101300008" ll="SDBH:לֵב:000001">专心</a>​<a name="02100101300012" ll="SDBH:דרשׁ:000007">探寻</a>​、​<a name="02100101300018" ll="SDBH:תור:000003">考察</a>​<a name="02100101300038" ll="SDBH:שָׁמַיִם:000000">天下</a>​所​<a name="02100101300032">发生</a>​的​<a name="02100101300028">一切</a>​事​：​<a name="02100101300048" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100101300046">给</a>​<a name="02100101300052;02100101300056" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​何等​<a name="02100101300044" ll="SDBH:רַע:000004">沉重</a>​的​<a name="02100101300042" ll="SDBH:עִנְיָן:000000">担子</a>​，​使​他们​在​其中​<a name="02100101300060" ll="SDBH:ענה:002000">劳苦</a>​！ 
\v 14 我​<a name="02100101400002" ll="SDBH:ראה:000000">见</a>​<a name="02100101400020" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100101400014">发生</a>​的​<a name="02100101400006">一切</a>​<a name="02100101400010" ll="SDBH:מַעֲשֶׂה:000000">事</a>​，​看​哪​，​<a name="02100101400028">全</a>​是​<a name="02100101400030" ll="SDBH:הֶבֶל:000002">虚空</a>​，​全​是​<a name="02100101400034;02100101400036" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕风</a>​。
    
\v 15 <a name="02100101500002" ll="SDBH:עות:000000">弯曲</a>​的​，​不​<a name="02100101500006" ll="SDBH:יכל:000000">能</a>​<a name="02100101500010" ll="SDBH:תקן:000000">变直</a>​；​<a name="02100101500014" ll="SDBH:חֶסְרֹון:000000">缺乏</a>​<a name="02100101500014" ll="SDBH:חֶסְרֹון:000000">的</a>​，​<a name="02100101500018;02100101500022" ll="SDBH:יכל:000000;SDBH:מנה:000000">不计其数</a>​。
    
\v 16 我​<a name="02100101600008" ll="SDBH:לֵב:000001">心</a>​里​<a name="02100101600002" ll="SDBH:דבר:001000">说</a>​：​“​看​哪​，​我​<a name="02100101600018;02100101600022" ll="SDBH:גדל:000010">大</a>​有​<a name="02100101600024" ll="SDBH:חָכְמָה:000000">智慧</a>​，​胜过​在​我​<a name="02100101600036">以前</a>​<a name="02100101600028">所有</a>​统治​<a name="02100101600040" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​的​人​；​我​的​<a name="02100101600044" ll="SDBH:לֵב:000001">心</a>​也​<a name="02100101600048">多</a>​<a name="02100101600046" ll="SDBH:ראה:000000">经历</a>​<a name="02100101600050" ll="SDBH:חָכְמָה:000000">智慧</a>​和​<a name="02100101600054" ll="SDBH:דַּעַת:000000">知识</a>​的​事​。​” 
\v 17 我​<a name="02100101700004;02100101700006" ll="SDBH:לֵב:000001">专心</a>​想要​<a name="02100101700010">明白</a>​<a name="02100101700012" ll="SDBH:חָכְמָה:000000">智慧</a>​，​想要​<a name="02100101700016" ll="SDBH:דַּעַת:000000">明白</a>​<a name="02100101700018" ll="SDBH:הֹולֵלֹות:000000">狂妄</a>​与​<a name="02100101700022">愚昧</a>​，​方​<a name="02100101700024">知</a>​这​也​是​<a name="02100101700034;02100101700036" ll="SDBH:רַעְיֹון:000001;SDBH:רוּחַ:000004">捕风</a>​。
    
\v 18 因为​<a name="02100101800006" ll="SDBH:רֹב:000001">多</a>​有​<a name="02100101800008" ll="SDBH:חָכְמָה:000000">智慧</a>​，​就​<a name="02100101800010" ll="SDBH:רֹב:000001">多</a>​有​<a name="02100101800012" ll="SDBH:כַּעַס:000000">愁烦</a>​；​<a name="02100101800016">增加</a>​<a name="02100101800018" ll="SDBH:דַּעַת:000000">知识</a>​，​就​<a name="02100101800020">增加</a>​<a name="02100101800022" ll="SDBH:מַכְאֹוב:000001">忧伤</a>​。
\c 2
\v 1 我​<a name="02100200100008" ll="SDBH:לֵב:000001">心</a>​里​<a name="02100200100002" ll="SDBH:אמר:000000">说</a>​：​“​<a name="02100200100010" ll="SDBH:הלך:000004">来</a>​吧​，​让​我​用​<a name="02100200100018" ll="SDBH:שִׂמְחָה:000000">喜乐</a>​<a name="02100200100014" ll="SDBH:נסה:000000">试试</a>​你​，​使​你​<a name="02100200100022;02100200100026" ll="SDBH:טֹוב:000002;SDBH:ראה:000000">享福</a>​！​”​看​哪​，​这​也​是​<a name="02100200100036" ll="SDBH:הֶבֶל:000002">虚空</a>​。 
\v 2 论​<a name="02100200200004" ll="SDBH:שְׂחֹוק:000000">嬉笑</a>​，​我​<a name="02100200200006" ll="SDBH:אמר:000000">说</a>​：​“​这​是​<a name="02100200200008" ll="SDBH:הלל:002000">狂妄</a>​。​”​论​<a name="02100200200014" ll="SDBH:שִׂמְחָה:000000">享乐</a>​，​“​这​有​什么​<a name="02100200200020">用</a>​呢​？​” 
\v 3 我​<a name="02100200300024" ll="SDBH:לֵב:000001">心</a>​以​<a name="02100200300032" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100200300026">引导</a>​我​，​我​<a name="02100200300006" ll="SDBH:לֵב:000001">心</a>​<a name="02100200300006" ll="SDBH:לֵב:000001">里</a>​<a name="02100200300002" ll="SDBH:תור:000003">探究</a>​，​如何​用​<a name="02100200300016" ll="SDBH:יַיִן:000000">酒</a>​<a name="02100200300010" ll="SDBH:משׁך:000007">使</a>​<a name="02100200300020" ll="SDBH:בָּשָׂר:000001">身体</a>​<a name="02100200300010" ll="SDBH:משׁך:000007">舒畅</a>​，​如何​<a name="02100200300038" ll="SDBH:אחז:000004">抓住</a>​<a name="02100200300042" ll="SDBH:סִכְלוּת:000000">愚昧</a>​，​直​等​我​<a name="02100200300048" ll="SDBH:ראה:000000">看明</a>​<a name="02100200300058;02100200300062" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​在​<a name="02100200300072" ll="SDBH:שָׁמַיִם:000000">天下</a>​<a name="02100200300074;02100200300076" ll="SDBH:יֹום:000004;SDBH:מִסְפָּר:000003">短暂</a>​<a name="02100200300078" ll="SDBH:חַיִּים:000000">一生</a>​中​，​当​<a name="02100200300066">行</a>​何事​为​<a name="02100200300054" ll="SDBH:טֹוב:000002">美</a>​。 
\v 4 我​<a name="02100200400002;02100200400004" ll="SDBH:גדל:000010;SDBH:מַעֲשֶׂה:000003">大兴土木</a>​，​为​自己​<a name="02100200400006" ll="SDBH:בנה:000000">建造</a>​<a name="02100200400010" ll="SDBH:בַּיִת:000000">房屋</a>​，​<a name="02100200400012" ll="SDBH:נטע:000000">栽</a>​<a name="02100200400016" ll="SDBH:כֶּרֶם:000000">葡萄园</a>​， 
\v 5 <a name="02100200500002">修造</a>​<a name="02100200500006" ll="SDBH:גַּנָּה:000000">庭园</a>​和​<a name="02100200500010" ll="SDBH:פַּרְדֵּס:000000">公园</a>​，​在​其​中​<a name="02100200500014" ll="SDBH:נטע:000000">栽种</a>​<a name="02100200500020">各样</a>​<a name="02100200500018;02100200500022" ll="SDBH:עֵץ:000000;SDBH:פְּרִי:000000">果树</a>​， 
\v 6 <a name="02100200600002">挖造</a>​<a name="02100200600006;02100200600008" ll="SDBH:בְּרֵכָה:000000;SDBH:מַיִם:000000">水池</a>​，​用以​<a name="02100200600012" ll="SDBH:שׁקה:000001">灌溉</a>​<a name="02100200600016" ll="SDBH:יַעַר:000001">林</a>​中​的​<a name="02100200600018" ll="SDBH:צמח:000000">幼</a>​<a name="02100200600020" ll="SDBH:עֵץ:000000">树</a>​。 
\v 7 我​<a name="02100200700002" ll="SDBH:קנה:000000">买</a>​了​<a name="02100200700004;02100200700008" ll="SDBH:עֶבֶד:000000;SDBH:שִׁפְחָה:000000">仆婢</a>​，​也​<a name="02100200700016">有</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">生</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">在</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">家</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">中</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">的</a>​仆婢​；​又​<a name="02100200700032">有</a>​<a name="02100200700030">许多</a>​<a name="02100200700024" ll="SDBH:בָּקָר:000000">牛群</a>​<a name="02100200700028" ll="SDBH:צֹאן:000000">羊群</a>​，​胜过​我​<a name="02100200700046">以前</a>​<a name="02100200700038">所有</a>​在​<a name="02100200700050" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​的​人​。 
\v 8 我​为​自己​<a name="02100200800002" ll="SDBH:כנס:000000">积蓄</a>​<a name="02100200800008;02100200800012" ll="SDBH:זָהָב:000000;SDBH:כֶּסֶף:000000">金银</a>​，​搜集​各​<a name="02100200800018" ll="SDBH:מֶלֶךְ:000000">君王</a>​、​各​<a name="02100200800024" ll="SDBH:מְדִינָה:000000">省份</a>​的​<a name="02100200800016" ll="SDBH:סְגֻלָּה:000000">财宝</a>​；​又​为​自己​<a name="02100200800026">得</a>​<a name="02100200800030;02100200800034" ll="SDBH:שׁיר:000000">男女</a>​<a name="02100200800030;02100200800034" ll="SDBH:שׁיר:000000">歌手</a>​和​<a name="02100200800040;02100200800044" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​所​<a name="02100200800038" ll="SDBH:תַּעֲנוּג:000000">喜爱</a>​的​物​，​以及​一个又一个​的​<a name="02100200800046;02100200800050" ll="SDBH:שִׁדָּה:000000;SDBH:שִׁדָּה:001000" tl="HOTTP2858">妃嫔</a>​。
    
\v 9 这样​，​我​就​日渐​<a name="02100200900004" ll="SDBH:גדל:000006">昌盛</a>​，​<a name="02100200900008">胜过</a>​我​<a name="02100200900020">以前</a>​<a name="02100200900012">所有</a>​在​<a name="02100200900024" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​的​人​。​我​的​<a name="02100200900028" ll="SDBH:חָכְמָה:000000">智慧</a>​仍然​<a name="02100200900030">存留</a>​。 
\v 10 <a name="02100201000004">凡</a>​我​<a name="02100201000010" ll="SDBH:עַיִן:000000">眼</a>​所​<a name="02100201000008" ll="SDBH:שׁאל:000000">求</a>​的​，​我​没有​<a name="02100201000014" ll="SDBH:אצל:000001">克制</a>​它​；​我​<a name="02100201000024" ll="SDBH:לֵב:000001">心</a>​<a name="02100201000030" ll="SDBH:שִׂמְחָה:000000">所</a>​<a name="02100201000030" ll="SDBH:שִׂמְחָה:000000">乐</a>​<a name="02100201000030" ll="SDBH:שִׂמְחָה:000000">的</a>​，​我​没有​<a name="02100201000020" ll="SDBH:מנע:000001">不</a>​<a name="02100201000020" ll="SDBH:מנע:000001">享受</a>​。​因​我​的​<a name="02100201000034" ll="SDBH:לֵב:000001">心</a>​要​为​<a name="02100201000040">一切</a>​<a name="02100201000040">的</a>​<a name="02100201000042" ll="SDBH:עָמָל:000000">劳碌</a>​<a name="02100201000036" ll="SDBH:שָׂמֵחַ:000000">快乐</a>​，​这​<a name="02100201000048">是</a>​我​从​<a name="02100201000054">一切</a>​<a name="02100201000056" ll="SDBH:עָמָל:000000">劳碌</a>​中​所​得​的​<a name="02100201000050" ll="SDBH:חֵלֶק:000004">报偿</a>​。 
\v 11 后来​，​我​<a name="02100201100004" ll="SDBH:פנה:000002">回顾</a>​我​<a name="02100201100018">手</a>​所​<a name="02100201100016">经营</a>​的​<a name="02100201100010">一切</a>​和​我​<a name="02100201100026;02100201100030" ll="SDBH:עָמָל:000000;SDBH:עמל:000000">劳碌</a>​所​<a name="02100201100034">做</a>​的​工​。​看​哪​，​<a name="02100201100042">全</a>​是​<a name="02100201100044" ll="SDBH:הֶבֶל:000002">虚空</a>​，​全​是​<a name="02100201100048;02100201100050" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕风</a>​；​在​<a name="02100201100062" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100201100054">毫无</a>​<a name="02100201100056" ll="SDBH:יִתְרֹון:000000">益处</a>​。
    
\v 12 我​<a name="02100201200004" ll="SDBH:פנה:000002">转</a>​而​<a name="02100201200010" ll="SDBH:ראה:000000">回顾</a>​<a name="02100201200012" ll="SDBH:חָכְמָה:000000">智慧</a>​、​<a name="02100201200016" ll="SDBH:הֹולֵלֹות:000000">狂妄</a>​和​<a name="02100201200020" ll="SDBH:סִכְלוּת:000000">愚昧</a>​。​在​<a name="02100201200038" ll="SDBH:מֶלֶךְ:000000" tl="HOTTP2860">王</a>​以后​<a name="02100201200032">来</a>​的​<a name="02100201200028" ll="SDBH:אָדָם:000000" tl="HOTTP2859">人</a>​又​如何​呢​？​不过​做​<a name="02100201200044">先前</a>​所​<a name="02100201200046">做</a>​的​就​是​了​。 
\v 13 于是​我​<a name="02100201300004" ll="SDBH:ראה:000000">看出</a>​<a name="02100201300018" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100201300012" ll="SDBH:יִתְרֹון:000000">胜过</a>​<a name="02100201300024" ll="SDBH:סִכְלוּת:000000">愚昧</a>​，​如同​<a name="02100201300032" ll="SDBH:אֹור:000000">光明</a>​<a name="02100201300028" ll="SDBH:יִתְרֹון:000000">胜过</a>​<a name="02100201300038" ll="SDBH:חֹשֶׁךְ:000000">黑暗</a>​。 
\v 14 <a name="02100201400004" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​的​<a name="02100201400006" ll="SDBH:עַיִן:000000">眼目</a>​光明​，​<a name="02100201400016" ll="SDBH:כְּסִיל:000000">愚昧人</a>​却​在​<a name="02100201400022" ll="SDBH:חֹשֶׁךְ:000000">黑暗</a>​里​<a name="02100201400024" ll="SDBH:הלך:000004">行</a>​。​但​我​<a name="02100201400028">知道</a>​他们​<a name="02100201400044">都</a>​有​<a name="02100201400038" ll="SDBH:אֶחָד:000000">相同</a>​的​<a name="02100201400036" ll="SDBH:מִקְרֶה:000001">遭遇</a>​。 
\v 15 我​<a name="02100201500010" ll="SDBH:לֵב:000001">心</a>​里​就​<a name="02100201500004" ll="SDBH:אמר:000000">说</a>​：​“​<a name="02100201500018" ll="SDBH:כְּסִיל:000000">愚昧人</a>​<a name="02100201500014" ll="SDBH:מִקְרֶה:000001">所</a>​<a name="02100201500014" ll="SDBH:מִקְרֶה:000001">遇见</a>​<a name="02100201500014" ll="SDBH:מִקְרֶה:000001">的</a>​，​我​也​一样​<a name="02100201500024" ll="SDBH:קרה:000000">遇见</a>​，​那么​我​何必​更​<a name="02100201500030" ll="SDBH:חכם:000000">有</a>​<a name="02100201500030" ll="SDBH:חכם:000000">智慧</a>​呢​？​”​我​<a name="02100201500044" ll="SDBH:לֵב:000001">心</a>​<a name="02100201500044" ll="SDBH:לֵב:000001">里</a>​<a name="02100201500040" ll="SDBH:דבר:001000">说</a>​：​“​这​也​是​<a name="02100201500052" ll="SDBH:הֶבֶל:000002">虚空</a>​。​” 
\v 16 <a name="02100201600012" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​和​<a name="02100201600018" ll="SDBH:כְּסִיל:000000">愚昧人</a>​一样​，​<a name="02100201600004">不</a>​会​<a name="02100201600022" ll="SDBH:עֹולָם:000000">长久</a>​被​人​<a name="02100201600006" ll="SDBH:זִכָּרֹון:000000">记念</a>​，​因为​<a name="02100201600032;02100201600036" ll="SDBH:יֹום:000005">日后</a>​<a name="02100201600040">都</a>​被​<a name="02100201600042" ll="SDBH:שׁכח:000000">遗忘</a>​。​可叹​！​<a name="02100201600052" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​和​<a name="02100201600058" ll="SDBH:כְּסִיל:000000">愚昧人</a>​都​一样​会​<a name="02100201600048" ll="SDBH:מות:000000">死亡</a>​。 
\v 17 于是​我​<a name="02100201700004" ll="SDBH:שׂנא:000000">恨恶</a>​<a name="02100201700010" ll="SDBH:חַיִּים:000000">生命</a>​，​因为​在​<a name="02100201700030" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100201700024">发生</a>​的​<a name="02100201700020" ll="SDBH:מַעֲשֶׂה:000000">事</a>​我​都​以为​<a name="02100201700014" ll="SDBH:רַע:000004">烦恼</a>​，​<a name="02100201700036">全</a>​是​<a name="02100201700038" ll="SDBH:הֶבֶל:000002">虚空</a>​，​全​是​<a name="02100201700042;02100201700044" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕风</a>​。
    
\v 18 我​<a name="02100201800004" ll="SDBH:שׂנא:000000">恨恶</a>​<a name="02100201800010">一切</a>​的​<a name="02100201800012" ll="SDBH:עָמָל:000000">劳碌</a>​，​就是​我​在​<a name="02100201800024" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100201800018" ll="SDBH:עָמֵל:000000">所</a>​<a name="02100201800018" ll="SDBH:עָמֵל:000000">劳碌</a>​<a name="02100201800018" ll="SDBH:עָמֵל:000000">的</a>​，​因为​我​所​得​的​必须​<a name="02100201800028" ll="SDBH:נוח:000001">留给</a>​我​<a name="02100201800038">以后</a>​的​<a name="02100201800034" ll="SDBH:אָדָם:000000">人</a>​。 
\v 19 那​人​<a name="02100201900012">是</a>​<a name="02100201900010" ll="SDBH:חָכָם, קסם:000000">智慧</a>​是​<a name="02100201900016" ll="SDBH:סָכָל:000000">愚昧</a>​，​谁​能​<a name="02100201900006">知道</a>​呢​？​他​竟​要​<a name="02100201900020" ll="SDBH:שׁלט:000000">掌管</a>​我​在​<a name="02100201900042" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​用​<a name="02100201900036" ll="SDBH:חכם:000000">智慧</a>​<a name="02100201900026;02100201900030" ll="SDBH:עָמָל:000000;SDBH:עמל:000000">劳碌</a>​所​得​的​。​这​也​是​<a name="02100201900048" ll="SDBH:הֶבֶל:000002">虚空</a>​。 
\v 20 我​<a name="02100202000004">转想</a>​我​在​<a name="02100202000032" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100202000022;02100202000026" ll="SDBH:עָמָל:000000;SDBH:עמל:000000">劳碌</a>​的​<a name="02100202000018">一切</a>​工作​，​<a name="02100202000014" ll="SDBH:לֵב:000001">心</a>​就​<a name="02100202000010" ll="SDBH:יאשׁ:000001">绝望</a>​。 
\v 21 因为​<a name="02100202100004">有</a>​<a name="02100202100006" ll="SDBH:אָדָם:000000">人</a>​用​<a name="02100202100014" ll="SDBH:חָכְמָה:000000">智慧</a>​、​<a name="02100202100020" ll="SDBH:דַּעַת:000000">知识</a>​、​<a name="02100202100026" ll="SDBH:כִּשְׁרֹון:000000">灵巧</a>​<a name="02100202100010" ll="SDBH:עָמָל:000000">劳碌</a>​<a name="02100202100010" ll="SDBH:עָמָל:000000">工作</a>​，​所​得来​的​却​要​<a name="02100202100042">遗留</a>​<a name="02100202100042">给</a>​未曾​<a name="02100202100038" ll="SDBH:עמל:000000">劳碌</a>​的​<a name="02100202100032" ll="SDBH:אָדָם:000000">人</a>​作​<a name="02100202100044" ll="SDBH:חֵלֶק:000001">产业</a>​。​这​也​是​<a name="02100202100050" ll="SDBH:הֶבֶל:000002">虚空</a>​，​<a name="02100202100056" ll="SDBH:רַב:000002">大大</a>​<a name="02100202100054" ll="SDBH:רָעָה:000000">不幸</a>​。 
\v 22 <a name="02100202200012" ll="SDBH:אָדָם:000000">人</a>​<a name="02100202200016">一切</a>​的​<a name="02100202200018" ll="SDBH:עָמָל:000000">劳碌</a>​<a name="02100202200024;02100202200026" ll="SDBH:לֵב:000001;SDBH:רַעְיֹון:000001">操心</a>​，​就是​他​在​<a name="02100202200038" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100202200032" ll="SDBH:עָמֵל:000000">劳碌</a>​的​，​又​<a name="02100202200006" ll="SDBH:הוה:000006">得着</a>​了​什么​呢​？ 
\v 23 他​<a name="02100202300004;02100202300006" ll="SDBH:יֹום:000004">日日</a>​<a name="02100202300008" ll="SDBH:מַכְאֹוב:000001">忧虑</a>​，​他​的​<a name="02100202300014" ll="SDBH:עִנְיָן:000000">劳苦</a>​成为​<a name="02100202300012" ll="SDBH:כַּעַס:000000">愁烦</a>​，​连​<a name="02100202300022" ll="SDBH:לַיְלָה:000000">夜间</a>​<a name="02100202300028" ll="SDBH:לֵב:000001">心</a>​也​不​得​<a name="02100202300026" ll="SDBH:שׁכב:000005">休息</a>​。​这​也​是​<a name="02100202300034" ll="SDBH:הֶבֶל:000002">虚空</a>​。
    
\v 24 难道​一​个​<a name="02100202400010" ll="SDBH:אָדָם:000000">人</a>​有​<a name="02100202400014" ll="SDBH:אכל:000000" tl="HOTTP2863">吃</a>​有​<a name="02100202400018" ll="SDBH:שׁתה:000000">喝</a>​，​且​在​<a name="02100202400032" ll="SDBH:עָמָל:000000">劳碌</a>​中​<a name="02100202400022;02100202400026;02100202400028" ll="SDBH:טֹוב:000002;SDBH:נֶפֶשׁ:000001;SDBH:ראה:000010">享福</a>​，​<a name="02100202400002">不</a>​<a name="02100202400002">是</a>​<a name="02100202400004" ll="SDBH:טֹוב:000002" tl="HOTTP2863">福气</a>​吗​？​我​<a name="02100202400038" ll="SDBH:ראה:000000">看</a>​这​也​是​出于​<a name="02100202400050" ll="SDBH:אֱלֹהִים:000002">上帝</a>​的​<a name="02100202400046">手</a>​。 
\v 25 论到​<a name="02100202500006" ll="SDBH:אכל:000000">吃用</a>​、​<a name="02100202500012" ll="SDBH:חושׁ:001001" tl="HOTTP2864">享福</a>​，​谁​能​<a name="02100202500014">胜过</a>​我​呢​？ 
\v 26 上帝​<a name="02100202600010;02100202600014" ll="SDBH:טֹוב:000001">喜爱</a>​<a name="02100202600006" ll="SDBH:אָדָם:000000">谁</a>​，​就​<a name="02100202600016">给</a>​谁​<a name="02100202600018" ll="SDBH:חָכְמָה:000000">智慧</a>​、​<a name="02100202600022" ll="SDBH:דַּעַת:000000">知识</a>​和​<a name="02100202600026" ll="SDBH:שִׂמְחָה:000000">喜乐</a>​；​惟有​<a name="02100202600034" ll="SDBH:חטא:001005">罪人</a>​，​上帝​<a name="02100202600036;02100202600038" ll="SDBH:עִנְיָן:000000">使</a>​他​<a name="02100202600036;02100202600038" ll="SDBH:עִנְיָן:000000">劳苦</a>​，​将​他​所​<a name="02100202600042" ll="SDBH:אסף:000001">储藏</a>​、​所​<a name="02100202600048" ll="SDBH:כנס:000000">堆积</a>​的​<a name="02100202600052">归给</a>​<a name="02100202600064" ll="SDBH:אֱלֹהִים:000002">上帝</a>​所​<a name="02100202600056;02100202600060" ll="SDBH:טֹוב:000001">喜爱</a>​的​人​。​这​也​是​<a name="02100202600070" ll="SDBH:הֶבֶל:000002">虚空</a>​，​也​是​<a name="02100202600074;02100202600076" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕风</a>​。
\c 3
\v 1 <a name="02100300100006">凡事</a>​都​有​<a name="02100300100008" ll="SDBH:זְמָן:000000">定期</a>​，​<a name="02100300100024" ll="SDBH:שָׁמַיִם:000000">天下</a>​<a name="02100300100016">每</a>​<a name="02100300100016">一</a>​<a name="02100300100018" ll="SDBH:חֵפֶץ:000003">事务</a>​都​有​<a name="02100300100012" ll="SDBH:עֵת:000000">定时</a>​。
    
\v 2 <a name="02100300200006" ll="SDBH:ילד:000000">生</a>​有​<a name="02100300200002" ll="SDBH:עֵת:000000">时</a>​，​<a name="02100300200014" ll="SDBH:מות:000000">死</a>​有​<a name="02100300200010" ll="SDBH:עֵת:000000">时</a>​；​<a name="02100300200020" ll="SDBH:נטע:000000">栽种</a>​有​<a name="02100300200016" ll="SDBH:עֵת:000000">时</a>​，​<a name="02100300200028" ll="SDBH:עקר:000000">拔出</a>​有​<a name="02100300200024" ll="SDBH:עֵת:000000">时</a>​；
    
\v 3 <a name="02100300300006" ll="SDBH:הרג:000000">杀戮</a>​有​<a name="02100300300002" ll="SDBH:עֵת:000000">时</a>​，​<a name="02100300300014" ll="SDBH:רפא:000000">医治</a>​有​<a name="02100300300010" ll="SDBH:עֵת:000000">时</a>​；​<a name="02100300300020" ll="SDBH:פרץ:000002">拆毁</a>​有​<a name="02100300300016" ll="SDBH:עֵת:000000">时</a>​，​<a name="02100300300028" ll="SDBH:בנה:000000">建造</a>​有​<a name="02100300300024" ll="SDBH:עֵת:000000">时</a>​；
    
\v 4 <a name="02100300400006" ll="SDBH:בכה:000000">哭</a>​有​<a name="02100300400002" ll="SDBH:עֵת:000000">时</a>​，​<a name="02100300400014" ll="SDBH:שׂחק:000000">笑</a>​有​<a name="02100300400010" ll="SDBH:עֵת:000000">时</a>​；​<a name="02100300400018" ll="SDBH:ספד:000000">哀恸</a>​有​<a name="02100300400016" ll="SDBH:עֵת:000000">时</a>​，​<a name="02100300400024" ll="SDBH:רקד:000000">跳舞</a>​有​<a name="02100300400022" ll="SDBH:עֵת:000000">时</a>​；
    
