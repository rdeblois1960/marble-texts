\v 4 Y <a name="01600600400004" ll="SDBH:שׁלח:000003">enviaron</a> <a name="01600600400006">a</a> <a name="01600600400006">mí</a> <a name="01600600400008;01600600400012;01600600400014;01600600400016" ll="SDBH:דָּבָר:000000;SDBH:זֶה:000000">con</a> <a name="01600600400008;01600600400012;01600600400014;01600600400016" ll="SDBH:דָּבָר:000000;SDBH:זֶה:000000">el</a> <a name="01600600400008;01600600400012;01600600400014;01600600400016" ll="SDBH:דָּבָר:000000;SDBH:זֶה:000000">mismo</a> <a name="01600600400008;01600600400012;01600600400014;01600600400016" ll="SDBH:דָּבָר:000000;SDBH:זֶה:000000">asunto</a> hasta <a name="01600600400018" ll="SDBH:אַרְבַּע:000000">cuatro</a> <a name="01600600400020">veces</a>, y <a name="01600600400024" ll="SDBH:שׁוב:000049">yo</a> <a name="01600600400026">les</a> <a name="01600600400024" ll="SDBH:שׁוב:000049">respondí</a> <a name="01600600400028;01600600400032;01600600400034;01600600400036" ll="SDBH:דָּבָר:000000;SDBH:זֶה:000000">de</a> <a name="01600600400028;01600600400032;01600600400034;01600600400036" ll="SDBH:דָּבָר:000000;SDBH:זֶה:000000">la</a> <a name="01600600400028;01600600400032;01600600400034;01600600400036" ll="SDBH:דָּבָר:000000;SDBH:זֶה:000000">misma</a> <a name="01600600400028;01600600400032;01600600400034;01600600400036" ll="SDBH:דָּבָר:000000;SDBH:זֶה:000000">manera</a>. 
