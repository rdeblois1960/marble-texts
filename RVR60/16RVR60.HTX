\v 14 <a name="01600601400002" ll="SDBH:זכר:000000">Acuérdate</a>, <a name="01600601400004" ll="SDBH:אֱלֹהִים:000001">Dios</a> <a name="01600601400004" ll="SDBH:אֱלֹהִים:000001">mío</a>, de <a name="01600601400008" ll="SDBH:טֹובִיָּה:000001">Tobías</a> y de <a name="01600601400014" ll="SDBH:סַנְבַלַּט:000000" tl="HOTTP1755">Sanbalat</a>, <a name="01600601400016">conforme</a> a <a name="01600601400020" ll="SDBH:אֵלֶּה:000000">estas</a> cosas que <a name="01600601400018" ll="SDBH:מַעֲשֶׂה:000001">hicieron</a>; <a name="01600601400024" ll="SDBH:גַּם:000000">también</a> acuérdate de <a name="01600601400028" ll="SDBH:נֹועַדְיָה:000001">Noadías</a> <a name="01600601400032" ll="SDBH:נְבִיאָה:000000">profetisa</a>, y de los <a name="01600601400038" ll="SDBH:יֶתֶר:000000">otros</a> <a name="01600601400042" ll="SDBH:נָבִיא:000000">profetas</a> <a name="01600601400044">que</a> <a name="01600601400046">procuraban</a> <a name="01600601400048;01600601400050" ll="SDBH:ירא:000002">infundirme</a> <a name="01600601400048;01600601400050" ll="SDBH:ירא:000002">miedo</a>.
    
\v 15 <a name="01600601500004" ll="SDBH:שׁלם:000001">Fue</a> <a name="01600601500004" ll="SDBH:שׁלם:000001">terminado</a>, pues, el <a name="01600601500008" ll="SDBH:חֹומָה:000000">muro</a>, el <a name="01600601500012;01600601500016" ll="SDBH:חָמֵשׁ:000000;SDBH:עֶשֶׂר:000001">veinticinco</a> del <a name="01600601500020" ll="SDBH:אֱלוּל:000000">mes</a> <a name="01600601500020" ll="SDBH:אֱלוּל:000000">de</a> <a name="01600601500020" ll="SDBH:אֱלוּל:000000">Elul</a>, en <a name="01600601500024">cincuenta</a> y <a name="01600601500028" ll="SDBH:שְׁנַיִם:000000">dos</a> <a name="01600601500030" ll="SDBH:יֹום:000001">días</a>. 
\v 16 Y <a name="01600601600006;01600601600008">cuando</a> lo <a name="01600601600010">oyeron</a> <a name="01600601600012">todos</a> <a name="01600601600014" ll="SDBH:איב:000001">nuestros</a> <a name="01600601600014" ll="SDBH:איב:000001">enemigos</a>, <a name="01600601600018" ll="SDBH:ירא:000000" tl="HOTTP1756">temieron</a> <a name="01600601600020">todas</a> las <a name="01600601600024" ll="SDBH:גֹּוי:000000">naciones</a> <a name="01600601600026">que</a> estaban <a name="01600601600028" ll="SDBH:סָבִיב:000000">alrededor</a> <a name="01600601600028" ll="SDBH:סָבִיב:000000">de</a> <a name="01600601600028" ll="SDBH:סָבִיב:000000">nosotros</a>, y <a name="01600601600032;01600601600034;01600601600038" ll="SDBH:מְאֹד:000001;SDBH:נפל:000035;SDBH:עַיִן:000000" tl="HOTTP1757">se</a> <a name="01600601600032;01600601600034;01600601600038" ll="SDBH:מְאֹד:000001;SDBH:נפל:000035;SDBH:עַיִן:000000" tl="HOTTP1757">sintieron</a> <a name="01600601600032;01600601600034;01600601600038" ll="SDBH:מְאֹד:000001;SDBH:נפל:000035;SDBH:עַיִן:000000" tl="HOTTP1757">humillados</a>, y <a name="01600601600042">conocieron</a> <a name="01600601600044">que</a> por <a name="01600601600050" ll="SDBH:אֱלֹהִים:000001">nuestro</a> <a name="01600601600050" ll="SDBH:אֱלֹהִים:000001">Dios</a> <a name="01600601600052">había</a> <a name="01600601600052">sido</a> <a name="01600601600052">hecha</a> <a name="01600601600060" ll="SDBH:זֶה:000000;SDBH:זֹה:000000">esta</a> <a name="01600601600056" ll="SDBH:מְלָאכָה:000000">obra</a>.
    
