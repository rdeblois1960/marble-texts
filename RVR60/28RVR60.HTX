\v 3 Y <a name="02800300300006">le</a> <a name="02800300300004" ll="SDBH:אמר:000000">dije</a>: Tú <a name="02800300300012">serás</a> mía durante <a name="02800300300010" ll="SDBH:רַב:000001">muchos</a> <a name="02800300300008" ll="SDBH:יֹום:000002">días</a>; <a name="02800300300016" ll="SDBH:לֹא:000000">no</a> <a name="02800300300018" ll="SDBH:זנה:000000">fornicarás</a>, <a name="02800300300022" ll="SDBH:לֹא:000000">ni</a> <a name="02800300300024">tomarás</a> otro <a name="02800300300028">varón</a>; lo <a name="02800300300032" ll="SDBH:גַּם:000000">mismo</a> haré <a name="02800300300034">yo</a> <a name="02800300300036">contigo</a>. 
\v 4 <a name="02800300400002">Porque</a> <a name="02800300400006" ll="SDBH:רַב:000001">muchos</a> <a name="02800300400004" ll="SDBH:יֹום:000002">días</a> <a name="02800300400008">estarán</a> los <a name="02800300400010" ll="SDBH:בֵּן:000000">hijos</a> de <a name="02800300400012" ll="SDBH:יִשְׂרָאֵל:000000">Israel</a> <a name="02800300400014">sin</a> <a name="02800300400016" ll="SDBH:מֶלֶךְ:000000">rey</a>, <a name="02800300400020">sin</a> <a name="02800300400022" ll="SDBH:שַׂר:000000">príncipe</a>, <a name="02800300400026">sin</a> <a name="02800300400028" ll="SDBH:זֶבַח:000000">sacrificio</a>, <a name="02800300400032">sin</a> <a name="02800300400034" ll="SDBH:מַצֵּבָה:001001">estatua</a>, <a name="02800300400038">sin</a> <a name="02800300400040" ll="SDBH:אֵפֹוד:000001">efod</a> y sin <a name="02800300400044" ll="SDBH:תְּרָפִים:000000">terafines</a>. 
\v 5 <a name="02800300500002" ll="SDBH:אַחַר:002001">Después</a> <a name="02800300500004" ll="SDBH:שׁוב:000026">volverán</a> los <a name="02800300500006" ll="SDBH:בֵּן:000000">hijos</a> de <a name="02800300500008" ll="SDBH:יִשְׂרָאֵל:000000">Israel</a>, y <a name="02800300500012" ll="SDBH:בקשׁ:000003">buscarán</a> a <a name="02800300500016" ll="SDBH:יהוה:000000">Jehová</a> <a name="02800300500018" ll="SDBH:אֱלֹהִים:000001">su</a> <a name="02800300500018" ll="SDBH:אֱלֹהִים:000001">Dios</a>, y a <a name="02800300500024" ll="SDBH:דָּוִד:000000">David</a> <a name="02800300500026" ll="SDBH:מֶלֶךְ:000000">su</a> <a name="02800300500026" ll="SDBH:מֶלֶךְ:000000">rey</a>; y <a name="02800300500030" ll="SDBH:פחד:000000">temerán</a> <a name="02800300500032">a</a> <a name="02800300500034" ll="SDBH:יהוה:000000">Jehová</a> y <a name="02800300500038">a</a> <a name="02800300500040" ll="SDBH:טוּב:000000">su</a> <a name="02800300500040" ll="SDBH:טוּב:000000">bondad</a> en el <a name="02800300500044" ll="SDBH:אַחֲרִית:000001">fin</a> de los <a name="02800300500048" ll="SDBH:יֹום:000006">días</a>.
\c 4
\v 1 <a name="02800400100002">Oíd</a> <a name="02800400100004" ll="SDBH:דָּבָר:000000">palabra</a> de <a name="02800400100006" ll="SDBH:יהוה:000000">Jehová</a>, <a name="02800400100008" ll="SDBH:בֵּן:000000">hijos</a> de <a name="02800400100010" ll="SDBH:יִשְׂרָאֵל:000000">Israel</a>, porque <a name="02800400100018" ll="SDBH:יהוה:000000">Jehová</a> <a name="02800400100014" ll="SDBH:רִיב:000000">contiende</a> <a name="02800400100020">con</a> los <a name="02800400100022">moradores</a> de la <a name="02800400100026" ll="SDBH:אֶרֶץ:000000">tierra</a>; porque <a name="02800400100030">no</a> hay <a name="02800400100032" ll="SDBH:אֱמֶת:000000">verdad</a>, <a name="02800400100036">ni</a> <a name="02800400100038" ll="SDBH:חֶסֶד:000000">misericordia</a>, <a name="02800400100042">ni</a> <a name="02800400100044" ll="SDBH:דַּעַת:000000">conocimiento</a> de <a name="02800400100046" ll="SDBH:אֱלֹהִים:000002">Dios</a> en la <a name="02800400100052" ll="SDBH:אֶרֶץ:000000">tierra</a>. 
\v 2 Perjurar, <a name="02800400200006" ll="SDBH:כחשׁ:000001">mentir</a>, <a name="02800400200010" ll="SDBH:רצח:000000">matar</a>, <a name="02800400200014" ll="SDBH:גנב:000000">hurtar</a> y <a name="02800400200018" ll="SDBH:נאף:000000">adulterar</a> <a name="02800400200020" ll="SDBH:פרץ:000009">prevalecen</a>, y <a name="02800400200024" ll="SDBH:דָּם:000003">homicidio</a> tras <a name="02800400200028" ll="SDBH:דָּם:000003">homicidio</a> <a name="02800400200030" ll="SDBH:נגע:000005">se</a> <a name="02800400200030" ll="SDBH:נגע:000005">suceden</a>. 
