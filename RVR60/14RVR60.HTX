\v 7 <a name="01400900700002" ll="SDBH:אַשְׁרֵי:000000">Bienaventurados</a> <a name="01400900700004">tus</a> <a name="01400900700004">hombres</a>, y <a name="01400900700008" ll="SDBH:אַשְׁרֵי:000000">dichosos</a> <a name="01400900700012" ll="SDBH:אֵלֶּה:000000">estos</a> <a name="01400900700010" ll="SDBH:עֶבֶד:000000">siervos</a> <a name="01400900700010" ll="SDBH:עֶבֶד:000000">tuyos</a> que <a name="01400900700016">están</a> <a name="01400900700022" ll="SDBH:תָּמִיד:000000">siempre</a> <a name="01400900700018;01400900700020">delante</a> <a name="01400900700018;01400900700020">de</a> <a name="01400900700018;01400900700020">ti</a>, y <a name="01400900700026">oyen</a> <a name="01400900700030" ll="SDBH:חָכְמָה:000000">tu</a> <a name="01400900700030" ll="SDBH:חָכְמָה:000000">sabiduría</a>. 
\v 8 <a name="01400900800008" ll="SDBH:ברך:001001">Bendito</a> <a name="01400900800002">sea</a> <a name="01400900800004" ll="SDBH:יהוה:000000">Jehová</a> <a name="01400900800006" ll="SDBH:אֱלֹהִים:000001">tu</a> <a name="01400900800006" ll="SDBH:אֱלֹהִים:000001">Dios</a>, el <a name="01400900800010">cual</a> <a name="01400900800012" ll="SDBH:חפץ:000000">se</a> <a name="01400900800012" ll="SDBH:חפץ:000000">ha</a> <a name="01400900800012" ll="SDBH:חפץ:000000">agradado</a> de ti para <a name="01400900800018">ponerte</a> <a name="01400900800020">sobre</a> <a name="01400900800022" ll="SDBH:כִּסֵּא:000002">su</a> <a name="01400900800022" ll="SDBH:כִּסֵּא:000002">trono</a> como <a name="01400900800026" ll="SDBH:מֶלֶךְ:000000">rey</a> para <a name="01400900800030" ll="SDBH:יהוה:000000">Jehová</a> <a name="01400900800032" ll="SDBH:אֱלֹהִים:000001">tu</a> <a name="01400900800032" ll="SDBH:אֱלֹהִים:000001">Dios</a>; por cuanto <a name="01400900800038" ll="SDBH:אֱלֹהִים:000001">tu</a> <a name="01400900800038" ll="SDBH:אֱלֹהִים:000001">Dios</a> <a name="01400900800036" ll="SDBH:אהב:000000">amó</a> a <a name="01400900800042" ll="SDBH:יִשְׂרָאֵל:000000">Israel</a> para <a name="01400900800046">afirmarlo</a> <a name="01400900800050" ll="SDBH:עֹולָם:000000">perpetuamente</a>, por eso te <a name="01400900800054">ha</a> <a name="01400900800054">puesto</a> por <a name="01400900800060" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01400900800056">sobre</a> <a name="01400900800056">ellos</a>, para que <a name="01400900800064">hagas</a> <a name="01400900800066" ll="SDBH:מִשְׁפָּט:000007">juicio</a> y <a name="01400900800070" ll="SDBH:צְדָקָה:000001">justicia</a>. 
