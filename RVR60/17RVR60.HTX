\v 11 Y <a name="01700601100006" ll="SDBH:הָמָן:000000">Amán</a> <a name="01700601100004" ll="SDBH:לקח:000000">tomó</a> el <a name="01700601100012" ll="SDBH:לְבוּשׁ:000000">vestido</a> y el <a name="01700601100020" ll="SDBH:סוּס:000000">caballo</a>, y vistió a Mardoqueo, y lo <a name="01700601100032" ll="SDBH:רכב:000001">condujo</a> a caballo por la <a name="01700601100036" ll="SDBH:רְחֹוב:000000">plaza</a> de la <a name="01700601100040" ll="SDBH:עִיר:000000">ciudad</a>, e hizo <a name="01700601100044" ll="SDBH:קרא:000000">pregonar</a> <a name="01700601100048">delante</a> de él: <a name="01700601100050" ll="SDBH:כָּכָה:000000">Así</a> <a name="01700601100052">se</a> <a name="01700601100052">hará</a> al <a name="01700601100058">varón</a> cuya <a name="01700601100070" ll="SDBH:יְקָר:000000">honra</a> <a name="01700601100066" ll="SDBH:חפץ:000002">desea</a> el <a name="01700601100064" ll="SDBH:מֶלֶךְ:000000">rey</a>.
    
\v 12 Después de esto <a name="01700601200004" ll="SDBH:שׁוב:000023">Mardoqueo</a> volvió <a name="01700601200008">a</a> la <a name="01700601200010" ll="SDBH:שַׁעַר:000000">puerta</a> <a name="01700601200014" ll="SDBH:מֶלֶךְ:000000">real</a>, y <a name="01700601200018" ll="SDBH:הָמָן:000000">Amán</a> se dio <a name="01700601200020" ll="SDBH:דחף:000001">prisa</a> para irse <a name="01700601200022">a</a> <a name="01700601200024" ll="SDBH:בַּיִת:000000">su</a> <a name="01700601200024" ll="SDBH:בַּיִת:000000">casa</a>, <a name="01700601200026" ll="SDBH:אָבֵל:000000">apesadumbrado</a> y <a name="01700601200030" ll="SDBH:חפה:000000">cubierta</a> su <a name="01700601200032" ll="SDBH:רֹאשׁ:000000">cabeza</a>. 
\v 13 <a name="01700601300004" ll="SDBH:ספר:000006">Contó</a> luego <a name="01700601300006" ll="SDBH:הָמָן:000000">Amán</a> a <a name="01700601300010" ll="SDBH:זֶרֶשׁ:000000">Zeres</a> <a name="01700601300012" ll="SDBH:אִשָּׁה:000000">su</a> <a name="01700601300012" ll="SDBH:אִשָּׁה:000000">mujer</a> y a <a name="01700601300018">todos</a> sus <a name="01700601300020" ll="SDBH:אהב:000001">amigos</a>, <a name="01700601300024">todo</a> lo <a name="01700601300026">que</a> le <a name="01700601300028" ll="SDBH:קרה:000000">había</a> <a name="01700601300028" ll="SDBH:קרה:000000">acontecido</a>. Entonces le <a name="01700601300032" ll="SDBH:אמר:000000">dijeron</a> sus <a name="01700601300036" ll="SDBH:חָכָם, קסם:000000" tl="HOTTP1788">sabios</a>, y <a name="01700601300040" ll="SDBH:זֶרֶשׁ:000000">Zeres</a> <a name="01700601300042" ll="SDBH:אִשָּׁה:000000">su</a> <a name="01700601300042" ll="SDBH:אִשָּׁה:000000">mujer</a>: <a name="01700601300044">Si</a> de la <a name="01700601300048" ll="SDBH:זֶרַע:000005">descendencia</a> de los <a name="01700601300052" ll="SDBH:יְהוּדִי:000001">judíos</a> es ese Mardoqueo <a name="01700601300066">delante</a> de quien <a name="01700601300058" ll="SDBH:חלל:001001">has</a> <a name="01700601300058" ll="SDBH:חלל:001001">comenzado</a> a <a name="01700601300062" ll="SDBH:נפל:000045">caer</a>, <a name="01700601300068" ll="SDBH:לֹא:000000">no</a> lo <a name="01700601300070" ll="SDBH:יכל:000002">vencerás</a>, sino que <a name="01700601300076" ll="SDBH:נפל:000045">caerás</a> por <a name="01700601300078" ll="SDBH:נפל:000045">cierto</a> <a name="01700601300082">delante</a> de él. 
\v 14 <a name="01700601400002">Aún</a> estaban ellos <a name="01700601400004" ll="SDBH:דבר:001000">hablando</a> <a name="01700601400006">con</a> <a name="01700601400006">él</a>, cuando los <a name="01700601400010" ll="SDBH:סָרִיס:000000">eunucos</a> del <a name="01700601400014" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700601400016" ll="SDBH:נגע:000002">llegaron</a> <a name="01700601400020" ll="SDBH:בהל:000000">apresurados</a>, para <a name="01700601400024">llevar</a> a <a name="01700601400028" ll="SDBH:הָמָן:000000">Amán</a> <a name="01700601400030">al</a> <a name="01700601400034" ll="SDBH:מִשְׁתֶּה:000001">banquete</a> <a name="01700601400036">que</a> <a name="01700601400040" ll="SDBH:אֶסְתֵּר:000000">Ester</a> <a name="01700601400038">había</a> <a name="01700601400038">dispuesto</a>.
\c 7
\v 1 <a name="01700700100004">Fue</a>, pues, el <a name="01700700100008" ll="SDBH:מֶלֶךְ:000000">rey</a> con <a name="01700700100012" ll="SDBH:הָמָן:000000">Amán</a> al <a name="01700700100016" ll="SDBH:שׁתה:000002">banquete</a> <a name="01700700100018">de</a> la <a name="01700700100024" ll="SDBH:מַלְכָּה:000000">reina</a> <a name="01700700100020" ll="SDBH:אֶסְתֵּר:000000">Ester</a>. 
\v 2 Y en el <a name="01700700200024" ll="SDBH:שֵׁנִי:000000">segundo</a> <a name="01700700200020" ll="SDBH:יֹום:000001">día</a>, mientras <a name="01700700200028" ll="SDBH:מִשְׁתֶּה:000000">bebían</a> <a name="01700700200032" ll="SDBH:יַיִן:000000">vino</a>, <a name="01700700200004" ll="SDBH:אמר:000000">dijo</a> el <a name="01700700200008" ll="SDBH:מֶלֶךְ:000000">rey</a> a <a name="01700700200012" ll="SDBH:אֶסְתֵּר:000000">Ester</a>: ¿<a name="01700700200034" ll="SDBH:מָה:000000">Cuál</a> es tu <a name="01700700200036" ll="SDBH:שְׁאֵלָה:000000">petición</a>, <a name="01700700200042" ll="SDBH:מַלְכָּה:000000">reina</a> <a name="01700700200038" ll="SDBH:אֶסְתֵּר:000000">Ester</a>, y te será <a name="01700700200046">concedida</a>? ¿<a name="01700700200052" ll="SDBH:מָה:000000">Cuál</a> es tu <a name="01700700200054" ll="SDBH:בַּקָּשָׁה:000000">demanda</a>? Aunque sea la <a name="01700700200058" ll="SDBH:חֲצִי:000000">mitad</a> del <a name="01700700200062" ll="SDBH:מַלְכוּת:000000">reino</a>, te será <a name="01700700200066">otorgada</a>. 
\v 3 Entonces la <a name="01700700300010" ll="SDBH:מַלְכָּה:000000">reina</a> <a name="01700700300006" ll="SDBH:אֶסְתֵּר:000000">Ester</a> <a name="01700700300004" ll="SDBH:ענה:000000">respondió</a> y <a name="01700700300014" ll="SDBH:אמר:000000">dijo</a>: Oh <a name="01700700300028" ll="SDBH:מֶלֶךְ:000000">rey</a>, <a name="01700700300016">si</a> <a name="01700700300018" ll="SDBH:מצא:000007">he</a> <a name="01700700300018" ll="SDBH:מצא:000007">hallado</a> <a name="01700700300020" ll="SDBH:חֵן:000001">gracia</a> en <a name="01700700300024" ll="SDBH:עַיִן:000000">tus</a> <a name="01700700300024" ll="SDBH:עַיִן:000000">ojos</a>, y <a name="01700700300032">si</a> <a name="01700700300034">al</a> <a name="01700700300038" ll="SDBH:מֶלֶךְ:000000">rey</a> place, séame <a name="01700700300042">dada</a> <a name="01700700300046" ll="SDBH:נֶפֶשׁ:000001">mi</a> <a name="01700700300046" ll="SDBH:נֶפֶשׁ:000001">vida</a> por <a name="01700700300050" ll="SDBH:שְׁאֵלָה:000000">mi</a> <a name="01700700300050" ll="SDBH:שְׁאֵלָה:000000">petición</a>, y <a name="01700700300054" ll="SDBH:עַם:000000">mi</a> <a name="01700700300054" ll="SDBH:עַם:000000">pueblo</a> por <a name="01700700300058" ll="SDBH:בַּקָּשָׁה:000000">mi</a> <a name="01700700300058" ll="SDBH:בַּקָּשָׁה:000000">demanda</a>. 
\v 4 <a name="01700700400002">Porque</a> <a name="01700700400004" ll="SDBH:מכר:000000">hemos</a> <a name="01700700400004" ll="SDBH:מכר:000000">sido</a> <a name="01700700400004" ll="SDBH:מכר:000000">vendidos</a>, <a name="01700700400006">yo</a> y <a name="01700700400010" ll="SDBH:עַם:000000">mi</a> <a name="01700700400010" ll="SDBH:עַם:000000">pueblo</a>, para <a name="01700700400014" ll="SDBH:שׁמד:000000">ser</a> <a name="01700700400014" ll="SDBH:שׁמד:000000">destruidos</a>, para <a name="01700700400018" ll="SDBH:הרג:000000">ser</a> <a name="01700700400018" ll="SDBH:הרג:000000">muertos</a> y <a name="01700700400024" ll="SDBH:אבד:000005">exterminados</a>. <a name="01700700400028" ll="SDBH:אִלּוּ:000000">Si</a> para <a name="01700700400032" ll="SDBH:עֶבֶד:000000">siervos</a> y <a name="01700700400038" ll="SDBH:שִׁפְחָה:000000">siervas</a> <a name="01700700400040" ll="SDBH:מכר:000000">fuéramos</a> <a name="01700700400040" ll="SDBH:מכר:000000">vendidos</a>, <a name="01700700400042" ll="SDBH:חרשׁ:001001">me</a> <a name="01700700400042" ll="SDBH:חרשׁ:001001">callaría</a>; <a name="01700700400044">pero</a> <a name="01700700400046;01700700400048;01700700400050;01700700400052;01700700400054;01700700400056" ll="SDBH:נֵזֶק:000000;SDBH:צַר:000002;SDBH:שׁוה:000000">nuestra</a> <a name="01700700400046;01700700400048;01700700400050;01700700400052;01700700400054;01700700400056" ll="SDBH:נֵזֶק:000000;SDBH:צַר:000002;SDBH:שׁוה:000000">muerte</a> <a name="01700700400046;01700700400048;01700700400050;01700700400052;01700700400054;01700700400056" ll="SDBH:נֵזֶק:000000;SDBH:צַר:000002;SDBH:שׁוה:000000">sería</a> para el <a name="01700700400060" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700700400046;01700700400048;01700700400050;01700700400052;01700700400054;01700700400056" ll="SDBH:נֵזֶק:000000;SDBH:צַר:000002;SDBH:שׁוה:000000">un</a> <a name="01700700400046;01700700400048;01700700400050;01700700400052;01700700400054;01700700400056" ll="SDBH:נֵזֶק:000000;SDBH:צַר:000002;SDBH:שׁוה:000000">daño</a> <a name="01700700400046;01700700400048;01700700400050;01700700400052;01700700400054;01700700400056" ll="SDBH:נֵזֶק:000000;SDBH:צַר:000002;SDBH:שׁוה:000000">irreparable</a>.
    
\v 5 <a name="01700700500004" ll="SDBH:אמר:000000">Respondió</a> el <a name="01700700500008" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700700500010" ll="SDBH:אֲחַשְׁוֵרֹושׁ:000000">Asuero</a>, y <a name="01700700500014" ll="SDBH:אמר:000000">dijo</a> a la <a name="01700700500022" ll="SDBH:מַלְכָּה:000000">reina</a> <a name="01700700500018" ll="SDBH:אֶסְתֵּר:000000">Ester</a>: ¿<a name="01700700500024" ll="SDBH:מִי:000000">Quién</a> es, y <a name="01700700500032;01700700500034" ll="SDBH:אֵי:000001;SDBH:זֶה:000000">dónde</a> está, el <a name="01700700500038">que</a> <a name="01700700500040" ll="SDBH:מלא:000024">ha</a> <a name="01700700500040" ll="SDBH:מלא:000024">ensoberbecido</a> <a name="01700700500026">su</a> <a name="01700700500042" ll="SDBH:לֵב:000001">corazón</a> para <a name="01700700500046">hacer</a> <a name="01700700500048">esto</a>? 
\v 6 <a name="01700700600006" ll="SDBH:אֶסְתֵּר:000000">Ester</a> <a name="01700700600004" ll="SDBH:אמר:000000">dijo</a>: El <a name="01700700600008;01700700600010" ll="SDBH:צַר:000003">enemigo</a> y adversario es este <a name="01700700600020" ll="SDBH:רַע:000001">malvado</a> <a name="01700700600016" ll="SDBH:הָמָן:000000">Amán</a>. Entonces <a name="01700700600030" ll="SDBH:בעת:000002">se</a> <a name="01700700600030" ll="SDBH:בעת:000002">turbó</a> <a name="01700700600028" ll="SDBH:הָמָן:000000">Amán</a> <a name="01700700600036">delante</a> del <a name="01700700600040" ll="SDBH:מֶלֶךְ:000000">rey</a> y de la <a name="01700700600046" ll="SDBH:מַלְכָּה:000000">reina</a>. 
\v 7 Luego el <a name="01700700700006" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700700700008">se</a> <a name="01700700700008">levantó</a> del <a name="01700700700016" ll="SDBH:מִשְׁתֶּה:000000">banquete</a>, encendido en <a name="01700700700012" ll="SDBH:חֵמָה:001001">ira</a>, y se fue <a name="01700700700022">al</a> <a name="01700700700024" ll="SDBH:גַּנָּה:000000">huerto</a> del <a name="01700700700028" ll="SDBH:בִּיתָן:000000">palacio</a>; y <a name="01700700700034">se</a> <a name="01700700700034">quedó</a> <a name="01700700700032" ll="SDBH:הָמָן:000000">Amán</a> para <a name="01700700700038" ll="SDBH:בקשׁ:000002">suplicarle</a> a la <a name="01700700700050" ll="SDBH:מַלְכָּה:000000">reina</a> <a name="01700700700046" ll="SDBH:אֶסְתֵּר:000000">Ester</a> <a name="01700700700040">por</a> <a name="01700700700042" ll="SDBH:נֶפֶשׁ:000001">su</a> <a name="01700700700042" ll="SDBH:נֶפֶשׁ:000001">vida</a>; porque <a name="01700700700054" ll="SDBH:ראה:000000">vio</a> que estaba <a name="01700700700058" ll="SDBH:כלה:000005">resuelto</a> para <a name="01700700700060">él</a> el <a name="01700700700064" ll="SDBH:רָעָה:000002">mal</a> de parte del <a name="01700700700072" ll="SDBH:מֶלֶךְ:000000">rey</a>. 
\v 8 Después el <a name="01700700800006" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700700800008" ll="SDBH:שׁוב:000023">volvió</a> del <a name="01700700800012" ll="SDBH:גַּנָּה:000000">huerto</a> del <a name="01700700800016" ll="SDBH:בִּיתָן:000000">palacio</a> <a name="01700700800018">al</a> <a name="01700700800020" ll="SDBH:בַּיִת:000000">aposento</a> del <a name="01700700800022" ll="SDBH:מִשְׁתֶּה:000000">banquete</a>, y <a name="01700700800030" ll="SDBH:הָמָן:000000">Amán</a> <a name="01700700800032" ll="SDBH:נפל:000040">había</a> <a name="01700700800032" ll="SDBH:נפל:000040">caído</a> <a name="01700700800034">sobre</a> el <a name="01700700800038" ll="SDBH:מִטָּה:000000">lecho</a> en <a name="01700700800040">que</a> estaba <a name="01700700800042" ll="SDBH:אֶסְתֵּר:000000">Ester</a>. Entonces <a name="01700700800048" ll="SDBH:אמר:000000">dijo</a> el <a name="01700700800052" ll="SDBH:מֶלֶךְ:000000">rey</a>: ¿Querrás <a name="01700700800056" ll="SDBH:גַּם:000000">también</a> <a name="01700700800060">violar</a> a la <a name="01700700800066" ll="SDBH:מַלְכָּה:000000">reina</a> en <a name="01700700800068">mi</a> propia <a name="01700700800074" ll="SDBH:בַּיִת:000003">casa</a>? Al <a name="01700700800080;01700700800084" ll="SDBH:יצא:000040;SDBH:פֶּה:000000">proferir</a> el <a name="01700700800088" ll="SDBH:מֶלֶךְ:000000">rey</a> esta <a name="01700700800078" ll="SDBH:דָּבָר:000000">palabra</a>, le <a name="01700700800096" ll="SDBH:חפה:000000">cubrieron</a> el <a name="01700700800092" ll="SDBH:פָּנֶה:000000">rostro</a> a <a name="01700700800094" ll="SDBH:הָמָן:000000">Amán</a>. 
\v 9 Y <a name="01700700900004" ll="SDBH:אמר:000000">dijo</a> <a name="01700700900006" ll="SDBH:חַרְבֹונָא:000000">Harbona</a>, <a name="01700700900008" ll="SDBH:אֶחָד:000000">uno</a> <a name="01700700900010">de</a> los <a name="01700700900014" ll="SDBH:סָרִיס:000000">eunucos</a> que servían al <a name="01700700900022" ll="SDBH:מֶלֶךְ:000000">rey</a>: He aquí en <a name="01700700900058" ll="SDBH:בַּיִת:000000">casa</a> de <a name="01700700900036" ll="SDBH:הָמָן:000000">Amán</a> la <a name="01700700900030" ll="SDBH:עֵץ:000003">horca</a> de <a name="01700700900064" ll="SDBH:חָמֵשׁ:000001">cincuenta</a> <a name="01700700900066" ll="SDBH:אַמָּה:000000">codos</a> de <a name="01700700900062" ll="SDBH:גָּבֹהַּ:000000">altura</a> <a name="01700700900032">que</a> <a name="01700700900034">hizo</a> <a name="01700700900060" ll="SDBH:הָמָן:000000">Amán</a> para <a name="01700700900040" ll="SDBH:מָרְדֳּכַי:000001">Mardoqueo</a>, el <a name="01700700900042">cual</a> <a name="01700700900044" ll="SDBH:דבר:001000">había</a> <a name="01700700900044" ll="SDBH:דבר:001000">hablado</a> <a name="01700700900046" ll="SDBH:טֹוב:000002">bien</a> <a name="01700700900048">por</a> el <a name="01700700900052" ll="SDBH:מֶלֶךְ:000000">rey</a>. Entonces el <a name="01700700900074" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700700900070" ll="SDBH:אמר:000000">dijo</a>: <a name="01700700900076" ll="SDBH:תלה:000000">Colgadlo</a> <a name="01700700900078">en</a> ella. 
\v 10 Así <a name="01700701000004" ll="SDBH:תלה:000000">colgaron</a> a <a name="01700701000008" ll="SDBH:הָמָן:000000">Amán</a> <a name="01700701000010">en</a> la <a name="01700701000014" ll="SDBH:עֵץ:000003">horca</a> <a name="01700701000016">que</a> él había hecho <a name="01700701000018" ll="SDBH:כון:000001">preparar</a> para Mardoqueo; y <a name="01700701000032" ll="SDBH:שׁכך:000000">se</a> <a name="01700701000032" ll="SDBH:שׁכך:000000">apaciguó</a> la <a name="01700701000026" ll="SDBH:חֵמָה:001001">ira</a> del <a name="01700701000030" ll="SDBH:מֶלֶךְ:000000">rey</a>.
\c 8
\v 1 El <a name="01700800100010">mismo</a> <a name="01700800100006" ll="SDBH:יֹום:000001">día</a>, el <a name="01700800100016" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700800100018" ll="SDBH:אֲחַשְׁוֵרֹושׁ:000000">Asuero</a> <a name="01700800100012">dio</a> a la <a name="01700800100026" ll="SDBH:מַלְכָּה:000000">reina</a> <a name="01700800100022" ll="SDBH:אֶסְתֵּר:000000">Ester</a> la <a name="01700800100030" ll="SDBH:בַּיִת:000000">casa</a> de <a name="01700800100032" ll="SDBH:הָמָן:000000">Amán</a> enemigo de los <a name="01700800100038" ll="SDBH:יְהוּדִי:000001">judíos</a>; y Mardoqueo <a name="01700800100048">vino</a> <a name="01700800100052">delante</a> del <a name="01700800100056" ll="SDBH:מֶלֶךְ:000000">rey</a>, porque <a name="01700800100062" ll="SDBH:אֶסְתֵּר:000000">Ester</a> le <a name="01700800100060" ll="SDBH:נגד:000000">declaró</a> lo <a name="01700800100064" ll="SDBH:מָה:000000">que</a> <a name="01700800100066">él</a> era respecto de ella. 
\v 2 Y <a name="01700800200004" ll="SDBH:סור:000006">se</a> <a name="01700800200004" ll="SDBH:סור:000006">quitó</a> el <a name="01700800200008" ll="SDBH:מֶלֶךְ:000000">rey</a> el <a name="01700800200012" ll="SDBH:טַבַּעַת:000000">anillo</a> <a name="01700800200014">que</a> <a name="01700800200016">recogió</a> de <a name="01700800200020" ll="SDBH:הָמָן:000000">Amán</a>, y lo <a name="01700800200024">dio</a> a Mardoqueo. Y <a name="01700800200034" ll="SDBH:אֶסְתֵּר:000000">Ester</a> <a name="01700800200032" ll="SDBH:שׂים:000019">puso</a> a Mardoqueo <a name="01700800200040">sobre</a> la <a name="01700800200042" ll="SDBH:בַּיִת:000003">casa</a> de <a name="01700800200044" ll="SDBH:הָמָן:000000">Amán</a>.
    
\v 3 <a name="01700800300004">Volvió</a> luego <a name="01700800300006" ll="SDBH:אֶסְתֵּר:000000">Ester</a> a <a name="01700800300010" ll="SDBH:דבר:001000">hablar</a> <a name="01700800300014">delante</a> del <a name="01700800300018" ll="SDBH:מֶלֶךְ:000000">rey</a>, y <a name="01700800300022" ll="SDBH:נפל:000040">se</a> <a name="01700800300022" ll="SDBH:נפל:000040">echó</a> <a name="01700800300024;01700800300026">a</a> <a name="01700800300028" ll="SDBH:רֶגֶל:000000">sus</a> <a name="01700800300028" ll="SDBH:רֶגֶל:000000">pies</a>, <a name="01700800300032" ll="SDBH:בכה:000000">llorando</a> y <a name="01700800300036" ll="SDBH:חנן:000001">rogándole</a> que <a name="01700800300042">hiciese</a> <a name="01700800300042">nula</a> la <a name="01700800300046" ll="SDBH:רָעָה:000000">maldad</a> de <a name="01700800300048" ll="SDBH:הָמָן:000000">Amán</a> <a name="01700800300052" ll="SDBH:אֲגָגִי:000000">agagueo</a> y <a name="01700800300058" ll="SDBH:מַחֲשָׁבָה:000000">su</a> <a name="01700800300058" ll="SDBH:מַחֲשָׁבָה:000000">designio</a> <a name="01700800300060">que</a> <a name="01700800300062" ll="SDBH:חשׁב:000001">había</a> <a name="01700800300062" ll="SDBH:חשׁב:000001">tramado</a> <a name="01700800300064">contra</a> los <a name="01700800300068" ll="SDBH:יְהוּדִי:000001">judíos</a>. 
\v 4 Entonces el <a name="01700800400008" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700800400004" ll="SDBH:ישׁט:000000">extendió</a> a <a name="01700800400012" ll="SDBH:אֶסְתֵּר:000000">Ester</a> el <a name="01700800400016" ll="SDBH:שַׁרְבִיט:000000">cetro</a> de <a name="01700800400020" ll="SDBH:זָהָב:000000">oro</a>, y <a name="01700800400026" ll="SDBH:אֶסְתֵּר:000000">Ester</a> <a name="01700800400024">se</a> <a name="01700800400024">levantó</a>, y se puso en <a name="01700800400030">pie</a> <a name="01700800400034">delante</a> del <a name="01700800400038" ll="SDBH:מֶלֶךְ:000000">rey</a>, 
\v 5 y <a name="01700800500004" ll="SDBH:אמר:000000">dijo</a>: <a name="01700800500006;01700800500018">Si</a> <a name="01700800500014" ll="SDBH:טֹוב:000002">place</a> <a name="01700800500008">al</a> <a name="01700800500012" ll="SDBH:מֶלֶךְ:000000">rey</a>, y si <a name="01700800500020" ll="SDBH:מצא:000007">he</a> <a name="01700800500020" ll="SDBH:מצא:000007">hallado</a> <a name="01700800500022" ll="SDBH:חֵן:000001">gracia</a> <a name="01700800500026">delante</a> de él, y si <a name="01700800500034" ll="SDBH:דָּבָר:000002">le</a> parece <a name="01700800500030" ll="SDBH:כשׁר:000000">acertado</a> al <a name="01700800500042" ll="SDBH:מֶלֶךְ:000000">rey</a>, y <a name="01700800500048">yo</a> soy <a name="01700800500046" ll="SDBH:טֹוב:000001">agradable</a> a <a name="01700800500052" ll="SDBH:עַיִן:000000">sus</a> <a name="01700800500052" ll="SDBH:עַיִן:000000">ojos</a>, que se dé orden <a name="01700800500054" ll="SDBH:כתב:000001">escrita</a> para <a name="01700800500058" ll="SDBH:שׁוב:000021">revocar</a> las <a name="01700800500064">cartas</a> que autorizan la <a name="01700800500066" ll="SDBH:מַחֲשָׁבָה:000000">trama</a> de <a name="01700800500068" ll="SDBH:הָמָן:000000">Amán</a> <a name="01700800500070" ll="SDBH:בֵּן:000000">hijo</a> de <a name="01700800500072" ll="SDBH:הַמְּדָתָא:000000">Hamedata</a> <a name="01700800500076" ll="SDBH:אֲגָגִי:000000">agagueo</a>, <a name="01700800500078">que</a> <a name="01700800500080" ll="SDBH:כתב:000000">escribió</a> para <a name="01700800500084" ll="SDBH:אבד:000005">destruir</a> a los <a name="01700800500090" ll="SDBH:יְהוּדִי:000001">judíos</a> <a name="01700800500092">que</a> están en <a name="01700800500096">todas</a> las <a name="01700800500098" ll="SDBH:מְדִינָה:000000">provincias</a> del <a name="01700800500102" ll="SDBH:מֶלֶךְ:000000">rey</a>. 
\v 6 Porque ¿<a name="01700800600004;01700800600028" ll="SDBH:אֵיכָכָה:000000">cómo</a> <a name="01700800600006" ll="SDBH:יכל:000001">podré</a> yo <a name="01700800600010" ll="SDBH:ראה:000000">ver</a> el <a name="01700800600016" ll="SDBH:רָעָה:000002">mal</a> <a name="01700800600018">que</a> <a name="01700800600020" ll="SDBH:מצא:000008">alcanzará</a> a <a name="01700800600024" ll="SDBH:עַם:000000">mi</a> <a name="01700800600024" ll="SDBH:עַם:000000">pueblo</a>? ¿Cómo <a name="01700800600030" ll="SDBH:יכל:000001">podré</a> yo <a name="01700800600034" ll="SDBH:ראה:000000">ver</a> la <a name="01700800600038" ll="SDBH:אָבְדָן:000000">destrucción</a> de <a name="01700800600040" ll="SDBH:מֹולֶדֶת:000000">mi</a> <a name="01700800600040" ll="SDBH:מֹולֶדֶת:000000">nación</a>?
    
\v 7 <a name="01700800700004" ll="SDBH:אמר:000000">Respondió</a> el <a name="01700800700008" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700800700010" ll="SDBH:אֲחַשְׁוֵרֹושׁ:000000">Asuero</a> a la <a name="01700800700018" ll="SDBH:מַלְכָּה:000000">reina</a> <a name="01700800700014" ll="SDBH:אֶסְתֵּר:000000">Ester</a> y a Mardoqueo el <a name="01700800700028" ll="SDBH:יְהוּדִי:000001">judío</a>: He aquí yo <a name="01700800700036">he</a> <a name="01700800700036">dado</a> a <a name="01700800700040" ll="SDBH:אֶסְתֵּר:000000">Ester</a> la <a name="01700800700032" ll="SDBH:בַּיִת:000000">casa</a> de <a name="01700800700034" ll="SDBH:הָמָן:000000">Amán</a>, y a él han <a name="01700800700046" ll="SDBH:תלה:000000">colgado</a> <a name="01700800700048">en</a> la <a name="01700800700052" ll="SDBH:עֵץ:000003">horca</a>, <a name="01700800700054">por</a> <a name="01700800700056">cuanto</a> <a name="01700800700058" ll="SDBH:שׁלח:000015">extendió</a> <a name="01700800700060">su</a> <a name="01700800700060">mano</a> contra los <a name="01700800700066" ll="SDBH:יְהוּדִי:000001">judíos</a>. 
\v 8 <a name="01700800800046" ll="SDBH:כְּתָב:000000">Escribid</a>, pues, <a name="01700800800004">vosotros</a> <a name="01700800800008">a</a> los <a name="01700800800012" ll="SDBH:יְהוּדִי:000001">judíos</a> como <a name="01700800800018" ll="SDBH:טֹוב:000002">bien</a> os <a name="01700800800022" ll="SDBH:עַיִן:000000">pareciere</a>, en <a name="01700800800026" ll="SDBH:שֵׁם:000001">nombre</a> del <a name="01700800800030" ll="SDBH:מֶלֶךְ:000000">rey</a>, y <a name="01700800800034" ll="SDBH:חתם:000000">selladlo</a> con el <a name="01700800800038" ll="SDBH:טַבַּעַת:000000">anillo</a> del <a name="01700800800042" ll="SDBH:מֶלֶךְ:000000">rey</a>; porque un <a name="01700800800006" ll="SDBH:כתב:000000">edicto</a> <a name="01700800800048">que</a> <a name="01700800800050" ll="SDBH:כתב:000001">se</a> <a name="01700800800050" ll="SDBH:כתב:000001">escribe</a> en <a name="01700800800054" ll="SDBH:שֵׁם:000001">nombre</a> del <a name="01700800800058" ll="SDBH:מֶלֶךְ:000000">rey</a>, y <a name="01700800800062" ll="SDBH:חתם:000000">se</a> <a name="01700800800062" ll="SDBH:חתם:000000">sella</a> con el <a name="01700800800066" ll="SDBH:טַבַּעַת:000000">anillo</a> del <a name="01700800800070" ll="SDBH:מֶלֶךְ:000000">rey</a>, <a name="01700800800072">no</a> puede ser <a name="01700800800076" ll="SDBH:שׁוב:000021">revocado</a>. 
\v 9 Entonces <a name="01700800900004" ll="SDBH:קרא:000003">fueron</a> <a name="01700800900004" ll="SDBH:קרא:000003">llamados</a> los <a name="01700800900006" ll="SDBH:סֹופֵר:000000">escribanos</a> del <a name="01700800900010" ll="SDBH:מֶלֶךְ:000000">rey</a> en el <a name="01700800900026" ll="SDBH:חֹדֶשׁ:000000">mes</a> <a name="01700800900030" ll="SDBH:שְׁלִישִׁי:000000">tercero</a>, que es <a name="01700800900036" ll="SDBH:סִיוָן:000000">Siván</a>, a los <a name="01700800900040;01700800900044" ll="SDBH:עֶשֶׂר:000001;SDBH:שָׁלֹשׁ:000000">veintitrés</a> días de <a name="01700800900032">ese</a> mes; y <a name="01700800900050" ll="SDBH:כתב:000001">se</a> <a name="01700800900050" ll="SDBH:כתב:000001">escribió</a> conforme a <a name="01700800900054">todo</a> lo <a name="01700800900056">que</a> <a name="01700800900058" ll="SDBH:צוה:000001">mandó</a> <a name="01700800900060" ll="SDBH:מָרְדֳּכַי:000001">Mardoqueo</a>, <a name="01700800900062">a</a> los <a name="01700800900066" ll="SDBH:יְהוּדִי:000001">judíos</a>, y <a name="01700800900070">a</a> los <a name="01700800900074" ll="SDBH:אֲחַשְׁדַּרְפַּן:000000">sátrapas</a>, los <a name="01700800900080" ll="SDBH:פֶּחָה:000000">capitanes</a> y los <a name="01700800900084" ll="SDBH:שַׂר:000000">príncipes</a> de las <a name="01700800900088" ll="SDBH:מְדִינָה:000000">provincias</a> <a name="01700800900090">que</a> había desde la <a name="01700800900094" ll="SDBH:הֹדּוּ:000000">India</a> <a name="01700800900098" ll="SDBH:עַד:000000">hasta</a> <a name="01700800900100" ll="SDBH:כּוּשׁ:000001">Etiopía</a>, <a name="01700800900110" ll="SDBH:מֵאָה:000000">ciento</a> <a name="01700800900102;01700800900106" ll="SDBH:עֶשֶׂר:000001;SDBH:שֶׁבַע:000000">veintisiete</a> <a name="01700800900112" ll="SDBH:מְדִינָה:000000">provincias</a>; a <a name="01700800900114;01700800900118" ll="SDBH:מְדִינָה:000000">cada</a> <a name="01700800900114;01700800900118" ll="SDBH:מְדִינָה:000000">provincia</a> según <a name="01700800900122" ll="SDBH:כְּתָב:000000">su</a> <a name="01700800900122" ll="SDBH:כְּתָב:000000">escritura</a>, y a <a name="01700800900126;01700800900130" ll="SDBH:עַם:000000">cada</a> <a name="01700800900126;01700800900130" ll="SDBH:עַם:000000">pueblo</a> conforme a <a name="01700800900134" ll="SDBH:לָשֹׁון:000002">su</a> <a name="01700800900134" ll="SDBH:לָשֹׁון:000002">lengua</a>, <a name="01700800900138">a</a> los <a name="01700800900142" ll="SDBH:יְהוּדִי:000001">judíos</a> también conforme a <a name="01700800900146" ll="SDBH:כְּתָב:000000">su</a> <a name="01700800900146" ll="SDBH:כְּתָב:000000">escritura</a> y <a name="01700800900152" ll="SDBH:לָשֹׁון:000002">lengua</a>. 
\v 10 Y <a name="01700801000004" ll="SDBH:כתב:000000">escribió</a> en <a name="01700801000008" ll="SDBH:שֵׁם:000001">nombre</a> del <a name="01700801000012" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700801000014" ll="SDBH:אֲחַשְׁוֵרֹושׁ:000000">Asuero</a>, y lo <a name="01700801000018" ll="SDBH:חתם:000000">selló</a> con el <a name="01700801000022" ll="SDBH:טַבַּעַת:000000">anillo</a> del <a name="01700801000026" ll="SDBH:מֶלֶךְ:000000">rey</a>, y <a name="01700801000030" ll="SDBH:שׁלח:000005">envió</a> <a name="01700801000032">cartas</a> <a name="01700801000034;01700801000036">por</a> <a name="01700801000034;01700801000036">medio</a> de <a name="01700801000040" ll="SDBH:רוץ:000004">correos</a> montados en <a name="01700801000046" ll="SDBH:סוּס:000000">caballos</a> <a name="01700801000062" ll="SDBH:רַמָּכָה:000000">veloces</a> <a name="01700801000048" ll="SDBH:רכב:000000">procedentes</a> de los <a name="01700801000052" ll="SDBH:רֶכֶשׁ:000000">repastos</a> <a name="01700801000056" ll="SDBH:אֲחַשְׁתְּרָן:000000">reales</a>; 
\v 11 <a name="01700801100002">que</a> el <a name="01700801100008" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700801100004">daba</a> facultad a los <a name="01700801100014" ll="SDBH:יְהוּדִי:000001">judíos</a> <a name="01700801100016">que</a> estaban en <a name="01700801100020">todas</a> las <a name="01700801100022" ll="SDBH:עִיר:000000">ciudades</a>, para que <a name="01700801100030" ll="SDBH:קהל:000000">se</a> <a name="01700801100030" ll="SDBH:קהל:000000">reuniesen</a> y estuviesen <a name="01700801100038">a</a> la defensa de <a name="01700801100040" ll="SDBH:נֶפֶשׁ:000001">su</a> <a name="01700801100040" ll="SDBH:נֶפֶשׁ:000001">vida</a>, prontos a <a name="01700801100044" ll="SDBH:שׁמד:000000">destruir</a>, y matar, y acabar con <a name="01700801100060">toda</a> fuerza armada del <a name="01700801100064" ll="SDBH:עַם:000000">pueblo</a> o <a name="01700801100068" ll="SDBH:מְדִינָה:000000">provincia</a> que <a name="01700801100072" ll="SDBH:צור:001000">viniese</a> contra ellos, y aun sus <a name="01700801100076" ll="SDBH:טַף:000000">niños</a> y <a name="01700801100080" ll="SDBH:אִשָּׁה:000002">mujeres</a>, y <a name="01700801100084" ll="SDBH:שָׁלָל:000000">apoderarse</a> de sus <a name="01700801100088" ll="SDBH:בזז:000000">bienes</a>, 
\v 12 en <a name="01700801200006" ll="SDBH:אֶחָד:000000">un</a> mismo <a name="01700801200004" ll="SDBH:יֹום:000001">día</a> en <a name="01700801200010">todas</a> las <a name="01700801200012" ll="SDBH:מְדִינָה:000000">provincias</a> del <a name="01700801200016" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700801200018" ll="SDBH:אֲחַשְׁוֵרֹושׁ:000000">Asuero</a>, en el día <a name="01700801200022;01700801200024" ll="SDBH:עָשָׂר:000000;SDBH:שָׁלֹשׁ:000000">trece</a> del <a name="01700801200028" ll="SDBH:חֹדֶשׁ:000000">mes</a> <a name="01700801200030;01700801200032" ll="SDBH:עָשָׂר:000000;SDBH:שְׁנַיִם:000000">duodécimo</a>, <a name="01700801200034">que</a> es el <a name="01700801200036" ll="SDBH:חֹדֶשׁ:000000">mes</a> de <a name="01700801200038" ll="SDBH:אֲדָר:000000">Adar</a>. 
\v 13 La <a name="01700801300002" ll="SDBH:פַּתְשֶׁגֶן:000000">copia</a> del <a name="01700801300006" ll="SDBH:כְּתָב:000000">edicto</a> que había de <a name="01700801300010">darse</a> por decreto en <a name="01700801300012" ll="SDBH:דָּת:000000">cada</a> provincia, para <a name="01700801300018" ll="SDBH:מְדִינָה:000000">que</a> fuese <a name="01700801300024" ll="SDBH:גלה:000010">conocido</a> por <a name="01700801300016">todos</a> los <a name="01700801300032" ll="SDBH:עַם:000000">pueblos</a>, decía que los <a name="01700801300042" ll="SDBH:יְהוּדִי:000001">judíos</a> estuviesen <a name="01700801300048" ll="SDBH:עָתִיד:000000">preparados</a> para aquel <a name="01700801300056" ll="SDBH:יֹום:000001">día</a>, para <a name="01700801300064" ll="SDBH:מִן:000001;SDBH:נקם:000000">vengarse</a> de sus enemigos. 
\v 14 Los <a name="01700801400004" ll="SDBH:רוץ:000004">correos</a>, pues, <a name="01700801400006" ll="SDBH:רכב:000000">montados</a> en <a name="01700801400010" ll="SDBH:רֶכֶשׁ:000000">caballos</a> veloces, <a name="01700801400016" ll="SDBH:יצא:000000">salieron</a> a toda <a name="01700801400018" ll="SDBH:בהל:000001">prisa</a> por la <a name="01700801400026" ll="SDBH:דָּבָר:000000">orden</a> del <a name="01700801400030" ll="SDBH:מֶלֶךְ:000000">rey</a>; y el <a name="01700801400036" ll="SDBH:דָּת:000000">edicto</a> fue <a name="01700801400038">dado</a> en Susa <a name="01700801400046" ll="SDBH:בִּירָה:000000">capital</a> del reino.
    
\v 15 Y <a name="01700801500006" ll="SDBH:יצא:000000">salió</a> Mardoqueo de <a name="01700801500012">delante</a> del <a name="01700801500016" ll="SDBH:מֶלֶךְ:000000">rey</a> con <a name="01700801500020" ll="SDBH:לְבוּשׁ:000000">vestido</a> <a name="01700801500022" ll="SDBH:מַלְכוּת:000000">real</a> de <a name="01700801500024" ll="SDBH:תְּכֵלֶת:000000">azul</a> y <a name="01700801500028" ll="SDBH:חוּר:000000">blanco</a>, y una <a name="01700801500036" ll="SDBH:גָּדֹול:000003">gran</a> corona de <a name="01700801500034" ll="SDBH:זָהָב:000000">oro</a>, y un <a name="01700801500040" ll="SDBH:תַּכְרִיךְ:000000">manto</a> de <a name="01700801500042" ll="SDBH:בּוּץ:000000">lino</a> y <a name="01700801500046" ll="SDBH:אַרְגָּמָן:000000">púrpura</a>. La <a name="01700801500052" ll="SDBH:עִיר:000000">ciudad</a> de Susa entonces <a name="01700801500056" ll="SDBH:צהל:000001">se</a> <a name="01700801500056" ll="SDBH:צהל:000001">alegró</a> y <a name="01700801500060" ll="SDBH:שׂמח:000000">regocijó</a>; 
\v 16 y los <a name="01700801600006" ll="SDBH:יְהוּדִי:000001">judíos</a> <a name="01700801600008">tuvieron</a> <a name="01700801600010" ll="SDBH:אֹורָה:000000">luz</a> y <a name="01700801600014" ll="SDBH:שִׂמְחָה:000000">alegría</a>, y <a name="01700801600018" ll="SDBH:שָׂשֹׂון:000000">gozo</a> y <a name="01700801600022" ll="SDBH:יְקָר:000000">honra</a>. 
\v 17 Y en <a name="01700801700006">cada</a> <a name="01700801700008" ll="SDBH:מְדִינָה:000000">provincia</a> y en <a name="01700801700018">cada</a> <a name="01700801700020" ll="SDBH:עִיר:000000">ciudad</a> <a name="01700801700026" ll="SDBH:מָקֹום:000000">donde</a> <a name="01700801700040" ll="SDBH:נגע:000006">llegó</a> el <a name="01700801700030;01700801700038" ll="SDBH:דָּבָר:000000;SDBH:דָּת:000000">mandamiento</a> del <a name="01700801700034" ll="SDBH:מֶלֶךְ:000000">rey</a>, los <a name="01700801700052" ll="SDBH:יְהוּדִי:000001">judíos</a> tuvieron <a name="01700801700042" ll="SDBH:שִׂמְחָה:000000">alegría</a> y <a name="01700801700046" ll="SDBH:שָׂשֹׂון:000000">gozo</a>, <a name="01700801700054" ll="SDBH:מִשְׁתֶּה:000001">banquete</a> y <a name="01700801700058" ll="SDBH:יֹום:000003">día</a> de <a name="01700801700060" ll="SDBH:טֹוב:000002">placer</a>. Y <a name="01700801700064" ll="SDBH:רַב:000001">muchos</a> de entre los <a name="01700801700068" ll="SDBH:עַם:000000">pueblos</a> de la <a name="01700801700072" ll="SDBH:אֶרֶץ:000000">tierra</a> se hacían <a name="01700801700074" ll="SDBH:יהד:000000">judíos</a>, porque el <a name="01700801700080" ll="SDBH:פַּחַד:000000">temor</a> de los <a name="01700801700084" ll="SDBH:יְהוּדִי:000001">judíos</a> <a name="01700801700078" ll="SDBH:נפל:000021">había</a> <a name="01700801700078" ll="SDBH:נפל:000021">caído</a> <a name="01700801700086">sobre</a> <a name="01700801700086">ellos</a>.
\c 9
\v 1 En el <a name="01700900100010" ll="SDBH:חֹדֶשׁ:000000">mes</a> <a name="01700900100006;01700900100008" ll="SDBH:עָשָׂר:000000;SDBH:שְׁנַיִם:000000">duodécimo</a>, <a name="01700900100012">que</a> es el <a name="01700900100014" ll="SDBH:חֹדֶשׁ:000000">mes</a> de <a name="01700900100016" ll="SDBH:אֲדָר:000000">Adar</a>, a los <a name="01700900100020;01700900100022" ll="SDBH:עָשָׂר:000000;SDBH:שָׁלֹשׁ:000000">trece</a> <a name="01700900100024" ll="SDBH:יֹום:000001">días</a> del <a name="01700900100072">mismo</a> mes, <a name="01700900100028">cuando</a> debía ser <a name="01700900100044">ejecutado</a> el <a name="01700900100032" ll="SDBH:דָּבָר:000000">mandamiento</a> del <a name="01700900100036" ll="SDBH:מֶלֶךְ:000000">rey</a> y <a name="01700900100040" ll="SDBH:דָּת:000000">su</a> <a name="01700900100040" ll="SDBH:דָּת:000000">decreto</a>, el mismo <a name="01700900100050" ll="SDBH:יֹום:000003">día</a> en <a name="01700900100052">que</a> los enemigos de los <a name="01700900100060" ll="SDBH:יְהוּדִי:000001">judíos</a> <a name="01700900100054" ll="SDBH:שׂבר:000001">esperaban</a> <a name="01700900100064" ll="SDBH:שׁלט:000000">enseñorearse</a> de <a name="01700900100082">ellos</a>, sucedió lo <a name="01700900100070" ll="SDBH:הפך:000005">contrario</a>; <a name="01700900100074">porque</a> los <a name="01700900100080" ll="SDBH:יְהוּדִי:000001">judíos</a> <a name="01700900100076" ll="SDBH:שׁלט:000000">se</a> <a name="01700900100076" ll="SDBH:שׁלט:000000">enseñorearon</a> de los que los <a name="01700900100086" ll="SDBH:שׂנא:000001">aborrecían</a>. 
\v 2 Los <a name="01700900200006" ll="SDBH:יְהוּדִי:000001">judíos</a> <a name="01700900200002" ll="SDBH:קהל:000000">se</a> <a name="01700900200002" ll="SDBH:קהל:000000">reunieron</a> en <a name="01700900200010" ll="SDBH:עִיר:000000">sus</a> <a name="01700900200010" ll="SDBH:עִיר:000000">ciudades</a>, en <a name="01700900200014">todas</a> las <a name="01700900200016" ll="SDBH:מְדִינָה:000000">provincias</a> del <a name="01700900200020" ll="SDBH:מֶלֶךְ:000000">rey</a> <a name="01700900200022" ll="SDBH:אֲחַשְׁוֵרֹושׁ:000000">Asuero</a>, para <a name="01700900200026" ll="SDBH:שׁלח:000015">descargar</a> su <a name="01700900200028">mano</a> <a name="01700900200030">sobre</a> los <a name="01700900200032" ll="SDBH:בקשׁ:000007">que</a> <a name="01700900200032" ll="SDBH:בקשׁ:000007">habían</a> <a name="01700900200032" ll="SDBH:בקשׁ:000007">procurado</a> <a name="01700900200034" ll="SDBH:רָעָה:000002">su</a> <a name="01700900200034" ll="SDBH:רָעָה:000002">mal</a>, y <a name="01700900200038;01700900200040" ll="SDBH:לֹא:000000">nadie</a> <a name="01700900200042;01700900200044;01700900200046">los</a> <a name="01700900200042;01700900200044;01700900200046">pudo</a> <a name="01700900200042;01700900200044;01700900200046">resistir</a>, <a name="01700900200048">porque</a> el <a name="01700900200052" ll="SDBH:פַּחַד:000000">temor</a> <a name="01700900200052" ll="SDBH:פַּחַד:000000">de</a> <a name="01700900200052" ll="SDBH:פַּחַד:000000">ellos</a> <a name="01700900200050" ll="SDBH:נפל:000021">había</a> <a name="01700900200050" ll="SDBH:נפל:000021">caído</a> <a name="01700900200054">sobre</a> <a name="01700900200056">todos</a> los <a name="01700900200060" ll="SDBH:עַם:000000">pueblos</a>. 
\v 3 Y <a name="01700900300004">todos</a> los <a name="01700900300006" ll="SDBH:שַׂר:000000">príncipes</a> de las <a name="01700900300010" ll="SDBH:מְדִינָה:000000">provincias</a>, los sátrapas, <a name="01700900300022" ll="SDBH:פֶּחָה:000000">capitanes</a> y <a name="01700900300026">oficiales</a> del <a name="01700900300038" ll="SDBH:מֶלֶךְ:000000">rey</a>, <a name="01700900300040" ll="SDBH:נשׂא:000018">apoyaban</a> a los <a name="01700900300046" ll="SDBH:יְהוּדִי:000001">judíos</a>; porque el <a name="01700900300052" ll="SDBH:פַּחַד:000000">temor</a> de Mardoqueo <a name="01700900300050" ll="SDBH:נפל:000021">había</a> <a name="01700900300050" ll="SDBH:נפל:000021">caído</a> <a name="01700900300056">sobre</a> <a name="01700900300056">ellos</a>. 
\v 4 Pues Mardoqueo era <a name="01700900400004" ll="SDBH:גָּדֹול:000002">grande</a> en la <a name="01700900400010" ll="SDBH:בַּיִת:000003">casa</a> del <a name="01700900400014" ll="SDBH:מֶלֶךְ:000000">rey</a>, y <a name="01700900400018" ll="SDBH:שֹׁמַע:000000">su</a> <a name="01700900400018" ll="SDBH:שֹׁמַע:000000">fama</a> <a name="01700900400020" ll="SDBH:הלך:000010">iba</a> por <a name="01700900400024">todas</a> las <a name="01700900400028" ll="SDBH:מְדִינָה:000000">provincias</a>; Mardoqueo <a name="01700900400038;01700900400042" ll="SDBH:גדל:000006;SDBH:הלך:000014">iba</a> <a name="01700900400038;01700900400042" ll="SDBH:גדל:000006;SDBH:הלך:000014">engrandeciéndose</a> <a name="01700900400038;01700900400042" ll="SDBH:גדל:000006;SDBH:הלך:000014">más</a> <a name="01700900400038;01700900400042" ll="SDBH:גדל:000006;SDBH:הלך:000014">y</a> <a name="01700900400038;01700900400042" ll="SDBH:גדל:000006;SDBH:הלך:000014">más</a>. 
\v 5 Y <a name="01700900500004">asolaron</a> los <a name="01700900500008" ll="SDBH:יְהוּדִי:000001">judíos</a> a <a name="01700900500012">todos</a> sus enemigos a <a name="01700900500016" ll="SDBH:מַכָּה:000000">filo</a> de <a name="01700900500018" ll="SDBH:חֶרֶב:000003">espada</a>, y con <a name="01700900500022" ll="SDBH:הֶרֶג:000000">mortandad</a> y <a name="01700900500026" ll="SDBH:אַבְדָן:000000">destrucción</a>, e <a name="01700900500030">hicieron</a> con sus <a name="01700900500034" ll="SDBH:שׂנא:000001">enemigos</a> como <a name="01700900500038" ll="SDBH:רָצֹון:000001">quisieron</a>. 
\v 6 En <a name="01700900600006" ll="SDBH:שׁוּשַׁן:001000">Susa</a> <a name="01700900600010" ll="SDBH:בִּירָה:000000">capital</a> <a name="01700900600010" ll="SDBH:בִּירָה:000000">del</a> <a name="01700900600010" ll="SDBH:בִּירָה:000000">reino</a> <a name="01700900600012" ll="SDBH:הרג:000000">mataron</a> y <a name="01700900600020" ll="SDBH:אבד:000005">destruyeron</a> los <a name="01700900600016" ll="SDBH:יְהוּדִי:000001">judíos</a> a <a name="01700900600022;01700900600024" ll="SDBH:חָמֵשׁ:000000;SDBH:מֵאָה:000000">quinientos</a> <a name="01700900600026">hombres</a>. 
\v 7 <a name="01700901000018" ll="SDBH:הרג:000000">Mataron</a> entonces a <a name="01700900700006" ll="SDBH:פַּרְשַׁנְדָּתָא:000000">Parsandata</a>, <a name="01700900700012" ll="SDBH:דַּלְפֹון:000000">Dalfón</a>, <a name="01700900700018" ll="SDBH:אַסְפָּתָא:000000">Aspata</a>, 
