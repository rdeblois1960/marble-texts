\v 7 El <a name="02400400700004" ll="SDBH:אַרְיֵה:000000">león</a> <a name="02400400700002" ll="SDBH:עלה:000004">sube</a> de la <a name="02400400700008" ll="SDBH:סְבֹךְ:000000">espesura</a>, y el <a name="02400400700012" ll="SDBH:שׁחת:000001">destruidor</a> de <a name="02400400700014" ll="SDBH:גֹּוי:000000">naciones</a> está en <a name="02400400700016" ll="SDBH:נסע:000001">marcha</a>, y <a name="02400400700018" ll="SDBH:יצא:000000">ha</a> <a name="02400400700018" ll="SDBH:יצא:000000">salido</a> de <a name="02400400700022" ll="SDBH:מָקֹום:000000">su</a> <a name="02400400700022" ll="SDBH:מָקֹום:000000">lugar</a> para <a name="02400400700026" ll="SDBH:שׂים:000005">poner</a> <a name="02400400700028" ll="SDBH:אֶרֶץ:000000">tu</a> <a name="02400400700028" ll="SDBH:אֶרֶץ:000000">tierra</a> en <a name="02400400700032" ll="SDBH:שַׁמָּה:000000">desolación</a>; <a name="02400400700034" ll="SDBH:עִיר:000000">tus</a> <a name="02400400700034" ll="SDBH:עִיר:000000">ciudades</a> <a name="02400400700036" ll="SDBH:נצה:001000">quedarán</a> <a name="02400400700036" ll="SDBH:נצה:001000">asoladas</a> y <a name="02400400700038;02400400700040">sin</a> <a name="02400400700042">morador</a>. 
\v 8 <a name="02400400800002">Por</a> <a name="02400400800004" ll="SDBH:זֶה:000000;SDBH:זֹה:000000">esto</a> <a name="02400400800006" ll="SDBH:חגר:000001">vestíos</a> de <a name="02400400800008" ll="SDBH:שַׂק:000001">cilicio</a>, <a name="02400400800010" ll="SDBH:ספד:000000">endechad</a> y <a name="02400400800014" ll="SDBH:ילל:000000">aullad</a>; <a name="02400400800016">porque</a> la <a name="02400400800022;02400400800024" ll="SDBH:אַף:000008;SDBH:חָרֹון:000001">ira</a> de <a name="02400400800026" ll="SDBH:יהוה:000000">Jehová</a> <a name="02400400800018" ll="SDBH:לֹא:000000">no</a> <a name="02400400800020" ll="SDBH:שׁוב:000019">se</a> <a name="02400400800020" ll="SDBH:שׁוב:000019">ha</a> <a name="02400400800020" ll="SDBH:שׁוב:000019">apartado</a> <a name="02400400800028">de</a> <a name="02400400800028">nosotros</a>.
    
\v 9 En aquel <a name="02400400900010" ll="SDBH:יֹום:000006">día</a>, <a name="02400400900016" ll="SDBH:נְאֻם:000000">dice</a> <a name="02400400900018" ll="SDBH:יהוה:000000">Jehová</a>, <a name="02400400900020" ll="SDBH:אבד:000006">desfallecerá</a> el <a name="02400400900022" ll="SDBH:לֵב:000001">corazón</a> del <a name="02400400900026" ll="SDBH:מֶלֶךְ:000000">rey</a> y el <a name="02400400900030" ll="SDBH:לֵב:000001">corazón</a> de los <a name="02400400900034" ll="SDBH:שַׂר:000000">príncipes</a>, y los <a name="02400400900042" ll="SDBH:כֹּהֵן:000000">sacerdotes</a> estarán <a name="02400400900038" ll="SDBH:שׁמם:000003">atónitos</a>, y <a name="02400400900050" ll="SDBH:תמהּ:000001">se</a> <a name="02400400900050" ll="SDBH:תמהּ:000001">maravillarán</a> los <a name="02400400900048" ll="SDBH:נָבִיא:000000">profetas</a>. 
\v 10 Y <a name="02400401000004" ll="SDBH:אמר:000000">dije</a>: ¡<a name="02400401000006" ll="SDBH:אֲהָהּ:000000">Ay</a>, ay, <a name="02400401000008" ll="SDBH:אֲדֹנָי:000000">Jehová</a> <a name="02400401000010" ll="SDBH:יהוה:000000">Dios</a>! <a name="02400401000012" ll="SDBH:אָכֵן:000001">Verdaderamente</a> <a name="02400401000014;02400401000016" ll="SDBH:נשׁא:001001">en</a> <a name="02400401000014;02400401000016" ll="SDBH:נשׁא:001001">gran</a> <a name="02400401000014;02400401000016" ll="SDBH:נשׁא:001001">manera</a> <a name="02400401000014;02400401000016" ll="SDBH:נשׁא:001001">has</a> <a name="02400401000014;02400401000016" ll="SDBH:נשׁא:001001">engañado</a> a <a name="02400401000026" ll="SDBH:זֶה:000000">este</a> <a name="02400401000022" ll="SDBH:עַם:000000">pueblo</a> y a <a name="02400401000032" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">Jerusalén</a>, <a name="02400401000034;02400401000036" ll="SDBH:אמר:000000">diciendo</a>: <a name="02400401000038" ll="SDBH:שָׁלֹום:000000">Paz</a> <a name="02400401000040">tendréis</a>; pues la <a name="02400401000048" ll="SDBH:חֶרֶב:000003">espada</a> <a name="02400401000046" ll="SDBH:נגע:000006">ha</a> <a name="02400401000046" ll="SDBH:נגע:000006">venido</a> <a name="02400401000050" ll="SDBH:עַד:000000">hasta</a> el <a name="02400401000054" ll="SDBH:נֶפֶשׁ:000000">alma</a>.
    
\v 11 En aquel <a name="02400401100006" ll="SDBH:עֵת:000000">tiempo</a> <a name="02400401100012" ll="SDBH:אמר:000000">se</a> <a name="02400401100012" ll="SDBH:אמר:000000">dirá</a> a este pueblo y a <a name="02400401100028" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">Jerusalén</a>: <a name="02400401100030" ll="SDBH:רוּחַ:000004">Viento</a> <a name="02400401100032" ll="SDBH:צַח:000001">seco</a> de las alturas del <a name="02400401100040" ll="SDBH:מִדְבָּר:000000">desierto</a> <a name="02400401100042" ll="SDBH:דֶּרֶךְ:000006">vino</a> a la <a name="02400401100044" ll="SDBH:בַּת:000002">hija</a> de mi <a name="02400401100018" ll="SDBH:עַם:000000">pueblo</a>, <a name="02400401100048" ll="SDBH:לֹא:000000">no</a> para <a name="02400401100052" ll="SDBH:זרה:000002">aventar</a>, <a name="02400401100056" ll="SDBH:לֹא:000000">ni</a> para <a name="02400401100060" ll="SDBH:ברר:000003">limpiar</a>. 
\v 12 <a name="02400401200002" ll="SDBH:רוּחַ:000004">Viento</a> más <a name="02400401200004" ll="SDBH:מָלֵא:000001">vehemente</a> que <a name="02400401200008" ll="SDBH:אֵלֶּה:000000">éste</a> <a name="02400401200010">vendrá</a> a <a name="02400401200018">mí</a>; <a name="02400401200016" ll="SDBH:גַּם:000000">y</a> <a name="02400401200014">ahora</a> yo <a name="02400401200020" ll="SDBH:דבר:001000">pronunciaré</a> <a name="02400401200022" ll="SDBH:מִשְׁפָּט:000001">juicios</a> contra ellos.
    
\v 13 <a name="02400401300002">He</a> <a name="02400401300002">aquí</a> que <a name="02400401300008" ll="SDBH:עלה:000004">subirá</a> <a name="02400401300004">como</a> <a name="02400401300006" ll="SDBH:עֲנָנָה:000000">nube</a>, y <a name="02400401300018" ll="SDBH:מֶרְכָּבָה:000000">su</a> <a name="02400401300018" ll="SDBH:מֶרְכָּבָה:000000">carro</a> <a name="02400401300012">como</a> <a name="02400401300016" ll="SDBH:סוּפָה:000000">torbellino</a>; <a name="02400401300022">más</a> <a name="02400401300020" ll="SDBH:קלל:000000">ligeros</a> son <a name="02400401300026" ll="SDBH:סוּס:000000">sus</a> <a name="02400401300026" ll="SDBH:סוּס:000000">caballos</a> <a name="02400401300022">que</a> las <a name="02400401300024" ll="SDBH:נֶשֶׁר:000000">águilas</a>. ¡<a name="02400401300028" ll="SDBH:אֹוי:000000">Ay</a> <a name="02400401300030">de</a> <a name="02400401300030">nosotros</a>, <a name="02400401300032">porque</a> <a name="02400401300034" ll="SDBH:שׁדד:000000">entregados</a> <a name="02400401300034" ll="SDBH:שׁדד:000000">somos</a> <a name="02400401300034" ll="SDBH:שׁדד:000000">a</a> <a name="02400401300034" ll="SDBH:שׁדד:000000">despojo</a>! 
\v 14 <a name="02400401400002" ll="SDBH:כבס:000000">Lava</a> tu <a name="02400401400008" ll="SDBH:לֵב:000001">corazón</a> de <a name="02400401400006" ll="SDBH:רָעָה:000000">maldad</a>, oh <a name="02400401400010" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">Jerusalén</a>, para que seas <a name="02400401400014" ll="SDBH:ישׁע:000001">salva</a>. ¿Hasta <a name="02400401400018" ll="SDBH:מָתַי:000000">cuándo</a> permitirás en <a name="02400401400024">medio</a> de ti los <a name="02400401400026" ll="SDBH:מַחֲשָׁבָה:000000">pensamientos</a> de <a name="02400401400028" ll="SDBH:אָוֶן:000000">iniquidad</a>? 
\v 15 Porque una <a name="02400401500004">voz</a> trae las <a name="02400401500006" ll="SDBH:נגד:000000">nuevas</a> desde <a name="02400401500010" ll="SDBH:דָּן:000001">Dan</a>, y hace <a name="02400401500014">oír</a> la <a name="02400401500016" ll="SDBH:אָוֶן:000001">calamidad</a> desde el <a name="02400401500020" ll="SDBH:הַר:000001">monte</a> de <a name="02400401500022" ll="SDBH:אֶפְרַיִם:000000">Efraín</a>. 
\v 16 <a name="02400401600002" ll="SDBH:זכר:000002">Decid</a> a las <a name="02400401600008" ll="SDBH:גֹּוי:000000">naciones</a>: He aquí, <a name="02400401600012">haced</a> oír <a name="02400401600014">sobre</a> <a name="02400401600016" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">Jerusalén</a>: <a name="02400401600018" ll="SDBH:נצר:000000" tl="HOTTP3300">Guardas</a> <a name="02400401600020">vienen</a> de <a name="02400401600024" ll="SDBH:אֶרֶץ:000000">tierra</a> <a name="02400401600028" ll="SDBH:מֶרְחָק:000000">lejana</a>, y <a name="02400401600032">lanzarán</a> <a name="02400401600040">su</a> <a name="02400401600040">voz</a> <a name="02400401600034">contra</a> las <a name="02400401600036" ll="SDBH:עִיר:000000">ciudades</a> de <a name="02400401600038" ll="SDBH:יְהוּדָה:000000">Judá</a>. 
\v 17 Como <a name="02400401700004" ll="SDBH:שׁמר:000007">guardas</a> de <a name="02400401700006">campo</a> <a name="02400401700008">estuvieron</a> en <a name="02400401700014" ll="SDBH:סָבִיב:000000">derredor</a> <a name="02400401700010">de</a> <a name="02400401700010">ella</a>, porque <a name="02400401700020" ll="SDBH:מרה:000000">se</a> <a name="02400401700020" ll="SDBH:מרה:000000">rebeló</a> contra mí, <a name="02400401700022" ll="SDBH:נְאֻם:000000">dice</a> <a name="02400401700024" ll="SDBH:יהוה:000000">Jehová</a>. 
\v 18 <a name="02400401800002" ll="SDBH:דֶּרֶךְ:000007">Tu</a> <a name="02400401800002" ll="SDBH:דֶּרֶךְ:000007">camino</a> y <a name="02400401800006" ll="SDBH:מַעֲלָל:000001">tus</a> <a name="02400401800006" ll="SDBH:מַעֲלָל:000001">obras</a> <a name="02400401800012">te</a> <a name="02400401800010" ll="SDBH:אֵלֶּה:000000">hicieron</a> <a name="02400401800008">esto</a>; <a name="02400401800014" ll="SDBH:זֶה:000000;SDBH:זֹה:000000">ésta</a> es <a name="02400401800016" ll="SDBH:רָעָה:000002">tu</a> <a name="02400401800016" ll="SDBH:רָעָה:000002">maldad</a>, <a name="02400401800018">por</a> lo cual <a name="02400401800020">amargura</a> <a name="02400401800024" ll="SDBH:נגע:000006">penetrará</a> <a name="02400401800026" ll="SDBH:עַד:000000">hasta</a> <a name="02400401800028" ll="SDBH:לֵב:000001">tu</a> <a name="02400401800028" ll="SDBH:לֵב:000001">corazón</a>.
    
\v 19 ¡<a name="02400401900002" ll="SDBH:מֵעֶה:000000;SDBH:מֵעֶה:000001">Mis</a> <a name="02400401900002" ll="SDBH:מֵעֶה:000000;SDBH:מֵעֶה:000001">entrañas</a>, <a name="02400401900004" ll="SDBH:מֵעֶה:000000;SDBH:מֵעֶה:000001">mis</a> <a name="02400401900004" ll="SDBH:מֵעֶה:000000;SDBH:מֵעֶה:000001">entrañas</a>! <a name="02400401900008" ll="SDBH:יחל:000000">Me</a> <a name="02400401900008" ll="SDBH:יחל:000000">duelen</a> las <a name="02400401900010" ll="SDBH:קִיר:000000">fibras</a> de <a name="02400401900012" ll="SDBH:לֵב:000000">mi</a> <a name="02400401900012" ll="SDBH:לֵב:000000">corazón</a>; <a name="02400401900018" ll="SDBH:לֵב:000000">mi</a> <a name="02400401900018" ll="SDBH:לֵב:000000">corazón</a> <a name="02400401900014" ll="SDBH:המה:000000">se</a> <a name="02400401900014" ll="SDBH:המה:000000">agita</a> <a name="02400401900016">dentro</a> <a name="02400401900016">de</a> <a name="02400401900016">mí</a>; <a name="02400401900020" ll="SDBH:לֹא:000000">no</a> <a name="02400401900022" ll="SDBH:חרשׁ:001001">callaré</a>; <a name="02400401900024">porque</a> <a name="02400401900026">sonido</a> de <a name="02400401900028" ll="SDBH:שֹׁופָר:000000">trompeta</a> <a name="02400401900032">has</a> <a name="02400401900032">oído</a>, oh <a name="02400401900034" ll="SDBH:נֶפֶשׁ:000001">alma</a> <a name="02400401900034" ll="SDBH:נֶפֶשׁ:000001">mía</a>, <a name="02400401900036" ll="SDBH:תְּרוּעָה:000000">pregón</a> de <a name="02400401900038" ll="SDBH:מִלְחָמָה:000000">guerra</a>. 
\v 20 <a name="02400402000002;02400402000006" ll="SDBH:שֶׁבֶר:000000;SDBH:שֶׁבֶר:000001">Quebrantamiento</a> <a name="02400402000004">sobre</a> quebrantamiento es <a name="02400402000008" ll="SDBH:קרא:001003">anunciado</a>; porque <a name="02400402000014">toda</a> la <a name="02400402000018" ll="SDBH:אֶרֶץ:000000">tierra</a> es <a name="02400402000012" ll="SDBH:שׁדד:000000">destruida</a>; de <a name="02400402000020" ll="SDBH:פִּתְאֹם:000000">repente</a> son <a name="02400402000022" ll="SDBH:שׁדד:000000">destruidas</a> <a name="02400402000024" ll="SDBH:אֹהֶל:000003">mis</a> <a name="02400402000024" ll="SDBH:אֹהֶל:000003">tiendas</a>, en un <a name="02400402000026" ll="SDBH:רֶגַע:000000" tl="HOTTP3301">momento</a> <a name="02400402000028" ll="SDBH:יְרִיעָה:000002">mis</a> <a name="02400402000028" ll="SDBH:יְרִיעָה:000002">cortinas</a>. 
\v 21 ¿Hasta <a name="02400402100004" ll="SDBH:מָתַי:000000">cuándo</a> he de <a name="02400402100006" ll="SDBH:ראה:000000">ver</a> <a name="02400402100008" ll="SDBH:נֵס:000000">bandera</a>, he de <a name="02400402100010">oír</a> <a name="02400402100012">sonido</a> de <a name="02400402100014" ll="SDBH:שֹׁופָר:000000">trompeta</a>? 
\v 22 <a name="02400402200002">Porque</a> <a name="02400402200006" ll="SDBH:עַם:000000">mi</a> <a name="02400402200006" ll="SDBH:עַם:000000">pueblo</a> es <a name="02400402200004" ll="SDBH:אֱוִיל:000000">necio</a>, <a name="02400402200010" ll="SDBH:לֹא:000000">no</a> me <a name="02400402200012">conocieron</a>; son <a name="02400402200014" ll="SDBH:בֵּן:000000">hijos</a> <a name="02400402200016" ll="SDBH:סָכָל:000000">ignorantes</a> y <a name="02400402200022" ll="SDBH:לֹא:000000">no</a> son <a name="02400402200024" ll="SDBH:בין:000000">entendidos</a>; <a name="02400402200028" ll="SDBH:חָכָם, קסם:000000">sabios</a> para <a name="02400402200034" ll="SDBH:רעע:000000">hacer</a> <a name="02400402200034" ll="SDBH:רעע:000000">el</a> <a name="02400402200034" ll="SDBH:רעע:000000">mal</a>, pero <a name="02400402200040" ll="SDBH:יטב:000007">hacer</a> <a name="02400402200040" ll="SDBH:יטב:000007">el</a> <a name="02400402200040" ll="SDBH:יטב:000007">bien</a> <a name="02400402200042" ll="SDBH:לֹא:000000">no</a> <a name="02400402200044">supieron</a>.
    
\v 23 <a name="02400402300002" ll="SDBH:ראה:000000">Miré</a> a la <a name="02400402300008" ll="SDBH:אֶרֶץ:000000">tierra</a>, y he aquí que estaba <a name="02400402300014" ll="SDBH:תֹּהוּ:000000">asolada</a> y <a name="02400402300018" ll="SDBH:בֹּהוּ:000000">vacía</a>; y <a name="02400402300022">a</a> los <a name="02400402300026" ll="SDBH:שָׁמַיִם:000001">cielos</a>, y <a name="02400402300030">no</a> había en ellos <a name="02400402300032" ll="SDBH:אֹור:000000">luz</a>. 
\v 24 <a name="02400402400002" ll="SDBH:ראה:000000">Miré</a> a los <a name="02400402400006" ll="SDBH:הַר:000000">montes</a>, y he aquí que <a name="02400402400012" ll="SDBH:רעשׁ:000000">temblaban</a>, y <a name="02400402400016">todos</a> los <a name="02400402400020" ll="SDBH:גִּבְעָה:000000">collados</a> fueron <a name="02400402400022" ll="SDBH:קלל:000006">destruidos</a>. 
\v 25 <a name="02400402500002" ll="SDBH:ראה:000000">Miré</a>, y <a name="02400402500008">no</a> <a name="02400402500008">había</a> <a name="02400402500012" ll="SDBH:אָדָם:000000">hombre</a>, y <a name="02400402500016">todas</a> las <a name="02400402500018" ll="SDBH:עֹוף:000000">aves</a> del <a name="02400402500022" ll="SDBH:שָׁמַיִם:000000">cielo</a> <a name="02400402500024" ll="SDBH:נדד:000000">se</a> <a name="02400402500024" ll="SDBH:נדד:000000">habían</a> <a name="02400402500024" ll="SDBH:נדד:000000">ido</a>. 
\v 26 <a name="02400402600002" ll="SDBH:ראה:000000">Miré</a>, y <a name="02400402600006">he</a> <a name="02400402600006">aquí</a> el campo <a name="02400402600010" ll="SDBH:כַּרְמֶל:000001">fértil</a> era un <a name="02400402600014" ll="SDBH:מִדְבָּר:000000">desierto</a>, y <a name="02400402600018">todas</a> <a name="02400402600020" ll="SDBH:עִיר:000000">sus</a> <a name="02400402600020" ll="SDBH:עִיר:000000">ciudades</a> eran <a name="02400402600022" ll="SDBH:נתץ:000001">asoladas</a> <a name="02400402600026">delante</a> de <a name="02400402600028" ll="SDBH:יהוה:000000">Jehová</a>, <a name="02400402600032">delante</a> del <a name="02400402600034;02400402600036" ll="SDBH:אַף:000008;SDBH:חָרֹון:000001">ardor</a> <a name="02400402600034;02400402600036" ll="SDBH:אַף:000008;SDBH:חָרֹון:000001">de</a> <a name="02400402600034;02400402600036" ll="SDBH:אַף:000008;SDBH:חָרֹון:000001">su</a> <a name="02400402600034;02400402600036" ll="SDBH:אַף:000008;SDBH:חָרֹון:000001">ira</a>.
    
\v 27 Porque <a name="02400402700004">así</a> <a name="02400402700006" ll="SDBH:אמר:000000">dijo</a> <a name="02400402700008" ll="SDBH:יהוה:000000">Jehová</a>: <a name="02400402700014">Toda</a> la <a name="02400402700018" ll="SDBH:אֶרֶץ:000000">tierra</a> <a name="02400402700012">será</a> <a name="02400402700010" ll="SDBH:שְׁמָמָה:000000">asolada</a>; pero <a name="02400402700024" ll="SDBH:לֹא:000000">no</a> la <a name="02400402700026">destruiré</a> del <a name="02400402700022" ll="SDBH:כָּלָה:000002">todo</a>. 
\v 28 <a name="02400402800002">Por</a> <a name="02400402800004" ll="SDBH:זֶה:000000;SDBH:זֹה:000000">esto</a> <a name="02400402800006" ll="SDBH:אבל:000001">se</a> <a name="02400402800006" ll="SDBH:אבל:000001">enlutará</a> la <a name="02400402800010" ll="SDBH:אֶרֶץ:000000">tierra</a>, y los <a name="02400402800018" ll="SDBH:שָׁמַיִם:000001">cielos</a> <a name="02400402800020">arriba</a> <a name="02400402800014" ll="SDBH:קדר:000003">se</a> <a name="02400402800014" ll="SDBH:קדר:000003">oscurecerán</a>, <a name="02400402800024">porque</a> <a name="02400402800028" ll="SDBH:דבר:001000">hablé</a>, lo <a name="02400402800030" ll="SDBH:זמם:000000">pensé</a>, y <a name="02400402800034" ll="SDBH:לֹא:000000">no</a> me <a name="02400402800036" ll="SDBH:נחם:001000">arrepentí</a>, <a name="02400402800040" ll="SDBH:לֹא:000000">ni</a> <a name="02400402800042" ll="SDBH:שׁוב:000013">desistiré</a> <a name="02400402800044">de</a> ello. 
\v 29 Al <a name="02400402900004">estruendo</a> de la gente de a <a name="02400402900006" ll="SDBH:פָּרָשׁ:000001">caballo</a> y de los <a name="02400402900010" ll="SDBH:רמה:000001">flecheros</a> <a name="02400402900014" ll="SDBH:ברח:000000">huyó</a> <a name="02400402900016">toda</a> la <a name="02400402900020" ll="SDBH:עִיר:000000" tl="HOTTP3302">ciudad</a>; <a name="02400402900022">entraron</a> en las <a name="02400402900028" ll="SDBH:עָב:000002" tl="HOTTP3303">espesuras</a> de los bosques, y <a name="02400402900036" ll="SDBH:כֵּף:000000">subieron</a> a los <a name="02400402900038" ll="SDBH:עלה:000004">peñascos</a>; <a name="02400402900040">todas</a> las <a name="02400402900044" ll="SDBH:עִיר:000000">ciudades</a> fueron <a name="02400402900046" ll="SDBH:עזב:000000">abandonadas</a>, y <a name="02400402900050">no</a> quedó en ellas <a name="02400402900052">morador</a> <a name="02400402900056">alguno</a>. 
\v 30 Y tú, <a name="02400403000004">destruida</a>, ¿<a name="02400403000012" ll="SDBH:מָה:000000">qué</a> <a name="02400403000014">harás</a>? Aunque te <a name="02400403000018" ll="SDBH:לבשׁ:000000">vistas</a> de <a name="02400403000020" ll="SDBH:שָׁנִי:000000">grana</a>, aunque te <a name="02400403000024" ll="SDBH:עדה:001000">adornes</a> con <a name="02400403000026" ll="SDBH:עֲדִי:000000">atavíos</a> de <a name="02400403000028" ll="SDBH:זָהָב:000000">oro</a>, aunque <a name="02400403000032">pintes</a> con <a name="02400403000038">antimonio</a> <a name="02400403000008">tus</a> <a name="02400403000040" ll="SDBH:עַיִן:000000">ojos</a>, en <a name="02400403000046" ll="SDBH:שָׁוְא:000000">vano</a> te <a name="02400403000048" ll="SDBH:יפה:000001">engalanas</a>; te <a name="02400403000050" ll="SDBH:מאס:000000">menospreciarán</a> tus <a name="02400403000054">amantes</a>, <a name="02400403000058" ll="SDBH:בקשׁ:000000">buscarán</a> tu <a name="02400403000056" ll="SDBH:נֶפֶשׁ:000001">vida</a>. 
\v 31 Porque <a name="02400403100010">oí</a> una <a name="02400403100004">voz</a> como de mujer que está de <a name="02400403100008" ll="SDBH:חלה:001000">parto</a>, <a name="02400403100012" ll="SDBH:צָרָה:000000">angustia</a> como de <a name="02400403100016" ll="SDBH:בכר:000002">primeriza</a>; <a name="02400403100018">voz</a> de la <a name="02400403100020" ll="SDBH:בַּת:000002">hija</a> de <a name="02400403100022" ll="SDBH:צִיֹּון:000000">Sion</a> que <a name="02400403100024" ll="SDBH:יפח:000000">lamenta</a> y <a name="02400403100026" ll="SDBH:פרשׂ:000001">extiende</a> <a name="02400403100028" ll="SDBH:כַּף:000012">sus</a> <a name="02400403100028" ll="SDBH:כַּף:000012">manos</a>, diciendo: ¡<a name="02400403100030" ll="SDBH:אֹוי:000000">Ay</a> ahora de <a name="02400403100032" ll="SDBH:נָא:001000">mí</a>! que <a name="02400403100040" ll="SDBH:נֶפֶשׁ:000001">mi</a> <a name="02400403100040" ll="SDBH:נֶפֶשׁ:000001">alma</a> <a name="02400403100038" ll="SDBH:עיף:000000">desmaya</a> a causa de los <a name="02400403100044" ll="SDBH:הרג:000000">asesinos</a>.
\c 5
\v 1 Recorred las <a name="02400500100006" ll="SDBH:חוּץ:000004">calles</a> de <a name="02400500100008" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">Jerusalén</a>, y <a name="02400500100012" ll="SDBH:ראה:000000">mirad</a> <a name="02400500100014" ll="SDBH:נָא:001000">ahora</a>, e <a name="02400500100018">informaos</a>; <a name="02400500100022" ll="SDBH:בקשׁ:000000">buscad</a> en <a name="02400500100026" ll="SDBH:רְחֹוב:000000">sus</a> <a name="02400500100026" ll="SDBH:רְחֹוב:000000">plazas</a> a ver <a name="02400500100028">si</a> <a name="02400500100030" ll="SDBH:מצא:000000">halláis</a> <a name="02400500100032">hombre</a>, <a name="02400500100034">si</a> <a name="02400500100036">hay</a> alguno que <a name="02400500100038">haga</a> <a name="02400500100040" ll="SDBH:מִשְׁפָּט:000007">justicia</a>, que <a name="02400500100042" ll="SDBH:בקשׁ:000007">busque</a> <a name="02400500100044" ll="SDBH:אֱמוּנָה:000002">verdad</a>; y yo la <a name="02400500100048" ll="SDBH:סלח:000000">perdonaré</a>. 
\v 2 <a name="02400500200004">Aunque</a> <a name="02400500200010" ll="SDBH:אמר:000000">digan</a>: <a name="02400500200006" ll="SDBH:חַי:000000">Vive</a> <a name="02400500200008" ll="SDBH:יהוה:000000">Jehová</a>, <a name="02400500200020" ll="SDBH:שׁבע:000000">juran</a> <a name="02400500200018" ll="SDBH:שֶׁקֶר:000000">falsamente</a>. 
\v 3 Oh <a name="02400500300002" ll="SDBH:יהוה:000000">Jehová</a>, ¿<a name="02400500300008" ll="SDBH:לֹא:000000">no</a> miran <a name="02400500300004" ll="SDBH:עַיִן:000000">tus</a> <a name="02400500300004" ll="SDBH:עַיִן:000000">ojos</a> a la <a name="02400500300012" ll="SDBH:אֱמוּנָה:000002">verdad</a>? <a name="02400500300016">Los</a> <a name="02400500300014">azotaste</a>, y <a name="02400500300020" ll="SDBH:לֹא:000000">no</a> les <a name="02400500300022" ll="SDBH:חיל:000002">dolió</a>; los <a name="02400500300024" ll="SDBH:כלה:000012">consumiste</a>, y <a name="02400500300026" ll="SDBH:מאן:000000">no</a> <a name="02400500300026" ll="SDBH:מאן:000000">quisieron</a> <a name="02400500300028" ll="SDBH:לקח:000000">recibir</a> <a name="02400500300030" ll="SDBH:מוּסָר:000000">corrección</a>; <a name="02400500300032;02400500300034" ll="SDBH:חזק:000013;SDBH:פָּנֶה:000000">endurecieron</a> <a name="02400500300032;02400500300034" ll="SDBH:חזק:000013;SDBH:פָּנֶה:000000">sus</a> <a name="02400500300032;02400500300034" ll="SDBH:חזק:000013;SDBH:פָּנֶה:000000">rostros</a> <a name="02400500300036">más</a> <a name="02400500300036">que</a> la <a name="02400500300038" ll="SDBH:סֶלַע:000000">piedra</a>, <a name="02400500300040" ll="SDBH:מאן:000000">no</a> <a name="02400500300040" ll="SDBH:מאן:000000">quisieron</a> <a name="02400500300044" ll="SDBH:שׁוב:000005">convertirse</a>.
    
\v 4 Pero <a name="02400500400004">yo</a> <a name="02400500400006" ll="SDBH:אמר:000000">dije</a>: <a name="02400500400008" ll="SDBH:אַךְ:000000">Ciertamente</a> <a name="02400500400012">éstos</a> son <a name="02400500400010" ll="SDBH:דַּל:001000">pobres</a>, han <a name="02400500400014" ll="SDBH:יאל:000000">enloquecido</a>, pues <a name="02400500400018" ll="SDBH:לֹא:000000">no</a> <a name="02400500400020">conocen</a> el <a name="02400500400022" ll="SDBH:דֶּרֶךְ:000007">camino</a> de <a name="02400500400024" ll="SDBH:יהוה:000000">Jehová</a>, el <a name="02400500400026" ll="SDBH:מִשְׁפָּט:000007">juicio</a> de <a name="02400500400028" ll="SDBH:אֱלֹהִים:000001">su</a> <a name="02400500400028" ll="SDBH:אֱלֹהִים:000001">Dios</a>. 
\v 5 Iré <a name="02400500500006">a</a> los <a name="02400500500010" ll="SDBH:גָּדֹול:000002">grandes</a>, y <a name="02400500500016">les</a> <a name="02400500500014" ll="SDBH:דבר:001000">hablaré</a>; porque <a name="02400500500020">ellos</a> <a name="02400500500022">conocen</a> el <a name="02400500500024" ll="SDBH:דֶּרֶךְ:000007">camino</a> de <a name="02400500500026" ll="SDBH:יהוה:000000">Jehová</a>, el <a name="02400500500028" ll="SDBH:מִשְׁפָּט:000007">juicio</a> de <a name="02400500500034">su</a> <a name="02400500500030" ll="SDBH:אֱלֹהִים:000001">Dios</a>. <a name="02400500500032" ll="SDBH:אַךְ:000004">Pero</a> ellos <a name="02400500500036">también</a> <a name="02400500500038" ll="SDBH:שׁבר:000000">quebraron</a> el <a name="02400500500040" ll="SDBH:עֹל:000000">yugo</a>, <a name="02400500500042" ll="SDBH:נתק:000004">rompieron</a> las coyundas.
    
\v 6 <a name="02400500600002">Por</a> <a name="02400500600004">tanto</a>, el <a name="02400500600008" ll="SDBH:אַרְיֵה:000000">león</a> de la <a name="02400500600012" ll="SDBH:יַעַר:000001">selva</a> los <a name="02400500600006">matará</a>, los <a name="02400500600018" ll="SDBH:שׁדד:000000">destruirá</a> el <a name="02400500600014" ll="SDBH:זְאֵב:000000">lobo</a> del <a name="02400500600016" ll="SDBH:עֲרָבָה:000000">desierto</a>, el <a name="02400500600020" ll="SDBH:נָמֵר:000000">leopardo</a> <a name="02400500600022" ll="SDBH:שׁקד:000002">acechará</a> <a name="02400500600026" ll="SDBH:עִיר:000000">sus</a> <a name="02400500600026" ll="SDBH:עִיר:000000">ciudades</a>; <a name="02400500600028">cualquiera</a> que de <a name="02400500600036">ellas</a> <a name="02400500600032" ll="SDBH:יצא:000000">saliere</a> será <a name="02400500600038" ll="SDBH:טרף:000000">arrebatado</a>; porque <a name="02400500600044" ll="SDBH:פֶּשַׁע:000000">sus</a> <a name="02400500600044" ll="SDBH:פֶּשַׁע:000000">rebeliones</a> se han <a name="02400500600042" ll="SDBH:רבב:000000">multiplicado</a>, se han <a name="02400500600046" ll="SDBH:עצם:000002">aumentado</a> <a name="02400500600048" ll="SDBH:מְשׁוּבָה:000000">sus</a> <a name="02400500600048" ll="SDBH:מְשׁוּבָה:000000">deslealtades</a>.
    
\v 7 ¿<a name="02400500700002;02400500700004;02400500700006" ll="SDBH:אֵי:000003;SDBH:זֶה:000000;SDBH:זֹה:000000">Cómo</a> <a name="02400500700012">te</a> <a name="02400500700010" ll="SDBH:סלח:000000">he</a> <a name="02400500700010" ll="SDBH:סלח:000000">de</a> <a name="02400500700010" ll="SDBH:סלח:000000">perdonar</a> <a name="02400500700002;02400500700004;02400500700006" ll="SDBH:אֵי:000003;SDBH:זֶה:000000;SDBH:זֹה:000000">por</a> <a name="02400500700002;02400500700004;02400500700006" ll="SDBH:אֵי:000003;SDBH:זֶה:000000;SDBH:זֹה:000000">esto</a>? <a name="02400500700014" ll="SDBH:בֵּן:000000">Sus</a> <a name="02400500700014" ll="SDBH:בֵּן:000000">hijos</a> <a name="02400500700016" ll="SDBH:עזב:000003">me</a> <a name="02400500700016" ll="SDBH:עזב:000003">dejaron</a>, y <a name="02400500700020" ll="SDBH:שׁבע:000000">juraron</a> por lo que <a name="02400500700024" ll="SDBH:לֹא:000000">no</a> es <a name="02400500700026" ll="SDBH:אֱלֹהִים:000000">Dios</a>. <a name="02400500700032">Los</a> <a name="02400500700030" ll="SDBH:שׂבע:000001">sacié</a>, y <a name="02400500700036" ll="SDBH:נאף:000000">adulteraron</a>, y en <a name="02400500700040" ll="SDBH:בַּיִת:000000">casa</a> de <a name="02400500700042" ll="SDBH:זֹנָה:000000">rameras</a> <a name="02400500700044" ll="SDBH:גדד:001000" tl="HOTTP3306">se</a> <a name="02400500700044" ll="SDBH:גדד:001000" tl="HOTTP3306">juntaron</a> <a name="02400500700044" ll="SDBH:גדד:001000" tl="HOTTP3306">en</a> <a name="02400500700044" ll="SDBH:גדד:001000" tl="HOTTP3306">compañías</a>. 
\v 8 Como <a name="02400500800002" ll="SDBH:סוּס:000000">caballos</a> bien <a name="02400500800004" ll="SDBH:יזן:000000">alimentados</a>, cada <a name="02400500800010" ll="SDBH:אִישׁ:000002">cual</a> <a name="02400500800018" ll="SDBH:צהל:000000">relinchaba</a> <a name="02400500800012">tras</a> la <a name="02400500800014" ll="SDBH:אִשָּׁה:000000">mujer</a> de su prójimo. 
\v 9 ¿<a name="02400500900008;02400500900030" ll="SDBH:לֹא:000000">No</a> había de <a name="02400500900010" ll="SDBH:פקד:000006">castigar</a> <a name="02400500900006" ll="SDBH:אֵלֶּה:000000">esto</a>? <a name="02400500900012" ll="SDBH:נְאֻם:000000">dijo</a> <a name="02400500900014" ll="SDBH:יהוה:000000">Jehová</a>. De una <a name="02400500900022" ll="SDBH:גֹּוי:000000">nación</a> como ésta, ¿no se había de <a name="02400500900032" ll="SDBH:נקם:000000">vengar</a> <a name="02400500900034" ll="SDBH:נֶפֶשׁ:000001">mi</a> <a name="02400500900034" ll="SDBH:נֶפֶשׁ:000001">alma</a>? 
\v 10 <a name="02400501000002" ll="SDBH:עלה:000004">Escalad</a> sus muros y <a name="02400501000010" ll="SDBH:שׁחת:000001">destruid</a>, pero <a name="02400501000016" ll="SDBH:אַל:000000">no</a> del <a name="02400501000014" ll="SDBH:כָּלָה:000002">todo</a>; <a name="02400501000020" ll="SDBH:סור:000006">quitad</a> las almenas de sus muros, porque <a name="02400501000026" ll="SDBH:לֹא:000000">no</a> son de <a name="02400501000030" ll="SDBH:יהוה:000000">Jehová</a>. 
\v 11 Porque resueltamente <a name="02400501100004" ll="SDBH:בגד:000000">se</a> <a name="02400501100004" ll="SDBH:בגד:000000">rebelaron</a> contra mí la <a name="02400501100010" ll="SDBH:בַּיִת:000003">casa</a> de <a name="02400501100012" ll="SDBH:יִשְׂרָאֵל:000000">Israel</a> y la <a name="02400501100016" ll="SDBH:בַּיִת:000003">casa</a> de <a name="02400501100018" ll="SDBH:יְהוּדָה:000000">Judá</a>, <a name="02400501100020" ll="SDBH:נְאֻם:000000">dice</a> <a name="02400501100022" ll="SDBH:יהוה:000000">Jehová</a>. 
\v 12 <a name="02400501200002" ll="SDBH:כחשׁ:000004">Negaron</a> a <a name="02400501200006" ll="SDBH:יהוה:000000">Jehová</a>, y <a name="02400501200010" ll="SDBH:אמר:000000">dijeron</a>: <a name="02400501200014">Él</a> <a name="02400501200012" ll="SDBH:לֹא:000000">no</a> es, y <a name="02400501200018" ll="SDBH:לֹא:000000">no</a> <a name="02400501200020">vendrá</a> <a name="02400501200024" ll="SDBH:רָעָה:000002">mal</a> <a name="02400501200022">sobre</a> <a name="02400501200022">nosotros</a>, <a name="02400501200034" ll="SDBH:לֹא:000000">ni</a> <a name="02400501200036" ll="SDBH:ראה:000000">veremos</a> <a name="02400501200028" ll="SDBH:חֶרֶב:000003">espada</a> ni <a name="02400501200032" ll="SDBH:רָעָב:000000">hambre</a>; 
\v 13 antes los <a name="02400501300006" ll="SDBH:נָבִיא:000000">profetas</a> <a name="02400501300008">serán</a> como <a name="02400501300012" ll="SDBH:רוּחַ:000004">viento</a>, porque <a name="02400501300020">no</a> hay en ellos palabra; <a name="02400501300024">así</a> <a name="02400501300026">se</a> <a name="02400501300026">hará</a> a ellos.
    
\v 14 Por tanto, <a name="02400501400004">así</a> ha dicho <a name="02400501400008">Jehová</a> <a name="02400501400010" ll="SDBH:אֱלֹהִים:000002">Dios</a> de los <a name="02400501400012" ll="SDBH:צָבָא:000006">ejércitos</a>: <a name="02400501400014">Porque</a> <a name="02400501400022" ll="SDBH:דָּבָר:000002">dijeron</a> esta <a name="02400501400032" ll="SDBH:דָּבָר:000002">palabra</a>, he aquí yo pongo <a name="02400501400030">mis</a> <a name="02400501400016" ll="SDBH:דבר:001000">palabras</a> en <a name="02400501400036" ll="SDBH:פֶּה:000000">tu</a> <a name="02400501400036" ll="SDBH:פֶּה:000000">boca</a> por <a name="02400501400040" ll="SDBH:אֵשׁ:000000">fuego</a>, y a este <a name="02400501400046">pueblo</a> por <a name="02400501400052" ll="SDBH:עֵץ:000001">leña</a>, y los <a name="02400501400056" ll="SDBH:אכל:000002">consumirá</a>. 
\v 15 He aquí yo <a name="02400501500004">traigo</a> <a name="02400501500006">sobre</a> <a name="02400501500006">vosotros</a> <a name="02400501500008" ll="SDBH:גֹּוי:000000">gente</a> de <a name="02400501500012" ll="SDBH:מֶרְחָק:000000">lejos</a>, oh <a name="02400501500014" ll="SDBH:בַּיִת:000003">casa</a> de <a name="02400501500016" ll="SDBH:יִשְׂרָאֵל:000000">Israel</a>, <a name="02400501500018" ll="SDBH:נְאֻם:000000">dice</a> <a name="02400501500020" ll="SDBH:יהוה:000000">Jehová</a>; <a name="02400501500022" ll="SDBH:גֹּוי:000000">gente</a> <a name="02400501500024" ll="SDBH:אֵיתָן:000000">robusta</a>, <a name="02400501500028" ll="SDBH:גֹּוי:000000">gente</a> <a name="02400501500032" ll="SDBH:עֹולָם:000000">antigua</a>, <a name="02400501500036" ll="SDBH:גֹּוי:000000">gente</a> cuya <a name="02400501500042" ll="SDBH:לָשֹׁון:000002">lengua</a> ignorarás, y <a name="02400501500038" ll="SDBH:לֹא:000000">no</a> <a name="02400501500048">entenderás</a> lo que <a name="02400501500050" ll="SDBH:מָה:000000">hablare</a>. 
\v 16 <a name="02400501600002" ll="SDBH:אַשְׁפָּה:000000" il="Realia:2.14.3" tl="HOTTP3308">Su</a> <a name="02400501600002" ll="SDBH:אַשְׁפָּה:000000" il="Realia:2.14.3" tl="HOTTP3308">aljaba</a> como <a name="02400501600006" ll="SDBH:קֶבֶר:000000">sepulcro</a> <a name="02400501600008" ll="SDBH:פתח:000001">abierto</a>, <a name="02400501600010">todos</a> <a name="02400501600012" ll="SDBH:גִּבֹּור:000000">valientes</a>. 
\v 17 Y <a name="02400501700004" ll="SDBH:אכל:000000">comerá</a> <a name="02400501700006" ll="SDBH:קָצִיר:000002">tu</a> <a name="02400501700006" ll="SDBH:קָצִיר:000002">mies</a> y <a name="02400501700010" ll="SDBH:לֶחֶם:000000">tu</a> <a name="02400501700010" ll="SDBH:לֶחֶם:000000">pan</a>, <a name="02400501700012" ll="SDBH:אכל:000002">comerá</a> a <a name="02400501700014" ll="SDBH:בֵּן:000000">tus</a> <a name="02400501700014" ll="SDBH:בֵּן:000000">hijos</a> y a <a name="02400501700018" ll="SDBH:בַּת:000000">tus</a> <a name="02400501700018" ll="SDBH:בַּת:000000">hijas</a>; <a name="02400501700020" ll="SDBH:אכל:000002">comerá</a> <a name="02400501700022" ll="SDBH:צֹאן:000000">tus</a> <a name="02400501700022" ll="SDBH:צֹאן:000000">ovejas</a> y <a name="02400501700026" ll="SDBH:בָּקָר:000000">tus</a> <a name="02400501700026" ll="SDBH:בָּקָר:000000">vacas</a>, <a name="02400501700028" ll="SDBH:אכל:000002">comerá</a> <a name="02400501700030" ll="SDBH:גֶּפֶן:000001">tus</a> <a name="02400501700030" ll="SDBH:גֶּפֶן:000001">viñas</a> y <a name="02400501700034" ll="SDBH:תְּאֵנָה:000000">tus</a> <a name="02400501700034" ll="SDBH:תְּאֵנָה:000000">higueras</a>, y a <a name="02400501700056" ll="SDBH:חֶרֶב:000003">espada</a> <a name="02400501700036" ll="SDBH:רשׁשׁ:000000">convertirá</a> <a name="02400501700036" ll="SDBH:רשׁשׁ:000000">en</a> <a name="02400501700036" ll="SDBH:רשׁשׁ:000000">nada</a> <a name="02400501700038;02400501700040" ll="SDBH:מִבְצָר:000001;SDBH:עִיר:000000">tus</a> <a name="02400501700038;02400501700040" ll="SDBH:מִבְצָר:000001;SDBH:עִיר:000000">ciudades</a> <a name="02400501700038;02400501700040" ll="SDBH:מִבְצָר:000001;SDBH:עִיר:000000">fortificadas</a> en <a name="02400501700042">que</a> <a name="02400501700046" ll="SDBH:בטח:000001">confías</a>.
    
\v 18 <a name="02400501800020" ll="SDBH:לֹא:000000">No</a> obstante, en aquellos <a name="02400501800010" ll="SDBH:יֹום:000006">días</a>, <a name="02400501800016" ll="SDBH:נְאֻם:000000">dice</a> <a name="02400501800018" ll="SDBH:יהוה:000000">Jehová</a>, no os <a name="02400501800022">destruiré</a> del <a name="02400501800026" ll="SDBH:כָּלָה:000002">todo</a>. 
\v 19 Y <a name="02400501900006">cuando</a> <a name="02400501900008" ll="SDBH:אמר:000000">dijeren</a>: ¿<a name="02400501900010;02400501900012" ll="SDBH:מָה:000000">Por</a> <a name="02400501900010;02400501900012" ll="SDBH:מָה:000000">qué</a> <a name="02400501900016" ll="SDBH:יהוה:000000">Jehová</a> el <a name="02400501900018" ll="SDBH:אֱלֹהִים:000001">Dios</a> <a name="02400501900018" ll="SDBH:אֱלֹהִים:000001">nuestro</a> <a name="02400501900014">hizo</a> <a name="02400501900020">con</a> <a name="02400501900020">nosotros</a> <a name="02400501900024">todas</a> <a name="02400501900026" ll="SDBH:אֵלֶּה:000000">estas</a> cosas?, entonces <a name="02400501900032">les</a> <a name="02400501900030" ll="SDBH:אמר:000000">dirás</a>: <a name="02400501900034;02400501900036">De</a> <a name="02400501900034;02400501900036">la</a> <a name="02400501900034;02400501900036">manera</a> <a name="02400501900034;02400501900036">que</a> <a name="02400501900040">me</a> <a name="02400501900038" ll="SDBH:עזב:000003">dejasteis</a> a mí, y <a name="02400501900044" ll="SDBH:עבד:000002">servisteis</a> a <a name="02400501900046" ll="SDBH:אֱלֹהִים:000000">dioses</a> <a name="02400501900048" ll="SDBH:נֵכָר:000000">ajenos</a> en <a name="02400501900052" ll="SDBH:אֶרֶץ:000000">vuestra</a> <a name="02400501900052" ll="SDBH:אֶרֶץ:000000">tierra</a>, <a name="02400501900054">así</a> <a name="02400501900056" ll="SDBH:עבד:000002">serviréis</a> a <a name="02400501900058" ll="SDBH:זָר:000000">extraños</a> en <a name="02400501900062" ll="SDBH:אֶרֶץ:000000">tierra</a> <a name="02400501900064" ll="SDBH:לֹא:000000">ajena</a>.
    
\v 20 <a name="02400502000002" ll="SDBH:נגד:000000">Anunciad</a> <a name="02400502000004" ll="SDBH:זֶה:000000;SDBH:זֹה:000000">esto</a> en la <a name="02400502000008" ll="SDBH:בַּיִת:000003">casa</a> de <a name="02400502000010" ll="SDBH:יַעֲקֹב:000000">Jacob</a>, y haced que esto <a name="02400502000014">se</a> <a name="02400502000014">oiga</a> en <a name="02400502000018" ll="SDBH:יְהוּדָה:000000">Judá</a>, <a name="02400502000022" ll="SDBH:אמר:000000">diciendo</a>: 
\v 21 <a name="02400502100002">Oíd</a> <a name="02400502100004" ll="SDBH:נָא:001000">ahora</a> <a name="02400502100006" ll="SDBH:זֶה:000000;SDBH:זֹה:000000">esto</a>, <a name="02400502100008" ll="SDBH:עַם:000000">pueblo</a> <a name="02400502100010" ll="SDBH:סָכָל:000000">necio</a> y <a name="02400502100014">sin</a> <a name="02400502100016" ll="SDBH:לֵב:000003">corazón</a>, que tiene <a name="02400502100018" ll="SDBH:עַיִן:000000">ojos</a> y <a name="02400502100024" ll="SDBH:לֹא:000000">no</a> <a name="02400502100026" ll="SDBH:ראה:000000">ve</a>, que tiene <a name="02400502100028" ll="SDBH:אֹזֶן:000000">oídos</a> y <a name="02400502100034" ll="SDBH:לֹא:000000">no</a> <a name="02400502100036">oye</a>: 
\v 22 ¿A mí <a name="02400502200006;02400502200020" ll="SDBH:לֹא:000000">no</a> me <a name="02400502200008" ll="SDBH:ירא:000000">temeréis</a>? <a name="02400502200010" ll="SDBH:נְאֻם:000000">dice</a> <a name="02400502200012" ll="SDBH:יהוה:000000">Jehová</a>. ¿<a name="02400502200044" ll="SDBH:לֹא:000000">No</a> os amedrentaréis ante mí, <a name="02400502200024">que</a> <a name="02400502200026" ll="SDBH:שׂים:000005">puse</a> <a name="02400502200022" ll="SDBH:חיל:000002">arena</a> por <a name="02400502200030" ll="SDBH:גְּבוּל:000000">término</a> al <a name="02400502200036" ll="SDBH:יָם:000000">mar</a>, por <a name="02400502200038" ll="SDBH:חֹק:000005">ordenación</a> <a name="02400502200040" ll="SDBH:עֹולָם:000000">eterna</a> la cual <a name="02400502200054" ll="SDBH:לֹא:000000">no</a> <a name="02400502200046">quebrantará</a>? <a name="02400502200050" ll="SDBH:געשׁ:000000">Se</a> <a name="02400502200050" ll="SDBH:געשׁ:000000">levantarán</a> tempestades, mas <a name="02400502200066" ll="SDBH:לֹא:000000">no</a> <a name="02400502200056" ll="SDBH:יכל:000002">prevalecerán</a>; <a name="02400502200060" ll="SDBH:המה:000000">bramarán</a> <a name="02400502200062" ll="SDBH:גַּל:000000">sus</a> <a name="02400502200062" ll="SDBH:גַּל:000000">ondas</a>, mas no lo <a name="02400502200068">pasarán</a>. 
\v 23 No obstante, este <a name="02400502300008" ll="SDBH:עַם:000000">pueblo</a> <a name="02400502300014">tiene</a> <a name="02400502300016" ll="SDBH:לֵב:000001">corazón</a> <a name="02400502300018" ll="SDBH:סרר:000000">falso</a> y <a name="02400502300022" ll="SDBH:מרה:000000">rebelde</a>; <a name="02400502300024" ll="SDBH:סור:000002">se</a> <a name="02400502300024" ll="SDBH:סור:000002">apartaron</a> y se fueron. 
\v 24 Y <a name="02400502400004" ll="SDBH:לֹא:000000">no</a> <a name="02400502400006" ll="SDBH:אמר:000000">dijeron</a> en <a name="02400502400010" ll="SDBH:לֵבָב:000001">su</a> <a name="02400502400010" ll="SDBH:לֵבָב:000001">corazón</a>: <a name="02400502400012" ll="SDBH:ירא:000000">Temamos</a> <a name="02400502400014" ll="SDBH:נָא:001000">ahora</a> a <a name="02400502400018" ll="SDBH:יהוה:000000">Jehová</a> <a name="02400502400020" ll="SDBH:אֱלֹהִים:000001">Dios</a> <a name="02400502400020" ll="SDBH:אֱלֹהִים:000001">nuestro</a>, <a name="02400502400024">que</a> <a name="02400502400024">da</a> <a name="02400502400026" ll="SDBH:גֶּשֶׁם:000000">lluvia</a> <a name="02400502400030" ll="SDBH:יֹורֶה:001000">temprana</a> y <a name="02400502400034" ll="SDBH:מַלְקֹושׁ:000000">tardía</a> en <a name="02400502400038" ll="SDBH:עֵת:000000">su</a> <a name="02400502400038" ll="SDBH:עֵת:000000">tiempo</a>, y <a name="02400502400048">nos</a> <a name="02400502400046" ll="SDBH:שׁמר:000003">guarda</a> los <a name="02400502400040" ll="SDBH:שָׁבוּעַ:000000">tiempos</a> <a name="02400502400042" ll="SDBH:חֻקָּה:000001">establecidos</a> de la <a name="02400502400044" ll="SDBH:קָצִיר:000001">siega</a>. 
\v 25 Vuestras iniquidades han <a name="02400502500004" ll="SDBH:נטה:002007">estorbado</a> <a name="02400502500006" ll="SDBH:אֵלֶּה:000000">estas</a> cosas, y <a name="02400502500010" ll="SDBH:חַטָּאת:000000">vuestros</a> <a name="02400502500010" ll="SDBH:חַטָּאת:000000">pecados</a> <a name="02400502500012" ll="SDBH:מנע:000001">apartaron</a> <a name="02400502500018">de</a> <a name="02400502500018">vosotros</a> el <a name="02400502500016" ll="SDBH:טֹוב:000002">bien</a>. 
\v 26 Porque fueron <a name="02400502600004" ll="SDBH:מצא:000017">hallados</a> en <a name="02400502600008" ll="SDBH:עַם:000000">mi</a> <a name="02400502600008" ll="SDBH:עַם:000000">pueblo</a> <a name="02400502600010" ll="SDBH:רָשָׁע:000000">impíos</a>; acechaban como quien <a name="02400502600016" ll="SDBH:שׁכך:001000" tl="HOTTP3309">pone</a> lazos, <a name="02400502600020" ll="SDBH:נצב:000001">pusieron</a> trampa para <a name="02400502600026" ll="SDBH:לכד:000000">cazar</a> hombres. 
\v 27 Como <a name="02400502700004" ll="SDBH:כְּלוּב:000000">jaula</a> llena de <a name="02400502700008" ll="SDBH:עֹוף:000000">pájaros</a>, <a name="02400502700010">así</a> están <a name="02400502700012" ll="SDBH:בַּיִת:000000">sus</a> <a name="02400502700012" ll="SDBH:בַּיִת:000000">casas</a> llenas de <a name="02400502700016" ll="SDBH:מִרְמָה:000000">engaño</a>; <a name="02400502700020">así</a> se hicieron <a name="02400502700022" ll="SDBH:גדל:000006">grandes</a> y <a name="02400502700026" ll="SDBH:עשׁר:000000">ricos</a>. 
\v 28 <a name="02400502800002" ll="SDBH:שׁמן:000000">Se</a> <a name="02400502800002" ll="SDBH:שׁמן:000000">engordaron</a> y se pusieron <a name="02400502800004" ll="SDBH:עשׁת:001000">lustrosos</a>, y <a name="02400502800008">sobrepasaron</a> los <a name="02400502800010" ll="SDBH:דָּבָר:000002">hechos</a> del <a name="02400502800012" ll="SDBH:רַע:000005">malo</a>; <a name="02400502800016" ll="SDBH:לֹא:000000">no</a> <a name="02400502800018" ll="SDBH:דין:000000">juzgaron</a> la <a name="02400502800014" ll="SDBH:דִּין:000000">causa</a>, la <a name="02400502800020" ll="SDBH:דִּין:000001">causa</a> del <a name="02400502800022" ll="SDBH:יָתֹום:000000">huérfano</a>; con todo, se hicieron <a name="02400502800026" ll="SDBH:צלח:001003">prósperos</a>, y la <a name="02400502800030" ll="SDBH:מִשְׁפָּט:000003">causa</a> de los <a name="02400502800032" ll="SDBH:אֶבְיֹון:000000">pobres</a> no <a name="02400502800036" ll="SDBH:שׁפט:000000">juzgaron</a>. 
\v 29 ¿<a name="02400502900008;02400502900028" ll="SDBH:לֹא:000000">No</a> <a name="02400502900010" ll="SDBH:פקד:000006">castigaré</a> <a name="02400502900006" ll="SDBH:אֵלֶּה:000000">esto</a>? <a name="02400502900012" ll="SDBH:נְאֻם:000000">dice</a> <a name="02400502900014" ll="SDBH:יהוה:000000">Jehová</a>; ¿<a name="02400502900016">y</a> de tal <a name="02400502900020" ll="SDBH:גֹּוי:000000">gente</a> no <a name="02400502900030" ll="SDBH:נקם:000000">se</a> <a name="02400502900030" ll="SDBH:נקם:000000">vengará</a> <a name="02400502900032" ll="SDBH:נֶפֶשׁ:000001">mi</a> <a name="02400502900032" ll="SDBH:נֶפֶשׁ:000001">alma</a>?
    
\v 30 Cosa <a name="02400503000002" ll="SDBH:שַׁמָּה:000001">espantosa</a> y <a name="02400503000006" ll="SDBH:שַׁעֲרוּר:000000">fea</a> es <a name="02400503000008">hecha</a> en la <a name="02400503000014" ll="SDBH:אֶרֶץ:000000">tierra</a>; 
\v 31 los <a name="02400503100004" ll="SDBH:נָבִיא:000000">profetas</a> <a name="02400503100006" ll="SDBH:נבא:000000">profetizaron</a> <a name="02400503100012" ll="SDBH:שֶׁקֶר:000000">mentira</a>, y los <a name="02400503100018" ll="SDBH:כֹּהֵן:000000">sacerdotes</a> <a name="02400503100020" ll="SDBH:רדה:000000">dirigían</a> <a name="02400503100022">por</a> <a name="02400503100024">manos</a> de ellos; y <a name="02400503100028" ll="SDBH:עַם:000000">mi</a> <a name="02400503100028" ll="SDBH:עַם:000000">pueblo</a> <a name="02400503100032">así</a> lo <a name="02400503100030" ll="SDBH:אהב:000000">quiso</a>. ¿<a name="02400503100036" ll="SDBH:מָה:000000">Qué</a>, pues, <a name="02400503100038">haréis</a> cuando llegue el <a name="02400503100042" ll="SDBH:אַחֲרִית:000001">fin</a>?
\c 6
\v 1 <a name="02400600100002" ll="SDBH:עוז:000001">Huid</a>, <a name="02400600100004" ll="SDBH:בֵּן:000000">hijos</a> de <a name="02400600100006" ll="SDBH:בִּנְיָמִן:000000">Benjamín</a>, de en <a name="02400600100010">medio</a> de <a name="02400600100012" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">Jerusalén</a>, y <a name="02400600100020" ll="SDBH:תקע:000006">tocad</a> <a name="02400600100022" ll="SDBH:שֹׁופָר:000000">bocina</a> en <a name="02400600100018" ll="SDBH:תְּקֹועַ:000000">Tecoa</a>, y <a name="02400600100030" ll="SDBH:נשׂא:000002">alzad</a> por <a name="02400600100032" ll="SDBH:מַשְׂאֵת:000002">señal</a> <a name="02400600100032" ll="SDBH:מַשְׂאֵת:000002">humo</a> <a name="02400600100026">sobre</a> Bet-haquerem; <a name="02400600100034">porque</a> del <a name="02400600100042" ll="SDBH:צָפֹון:000001">norte</a> <a name="02400600100038">se</a> <a name="02400600100038">ha</a> <a name="02400600100038">visto</a> <a name="02400600100036" ll="SDBH:רָעָה:000002">mal</a>, y <a name="02400600100046" ll="SDBH:שֶׁבֶר:000000;SDBH:שֶׁבֶר:000001">quebrantamiento</a> <a name="02400600100048" ll="SDBH:גָּדֹול:000003">grande</a>. 
