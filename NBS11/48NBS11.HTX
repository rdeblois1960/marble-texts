    <a name="04800601700004" ll="SDBG:λοιπός:000000">Désormais</a>, que <a name="04800601700010" ll="SDBG:μηδείς:000000">personne</a> ne <a name="04800601700008" ll="SDBG:ἐγώ:000000">me</a> <a name="04800601700006;04800601700012" ll="SDBG:κόπος:000001;SDBG:παρέχω:000002">tracasse</a> ; <a name="04800601700016" ll="SDBG:γάρ:000000">car</a> <a name="04800601700014" ll="SDBG:ἐγώ:000000">moi</a>, <a name="04800601700018;04800601700020;04800601700034" ll="SDBG:βαστάζω:000007;SDBG:στίγμα:000000;SDBG:στίγμα:000001;SDBG:ὁ:000000">je</a> <a name="04800601700018;04800601700020;04800601700034" ll="SDBG:βαστάζω:000007;SDBG:στίγμα:000000;SDBG:στίγμα:000001;SDBG:ὁ:000000">porte</a> <a name="04800601700026" ll="SDBG:ἐν:000002">sur</a> <a name="04800601700032" ll="SDBG:ἐγώ:000000">mon</a> <a name="04800601700030" ll="SDBG:σῶμα:000000">corps</a> <a name="04800601700018;04800601700020;04800601700034" ll="SDBG:βαστάζω:000007;SDBG:στίγμα:000000;SDBG:στίγμα:000001;SDBG:ὁ:000000">les</a> <a name="04800601700018;04800601700020;04800601700034" ll="SDBG:βαστάζω:000007;SDBG:στίγμα:000000;SDBG:στίγμα:000001;SDBG:ὁ:000000">marques</a> de <a name="04800601700024" ll="SDBG:Ἰησοῦς:000000">Jésus</a>.
    
\v 18 
    Que la <a name="04800601800004" ll="SDBG:χάρις:000000">grâce</a> de <a name="04800601800010" ll="SDBG:ἐγώ:000001">notre</a> <a name="04800601800008" ll="SDBG:κύριος:000000">Seigneur</a> <a name="04800601800012" ll="SDBG:Ἰησοῦς:000000">Jésus</a>-<a name="04800601800014" ll="SDBG:Χριστός:000001">Christ</a> soit <a name="04800601800016" ll="SDBG:μετά:000004">avec</a> <a name="04800601800022" ll="SDBG:σύ:000001">votre</a> <a name="04800601800020" ll="SDBG:πνεῦμα:000004">esprit</a>, mes <a name="04800601800024" ll="SDBG:ἀδελφός:000001">frères</a> ! <a name="04800601800026" ll="SDBG:ἀμήν:000000">Amen</a> !
