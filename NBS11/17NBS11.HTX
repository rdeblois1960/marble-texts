\v 8 Le <a name="01700700800006" ll="SDBH:מֶלֶךְ:000000">roi</a> <a name="01700700800008" ll="SDBH:שׁוב:000023">revenait</a> <a name="01700700800010">du</a> <a name="01700700800012" ll="SDBH:גַּנָּה:000000">jardin</a> du <a name="01700700800016" ll="SDBH:בִּיתָן:000000">palais</a> à la <a name="01700700800020" ll="SDBH:בַּיִת:000000" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20120826;NBGmk20120826a;NBGmk20140917">salle</a> du <a name="01700700800022;01700700800024;01700700800026" ll="SDBH:יַיִן:000000;SDBH:מִשְׁתֶּה:000000" il="Flora:2.12a;HK00108;LB00103;LB00107;vineyard1679, rp">banquet</a> au moment où <a name="01700700800030" ll="SDBH:הָמָן:000000">Haman</a> <a name="01700700800032" ll="SDBH:נפל:000040">s</a>’<a name="01700700800032" ll="SDBH:נפל:000040">affalait</a> <a name="01700700800034">sur</a> le <a name="01700700800038" ll="SDBH:מִטָּה:000000" il="Realia:5.5b;Realia:5.5c;tb052916236">divan</a> <a name="01700700800044">où</a> <a name="01700700800044">se</a> <a name="01700700800044">trouvait</a> <a name="01700700800042" ll="SDBH:אֶסְתֵּר:000000">Esther</a>. Le <a name="01700700800052" ll="SDBH:מֶלֶךְ:000000">roi</a> s’<a name="01700700800048" ll="SDBH:אמר:000000">écria</a> : Et <a name="01700700800056" ll="SDBH:גַּם:000000">en</a> <a name="01700700800056" ll="SDBH:גַּם:000000">plus</a>, <a name="01700700800060">on</a> <a name="01700700800060">fait</a> <a name="01700700800060">violence</a> à la <a name="01700700800066" ll="SDBH:מַלְכָּה:000000">reine</a> <a name="01700700800068">en</a> <a name="01700700800068">ma</a> <a name="01700700800068">présence</a>, <a name="01700700800070">dans</a> cette <a name="01700700800074" ll="SDBH:בַּיִת:000003">maison</a> ! Cette <a name="01700700800078" ll="SDBH:דָּבָר:000000">parole</a> <a name="01700700800080" ll="SDBH:יצא:000040">à</a> <a name="01700700800080" ll="SDBH:יצא:000040">peine</a> <a name="01700700800080" ll="SDBH:יצא:000040">sortie</a> <a name="01700700800082">de</a> la <a name="01700700800084" ll="SDBH:פֶּה:000000">bouche</a> du <a name="01700700800088" ll="SDBH:מֶלֶךְ:000000">roi</a>, <a name="01700700800096" ll="SDBH:חפה:000000">on</a> <a name="01700700800096" ll="SDBH:חפה:000000">voila</a> le <a name="01700700800092" ll="SDBH:פָּנֶה:000000">visage</a> de <a name="01700700800094" ll="SDBH:הָמָן:000000">Haman</a>. 
\v 9 Alors, <a name="01700700900018">devant</a> le <a name="01700700900022" ll="SDBH:מֶלֶךְ:000000">roi</a>, <a name="01700700900006" ll="SDBH:חַרְבֹונָא:000000">Harbona</a>, l’<a name="01700700900008" ll="SDBH:אֶחָד:000000">un</a> <a name="01700700900010">des</a> <a name="01700700900014" ll="SDBH:סָרִיס:000000" il="adr060218017">eunuques</a>, <a name="01700700900004" ll="SDBH:אמר:000000">dit</a> : <a name="01700700900026">Il</a> <a name="01700700900026">y</a> <a name="01700700900026">a</a> <a name="01700700900024" ll="SDBH:גַּם:000000">justement</a> la <a name="01700700900030" ll="SDBH:עֵץ:000003">potence</a> que <a name="01700700900036" ll="SDBH:הָמָן:000000">Haman</a> <a name="01700700900034;01700700900054">a</a> <a name="01700700900034;01700700900054">dressée</a> <a name="01700700900058" ll="SDBH:בַּיִת:000000" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20120826;NBGmk20120826a;NBGmk20140917">chez</a> <a name="01700700900060" ll="SDBH:הָמָן:000000">lui</a> <a name="01700700900038">pour</a> <a name="01700700900040" ll="SDBH:מָרְדֳּכַי:000001">Mardochée</a>, qui <a name="01700700900044" ll="SDBH:דבר:001000">a</a> <a name="01700700900044" ll="SDBH:דבר:001000">parlé</a> pour le <a name="01700700900046" ll="SDBH:טֹוב:000002">bien</a> du <a name="01700700900052" ll="SDBH:מֶלֶךְ:000000">roi</a> ; <a name="01700700900062" ll="SDBH:גָּבֹהַּ:000000">elle</a> <a name="01700700900062" ll="SDBH:גָּבֹהַּ:000000">est</a> <a name="01700700900062" ll="SDBH:גָּבֹהַּ:000000">haute</a> de <a name="01700700900064" ll="SDBH:חָמֵשׁ:000001">cinquante</a> <a name="01700700900066" ll="SDBH:אַמָּה:000000" il="Cubit;adr1603194697">coudées</a> ! Le <a name="01700700900074" ll="SDBH:מֶלֶךְ:000000">roi</a> <a name="01700700900070" ll="SDBH:אמר:000000">dit</a> : <a name="01700700900076" ll="SDBH:תלה:000000">Qu</a>’<a name="01700700900076" ll="SDBH:תלה:000000">on</a> <a name="01700700900076" ll="SDBH:תלה:000000">l</a>’<a name="01700700900078">y</a> <a name="01700700900076" ll=