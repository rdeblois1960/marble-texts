\c 8
\v 1 
    <a name="01700800100010">Ce</a> même <a name="01700800100006" ll="SDBH:יֹום:000001">jour</a>, le <a name="01700800100016" ll="SDBH:מֶלֶךְ:000000">roi</a> <a name="01700800100018" ll="SDBH:אֲחַשְׁוֵרֹושׁ:000000" il="Foundation_slab_of_Xerxes;tb061616803;tb072705204">Xerxès</a> <a name="01700800100012">fit</a> <a name="01700800100012">don</a> à la <a name="01700800100026" ll="SDBH:מַלְכָּה:000000">reine</a> <a name="01700800100022" ll="SDBH:אֶסְתֵּר:000000">Esther</a> de la <a name="01700800100030" ll="SDBH:בַּיִת:000000" il="HK00232;LB00235;NBGbs20090430-1_87;NBGbs20110223-127;NBGmk20120826;NBGmk20120826a;NBGmk20140917">maison</a> de <a name="01700800100032" ll="SDBH:הָמָן:000000">Haman</a>, l’<a name="01700800100034" ll="SDBH:צרר:000009">adversaire</a> des <a name="01700800100040;01700800100042" ll="SDBH:יְהוּדִי:000001">Juifs</a>, et <a name="01700800100046" ll="SDBH:מָרְדֳּכַי:000001">Mardochée</a> <a name="01700800100048">se</a> <a name="01700800100048">présenta</a> <a name="01700800100052">devant</a> le <a name="01700800100056" ll="SDBH:מֶלֶךְ:000000">roi</a>, <a name="01700800100058">car</a> <a name="01700800100062" ll="SDBH:אֶסְתֵּר:000000">Esther</a> <a name="01700800100060" ll="SDBH:נגד:000000">avait</a> <a name="01700800100060" ll="SDBH:נגד:000000">dit</a> <a name="01700800100064" ll="SDBH:מָה:000000">ce</a> <a name="01700800100064" ll="SDBH:מָה:000000">qu</a>’<a name="01700800100066">il</a> <a name="01700800100066">était</a> <a name="01700800100068">pour</a> <a name="01700800100068">elle</a>. 
