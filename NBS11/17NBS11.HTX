\v 2 En ce <a name="01700700200024" ll="SDBH:שֵׁנִי:000000">deuxième</a> <a name="01700700200020" ll="SDBH:יֹום:000001">jour</a> <a name="01700700200014" ll="SDBH:גַּם:000000">également</a>, pendant le <a name="01700700200028;01700700200030;01700700200032" ll="SDBH:יַיִן:000000;SDBH:מִשְׁתֶּה:000000" il="Flora:2.12a;HK00108;LB00103;LB00107;vineyard1679, rp">banquet</a>, le <a name="01700700200008" ll="SDBH:מֶלֶךְ:000000">roi</a> <a name="01700700200004" ll="SDBH:אמר:000000">dit</a> à <a name="01700700200012" ll="SDBH:אֶסְתֵּר:000000">Esther</a> : <a name="01700700200034" ll="SDBH:מָה:000000">Quelle</a> est <a name="01700700200036" ll="SDBH:שְׁאֵלָה:000000">ta</a> <a name="01700700200036" ll="SDBH:שְׁאֵלָה:000000">demande</a>, <a name="01700700200042" ll="SDBH:מַלְכָּה:000000">reine</a> <a name="01700700200038" ll="SDBH:אֶסְתֵּר:000000">Esther</a> ? <a name="01700700200046">Elle</a> <a name="01700700200048">te</a> <a name="01700700200046">sera</a> <a name="01700700200046">accordée</a> ! <a name="01700700200052" ll="SDBH:מָה:000000">Quelle</a> est <a name="01700700200054" ll="SDBH:בַּקָּשָׁה:000000">ta</a> <a name="01700700200054" ll="SDBH:בַּקָּשָׁה:000000">requête</a> ? <a name="01700700200056" ll="SDBH:עַד:000016">Jusqu</a>’<a name="01700700200056" ll="SDBH:עַד:000016">à</a> la <a name="01700700200058" ll="SDBH:חֲצִי:000000">moitié</a> du <a name="01700700200062" ll="SDBH:מַלְכוּת:000000">royaume</a>, <a name="01700700200066">elle</a> <a name="01700700200066">sera</a> <a name="01700700200066">exaucée</a> ! 
\v 3 La <a name="01700700300010" ll="SDBH:מַלְכָּה:000000">reine</a> <a name="01700700300006" ll="SDBH:אֶסְתֵּר:000000">Esther</a> <a name="01700700300004;01700700300014" ll="SDBH:אמר:000000;SDBH:ענה:000000">répondit</a> : <a name="01700700300016">Si</a> <a name="01700700300018" ll="SDBH:מצא:000007">j</a>’<a name="01700700300018" ll="SDBH:מצא:000007">ai</a> <a name="01700700300018" ll="SDBH:מצא:000007">trouvé</a> <a name="01700700300020" ll="SDBH:חֵן:000001">grâce</a> à <a name="01700700300024" ll="SDBH:עַיִן:000000">tes</a> <a name="01700700300024" ll="SDBH:עַיִן:000000">yeux</a>, ô <a name="01700700300028" ll="SDBH:מֶלֶךְ:000000">roi</a>, et <a name="01700700300032">si</a> tel est ton <a name="01700700300040" ll="SDBH:טֹוב:000002">bon</a> plaisir, ô <a name="01700700300038" ll="SDBH:מֶלֶךְ:000000">roi</a>, qu’<a name="01700700300042">on</a> <a name="01700700300044">m</a>’<a name="01700700300042">accorde</a> <a name="01700700300046" ll="SDBH:נֶפֶשׁ:000001">ma</a> <a name="01700700300046" ll="SDBH:נֶפֶשׁ:000001">propre</a> <a name="01700700300046" ll="SDBH:נֶפֶשׁ:000001">vie</a> pour <a name="01700700300050" ll="SDBH:שְׁאֵלָה:000000">ma</a> <a name="01700700300050" ll="SDBH:שְׁאֵלָה:000000">demande</a>, et <a name="01700700300054" ll="SDBH:עַם:000000">mon</a> <a name="01700700300054" ll="SDBH:עַם:000000">peuple</a> pour <a name="01700700300058" ll="SDBH:בַּקָּשָׁה:000000">ma</a> <a name="01700700300058" ll="SDBH:בַּקָּשָׁה:000000">requête</a> ! 
\v 4 <a name="01700700400002">Car</a> <a name="01700700400004" ll="SDBH:מכר:000000">nous</a> <a name="01700700400004" ll="SDBH:מכר:000000">avons</a> <a name="01700700400004" ll="SDBH:מכר:000000">été</a> <a name="01700700400004" ll="SDBH:מכר:000000">vendus</a>, <a name="01700700400006">moi</a> et <a name="01700700400010" ll="SDBH:עַם:000000">mon</a> <a name="01700700400010" ll="SDBH:עַם:000000">peuple</a> : on veut nous <a name="01700700400014" ll="SDBH:שׁמד:000000">détruire</a>, nous <a name="01700700400018" ll="SDBH:הרג:000000">tuer</a>, nous <a name="01700700400024" ll="SDBH:אבד:000005">faire</a> <a name="01700700400024" ll="SDBH:אבד:000005">disparaître</a> ! <a name="01700700400028" ll="SDBH:אִלּוּ:000000">Si</a> encore <a name="01700700400040" ll="SDBH:מכר:000000">nous</a> <a name="01700700400040" ll="SDBH:מכר:000000">avions</a> <a name="01700700400040" ll="SDBH:מכר:000000">été</a> <a name="01700700400040" ll="SDBH:מכר:000000">vendus</a> comme <a name="01700700400032" ll="SDBH:עֶבֶד:000000" il="Bolen00049">esclaves</a> et comme <a name="01700700400038" ll="SDBH:שִׁפְחָה:000000">servantes</a>, <a name="01700700400042" ll="SDBH:חרשׁ:001001">je</a> <a name="01700700400042" ll="SDBH:חרשׁ:001001">n</a>’<a name="01700700400042" ll="SDBH:חרשׁ:001001">aurais</a> <a name="01700700400042" ll="SDBH:חרשׁ:001001">rien</a> <a name="01700700400042" ll="SDBH:חרשׁ:001001">dit</a> ; mais l’<a name="01700700400050" ll="SDBH:צַר:000002">adversaire</a> <a name="01700700400046">ne</a> <a name="01700700400052" ll="SDBH:שׁוה:000000">vaut</a> <a name="01700700400046">pas</a> le <a name="01700700400056" ll="SDBH:נֵזֶק:000000">dommage</a> causé au <a name="01700700400060" ll="SDBH:מֶלֶךְ:000000">roi</a>.
    
