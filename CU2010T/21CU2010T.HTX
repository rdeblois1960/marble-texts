\id ECC
\c 1
\v 1 在​<a name="02100100100014" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​作​<a name="02100100100010" ll="SDBH:מֶלֶךְ:000000">王</a>​、​<a name="02100100100008" ll="SDBH:דָּוִד:000000">大衛</a>​的​<a name="02100100100006" ll="SDBH:בֵּן:000000">兒子</a>​、​<a name="02100100100004" ll="SDBH:קֹהֶלֶת:000000">傳道者</a>​的​<a name="02100100100002" ll="SDBH:דָּבָר:000000">言語</a>​。
    
\v 2 <a name="02100100200008" ll="SDBH:קֹהֶלֶת:000000">傳道者</a>​<a name="02100100200006" ll="SDBH:אמר:000000">說</a>​：​<a name="02100100200004" ll="SDBH:הֶבֶל:000002">虛空</a>​的​<a name="02100100200002" ll="SDBH:הֶבֶל:000002">虛空</a>​，​<a name="02100100200012" ll="SDBH:הֶבֶל:000002">虛空</a>​的​<a name="02100100200010" ll="SDBH:הֶבֶל:000002">虛空</a>​，​<a name="02100100200016">全</a>​是​<a name="02100100200018" ll="SDBH:הֶבֶל:000002">虛空</a>​。
    
\v 3 <a name="02100100300010" ll="SDBH:אָדָם:000000">人</a>​<a name="02100100300014">一切</a>​的​<a name="02100100300016" ll="SDBH:עָמָל:000000">勞碌</a>​，​就是​他​在​<a name="02100100300026" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​的​<a name="02100100300020" ll="SDBH:עמל:000000">勞碌</a>​，​有​甚麼​<a name="02100100300004" ll="SDBH:יִתְרֹון:000000">益處</a>​呢​？
    
\v 4 一​<a name="02100100400002" ll="SDBH:דֹּור:001000">代</a>​<a name="02100100400004" ll="SDBH:הלך:000008">過去</a>​，​一​<a name="02100100400008" ll="SDBH:דֹּור:001000">代</a>​又​<a name="02100100400010">來</a>​，​<a name="02100100400016" ll="SDBH:אֶרֶץ:000000">地</a>​卻​<a name="02100100400020" ll="SDBH:עֹולָם:000000">永遠</a>​<a name="02100100400022">長存</a>​。
    
\v 5 <a name="02100100500008" ll="SDBH:שֶׁמֶשׁ:000000">太陽</a>​<a name="02100100500004" ll="SDBH:זרח:000000">上升</a>​，​<a name="02100100500016" ll="SDBH:שֶׁמֶשׁ:000000">太陽</a>​<a name="02100100500012">落下</a>​，​<a name="02100100500024" ll="SDBH:שׁאף:000000">急歸</a>​所​<a name="02100100500026" ll="SDBH:זרח:000000">出</a>​之​<a name="02100100500022" ll="SDBH:מָקֹום:000000">地</a>​。
    
\v 6 <a name="02100100600024" ll="SDBH:רוּחַ:000004">風</a>​往​<a name="02100100600006" ll="SDBH:דָּרֹום:000000">南</a>​<a name="02100100600002" ll="SDBH:הלך:000000">颳</a>​，​又​向​<a name="02100100600014" ll="SDBH:צָפֹון:000001">北</a>​<a name="02100100600010">轉</a>​，​<a name="02100100600016;02100100600018;02100100600020" ll="SDBH:הלך:000000">不停</a>​<a name="02100100600016;02100100600018;02100100600020" ll="SDBH:הלך:000000">旋轉</a>​，​<a name="02100100600030;02100100600032" ll="SDBH:סָבִיב:000000;SDBH:שׁוב:000022">繞</a>​<a name="02100100600030;02100100600032" ll="SDBH:סָבִיב:000000;SDBH:שׁוב:000022">回</a>​<a name="02100100600030;02100100600032" ll="SDBH:סָבִיב:000000;SDBH:שׁוב:000022">原路</a>​。
    
\v 7 <a name="02100100700006" ll="SDBH:נַחַל:000000">江河</a>​<a name="02100100700002">都</a>​往​<a name="02100100700014" ll="SDBH:יָם:000000">海</a>​裏​<a name="02100100700008" ll="SDBH:הלך:000000">流</a>​，​<a name="02100100700020" ll="SDBH:יָם:000000">海</a>​卻​<a name="02100100700022">不</a>​<a name="02100100700024" ll="SDBH:מָלֵא:000000">滿</a>​；​<a name="02100100700034" ll="SDBH:נַחַל:000000">江河</a>​從​<a name="02100100700028" ll="SDBH:מָקֹום:000000">何處</a>​<a name="02100100700036" ll="SDBH:הלך:000000">流</a>​，​仍​<a name="02100100700042;02100100700046" ll="SDBH:הלך:000000;SDBH:שׁוב:000022">歸回</a>​原處​。
    
\v 8 <a name="02100100800002;02100100800006" ll="SDBH:דָּבָר:000002">萬事</a>​<a name="02100100800008" ll="SDBH:יָגֵעַ:000000">令</a>​<a name="02100100800008" ll="SDBH:יָגֵעַ:000000">人</a>​<a name="02100100800008" ll="SDBH:יָגֵעַ:000000">厭倦</a>​，​<a name="02100100800014">人</a>​不​<a name="02100100800012" ll="SDBH:יכל:000000">能</a>​<a name="02100100800018" ll="SDBH:דבר:001000">說盡</a>​。​<a name="02100100800024" ll="SDBH:עַיִן:000000">眼</a>​<a name="02100100800028" ll="SDBH:ראה:000000">看</a>​，​看​不​<a name="02100100800022" ll="SDBH:שׂבע:000006">飽</a>​；​<a name="02100100800036" ll="SDBH:אֹזֶן:000000">耳</a>​<a name="02100100800040">聽</a>​，​聽​<a name="02100100800034" ll="SDBH:מלא:000015">不足</a>​。
    
\v 9 已​<a name="02100100900006">有</a>​的​事​，​後​必​再​<a name="02100100900012">有</a>​；​已​<a name="02100100900020">行</a>​的​事​，​後​必​再​<a name="02100100900026">行</a>​。​<a name="02100100900040" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​並​<a name="02100100900030">無</a>​<a name="02100100900034" ll="SDBH:חָדָשׁ:000001">新</a>​事​。
    
\v 10 <a name="02100101000002">有</a>​一​件​<a name="02100101000004" ll="SDBH:דָּבָר:000002">事</a>​人​指​着​<a name="02100101000008" ll="SDBH:אמר:000000">說</a>​：​「​<a name="02100101000010" ll="SDBH:ראה:000000">看</a>​，​這​是​<a name="02100101000014" ll="SDBH:חָדָשׁ:000001">新</a>​的​！​」​它​在​我們​<a name="02100101000034">以前</a>​的​<a name="02100101000024" ll="SDBH:עֹולָם:000000">世代</a>​早已​<a name="02100101000028">有</a>​了​。
    
\v 11 <a name="02100101100010" ll="SDBH:רִאשֹׁון:000000">已過</a>​的​事​，​<a name="02100101100002">無</a>​人​<a name="02100101100004" ll="SDBH:זִכָּרֹון:000000">記念</a>​；​<a name="02100101100020" ll="SDBH:אַחֲרֹון:000001">將來</a>​的​事​，​<a name="02100101100044" ll="SDBH:אַחֲרֹון:000001">後來</a>​的​人​也​不​<a name="02100101100032" ll="SDBH:זִכָּרֹון:000000">記念</a>​。
    
\v 12 我​<a name="02100101200004" ll="SDBH:קֹהֶלֶת:000000">傳道者</a>​在​<a name="02100101200016" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​<a name="02100101200006">作</a>​過​<a name="02100101200012" ll="SDBH:יִשְׂרָאֵל:000000">以色列</a>​的​<a name="02100101200008" ll="SDBH:מֶלֶךְ:000000">王</a>​。 
\v 13 我​用​<a name="02100101300024" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100101300004;02100101300008" ll="SDBH:לֵב:000001">專心</a>​<a name="02100101300012" ll="SDBH:דרשׁ:000007">探尋</a>​、​<a name="02100101300018" ll="SDBH:תור:000003">考察</a>​<a name="02100101300038" ll="SDBH:שָׁמַיִם:000000">天下</a>​所​<a name="02100101300032">發生</a>​的​<a name="02100101300028">一切</a>​事​：​<a name="02100101300048" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100101300046">給</a>​<a name="02100101300052;02100101300056" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​何等​<a name="02100101300044" ll="SDBH:רַע:000004">沉重</a>​的​<a name="02100101300042" ll="SDBH:עִנְיָן:000000">擔子</a>​，​使​他們​在​其中​<a name="02100101300060" ll="SDBH:ענה:002000">勞苦</a>​！ 
\v 14 我​<a name="02100101400002" ll="SDBH:ראה:000000">見</a>​<a name="02100101400020" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100101400014">發生</a>​的​<a name="02100101400006">一切</a>​<a name="02100101400010" ll="SDBH:מַעֲשֶׂה:000000">事</a>​，​看​哪​，​<a name="02100101400028">全</a>​是​<a name="02100101400030" ll="SDBH:הֶבֶל:000002">虛空</a>​，​全​是​<a name="02100101400034;02100101400036" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕風</a>​。
    
\v 15 <a name="02100101500002" ll="SDBH:עות:000000">彎曲</a>​的​，​不​<a name="02100101500006" ll="SDBH:יכל:000000">能</a>​<a name="02100101500010" ll="SDBH:תקן:000000">變直</a>​；​<a name="02100101500014" ll="SDBH:חֶסְרֹון:000000">缺乏</a>​<a name="02100101500014" ll="SDBH:חֶסְרֹון:000000">的</a>​，​<a name="02100101500018;02100101500022" ll="SDBH:יכל:000000;SDBH:מנה:000000">不計其數</a>​。
    
\v 16 我​<a name="02100101600008" ll="SDBH:לֵב:000001">心</a>​裏​<a name="02100101600002" ll="SDBH:דבר:001000">說</a>​：​「​看​哪​，​我​<a name="02100101600018;02100101600022" ll="SDBH:גדל:000010">大</a>​有​<a name="02100101600024" ll="SDBH:חָכְמָה:000000">智慧</a>​，​勝過​在​我​<a name="02100101600036">以前</a>​<a name="02100101600028">所有</a>​統治​<a name="02100101600040" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​的​人​；​我​的​<a name="02100101600044" ll="SDBH:לֵב:000001">心</a>​也​<a name="02100101600048">多</a>​<a name="02100101600046" ll="SDBH:ראה:000000">經歷</a>​<a name="02100101600050" ll="SDBH:חָכְמָה:000000">智慧</a>​和​<a name="02100101600054" ll="SDBH:דַּעַת:000000">知識</a>​的​事​。​」 
\v 17 我​<a name="02100101700004;02100101700006" ll="SDBH:לֵב:000001">專心</a>​想要​<a name="02100101700010">明白</a>​<a name="02100101700012" ll="SDBH:חָכְמָה:000000">智慧</a>​，​想要​<a name="02100101700016" ll="SDBH:דַּעַת:000000">明白</a>​<a name="02100101700018" ll="SDBH:הֹולֵלֹות:000000">狂妄</a>​與​<a name="02100101700022">愚昧</a>​，​方​<a name="02100101700024">知</a>​這​也​是​<a name="02100101700034;02100101700036" ll="SDBH:רַעְיֹון:000001;SDBH:רוּחַ:000004">捕風</a>​。
    
\v 18 因為​<a name="02100101800006" ll="SDBH:רֹב:000001">多</a>​有​<a name="02100101800008" ll="SDBH:חָכְמָה:000000">智慧</a>​，​就​<a name="02100101800010" ll="SDBH:רֹב:000001">多</a>​有​<a name="02100101800012" ll="SDBH:כַּעַס:000000">愁煩</a>​；​<a name="02100101800016">增加</a>​<a name="02100101800018" ll="SDBH:דַּעַת:000000">知識</a>​，​就​<a name="02100101800020">增加</a>​<a name="02100101800022" ll="SDBH:מַכְאֹוב:000001">憂傷</a>​。
\c 2
\v 1 我​<a name="02100200100008" ll="SDBH:לֵב:000001">心</a>​裏​<a name="02100200100002" ll="SDBH:אמר:000000">說</a>​：​「​<a name="02100200100010" ll="SDBH:הלך:000004">來</a>​吧​，​讓​我​用​<a name="02100200100018" ll="SDBH:שִׂמְחָה:000000">喜樂</a>​<a name="02100200100014" ll="SDBH:נסה:000000">試試</a>​你​，​使​你​<a name="02100200100022;02100200100026" ll="SDBH:טֹוב:000002;SDBH:ראה:000000">享福</a>​！​」​看​哪​，​這​也​是​<a name="02100200100036" ll="SDBH:הֶבֶל:000002">虛空</a>​。 
\v 2 論​<a name="02100200200004" ll="SDBH:שְׂחֹוק:000000">嬉笑</a>​，​我​<a name="02100200200006" ll="SDBH:אמר:000000">說</a>​：​「​這​是​<a name="02100200200008" ll="SDBH:הלל:002000">狂妄</a>​。​」​論​<a name="02100200200014" ll="SDBH:שִׂמְחָה:000000">享樂</a>​，​「​這​有​甚麼​<a name="02100200200020">用</a>​呢​？​」 
\v 3 我​<a name="02100200300024" ll="SDBH:לֵב:000001">心</a>​以​<a name="02100200300032" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100200300026">引導</a>​我​，​我​<a name="02100200300006" ll="SDBH:לֵב:000001">心</a>​<a name="02100200300006" ll="SDBH:לֵב:000001">裏</a>​<a name="02100200300002" ll="SDBH:תור:000003">探究</a>​，​如何​用​<a name="02100200300016" ll="SDBH:יַיִן:000000">酒</a>​<a name="02100200300010" ll="SDBH:משׁך:000007">使</a>​<a name="02100200300020" ll="SDBH:בָּשָׂר:000001">身體</a>​<a name="02100200300010" ll="SDBH:משׁך:000007">舒暢</a>​，​如何​<a name="02100200300038" ll="SDBH:אחז:000004">抓住</a>​<a name="02100200300042" ll="SDBH:סִכְלוּת:000000">愚昧</a>​，​直​等​我​<a name="02100200300048" ll="SDBH:ראה:000000">看明</a>​<a name="02100200300058;02100200300062" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​在​<a name="02100200300072" ll="SDBH:שָׁמַיִם:000000">天下</a>​<a name="02100200300074;02100200300076" ll="SDBH:יֹום:000004;SDBH:מִסְפָּר:000003">短暫</a>​<a name="02100200300078" ll="SDBH:חַיִּים:000000">一生</a>​中​，​當​<a name="02100200300066">行</a>​何事​為​<a name="02100200300054" ll="SDBH:טֹוב:000002">美</a>​。 
\v 4 我​<a name="02100200400002;02100200400004" ll="SDBH:גדל:000010;SDBH:מַעֲשֶׂה:000003">大興土木</a>​，​為​自己​<a name="02100200400006" ll="SDBH:בנה:000000">建造</a>​<a name="02100200400010" ll="SDBH:בַּיִת:000000">房屋</a>​，​<a name="02100200400012" ll="SDBH:נטע:000000">栽</a>​<a name="02100200400016" ll="SDBH:כֶּרֶם:000000">葡萄園</a>​， 
\v 5 <a name="02100200500002">修造</a>​<a name="02100200500006" ll="SDBH:גַּנָּה:000000">庭園</a>​和​<a name="02100200500010" ll="SDBH:פַּרְדֵּס:000000">公園</a>​，​在​其​中​<a name="02100200500014" ll="SDBH:נטע:000000">栽種</a>​<a name="02100200500020">各樣</a>​<a name="02100200500018;02100200500022" ll="SDBH:עֵץ:000000;SDBH:פְּרִי:000000">果樹</a>​， 
\v 6 <a name="02100200600002">挖造</a>​<a name="02100200600006;02100200600008" ll="SDBH:בְּרֵכָה:000000;SDBH:מַיִם:000000">水池</a>​，​用以​<a name="02100200600012" ll="SDBH:שׁקה:000001">灌溉</a>​<a name="02100200600016" ll="SDBH:יַעַר:000001">林</a>​中​的​<a name="02100200600018" ll="SDBH:צמח:000000">幼</a>​<a name="02100200600020" ll="SDBH:עֵץ:000000">樹</a>​。 
\v 7 我​<a name="02100200700002" ll="SDBH:קנה:000000">買</a>​了​<a name="02100200700004;02100200700008" ll="SDBH:עֶבֶד:000000;SDBH:שִׁפְחָה:000000">僕婢</a>​，​也​<a name="02100200700016">有</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">生</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">在</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">家</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">中</a>​<a name="02100200700012;02100200700014" ll="SDBH:בֵּן:000003;SDBH:בַּיִת:000003">的</a>​僕婢​；​又​<a name="02100200700032">有</a>​<a name="02100200700030">許多</a>​<a name="02100200700024" ll="SDBH:בָּקָר:000000">牛羣</a>​<a name="02100200700028" ll="SDBH:צֹאן:000000">羊羣</a>​，​勝過​我​<a name="02100200700046">以前</a>​<a name="02100200700038">所有</a>​在​<a name="02100200700050" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​的​人​。 
\v 8 我​為​自己​<a name="02100200800002" ll="SDBH:כנס:000000">積蓄</a>​<a name="02100200800008;02100200800012" ll="SDBH:זָהָב:000000;SDBH:כֶּסֶף:000000">金銀</a>​，​搜集​各​<a name="02100200800018" ll="SDBH:מֶלֶךְ:000000">君王</a>​、​各​<a name="02100200800024" ll="SDBH:מְדִינָה:000000">省份</a>​的​<a name="02100200800016" ll="SDBH:סְגֻלָּה:000000">財寶</a>​；​又​為​自己​<a name="02100200800026">得</a>​<a name="02100200800030;02100200800034" ll="SDBH:שׁיר:000000">男女</a>​<a name="02100200800030;02100200800034" ll="SDBH:שׁיר:000000">歌手</a>​和​<a name="02100200800040;02100200800044" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​所​<a name="02100200800038" ll="SDBH:תַּעֲנוּג:000000">喜愛</a>​的​物​，​以及​一個又一個​的​<a name="02100200800046;02100200800050" ll="SDBH:שִׁדָּה:000000;SDBH:שִׁדָּה:001000" tl="HOTTP2858">妃嬪</a>​。
    
\v 9 這樣​，​我​就​日漸​<a name="02100200900004" ll="SDBH:גדל:000006">昌盛</a>​，​<a name="02100200900008">勝過</a>​我​<a name="02100200900020">以前</a>​<a name="02100200900012">所有</a>​在​<a name="02100200900024" ll="SDBH:יְרוּשָׁלַ͏ִם:000000">耶路撒冷</a>​的​人​。​我​的​<a name="02100200900028" ll="SDBH:חָכְמָה:000000">智慧</a>​仍然​<a name="02100200900030">存留</a>​。 
\v 10 <a name="02100201000004">凡</a>​我​<a name="02100201000010" ll="SDBH:עַיִן:000000">眼</a>​所​<a name="02100201000008" ll="SDBH:שׁאל:000000">求</a>​的​，​我​沒有​<a name="02100201000014" ll="SDBH:אצל:000001">克制</a>​它​；​我​<a name="02100201000024" ll="SDBH:לֵב:000001">心</a>​<a name="02100201000030" ll="SDBH:שִׂמְחָה:000000">所</a>​<a name="02100201000030" ll="SDBH:שִׂמְחָה:000000">樂</a>​<a name="02100201000030" ll="SDBH:שִׂמְחָה:000000">的</a>​，​我​沒有​<a name="02100201000020" ll="SDBH:מנע:000001">不</a>​<a name="02100201000020" ll="SDBH:מנע:000001">享受</a>​。​因​我​的​<a name="02100201000034" ll="SDBH:לֵב:000001">心</a>​要​為​<a name="02100201000040">一切</a>​<a name="02100201000040">的</a>​<a name="02100201000042" ll="SDBH:עָמָל:000000">勞碌</a>​<a name="02100201000036" ll="SDBH:שָׂמֵחַ:000000">快樂</a>​，​這​<a name="02100201000048">是</a>​我​從​<a name="02100201000054">一切</a>​<a name="02100201000056" ll="SDBH:עָמָל:000000">勞碌</a>​中​所​得​的​<a name="02100201000050" ll="SDBH:חֵלֶק:000004">報償</a>​。 
\v 11 後來​，​我​<a name="02100201100004" ll="SDBH:פנה:000002">回顧</a>​我​<a name="02100201100018">手</a>​所​<a name="02100201100016">經營</a>​的​<a name="02100201100010">一切</a>​和​我​<a name="02100201100026;02100201100030" ll="SDBH:עָמָל:000000;SDBH:עמל:000000">勞碌</a>​所​<a name="02100201100034">做</a>​的​工​。​看​哪​，​<a name="02100201100042">全</a>​是​<a name="02100201100044" ll="SDBH:הֶבֶל:000002">虛空</a>​，​全​是​<a name="02100201100048;02100201100050" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕風</a>​；​在​<a name="02100201100062" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100201100054">毫無</a>​<a name="02100201100056" ll="SDBH:יִתְרֹון:000000">益處</a>​。
    
\v 12 我​<a name="02100201200004" ll="SDBH:פנה:000002">轉</a>​而​<a name="02100201200010" ll="SDBH:ראה:000000">回顧</a>​<a name="02100201200012" ll="SDBH:חָכְמָה:000000">智慧</a>​、​<a name="02100201200016" ll="SDBH:הֹולֵלֹות:000000">狂妄</a>​和​<a name="02100201200020" ll="SDBH:סִכְלוּת:000000">愚昧</a>​。​在​<a name="02100201200038" ll="SDBH:מֶלֶךְ:000000" tl="HOTTP2860">王</a>​以後​<a name="02100201200032">來</a>​的​<a name="02100201200028" ll="SDBH:אָדָם:000000" tl="HOTTP2859">人</a>​又​如何​呢​？​不過​做​<a name="02100201200044">先前</a>​所​<a name="02100201200046">做</a>​的​就​是​了​。 
\v 13 於是​我​<a name="02100201300004" ll="SDBH:ראה:000000">看出</a>​<a name="02100201300018" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100201300012" ll="SDBH:יִתְרֹון:000000">勝過</a>​<a name="02100201300024" ll="SDBH:סִכְלוּת:000000">愚昧</a>​，​如同​<a name="02100201300032" ll="SDBH:אֹור:000000">光明</a>​<a name="02100201300028" ll="SDBH:יִתְרֹון:000000">勝過</a>​<a name="02100201300038" ll="SDBH:חֹשֶׁךְ:000000">黑暗</a>​。 
\v 14 <a name="02100201400004" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​的​<a name="02100201400006" ll="SDBH:עַיִן:000000">眼目</a>​光明​，​<a name="02100201400016" ll="SDBH:כְּסִיל:000000">愚昧人</a>​卻​在​<a name="02100201400022" ll="SDBH:חֹשֶׁךְ:000000">黑暗</a>​裏​<a name="02100201400024" ll="SDBH:הלך:000004">行</a>​。​但​我​<a name="02100201400028">知道</a>​他們​<a name="02100201400044">都</a>​有​<a name="02100201400038" ll="SDBH:אֶחָד:000000">相同</a>​的​<a name="02100201400036" ll="SDBH:מִקְרֶה:000001">遭遇</a>​。 
\v 15 我​<a name="02100201500010" ll="SDBH:לֵב:000001">心</a>​裏​就​<a name="02100201500004" ll="SDBH:אמר:000000">說</a>​：​「​<a name="02100201500018" ll="SDBH:כְּסִיל:000000">愚昧人</a>​<a name="02100201500014" ll="SDBH:מִקְרֶה:000001">所</a>​<a name="02100201500014" ll="SDBH:מִקְרֶה:000001">遇見</a>​<a name="02100201500014" ll="SDBH:מִקְרֶה:000001">的</a>​，​我​也​一樣​<a name="02100201500024" ll="SDBH:קרה:000000">遇見</a>​，​那麼​我​何必​更​<a name="02100201500030" ll="SDBH:חכם:000000">有</a>​<a name="02100201500030" ll="SDBH:חכם:000000">智慧</a>​呢​？​」​我​<a name="02100201500044" ll="SDBH:לֵב:000001">心</a>​<a name="02100201500044" ll="SDBH:לֵב:000001">裏</a>​<a name="02100201500040" ll="SDBH:דבר:001000">說</a>​：​「​這​也​是​<a name="02100201500052" ll="SDBH:הֶבֶל:000002">虛空</a>​。​」 
\v 16 <a name="02100201600012" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​和​<a name="02100201600018" ll="SDBH:כְּסִיל:000000">愚昧人</a>​一樣​，​<a name="02100201600004">不</a>​會​<a name="02100201600022" ll="SDBH:עֹולָם:000000">長久</a>​被​人​<a name="02100201600006" ll="SDBH:זִכָּרֹון:000000">記念</a>​，​因為​<a name="02100201600032;02100201600036" ll="SDBH:יֹום:000005">日後</a>​<a name="02100201600040">都</a>​被​<a name="02100201600042" ll="SDBH:שׁכח:000000">遺忘</a>​。​可嘆​！​<a name="02100201600052" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​和​<a name="02100201600058" ll="SDBH:כְּסִיל:000000">愚昧人</a>​都​一樣​會​<a name="02100201600048" ll="SDBH:מות:000000">死亡</a>​。 
\v 17 於是​我​<a name="02100201700004" ll="SDBH:שׂנא:000000">恨惡</a>​<a name="02100201700010" ll="SDBH:חַיִּים:000000">生命</a>​，​因為​在​<a name="02100201700030" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100201700024">發生</a>​的​<a name="02100201700020" ll="SDBH:מַעֲשֶׂה:000000">事</a>​我​都​以為​<a name="02100201700014" ll="SDBH:רַע:000004">煩惱</a>​，​<a name="02100201700036">全</a>​是​<a name="02100201700038" ll="SDBH:הֶבֶל:000002">虛空</a>​，​全​是​<a name="02100201700042;02100201700044" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕風</a>​。
    
\v 18 我​<a name="02100201800004" ll="SDBH:שׂנא:000000">恨惡</a>​<a name="02100201800010">一切</a>​的​<a name="02100201800012" ll="SDBH:עָמָל:000000">勞碌</a>​，​就是​我​在​<a name="02100201800024" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100201800018" ll="SDBH:עָמֵל:000000">所</a>​<a name="02100201800018" ll="SDBH:עָמֵל:000000">勞碌</a>​<a name="02100201800018" ll="SDBH:עָמֵל:000000">的</a>​，​因為​我​所​得​的​必須​<a name="02100201800028" ll="SDBH:נוח:000001">留給</a>​我​<a name="02100201800038">以後</a>​的​<a name="02100201800034" ll="SDBH:אָדָם:000000">人</a>​。 
\v 19 那​人​<a name="02100201900012">是</a>​<a name="02100201900010" ll="SDBH:חָכָם, קסם:000000">智慧</a>​是​<a name="02100201900016" ll="SDBH:סָכָל:000000">愚昧</a>​，​誰​能​<a name="02100201900006">知道</a>​呢​？​他​竟​要​<a name="02100201900020" ll="SDBH:שׁלט:000000">掌管</a>​我​在​<a name="02100201900042" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​用​<a name="02100201900036" ll="SDBH:חכם:000000">智慧</a>​<a name="02100201900026;02100201900030" ll="SDBH:עָמָל:000000;SDBH:עמל:000000">勞碌</a>​所​得​的​。​這​也​是​<a name="02100201900048" ll="SDBH:הֶבֶל:000002">虛空</a>​。 
\v 20 我​<a name="02100202000004">轉想</a>​我​在​<a name="02100202000032" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100202000022;02100202000026" ll="SDBH:עָמָל:000000;SDBH:עמל:000000">勞碌</a>​的​<a name="02100202000018">一切</a>​工作​，​<a name="02100202000014" ll="SDBH:לֵב:000001">心</a>​就​<a name="02100202000010" ll="SDBH:יאשׁ:000001">絕望</a>​。 
\v 21 因為​<a name="02100202100004">有</a>​<a name="02100202100006" ll="SDBH:אָדָם:000000">人</a>​用​<a name="02100202100014" ll="SDBH:חָכְמָה:000000">智慧</a>​、​<a name="02100202100020" ll="SDBH:דַּעַת:000000">知識</a>​、​<a name="02100202100026" ll="SDBH:כִּשְׁרֹון:000000">靈巧</a>​<a name="02100202100010" ll="SDBH:עָמָל:000000">勞碌</a>​<a name="02100202100010" ll="SDBH:עָמָל:000000">工作</a>​，​所​得來​的​卻​要​<a name="02100202100042">遺留</a>​<a name="02100202100042">給</a>​未曾​<a name="02100202100038" ll="SDBH:עמל:000000">勞碌</a>​的​<a name="02100202100032" ll="SDBH:אָדָם:000000">人</a>​作​<a name="02100202100044" ll="SDBH:חֵלֶק:000001">產業</a>​。​這​也​是​<a name="02100202100050" ll="SDBH:הֶבֶל:000002">虛空</a>​，​<a name="02100202100056" ll="SDBH:רַב:000002">大大</a>​<a name="02100202100054" ll="SDBH:רָעָה:000000">不幸</a>​。 
\v 22 <a name="02100202200012" ll="SDBH:אָדָם:000000">人</a>​<a name="02100202200016">一切</a>​的​<a name="02100202200018" ll="SDBH:עָמָל:000000">勞碌</a>​<a name="02100202200024;02100202200026" ll="SDBH:לֵב:000001;SDBH:רַעְיֹון:000001">操心</a>​，​就是​他​在​<a name="02100202200038" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100202200032" ll="SDBH:עָמֵל:000000">勞碌</a>​的​，​又​<a name="02100202200006" ll="SDBH:הוה:000006">得着</a>​了​甚麼​呢​？ 
\v 23 他​<a name="02100202300004;02100202300006" ll="SDBH:יֹום:000004">日日</a>​<a name="02100202300008" ll="SDBH:מַכְאֹוב:000001">憂慮</a>​，​他​的​<a name="02100202300014" ll="SDBH:עִנְיָן:000000">勞苦</a>​成為​<a name="02100202300012" ll="SDBH:כַּעַס:000000">愁煩</a>​，​連​<a name="02100202300022" ll="SDBH:לַיְלָה:000000">夜間</a>​<a name="02100202300028" ll="SDBH:לֵב:000001">心</a>​也​不​得​<a name="02100202300026" ll="SDBH:שׁכב:000005">休息</a>​。​這​也​是​<a name="02100202300034" ll="SDBH:הֶבֶל:000002">虛空</a>​。
    
\v 24 難道​一​個​<a name="02100202400010" ll="SDBH:אָדָם:000000">人</a>​有​<a name="02100202400014" ll="SDBH:אכל:000000" tl="HOTTP2863">吃</a>​有​<a name="02100202400018" ll="SDBH:שׁתה:000000">喝</a>​，​且​在​<a name="02100202400032" ll="SDBH:עָמָל:000000">勞碌</a>​中​<a name="02100202400022;02100202400026;02100202400028" ll="SDBH:טֹוב:000002;SDBH:נֶפֶשׁ:000001;SDBH:ראה:000010">享福</a>​，​<a name="02100202400002">不</a>​<a name="02100202400002">是</a>​<a name="02100202400004" ll="SDBH:טֹוב:000002" tl="HOTTP2863">福氣</a>​嗎​？​我​<a name="02100202400038" ll="SDBH:ראה:000000">看</a>​這​也​是​出於​<a name="02100202400050" ll="SDBH:אֱלֹהִים:000002">上帝</a>​的​<a name="02100202400046">手</a>​。 
\v 25 論到​<a name="02100202500006" ll="SDBH:אכל:000000">吃用</a>​、​<a name="02100202500012" ll="SDBH:חושׁ:001001" tl="HOTTP2864">享福</a>​，​誰​能​<a name="02100202500014">勝過</a>​我​呢​？ 
\v 26 上帝​<a name="02100202600010;02100202600014" ll="SDBH:טֹוב:000001">喜愛</a>​<a name="02100202600006" ll="SDBH:אָדָם:000000">誰</a>​，​就​<a name="02100202600016">給</a>​誰​<a name="02100202600018" ll="SDBH:חָכְמָה:000000">智慧</a>​、​<a name="02100202600022" ll="SDBH:דַּעַת:000000">知識</a>​和​<a name="02100202600026" ll="SDBH:שִׂמְחָה:000000">喜樂</a>​；​惟有​<a name="02100202600034" ll="SDBH:חטא:001005">罪人</a>​，​上帝​<a name="02100202600036;02100202600038" ll="SDBH:עִנְיָן:000000">使</a>​他​<a name="02100202600036;02100202600038" ll="SDBH:עִנְיָן:000000">勞苦</a>​，​將​他​所​<a name="02100202600042" ll="SDBH:אסף:000001">儲藏</a>​、​所​<a name="02100202600048" ll="SDBH:כנס:000000">堆積</a>​的​<a name="02100202600052">歸給</a>​<a name="02100202600064" ll="SDBH:אֱלֹהִים:000002">上帝</a>​所​<a name="02100202600056;02100202600060" ll="SDBH:טֹוב:000001">喜愛</a>​的​人​。​這​也​是​<a name="02100202600070" ll="SDBH:הֶבֶל:000002">虛空</a>​，​也​是​<a name="02100202600074;02100202600076" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕風</a>​。
\c 3
\v 1 <a name="02100300100006">凡事</a>​都​有​<a name="02100300100008" ll="SDBH:זְמָן:000000">定期</a>​，​<a name="02100300100024" ll="SDBH:שָׁמַיִם:000000">天下</a>​<a name="02100300100016">每</a>​<a name="02100300100016">一</a>​<a name="02100300100018" ll="SDBH:חֵפֶץ:000003">事務</a>​都​有​<a name="02100300100012" ll="SDBH:עֵת:000000">定時</a>​。
    
\v 2 <a name="02100300200006" ll="SDBH:ילד:000000">生</a>​有​<a name="02100300200002" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300200014" ll="SDBH:מות:000000">死</a>​有​<a name="02100300200010" ll="SDBH:עֵת:000000">時</a>​；​<a name="02100300200020" ll="SDBH:נטע:000000">栽種</a>​有​<a name="02100300200016" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300200028" ll="SDBH:עקר:000000">拔出</a>​有​<a name="02100300200024" ll="SDBH:עֵת:000000">時</a>​；
    
\v 3 <a name="02100300300006" ll="SDBH:הרג:000000">殺戮</a>​有​<a name="02100300300002" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300300014" ll="SDBH:רפא:000000">醫治</a>​有​<a name="02100300300010" ll="SDBH:עֵת:000000">時</a>​；​<a name="02100300300020" ll="SDBH:פרץ:000002">拆毀</a>​有​<a name="02100300300016" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300300028" ll="SDBH:בנה:000000">建造</a>​有​<a name="02100300300024" ll="SDBH:עֵת:000000">時</a>​；
    
\v 4 <a name="02100300400006" ll="SDBH:בכה:000000">哭</a>​有​<a name="02100300400002" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300400014" ll="SDBH:שׂחק:000000">笑</a>​有​<a name="02100300400010" ll="SDBH:עֵת:000000">時</a>​；​<a name="02100300400018" ll="SDBH:ספד:000000">哀慟</a>​有​<a name="02100300400016" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300400024" ll="SDBH:רקד:000000">跳舞</a>​有​<a name="02100300400022" ll="SDBH:עֵת:000000">時</a>​；
    
\v 5 <a name="02100300500006" ll="SDBH:שׁלך:000000">丟</a>​<a name="02100300500008" ll="SDBH:אֶבֶן:000001">石頭</a>​有​<a name="02100300500002" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300500014" ll="SDBH:כנס:000000">撿</a>​<a name="02100300500016">石頭</a>​有​<a name="02100300500012" ll="SDBH:עֵת:000000">時</a>​；​<a name="02100300500022" ll="SDBH:חבק:000000">懷抱</a>​有​<a name="02100300500018" ll="SDBH:עֵת:000000">時</a>​，​不​<a name="02100300500034" ll="SDBH:חבק:000000">抱</a>​有​<a name="02100300500026" ll="SDBH:עֵת:000000">時</a>​；
    
\v 6 <a name="02100300600006" ll="SDBH:בקשׁ:000000">尋找</a>​有​<a name="02100300600002" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300600014" ll="SDBH:אבד:000003">失落</a>​有​<a name="02100300600010" ll="SDBH:עֵת:000000">時</a>​；​<a name="02100300600020" ll="SDBH:שׁמר:000007">保存</a>​有​<a name="02100300600016" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300600028" ll="SDBH:שׁלך:000000">拋棄</a>​有​<a name="02100300600024" ll="SDBH:עֵת:000000">時</a>​；
    
\v 7 <a name="02100300700006" ll="SDBH:קרע:000000">撕裂</a>​有​<a name="02100300700002" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300700014" ll="SDBH:תפר:000001">縫補</a>​有​<a name="02100300700010" ll="SDBH:עֵת:000000">時</a>​；​<a name="02100300700020" ll="SDBH:חשׁה:000000">沉默</a>​有​<a name="02100300700016" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300700028" ll="SDBH:דבר:001000">說話</a>​有​<a name="02100300700024" ll="SDBH:עֵת:000000">時</a>​；
    
\v 8 <a name="02100300800006" ll="SDBH:אהב:000000">喜愛</a>​有​<a name="02100300800002" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300800014" ll="SDBH:שׂנא:000000">恨惡</a>​有​<a name="02100300800010" ll="SDBH:עֵת:000000">時</a>​；​<a name="02100300800018" ll="SDBH:מִלְחָמָה:000000">戰爭</a>​有​<a name="02100300800016" ll="SDBH:עֵת:000000">時</a>​，​<a name="02100300800024" ll="SDBH:שָׁלֹום:000000">和平</a>​有​<a name="02100300800022" ll="SDBH:עֵת:000000">時</a>​。
    
\v 9 這樣​，​<a name="02100300900008">做事</a>​的​人​在​他​<a name="02100300900016" ll="SDBH:עָמֵל:000000">所</a>​<a name="02100300900016" ll="SDBH:עָמֵל:000000">勞碌</a>​<a name="02100300900016" ll="SDBH:עָמֵל:000000">的</a>​<a name="02100300900016" ll="SDBH:עָמֵל:000000">事</a>​上​得到​甚麼​<a name="02100300900004" ll="SDBH:יִתְרֹון:000000">益處</a>​呢​？ 
\v 10 我​<a name="02100301000002" ll="SDBH:ראה:000000">觀看</a>​<a name="02100301000014" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100301000012">給</a>​<a name="02100301000018;02100301000022" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​的​<a name="02100301000008" ll="SDBH:עִנְיָן:000000">擔子</a>​，​使​他們​在​其中​<a name="02100301000026" ll="SDBH:ענה:002000">勞苦</a>​： 
\v 11 上帝​<a name="02100301100008">造</a>​<a name="02100301100006">萬物</a>​，​各​按​其​<a name="02100301100014" ll="SDBH:עֵת:000000">時</a>​成為​<a name="02100301100010" ll="SDBH:יָפֶה:000000">美好</a>​，​又​將​<a name="02100301100022" ll="SDBH:עֹולָם:000000">永恆</a>​<a name="02100301100024">安放</a>​在​世人​<a name="02100301100028" ll="SDBH:לֵב:000001">心</a>​裏​；​<a name="02100301100032" ll="SDBH:בְּלִי:000000">然而</a>​<a name="02100301100056" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100301100060;02100301100066" ll="SDBH:סֹוף:000001;SDBH:רֹאשׁ:000001">從始至終</a>​的​<a name="02100301100048" ll="SDBH:מַעֲשֶׂה:000000">作為</a>​，​<a name="02100301100042" ll="SDBH:אָדָם:000000">人</a>​不​能​<a name="02100301100038" ll="SDBH:מצא:000011">測透</a>​。 
\v 12 我​<a name="02100301200002">知道</a>​，​人​除了​<a name="02100301200030" ll="SDBH:חַיִּים:000000">終身</a>​<a name="02100301200018" ll="SDBH:שׂמח:000000">喜樂</a>​<a name="02100301200024;02100301200026" ll="SDBH:טֹוב:000002">納福</a>​，​<a name="02100301200006">沒有</a>​一​件​<a name="02100301200008" ll="SDBH:טֹוב:000002">幸福</a>​的​事​。 
\v 13 並且​<a name="02100301300006;02100301300010" ll="SDBH:אָדָם:000000">人人</a>​<a name="02100301300014;02100301300018" ll="SDBH:אכל:000000;SDBH:שׁתה:000000">吃喝</a>​，​在​他​的​<a name="02100301300028">一切</a>​<a name="02100301300030" ll="SDBH:עָמָל:000000">勞碌</a>​中​<a name="02100301300022;02100301300024" ll="SDBH:טֹוב:000002;SDBH:ראה:000009">享福</a>​，​這​也​是​<a name="02100301300034" ll="SDBH:אֱלֹהִים:000002">上帝</a>​的​<a name="02100301300032" ll="SDBH:מַתָּת:000001">賞賜</a>​。
    
\v 14 我​<a name="02100301400002">知道</a>​<a name="02100301400014" ll="SDBH:אֱלֹהִים:000002">上帝</a>​所​<a name="02100301400010">做</a>​的​<a name="02100301400006">都</a>​必​<a name="02100301400018">存</a>​到​<a name="02100301400022" ll="SDBH:עֹולָם:000000">永遠</a>​；​<a name="02100301400026">無</a>​所​<a name="02100301400030">增添</a>​，​<a name="02100301400036">無</a>​所​<a name="02100301400040" ll="SDBH:גרע:000003">減少</a>​。​<a name="02100301400046" ll="SDBH:אֱלֹהִים:000002">上帝</a>​這樣​<a name="02100301400048">做</a>​，​是​要​人​在​他​<a name="02100301400058">面前</a>​<a name="02100301400052" ll="SDBH:ירא:000000">存</a>​<a name="02100301400052" ll="SDBH:ירא:000000">敬畏</a>​<a name="02100301400052" ll="SDBH:ירא:000000">的</a>​<a name="02100301400052" ll="SDBH:ירא:000000">心</a>​。 
\v 15 現今​的​事​<a name="02100301500008">以前</a>​就​有​了​，​將來​的​事​也​<a name="02100301500020">早已</a>​<a name="02100301500022">有</a>​了​，​並且​<a name="02100301500028" ll="SDBH:אֱלֹהִים:000002">上帝</a>​使​已​<a name="02100301500034" ll="SDBH:רדף:000001">過</a>​的​事​重新​再​來​。
    
\v 16 我​<a name="02100301600004">又</a>​<a name="02100301600006" ll="SDBH:ראה:000000">見</a>​<a name="02100301600012" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​，​應​有​<a name="02100301600018" ll="SDBH:מִשְׁפָּט:000007">公平</a>​之​<a name="02100301600014" ll="SDBH:מָקֹום:000000">處</a>​有​<a name="02100301600024" ll="SDBH:רֶשַׁע:000001">奸惡</a>​，​應​有​<a name="02100301600032" ll="SDBH:צֶדֶק:000001" tl="HOTTP2867">公義</a>​之​<a name="02100301600028">處</a>​也​有​<a name="02100301600038" ll="SDBH:רֶשַׁע:000001" tl="HOTTP2867">奸惡</a>​。 
\v 17 我​<a name="02100301700008" ll="SDBH:לֵב:000001">心</a>​<a name="02100301700008" ll="SDBH:לֵב:000001">裏</a>​<a name="02100301700002" ll="SDBH:אמר:000000">說</a>​：​「​<a name="02100301700028" ll="SDBH:אֱלֹהִים:000002">上帝</a>​必​<a name="02100301700024" ll="SDBH:שׁפט:000001">審判</a>​<a name="02100301700014" ll="SDBH:צַדִּיק:000000">義人</a>​和​<a name="02100301700022" ll="SDBH:רָשָׁע:000000">惡人</a>​，​因為​在​<a name="02100301700050" ll="SDBH:שָׁם:000000" tl="HOTTP2868">那裏</a>​，​<a name="02100301700036">各樣</a>​<a name="02100301700038" ll="SDBH:חֵפֶץ:000003">事務</a>​，​<a name="02100301700044">一切</a>​<a name="02100301700048" ll="SDBH:מַעֲשֶׂה:000000">工作</a>​，​都​有​<a name="02100301700032" ll="SDBH:עֵת:000000">定時</a>​。​」 
\v 18 我​<a name="02100301800008" ll="SDBH:לֵב:000001">心</a>​<a name="02100301800008" ll="SDBH:לֵב:000001">裏</a>​<a name="02100301800002" ll="SDBH:אמר:000000">說</a>​：​「​為​<a name="02100301800014;02100301800018" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​的​<a name="02100301800012" ll="SDBH:דִּבְרָה:000002">緣故</a>​，​<a name="02100301800026" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100301800022" ll="SDBH:ברר:000000">考驗</a>​他們​，​讓​他們​<a name="02100301800032" ll="SDBH:ראה:000000" tl="HOTTP2869">看見</a>​自己​不過​像​<a name="02100301800038" ll="SDBH:בְּהֵמָה:000000" tl="HOTTP2869">走獸</a>​一樣​。​」 
\v 19 因為​<a name="02100301900006;02100301900010" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​<a name="02100301900004" ll="SDBH:מִקְרֶה:000001" tl="HOTTP2870">遭遇</a>​<a name="02100301900004" ll="SDBH:מִקְרֶה:000001" tl="HOTTP2870">的</a>​，​<a name="02100301900018" ll="SDBH:בְּהֵמָה:000000">走獸</a>​也​<a name="02100301900014" ll="SDBH:מִקְרֶה:000001" tl="HOTTP2870">遭遇</a>​，​<a name="02100301900022" ll="SDBH:מִקְרֶה:000001" tl="HOTTP2870">所</a>​<a name="02100301900022" ll="SDBH:מִקְרֶה:000001" tl="HOTTP2870">遭遇</a>​<a name="02100301900022" ll="SDBH:מִקְרֶה:000001" tl="HOTTP2870">的</a>​都​<a name="02100301900024" ll="SDBH:אֶחָד:000000" tl="HOTTP2870">一樣</a>​：​這個​怎樣​<a name="02100301900030" ll="SDBH:מָוֶת:000000">死</a>​，​那個​<a name="02100301900034">也</a>​怎樣​<a name="02100301900036" ll="SDBH:מָוֶת:000000">死</a>​，​他們​都​有​<a name="02100301900044" ll="SDBH:אֶחָד:000000">一樣</a>​的​<a name="02100301900042" ll="SDBH:רוּחַ:000003">氣息</a>​。​<a name="02100301900058" ll="SDBH:אָדָם:000000">人</a>​<a name="02100301900066">不</a>​能​<a name="02100301900054" ll="SDBH:מֹותָר:000000">強於</a>​<a name="02100301900064" ll="SDBH:בְּהֵמָה:000000">走獸</a>​，​<a name="02100301900072">全</a>​是​<a name="02100301900074" ll="SDBH:הֶבֶל:000002">虛空</a>​； 
\v 20 <a name="02100302000004">都</a>​歸​<a name="02100302000012" ll="SDBH:אֶחָד:000000">一</a>​<a name="02100302000010" ll="SDBH:מָקֹום:000000">處</a>​，​<a name="02100302000016">都</a>​是​<a name="02100302000018">出於</a>​<a name="02100302000024" ll="SDBH:עָפָר:000000">塵土</a>​，​也​<a name="02100302000030">都</a>​歸於​<a name="02100302000038">塵土</a>​。 
\v 21 誰​<a name="02100302100004">知道</a>​<a name="02100302100008;02100302100012" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">人</a>​的​<a name="02100302100006" ll="SDBH:רוּחַ:000003">氣息</a>​是​<a name="02100302100022" ll="SDBH:מַעַל:001000">往上</a>​<a name="02100302100016" ll="SDBH:עלה:000000">升</a>​，​<a name="02100302100030" ll="SDBH:בְּהֵמָה:000000">走獸</a>​的​<a name="02100302100026" ll="SDBH:רוּחַ:000003">氣息</a>​是​<a name="02100302100034" ll="SDBH:ירד:000000">下入</a>​<a name="02100302100046" ll="SDBH:אֶרֶץ:000000">地</a>​呢​？ 
\v 22 總而言之​，​<a name="02100302200020" ll="SDBH:אָדָם:000000">人</a>​能夠​在​他​<a name="02100302200024" ll="SDBH:מַעֲשֶׂה:000002">經營</a>​<a name="02100302200024" ll="SDBH:מַעֲשֶׂה:000002">的</a>​<a name="02100302200024" ll="SDBH:מַעֲשֶׂה:000002">事</a>​上​<a name="02100302200016" ll="SDBH:שׂמח:000000">喜樂</a>​，​是​<a name="02100302200008;02100302200010" ll="SDBH:טֹוב:000002">最</a>​<a name="02100302200008;02100302200010" ll="SDBH:טֹוב:000002">好</a>​不​過​了​，​因為​這​是​他​應​得​的​<a name="02100302200030" ll="SDBH:חֵלֶק:000004">報償</a>​。​他​身​後​的​事​誰​能​<a name="02100302200036">領</a>​他​<a name="02100302200036">回來</a>​<a name="02100302200040" ll="SDBH:ראה:000000">看</a>​呢​？
\c 4
\v 1 我​<a name="02100400100004" ll="SDBH:שׁוב:000041">轉</a>​而​<a name="02100400100010" ll="SDBH:ראה:000000">觀看</a>​<a name="02100400100028" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100400100022">發生</a>​的​<a name="02100400100014">一切</a>​<a name="02100400100018">欺壓</a>​之​事​。​看​哪​，​受​<a name="02100400100038" ll="SDBH:עשׁק:000001">欺壓</a>​的​<a name="02100400100034" ll="SDBH:דִּמְעָה:000000">流淚</a>​，​<a name="02100400100042">無</a>​人​<a name="02100400100046" ll="SDBH:נחם:000000">安慰</a>​；​<a name="02100400100054" ll="SDBH:עשׁק:000001">欺壓</a>​他們​的​有​<a name="02100400100056" ll="SDBH:כֹּחַ:000000">權勢</a>​，​也​<a name="02100400100060">無</a>​人​<a name="02100400100064" ll="SDBH:נחם:000000">安慰</a>​。 
\v 2 因此​，​我​<a name="02100400200004" ll="SDBH:שׁבח:000000">讚歎</a>​那​<a name="02100400200016">已</a>​<a name="02100400200018" ll="SDBH:מות:000000">死</a>​的​<a name="02100400200012" ll="SDBH:מות:000000">死人</a>​，​勝過​那​<a name="02100400200032" ll="SDBH:עֲדֶן:000000">還</a>​<a name="02100400200030" ll="SDBH:חַי:000000">活</a>​<a name="02100400200030" ll="SDBH:חַי:000000">着</a>​的​<a name="02100400200024" ll="SDBH:חַי:000000">活人</a>​。 
\v 3 但​那​<a name="02100400300014" ll="SDBH:עֲדֶן:000000">尚未</a>​出生​，​就是​未曾​<a name="02100400300024" ll="SDBH:ראה:000000">見</a>​過​<a name="02100400300044" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100400300038">發生</a>​之​<a name="02100400300030;02100400300034" ll="SDBH:מַעֲשֶׂה:000001;SDBH:רַע:000005">惡事</a>​的​，​比​這​<a name="02100400300008" ll="SDBH:שְׁנַיִם:000000">兩</a>​種​人​更​<a name="02100400300004" ll="SDBH:טֹוב:000002" tl="HOTTP2871">幸福</a>​。
    
\v 4 我​<a name="02100400400004" ll="SDBH:ראה:000000">見</a>​人​因​彼此​嫉妒​而​有​<a name="02100400400010">一切</a>​<a name="02100400400010">的</a>​<a name="02100400400012" ll="SDBH:עָמָל:000000">勞碌</a>​和​<a name="02100400400018">各樣</a>​<a name="02100400400024" ll="SDBH:מַעֲשֶׂה:000002">工作</a>​的​<a name="02100400400020" ll="SDBH:כִּשְׁרֹון:000000">成就</a>​，​這​也​是​<a name="02100400400042" ll="SDBH:הֶבֶל:000002">虛空</a>​，​也​是​<a name="02100400400046;02100400400048" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕風</a>​。
    
\v 5 <a name="02100400500004" ll="SDBH:כְּסִיל:000000">愚昧人</a>​<a name="02100400500006" ll="SDBH:חבק:000002">抱</a>​着​<a name="02100400500010">雙臂</a>​，​自​<a name="02100400500014" ll="SDBH:אכל:000000">食</a>​其​<a name="02100400500018" ll="SDBH:בָּשָׂר:000000">肉</a>​。
    
\v 6 一​<a name="02100400600006" ll="SDBH:כַּף:000010">掌</a>​<a name="02100400600004" ll="SDBH:מְלֹא:000000">滿滿</a>​而​得​享​<a name="02100400600008" ll="SDBH:נַחַת:001001">安靜</a>​，​<a name="02100400600002" ll="SDBH:טֹוב:000002">勝過</a>​兩​<a name="02100400600014" ll="SDBH:חֹפֶן:000000">掌</a>​<a name="02100400600012" ll="SDBH:מְלֹא:000000">滿滿</a>​而​<a name="02100400600016" ll="SDBH:עָמָל:000000">勞碌</a>​<a name="02100400600020;02100400600022" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕風</a>​。
    
\v 7 我​<a name="02100400700004" ll="SDBH:שׁוב:000041">轉</a>​而​<a name="02100400700010" ll="SDBH:ראה:000000">觀看</a>​<a name="02100400700018" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​有​一​件​<a name="02100400700012" ll="SDBH:הֶבֶל:000002">虛空</a>​的​事​： 
\v 8 <a name="02100400800002;02100400800004" ll="SDBH:אֶחָד:000000">有人</a>​<a name="02100400800008;02100400800010" ll="SDBH:שֵׁנִי:000000">孤單</a>​<a name="02100400800008;02100400800010" ll="SDBH:שֵׁנִי:000000">無雙</a>​，​<a name="02100400800020">無</a>​<a name="02100400800014" ll="SDBH:בֵּן:000000">子</a>​無​<a name="02100400800018" ll="SDBH:אָח:000000">兄弟</a>​，​竟​<a name="02100400800034" ll="SDBH:עָמָל:000000">勞碌</a>​<a name="02100400800026;02100400800028" ll="SDBH:קֵץ:000000">不息</a>​，​<a name="02100400800038" ll="SDBH:עַיִן:000000">眼目</a>​也​不​以​<a name="02100400800046" ll="SDBH:עֹשֶׁר:000000">財富</a>​為​<a name="02100400800044" ll="SDBH:שׂבע:000008">滿足</a>​。​他​說​：​「​我​<a name="02100400800056" ll="SDBH:עָמֵל:000000">勞碌</a>​，​<a name="02100400800064" ll="SDBH:נֶפֶשׁ:000001">自己</a>​卻​不​<a name="02100400800068" ll="SDBH:טֹובָה:000001">享福</a>​，​到底​是​為了​誰​呢​？​」​這​也​是​<a name="02100400800074" ll="SDBH:הֶבֶל:000002">虛空</a>​，​是​極​<a name="02100400800080" ll="SDBH:רַע:000004">沉重</a>​的​<a name="02100400800078" ll="SDBH:עִנְיָן:000000">擔子</a>​。
    
\v 9 <a name="02100400900006" ll="SDBH:שְׁנַיִם:000000">兩</a>​個​人​總​比​<a name="02100400900012" ll="SDBH:אֶחָד:000000">一</a>​個​人​<a name="02100400900002" ll="SDBH:טֹוב:000002">好</a>​，​他們​<a name="02100400900026" ll="SDBH:עָמָל:000000">勞碌</a>​同​<a name="02100400900016">得</a>​<a name="02100400900022" ll="SDBH:טֹוב:000002">美好</a>​的​<a name="02100400900020" ll="SDBH:שָׂכָר:000000">報償</a>​。 
\v 10 若是​<a name="02100401000006" ll="SDBH:נפל:000036" tl="HOTTP2872">跌倒</a>​，​這​人​可以​<a name="02100401000012">扶起</a>​他​的​<a name="02100401000016" ll="SDBH:חָבֵר:000000">同伴</a>​；​倘若​<a name="02100401000026" ll="SDBH:אֶחָד:000003">孤身</a>​<a name="02100401000030" ll="SDBH:נפל:000036">跌倒</a>​，​<a name="02100401000034">沒有</a>​<a name="02100401000036" ll="SDBH:שֵׁנִי:000000">別人</a>​<a name="02100401000040">扶起</a>​他​來​，​這​人​就​有​禍​了​。 
\v 11 再者​，​<a name="02100401100008" ll="SDBH:שְׁנַיִם:000000">二</a>​人​<a name="02100401100006" ll="SDBH:שׁכב:000000">同</a>​<a name="02100401100006" ll="SDBH:שׁכב:000000">睡</a>​就​都​<a name="02100401100012" ll="SDBH:חמם:000000">暖和</a>​，​<a name="02100401100020" ll="SDBH:אֶחָד:000000">一</a>​人​獨​睡​怎​能​<a name="02100401100024" ll="SDBH:חמם:000000">暖和</a>​呢​？ 
\v 12 若​遇​敵​攻擊​，​<a name="02100401200010" ll="SDBH:אֶחָד:000003">孤身</a>​難​擋​，​<a name="02100401200014" ll="SDBH:שְׁנַיִם:000000">二</a>​人​就​能​<a name="02100401200016">抵擋</a>​他​；​<a name="02100401200028" ll="SDBH:שׁלשׁ:000001">三</a>​股​合成​的​<a name="02100401200024" ll="SDBH:חוּט:000000">繩子</a>​不​<a name="02100401200034" ll="SDBH:מְהֵרָה:000000">易</a>​<a name="02100401200036" ll="SDBH:נתק:000003">折斷</a>​。
    
\v 13 <a name="02100401300006" ll="SDBH:מִסְכֵּן:000000">貧窮</a>​而​<a name="02100401300010" ll="SDBH:חָכָם, קסם:000000">有</a>​<a name="02100401300010" ll="SDBH:חָכָם, קסם:000000">智慧</a>​<a name="02100401300010" ll="SDBH:חָכָם, קסם:000000">的</a>​<a name="02100401300004" ll="SDBH:יֶלֶד:000000">年輕人</a>​，​<a name="02100401300002" ll="SDBH:טֹוב:000002">勝過</a>​<a name="02100401300016" ll="SDBH:זָקֵן:000001">年老</a>​<a name="02100401300032">不再</a>​<a name="02100401300030" ll="SDBH:זהר:001000">納諫</a>​的​<a name="02100401300020" ll="SDBH:כְּסִיל:000000">愚昧</a>​<a name="02100401300014" ll="SDBH:מֶלֶךְ:000000">王</a>​， 
\v 14 那​人​從​<a name="02100401400006;02100401400010" ll="SDBH:אסר:000005;SDBH:בַּיִת:000000">監牢</a>​裏​<a name="02100401400012" ll="SDBH:יצא:000000">出來</a>​<a name="02100401400016" ll="SDBH:מלך:000000">作</a>​<a name="02100401400016" ll="SDBH:מלך:000000">王</a>​，​在​<a name="02100401400024" ll="SDBH:מַלְכוּת:000000">國</a>​中​原​是​<a name="02100401400026" ll="SDBH:ילד:000000">出身</a>​<a name="02100401400028" ll="SDBH:רושׁ:000001">貧寒</a>​。 
\v 15 我​<a name="02100401500002" ll="SDBH:ראה:000000">見</a>​<a name="02100401500020" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100401500006">所有</a>​<a name="02100401500014" ll="SDBH:הלך:000002">行走</a>​的​<a name="02100401500010" ll="SDBH:חַי:000000">活人</a>​，​都​跟隨​那​<a name="02100401500026" ll="SDBH:יֶלֶד:000000">年輕人</a>​，​就是​<a name="02100401500034">接續</a>​作​王​的​那​位​。 
\v 16 他​的​<a name="02100401600012" ll="SDBH:עַם:000000">百姓</a>​，​就是​他​所​<a name="02100401600020;02100401600024">治理</a>​的​眾人​，​多​得​<a name="02100401600002;02100401600004" ll="SDBH:קֵץ:000000">無數</a>​；​但​<a name="02100401600030" ll="SDBH:אַחֲרֹון:000001">後來</a>​<a name="02100401600030" ll="SDBH:אַחֲרֹון:000001">的</a>​人​還是​不​<a name="02100401600034" ll="SDBH:שׂמח:000000">喜歡</a>​他​。​這​也​是​<a name="02100401600044" ll="SDBH:הֶבֶל:000002">虛空</a>​，​也​是​<a name="02100401600048;02100401600050" ll="SDBH:רַעְיֹון:000001;SDBH:רוּחַ:000004">捕風</a>​。
\v 17 (1) 你​<a name="02100401700012" ll="SDBH:הלך:000001">到</a>​<a name="02100401700020" ll="SDBH:אֱלֹהִים:000002">上帝</a>​的​<a name="02100401700016" ll="SDBH:בַּיִת:000000">殿</a>​要​<a name="02100401700002" ll="SDBH:שׁמר:000007">謹慎</a>​你​的​<a name="02100401700006" ll="SDBH:רֶגֶל:000003">腳步</a>​；​<a name="02100401700024" ll="SDBH:קרב:000000">近前</a>​<a name="02100401700028">聽</a>​，​勝過​<a name="02100401700036" ll="SDBH:כְּסִיל:000000">愚昧人</a>​<a name="02100401700032;02100401700038" ll="SDBH:זֶבַח:000000">獻祭</a>​，​他們​<a name="02100401700042">不</a>​<a name="02100401700044">知道</a>​自己​在​<a name="02100401700048;02100401700050" ll="SDBH:רַע:000005" tl="HOTTP2875">作惡</a>​。 
\c 5
\v 1 (2) 在​<a name="02100500100030" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100500100026">面前</a>​你​<a name="02100500100002" ll="SDBH:אַל:000000">不</a>​可​<a name="02100500100004" ll="SDBH:בהל:000000">冒失</a>​<a name="02100500100008" ll="SDBH:פֶּה:000000">開口</a>​，​也​<a name="02100500100014" ll="SDBH:אַל:000000">不</a>​可​<a name="02100500100012;02100500100016" ll="SDBH:לֵב:000001;SDBH:מהר:000000">心急</a>​<a name="02100500100020;02100500100022" ll="SDBH:דָּבָר:000000;SDBH:יצא:000041">發言</a>​；​因為​<a name="02100500100036" ll="SDBH:אֱלֹהִים:000002">上帝</a>​在​<a name="02100500100042" ll="SDBH:שָׁמַיִם:000001">天</a>​<a name="02100500100042" ll="SDBH:שָׁמַיִם:000001">上</a>​，​你​在​<a name="02100500100052" ll="SDBH:אֶרֶץ:000000">地</a>​<a name="02100500100052" ll="SDBH:אֶרֶץ:000000">上</a>​，​<a name="02100500100056">所以</a>​你​的​<a name="02100500100060" ll="SDBH:דָּבָר:000000">話語</a>​要​<a name="02100500100062" ll="SDBH:מְעַט:000001">少</a>​。
    
\v 2 (3) <a name="02100500200014" ll="SDBH:עִנְיָן:000000">事務</a>​<a name="02100500200012" ll="SDBH:רֹב:000001">多</a>​，​令​人​<a name="02100500200008" ll="SDBH:חֲלֹום:000000">做夢</a>​；​<a name="02100500200026" ll="SDBH:דָּבָר:000000">話語</a>​<a name="02100500200024" ll="SDBH:רֹב:000000">多</a>​，​顯出​<a name="02100500200020" ll="SDBH:כְּסִיל:000000">愚昧</a>​。
    
\v 3 (4) 你​向​<a name="02100500300012" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100500300006;02100500300008" ll="SDBH:נֶדֶר:000000;SDBH:נדר:000000">許願</a>​，​<a name="02100500300020" ll="SDBH:שׁלם:000004">還願</a>​<a name="02100500300014" ll="SDBH:אַל:000000">不</a>​可​<a name="02100500300016" ll="SDBH:אחר:000001">遲延</a>​，​因​他​<a name="02100500300024">不</a>​<a name="02100500300026" ll="SDBH:חֵפֶץ:000000">喜歡</a>​<a name="02100500300032" ll="SDBH:כְּסִיל:000000">愚昧人</a>​，​你​<a name="02100500300038" ll="SDBH:נדר:000000">許</a>​的​<a name="02100500300038" ll="SDBH:נדר:000000">願</a>​應當​<a name="02100500300040" ll="SDBH:שׁלם:000004">償還</a>​。 
\v 4 (5) 你​<a name="02100500400014" ll="SDBH:נדר:000000">許願</a>​不​<a name="02100500400020" ll="SDBH:שׁלם:000004">還</a>​，​不如​不​<a name="02100500400008" ll="SDBH:נדר:000000">許</a>​。 
\v 5 (6) <a name="02100500500002" ll="SDBH:אַל:000000">不</a>​可​<a name="02100500500004">放任</a>​你​的​<a name="02100500500008" ll="SDBH:פֶּה:000000">口</a>​使​<a name="02100500500016" ll="SDBH:בָּשָׂר:000001">肉體</a>​<a name="02100500500012" ll="SDBH:חטא:001003">犯罪</a>​，​也​<a name="02100500500020" ll="SDBH:אַל:000000">不</a>​可​在​<a name="02100500500030" ll="SDBH:מַלְאָךְ:000000">使者</a>​<a name="02100500500026">面前</a>​<a name="02100500500022" ll="SDBH:אמר:000000">說</a>​是​<a name="02100500500034" ll="SDBH:שְׁגָגָה:000000">錯</a>​許​了​。​為何​使​<a name="02100500500044" ll="SDBH:אֱלֹהִים:000002">上帝</a>​因​你​的​<a name="02100500500048">聲音</a>​<a name="02100500500040" ll="SDBH:קצף:000000">發怒</a>​，​<a name="02100500500052" ll="SDBH:חבל:001000">敗壞</a>​你​<a name="02100500500058">手</a>​<a name="02100500500056" ll="SDBH:מַעֲשֶׂה:000003">所</a>​<a name="02100500500056" ll="SDBH:מַעֲשֶׂה:000003">做</a>​<a name="02100500500056" ll="SDBH:מַעֲשֶׂה:000003">的</a>​呢​？
    
\v 6 (7) <a name="02100500600006" ll="SDBH:רֹב:000000">多</a>​<a name="02100500600008" ll="SDBH:חֲלֹום:000000">夢</a>​<a name="02100500600018">多</a>​<a name="02100500600016" ll="SDBH:דָּבָר:000000">言</a>​，​其中​多​有​<a name="02100500600012" ll="SDBH:הֶבֶל:000002">虛空</a>​，​你​只要​<a name="02100500600028" ll="SDBH:ירא:000000">敬畏</a>​<a name="02100500600026" ll="SDBH:אֱלֹהִים:000002">上帝</a>​。
    
\v 7 (8) 你​若​在​一​個​<a name="02100500700024" ll="SDBH:מְדִינָה:000000">地區</a>​<a name="02100500700018" ll="SDBH:ראה:000000">看見</a>​<a name="02100500700006" ll="SDBH:רושׁ:000001">窮人</a>​受​<a name="02100500700004" ll="SDBH:עֹשֶׁק:000000">欺壓</a>​，​<a name="02100500700012" ll="SDBH:מִשְׁפָּט:000007">公義</a>​<a name="02100500700016" ll="SDBH:צֶדֶק:000001">公平</a>​被​<a name="02100500700010" ll="SDBH:גֵּזֶל:000000">掠奪</a>​，​<a name="02100500700026" ll="SDBH:אַל:000000">不要</a>​<a name="02100500700034" ll="SDBH:חֵפֶץ:000003">因此</a>​<a name="02100500700028" ll="SDBH:תמהּ:000001">驚奇</a>​；​有​一​位​高過​<a name="02100500700044" ll="SDBH:גָּבֹהַּ:000002">居</a>​<a name="02100500700044" ll="SDBH:גָּבֹהַּ:000002">高位</a>​<a name="02100500700044" ll="SDBH:גָּבֹהַּ:000002">的</a>​在​<a name="02100500700046" ll="SDBH:שׁמר:000000">鑒察</a>​，​在​他們​之上​還有​更​<a name="02100500700050" ll="SDBH:גָּבֹהַּ:000002">高</a>​的​。 
\v 8 (9) 況且​<a name="02100500800006" ll="SDBH:אֶרֶץ:000000">地</a>​的​<a name="02100500800004" ll="SDBH:יִתְרֹון:000000">益處</a>​歸​<a name="02100500800012">眾人</a>​，​就是​<a name="02100500800018" ll="SDBH:מֶלֶךְ:000000">君王</a>​也​受​<a name="02100500800022" ll="SDBH:שָׂדֶה:000001" tl="HOTTP2876">田地</a>​的​<a name="02100500800024" ll="SDBH:עבד:000004" tl="HOTTP2876">供應</a>​。
    
\v 9 (10) <a name="02100500900002" ll="SDBH:אהב:000000">喜愛</a>​<a name="02100500900004" ll="SDBH:כֶּסֶף:000000">銀子</a>​的​，​不​因​得​<a name="02100500900010" ll="SDBH:כֶּסֶף:000000">銀子</a>​<a name="02100500900008" ll="SDBH:שׂבע:000008">滿足</a>​；​<a name="02100500900016" ll="SDBH:אהב:000000">喜愛</a>​<a name="02100500900022" ll="SDBH:הָמֹון:000001">財富</a>​的​，​也​不​因​<a name="02100500900026" ll="SDBH:תְּבוּאָה:000001">得</a>​<a name="02100500900026" ll="SDBH:תְּבוּאָה:000001">利益</a>​知足​。​這​也​是​<a name="02100500900032" ll="SDBH:הֶבֶל:000002">虛空</a>​。
    
\v 10 (11) <a name="02100501000008" ll="SDBH:טֹובָה:000003">貨物</a>​<a name="02100501000004">增添</a>​，​<a name="02100501000012" ll="SDBH:אכל:000003">吃</a>​的​人​也​<a name="02100501000010" ll="SDBH:רבב:000000">增添</a>​，​<a name="02100501000022" ll="SDBH:בַּעַל:000000">物主</a>​得​甚麼​<a name="02100501000018" ll="SDBH:כִּשְׁרֹון:000000">益處</a>​呢​？​不過​<a name="02100501000030;02100501000032" ll="SDBH:עַיִן:000000;SDBH:רְאוּת:000000">眼看</a>​而已​！
    
\v 11 (12) <a name="02100501100008" ll="SDBH:עבד:000005">勞碌</a>​的​人​不拘​<a name="02100501100020" ll="SDBH:אכל:000000">吃</a>​<a name="02100501100018">多</a>​吃​<a name="02100501100012" ll="SDBH:מְעַט:000000">少</a>​，​<a name="02100501100004" ll="SDBH:שֵׁנָה:000000">睡</a>​得​<a name="02100501100002" ll="SDBH:מָתֹוק:000001">香甜</a>​；​<a name="02100501100032" ll="SDBH:עָשִׁיר:000000">富人</a>​的​<a name="02100501100026" ll="SDBH:שָׂבָע:000000">豐足</a>​卻​<a name="02100501100034">不</a>​容​他​<a name="02100501100036;02100501100042" ll="SDBH:ישׁן:000000;SDBH:נוח:000001">睡覺</a>​。
    
\v 12 (13) 我​<a name="02100501200008" ll="SDBH:ראה:000000">見</a>​<a name="02100501200014" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100501200002">有</a>​一​件​<a name="02100501200006" ll="SDBH:חלה:000006">令</a>​<a name="02100501200006" ll="SDBH:חלה:000006">人</a>​<a name="02100501200006" ll="SDBH:חלה:000006">憂傷</a>​的​<a name="02100501200004" ll="SDBH:רָעָה:000000">禍患</a>​，​就是​<a name="02100501200022" ll="SDBH:בַּעַל:000000">財主</a>​<a name="02100501200018" ll="SDBH:שׁמר:000007">積存</a>​<a name="02100501200016" ll="SDBH:עֹשֶׁר:000000">財富</a>​，​反​<a name="02100501200026" ll="SDBH:רָעָה:000002">害</a>​自己​。 
\v 13 (14) 他​因​遭遇​<a name="02100501300016;02100501300018" ll="SDBH:עִנְיָן:000000;SDBH:רַע:000004">不幸</a>​，​<a name="02100501300008" ll="SDBH:עֹשֶׁר:000000">財產</a>​<a name="02100501300004" ll="SDBH:אבד:000004">盡失</a>​；​他​<a name="02100501300022" ll="SDBH:ילד:000001">生</a>​了​<a name="02100501300024" ll="SDBH:בֵּן:000000">兒子</a>​，​<a name="02100501300032">手</a>​裏​卻​<a name="02100501300028;02100501300034" ll="SDBH:מְאוּמָה:000000">一無所有</a>​。 
\v 14 (15) 他​怎樣​從​<a name="02100501400010;02100501400012" ll="SDBH:אֵם:000000;SDBH:בֶּטֶן:000000">母胎</a>​赤身​而​<a name="02100501400006" ll="SDBH:יצא:000008">來</a>​，​也​必​照樣​<a name="02100501400014" ll="SDBH:עָרֹום:000000">赤身</a>​而​<a name="02100501400020" ll="SDBH:הלך:000008">去</a>​；​他​所​<a name="02100501400038" ll="SDBH:עָמָל:000000">勞碌</a>​得來​的​，​<a name="02100501400046">手</a>​中​<a name="02100501400030" ll="SDBH:מְאוּמָה:000000">分毫</a>​不​能​<a name="02100501400034" ll="SDBH:נשׂא:000003">帶去</a>​。 
\v 15 (16) 這​是​一​件​<a name="02100501500010" ll="SDBH:חלה:000006">令</a>​<a name="02100501500010" ll="SDBH:חלה:000006">人</a>​<a name="02100501500010" ll="SDBH:חלה:000006">憂傷</a>​的​<a name="02100501500008" ll="SDBH:רָעָה:000000">禍患</a>​。​他​<a name="02100501500018">來</a>​的​時候​怎樣​，​<a name="02100501500022" ll="SDBH:הלך:000008">去</a>​的​時候​也​必​<a name="02100501500020">怎樣</a>​。​他​為​<a name="02100501500040" ll="SDBH:רוּחַ:000004">風</a>​<a name="02100501500034" ll="SDBH:עמל:000000">勞碌</a>​有​甚麼​<a name="02100501500028" ll="SDBH:יִתְרֹון:000000">益處</a>​呢​？ 
\v 16 (17) 並且​他​<a name="02100501600004;02100501600006" ll="SDBH:יֹום:000004">終身</a>​在​<a name="02100501600012" ll="SDBH:חֹשֶׁךְ:000000" tl="HOTTP2878">黑暗</a>​中​<a name="02100501600014" ll="SDBH:אכל:000000" tl="HOTTP2878">吃喝</a>​，​<a name="02100501600020">多</a>​有​<a name="02100501600018" ll="SDBH:כעס:000000" tl="HOTTP2879">煩惱</a>​、​<a name="02100501600024" ll="SDBH:חֳלִי:000000" tl="HOTTP2879">病痛</a>​和​<a name="02100501600028" ll="SDBH:קֶצֶף:000001">怒氣</a>​。
    
\v 17 (18) 看​哪​，​我​所​<a name="02100501700006" ll="SDBH:ראה:000000">見</a>​為​<a name="02100501700010" ll="SDBH:טֹוב:000002">善</a>​為​<a name="02100501700014" ll="SDBH:יָפֶה:000001" tl="HOTTP2880">美</a>​的​，​就是​人​在​<a name="02100501700064" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100501700058">賜</a>​他​<a name="">一生</a>​的​<a name="02100501700052" ll="SDBH:יֹום:000004">日子</a>​<a name="02100501700018;02100501700024" ll="SDBH:אכל:000000;SDBH:שׁתה:000000">吃喝</a>​，​<a name="02100501700030;02100501700032" ll="SDBH:טֹובָה:000003;SDBH:ראה:000009">享受</a>​<a name="02100501700048" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100501700038;02100501700042" ll="SDBH:עָמָל:000000;SDBH:עמל:000000">勞碌</a>​得來​的​好處​，​因為​這​是​他​應​得​的​<a name="02100501700070" ll="SDBH:חֵלֶק:000004">報償</a>​。 
\v 18 (19) 而且​，​一​個​<a name="02100501800008" ll="SDBH:אָדָם:000000">人</a>​蒙​<a name="02100501800018" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100501800012">賞賜</a>​<a name="02100501800020" ll="SDBH:עֹשֶׁר:000000">財富</a>​與​<a name="02100501800024" ll="SDBH:נְכָסִים:000000">資產</a>​，​又​<a name="02100501800028" ll="SDBH:שׁלט:000001">使</a>​他​<a name="02100501800028" ll="SDBH:שׁלט:000001">能</a>​<a name="02100501800032" ll="SDBH:אכל:000003">享用</a>​，​能​<a name="02100501800040" ll="SDBH:נשׂא:000015">獲取</a>​自己​當​有​的​<a name="02100501800044" ll="SDBH:חֵלֶק:000004">報償</a>​，​在​他​的​<a name="02100501800054" ll="SDBH:עָמָל:000000">勞碌</a>​中​<a name="02100501800050" ll="SDBH:שׂמח:000000">喜樂</a>​，​這​是​<a name="02100501800060" ll="SDBH:אֱלֹהִים:000002">上帝</a>​的​<a name="02100501800058" ll="SDBH:מַתָּת:000001">賞賜</a>​。 
\v 19 (20) 他​不​<a name="02100501900006">多</a>​<a name="02100501900008" ll="SDBH:זכר:000000">思念</a>​自己​<a name="02100501900014" ll="SDBH:חַיִּים:000000">一生</a>​的​<a name="02100501900012" ll="SDBH:יֹום:000004">日子</a>​，​因為​<a name="02100501900020" ll="SDBH:אֱלֹהִים:000002">上帝</a>​使​他​的​<a name="02100501900028" ll="SDBH:לֵב:000001">心</a>​<a name="02100501900022" ll="SDBH:ענה:002001">充滿</a>​<a name="02100501900026" ll="SDBH:שִׂמְחָה:000000">喜樂</a>​。
\c 6
\v 1 我​<a name="02100600100008" ll="SDBH:ראה:000000">見</a>​<a name="02100600100014" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100600100002">有</a>​一​件​<a name="02100600100004" ll="SDBH:רָעָה:000000">禍患</a>​<a name="02100600100018" ll="SDBH:רַב:000002">重壓</a>​在​<a name="02100600100026" ll="SDBH:אָדָם:000000">人</a>​身​上​， 
\v 2 就是​<a name="02100600200002">人</a>​蒙​<a name="02100600200012" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100600200006">賜</a>​他​<a name="02100600200014" ll="SDBH:עֹשֶׁר:000000">財富</a>​、​<a name="02100600200018" ll="SDBH:נְכָסִים:000000">資產</a>​和​<a name="02100600200022" ll="SDBH:כָּבֹוד:000000">尊榮</a>​，​以致​他​<a name="02100600200032" ll="SDBH:נֶפֶשׁ:000001">心</a>​<a name="02100600200032" ll="SDBH:נֶפֶשׁ:000001">裏</a>​所​<a name="02100600200040" ll="SDBH:אוה:000001">願</a>​的​一樣​<a name="02100600200036">都</a>​<a name="02100600200026">不</a>​<a name="02100600200028" ll="SDBH:חָסֵר:000000">缺</a>​，​只是​<a name="02100600200050" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100600200046" ll="SDBH:שׁלט:000001">使</a>​他​<a name="02100600200046" ll="SDBH:שׁלט:000001">不能</a>​<a name="02100600200054" ll="SDBH:אכל:000003">享用</a>​，​反​被​<a name="02100600200060;02100600200062" ll="SDBH:נָכְרִי:000000">外人</a>​<a name="02100600200064" ll="SDBH:אכל:000003">享用</a>​。​這​是​<a name="02100600200068" ll="SDBH:הֶבֶל:000002">虛空</a>​，​也​是​<a name="02100600200072;02100600200074" ll="SDBH:חֳלִי:000001;SDBH:רַע:000004">禍患</a>​。 
\v 3 <a name="02100600300006">人</a>​若​<a name="02100600300004" ll="SDBH:ילד:000001">生</a>​<a name="02100600300008" ll="SDBH:מֵאָה:000000">一百</a>​個​兒子​，​<a name="02100600300016" ll="SDBH:חיה:000000">活</a>​<a name="02100600300014" ll="SDBH:רַב:000001">許多</a>​<a name="02100600300012" ll="SDBH:שָׁנָה:000000">歲數</a>​；​他​即使​<a name="02100600300026;02100600300028" ll="SDBH:יֹום:000004;SDBH:שָׁנָה:000000">壽命</a>​很​<a name="02100600300020" ll="SDBH:רַב:000001">長</a>​，​<a name="02100600300032" ll="SDBH:נֶפֶשׁ:000001">心</a>​<a name="02100600300032" ll="SDBH:נֶפֶשׁ:000001">裏</a>​卻​不​因​<a name="02100600300042" ll="SDBH:טֹובָה:000003">福樂</a>​而​<a name="02100600300036" ll="SDBH:שׂבע:000006">滿足</a>​，​又​不​<a name="02100600300052">得</a>​<a name="02100600300048" ll="SDBH:קְבוּרָה:000000">埋葬</a>​；​我​<a name="02100600300056" ll="SDBH:אמר:000000">說</a>​，​那​<a name="02100600300064" ll="SDBH:נֵפֶל:000000">流掉</a>​<a name="02100600300064" ll="SDBH:נֵפֶל:000000">的</a>​<a name="02100600300064" ll="SDBH:נֵפֶל:000000">胎</a>​比​他​<a name="02100600300058" ll="SDBH:טֹוב:000001">倒好</a>​。 
\v 4 因為​這​胎​<a name="02100600400008" ll="SDBH:הֶבֶל:000002">虛虛</a>​而​<a name="02100600400010">來</a>​，​<a name="02100600400018" ll="SDBH:חֹשֶׁךְ:000000">暗暗</a>​而​<a name="02100600400020" ll="SDBH:הלך:000008">去</a>​，​<a name="02100600400030" ll="SDBH:שֵׁם:000000">名字</a>​被​<a name="02100600400028" ll="SDBH:חֹשֶׁךְ:000000">黑暗</a>​<a name="02100600400032" ll="SDBH:כסה:000009">遮蔽</a>​， 
\v 5 而且​沒有​<a name="02100600500008" ll="SDBH:ראה:000005">見</a>​過​<a name="02100600500004" ll="SDBH:שֶׁמֶשׁ:000000">天日</a>​，​甚麼​都​不​<a name="02100600500014">知道</a>​，​這​胎​比​那​人​倒​享​<a name="02100600500016" ll="SDBH:נַחַת:001001">安息</a>​。 
\v 6 那​人​雖然​<a name="02100600600006" ll="SDBH:חיה:000000">活</a>​<a name="02100600600008" ll="SDBH:אֶלֶף:001000">千</a>​<a name="02100600600010" ll="SDBH:שָׁנָה:000000">年</a>​，​<a name="02100600600012">再</a>​活​千​年​，​卻​不​能​<a name="02100600600016;02100600600020" ll="SDBH:טֹובָה:000000;SDBH:ראה:000009">享福</a>​；​<a name="02100600600034">眾人</a>​豈​不​都​歸​<a name="02100600600030" ll="SDBH:אֶחָד:000000">同</a>​<a name="02100600600030" ll="SDBH:אֶחָד:000000">一</a>​個​<a name="02100600600028" ll="SDBH:מָקֹום:000000">地方</a>​<a name="02100600600036" ll="SDBH:הלך:000007">去</a>​嗎​？
    
\v 7 <a name="02100600700008" ll="SDBH:אָדָם:000000">人</a>​的​<a name="02100600700004" ll="SDBH:עָמָל:000000">勞碌</a>​<a name="02100600700002">都</a>​為​<a name="02100600700012" ll="SDBH:פֶּה:000000">口腹</a>​，​<a name="02100600700020" ll="SDBH:נֶפֶשׁ:000001">心</a>​<a name="02100600700020" ll="SDBH:נֶפֶשׁ:000001">裏</a>​卻​不​<a name="02100600700024" ll="SDBH:מלא:000015">知足</a>​。 
\v 8 <a name="02100600800012" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​比​<a name="02100600800018" ll="SDBH:כְּסִיל:000000">愚昧人</a>​有​甚麼​<a name="02100600800006" ll="SDBH:יֹותֵר:000001">益處</a>​呢​？​<a name="02100600800026" ll="SDBH:עָנִי:000000">困苦人</a>​在​<a name="02100600800038" ll="SDBH:חַי:000000">眾人</a>​面前​<a name="02100600800028">知道</a>​如何​<a name="02100600800032" ll="SDBH:הלך:000004">行</a>​，​有​甚麼​益處​呢​？ 
\v 9 <a name="02100600900006" ll="SDBH:עַיִן:000000">眼睛</a>​<a name="02100600900004" ll="SDBH:מַרְאֶה:000000">所</a>​<a name="02100600900004" ll="SDBH:מַרְאֶה:000000">看</a>​<a name="02100600900004" ll="SDBH:מַרְאֶה:000000">的</a>​比​<a name="02100600900012" ll="SDBH:נֶפֶשׁ:000001">心</a>​<a name="02100600900012" ll="SDBH:נֶפֶשׁ:000001">裏</a>​妄想​的​<a name="02100600900002" ll="SDBH:טֹוב:000002">倒好</a>​。​這​也​是​<a name="02100600900018" ll="SDBH:הֶבֶל:000002">虛空</a>​，​也​是​<a name="02100600900022;02100600900024" ll="SDBH:רְעוּת:001000;SDBH:רוּחַ:000004">捕風</a>​。
    
\v 10 先前​所​<a name="02100601000006">有</a>​的​，​<a name="02100601000008">早已</a>​<a name="02100601000010" ll="SDBH:קרא:000007">起</a>​了​<a name="02100601000012" ll="SDBH:שֵׁם:000000">名</a>​，​人​早​<a name="02100601000016">知道</a>​<a name="02100601000022" ll="SDBH:אָדָם:000000" tl="HOTTP2881">人</a>​是​如何​的​，​<a name="02100601000028" ll="SDBH:יכל:000000" tl="HOTTP2881">不</a>​<a name="02100601000028" ll="SDBH:יכל:000000" tl="HOTTP2881">能</a>​與​比​自己​<a name="02100601000040">強壯</a>​的​<a name="02100601000032" ll="SDBH:דין:000001">相爭</a>​。 
\v 11 <a name="02100601100006" ll="SDBH:דָּבָר:000000">話語</a>​<a name="02100601100008">多</a>​，​<a name="02100601100012" ll="SDBH:הֶבֶל:000002">虛空</a>​也​<a name="02100601100010">增多</a>​，​這​對​<a name="02100601100022" ll="SDBH:אָדָם:000000">人</a>​有​甚麼​<a name="02100601100016" ll="SDBH:יֹותֵר:000001">益處</a>​呢​？ 
\v 12 <a name="02100601200016" ll="SDBH:אָדָם:000000">人</a>​<a name="02100601200028" ll="SDBH:חַיִּים:000000">一生</a>​<a name="02100601200030" ll="SDBH:הֶבֶל:000002">虛度</a>​的​<a name="02100601200026" ll="SDBH:יֹום:000004">日子</a>​，​如​<a name="02100601200040" ll="SDBH:צֵל:000000">影兒</a>​<a name="02100601200034">經過</a>​，​誰​<a name="02100601200006">知道</a>​甚麼​才​是​對​他​<a name="02100601200010" ll="SDBH:טֹוב:000002">有益</a>​呢​？​誰​能​<a name="02100601200046" ll="SDBH:נגד:000000">告訴</a>​他​身​後​在​<a name="02100601200064" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​會​<a name="02100601200056">發生</a>​甚麼​事​呢​？
\c 7
\v 1 <a name="02100700100004" ll="SDBH:שֵׁם:000002">名譽</a>​<a name="02100700100002" ll="SDBH:טֹוב:000002">強</a>​如​<a name="02100700100010" ll="SDBH:טֹוב:000002">美好</a>​的​<a name="02100700100008" ll="SDBH:שֶׁמֶן:000000">膏油</a>​，​人​<a name="02100700100018" ll="SDBH:מָוֶת:000000">死去</a>​的​<a name="02100700100014" ll="SDBH:יֹום:000004">日子</a>​勝過​他​<a name="02100700100024" ll="SDBH:ילד:000000">出生</a>​的​<a name="02100700100022" ll="SDBH:יֹום:000004">日子</a>​。
    
\v 2 往​<a name="02100700200010;02100700200012" ll="SDBH:אֵבֶל:000000;SDBH:בַּיִת:000000">喪家</a>​<a name="02100700200006" ll="SDBH:הלך:000001">去</a>​，​<a name="02100700200002" ll="SDBH:טֹוב:000002">強如</a>​<a name="02100700200016" ll="SDBH:הלך:000001">往</a>​<a name="02100700200022" ll="SDBH:מִשְׁתֶּה:000001">宴樂</a>​的​<a name="02100700200020" ll="SDBH:בַּיִת:000000">家</a>​，​因為​死​是​<a name="02100700200032;02100700200036" ll="SDBH:אָדָם:000000">眾人</a>​的​<a name="02100700200030" ll="SDBH:סֹוף:000001">結局</a>​，​<a name="02100700200042" ll="SDBH:חַי:000000">活人</a>​必​將​這​事​<a name="02100700200044">放</a>​在​<a name="02100700200048" ll="SDBH:לֵב:000001">心</a>​上​。
    
\v 3 <a name="02100700300004" ll="SDBH:כַּעַס:000000">憂愁</a>​<a name="02100700300002" ll="SDBH:טֹוב:000002">強如</a>​<a name="02100700300008" ll="SDBH:שְׂחֹוק:000000">喜笑</a>​，​因為​<a name="02100700300016" ll="SDBH:פָּנֶה:000000">面</a>​帶​<a name="02100700300014" ll="SDBH:רֹעַ:000001">愁容</a>​，​終​必​使​<a name="02100700300020" ll="SDBH:לֵב:000001">心</a>​<a name="02100700300018" ll="SDBH:יטב:000003">喜樂</a>​。
    
\v 4 <a name="02100700400004" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​的​<a name="02100700400002" ll="SDBH:לֵב:000001">心</a>​在​<a name="02100700400010" ll="SDBH:אֵבֶל:000000">遭喪</a>​之​<a name="02100700400008" ll="SDBH:בַּיִת:000000">家</a>​；​<a name="02100700400016" ll="SDBH:כְּסִיל:000000">愚昧人</a>​的​<a name="02100700400014" ll="SDBH:לֵב:000001">心</a>​在​<a name="02100700400022" ll="SDBH:שִׂמְחָה:000000">快樂</a>​之​<a name="02100700400020" ll="SDBH:בַּיִת:000000">家</a>​。
    
\v 5 <a name="02100700500006">聽</a>​<a name="02100700500010" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​的​<a name="02100700500008" ll="SDBH:גְּעָרָה:000000">責備</a>​，​<a name="02100700500002" ll="SDBH:טֹוב:000002">強如</a>​<a name="02100700500016">聽</a>​<a name="02100700500020" ll="SDBH:כְּסִיל:000000">愚昧人</a>​<a name="02100700500018" ll="SDBH:שִׁיר:000000">歌唱</a>​；
    
\v 6 因為​<a name="02100700600024" ll="SDBH:כְּסִיל:000000">愚昧人</a>​的​<a name="02100700600020" ll="SDBH:שְׂחֹוק:000000">笑聲</a>​，​好像​<a name="02100700600016" ll="SDBH:סִיר:000000">鍋子</a>​下面​燒​<a name="02100700600010" ll="SDBH:סִירָה:000000">荊棘</a>​的​<a name="02100700600006">爆聲</a>​，​這​也​是​<a name="02100700600032" ll="SDBH:הֶבֶל:000002">虛空</a>​。
    
\v 7 <a name="02100700700006" ll="SDBH:עֹשֶׁק:000000">勒索</a>​使​<a name="02100700700010" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​<a name="02100700700008" ll="SDBH:הלל:002002">變為</a>​<a name="02100700700008" ll="SDBH:הלל:002002">愚妄</a>​，​<a name="02100700700020" ll="SDBH:מַתָּנָה:000000" tl="HOTTP2882">賄賂</a>​能​<a name="02100700700014" ll="SDBH:אבד:000007">敗壞</a>​人​的​<a name="02100700700018" ll="SDBH:לֵב:000001">心</a>​。
    
\v 8 <a name="02100700800006" ll="SDBH:דָּבָר:000002">事情</a>​的​<a name="02100700800004" ll="SDBH:אַחֲרִית:000001">終局</a>​<a name="02100700800002" ll="SDBH:טֹוב:000002">強如</a>​它​的​<a name="02100700800010" ll="SDBH:רֵאשִׁית:000000">起頭</a>​；​<a name="02100700800016" ll="SDBH:רוּחַ:000002">存心</a>​<a name="02100700800014" ll="SDBH:אָרֵךְ:000001">忍耐</a>​的​，​<a name="02100700800012" ll="SDBH:טֹוב:000002">勝過</a>​<a name="02100700800022" ll="SDBH:רוּחַ:000002">居心</a>​<a name="02100700800020" ll="SDBH:גָּבֵהַּ:000001">驕傲</a>​的​。
    
\v 9 你​的​<a name="02100700900008" ll="SDBH:רוּחַ:000002">心</a>​<a name="02100700900002" ll="SDBH:אַל:000000">不要</a>​<a name="02100700900004" ll="SDBH:בהל:000000">急躁</a>​<a name="02100700900012" ll="SDBH:כעס:000000">惱怒</a>​，​因為​<a name="02100700900016" ll="SDBH:כַּעַס:000000">惱怒</a>​<a name="02100700900024" ll="SDBH:נוח:000007">存</a>​在​<a name="02100700900022" ll="SDBH:כְּסִיל:000000">愚昧人</a>​的​<a name="02100700900020" ll="SDBH:חֵיק:000000">懷</a>​中​。
    
\v 10 <a name="02100701000002" ll="SDBH:אַל:000000">不要</a>​<a name="02100701000004" ll="SDBH:אמר:000000">說</a>​：​為甚麼​<a name="02100701000018" ll="SDBH:רִאשֹׁון:000000">先前</a>​<a name="02100701000018" ll="SDBH:רִאשֹׁון:000000">的</a>​<a name="02100701000014" ll="SDBH:יֹום:000005">日子</a>​<a name="02100701000022" ll="SDBH:טֹוב:000002">強過</a>​現今​的​日子​呢​？​你​這樣​<a name="02100701000036" ll="SDBH:שׁאל:000000">問</a>​不​是​出於​<a name="02100701000034" ll="SDBH:חָכְמָה:000000">智慧</a>​。
    
\v 11 <a name="02100701100004" ll="SDBH:חָכְמָה:000000">智慧</a>​加上​<a name="02100701100008" ll="SDBH:נַחֲלָה:000000">產業</a>​是​<a name="02100701100002" ll="SDBH:טֹוב:000002">美好</a>​的​，​對​<a name="02100701100016" ll="SDBH:ראה:000005">見</a>​<a name="02100701100020" ll="SDBH:שֶׁמֶשׁ:000000">天日</a>​的​人​都​有​<a name="02100701100012" ll="SDBH:יֹותֵר:000001">益處</a>​。
    
\v 12 因為​<a name="02100701200010" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100701200006" ll="SDBH:צֵל:000001">庇護</a>​人​，​好像​<a name="02100701200018" ll="SDBH:כֶּסֶף:000000">金錢</a>​<a name="02100701200014" ll="SDBH:צֵל:000001">庇護</a>​人​一樣​；​<a name="02100701200028" ll="SDBH:חָכְמָה:000000">智慧</a>​能​<a name="02100701200030" ll="SDBH:חיה:000002">保全</a>​智慧者​的​<a name="02100701200030" ll="SDBH:חיה:000002">生命</a>​，​這​就是​<a name="02100701200024" ll="SDBH:דַּעַת:000000">知識</a>​的​<a name="02100701200022" ll="SDBH:יִתְרֹון:000000">益處</a>​。
    
\v 13 你​要​<a name="02100701300002" ll="SDBH:ראה:000000">觀看</a>​<a name="02100701300010" ll="SDBH:אֱלֹהִים:000002">上帝</a>​的​<a name="02100701300006" ll="SDBH:מַעֲשֶׂה:000000">作為</a>​，​誰​<a name="02100701300016" ll="SDBH:יכל:000000">能</a>​使​他​所​<a name="02100701300026" ll="SDBH:עות:000001">彎曲</a>​的​<a name="02100701300020" ll="SDBH:תקן:000001">變直</a>​呢​？
    
\v 14 <a name="02100701400006" ll="SDBH:טֹובָה:000001">順利</a>​<a name="02100701400004" ll="SDBH:יֹום:000003">時</a>​要​<a name="02100701400008;02100701400012" ll="SDBH:טֹוב:000002">喜樂</a>​；​<a name="02100701400020" ll="SDBH:רָעָה:000002">患難</a>​<a name="02100701400018" ll="SDBH:יֹום:000003">時</a>​當​<a name="02100701400022" ll="SDBH:ראה:000000">思考</a>​。​<a name="02100701400040" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100701400036">使</a>​這​兩​樣​都​<a name="02100701400032">發生</a>​，​<a name="02100701400044" ll="SDBH:דִּבְרָה:000002">因此</a>​，​<a name="02100701400054" ll="SDBH:אָדָם:000000">人</a>​不​<a name="02100701400050" ll="SDBH:מצא:000011">知</a>​將​會​發生​<a name="02100701400058" ll="SDBH:מְאוּמָה:000000">甚麼</a>​事​。
    
\v 15 在​<a name="02100701500014" ll="SDBH:הֶבֶל:000002">虛度</a>​的​<a name="02100701500012" ll="SDBH:יֹום:000004">日子</a>​裏​，​我​<a name="02100701500008" ll="SDBH:ראה:000000">見</a>​過​<a name="02100701500006">各樣</a>​<a name="02100701500006">的</a>​事情​，​<a name="02100701500018" ll="SDBH:צַדִּיק:000000">義人</a>​在​他​的​<a name="02100701500024" ll="SDBH:צֶדֶק:000001">義</a>​中​<a name="02100701500020" ll="SDBH:אבד:000004">滅亡</a>​，​<a name="02100701500030" ll="SDBH:רָשָׁע:000000">惡人</a>​在​他​的​<a name="02100701500036" ll="SDBH:רָעָה:000000">惡</a>​中​倒​享​<a name="02100701500032" ll="SDBH:ארך:000005">長壽</a>​。 
\v 16 <a name="02100701600002" ll="SDBH:אַל:000000">不要</a>​<a name="02100701600006" ll="SDBH:צַדִּיק:000000">行義</a>​<a name="02100701600008">過分</a>​，​也​<a name="02100701600012" ll="SDBH:אַל:000000">不要</a>​<a name="02100701600016" ll="SDBH:יֹותֵר:000002">過於</a>​自​逞​<a name="02100701600014" ll="SDBH:חכם:000001">智慧</a>​，​何必​<a name="02100701600020" ll="SDBH:שׁמם:000006">自取</a>​<a name="02100701600020" ll="SDBH:שׁמם:000006">敗亡</a>​呢​？ 
\v 17 <a name="02100701700002" ll="SDBH:אַל:000000">不要</a>​<a name="02100701700004" ll="SDBH:רשׁע:000002">行惡</a>​<a name="02100701700006">過分</a>​，​也​<a name="02100701700010" ll="SDBH:אַל:000000">不要</a>​<a name="02100701700012">為</a>​人​<a name="02100701700014" ll="SDBH:סָכָל:000000">愚昧</a>​，​何必​未​<a name="02100701700024" ll="SDBH:עֵת:000000">到期</a>​而​<a name="02100701700018" ll="SDBH:מות:000000">死</a>​呢​？ 
\v 18 你​<a name="02100701800006" ll="SDBH:אחז:000004">持守</a>​這個​，​那個​也​<a name="02100701800020" ll="SDBH:אַל:000000">不要</a>​<a name="02100701800022;02100701800026" ll="SDBH:נוח:000001">鬆手</a>​才​好​。​<a name="02100701800030" ll="SDBH:יָרֵא:000000">敬畏</a>​<a name="02100701800032" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100701800030" ll="SDBH:יָרֵא:000000">的</a>​人​，​這​<a name="02100701800038">一切</a>​都​能​兼得​。
    
\v 19 <a name="02100701900004" ll="SDBH:חָכְמָה:000000">智慧</a>​使​擁有​<a name="02100701900012" ll="SDBH:חָכָם, קסם:000000">智慧</a>​<a name="02100701900012" ll="SDBH:חָכָם, קסם:000000">的</a>​<a name="02100701900012" ll="SDBH:חָכָם, קסם:000000">人</a>​比​<a name="02100701900028" ll="SDBH:עִיר:000000">城</a>​中​<a name="02100701900016" ll="SDBH:עֶשֶׂר:000000">十</a>​個​<a name="02100701900018" ll="SDBH:שַׁלִּיט:000000">官長</a>​更​<a name="02100701900006" ll="SDBH:עזז:000002">有</a>​<a name="02100701900006" ll="SDBH:עזז:000002">能力</a>​。
    
\v 20 其實​<a name="02100702000014" ll="SDBH:אֶרֶץ:000000">世上</a>​<a name="02100702000006">沒有</a>​<a name="02100702000018;02100702000020" ll="SDBH:טֹוב:000002">行善</a>​而​不​<a name="02100702000026" ll="SDBH:חטא:001005">犯罪</a>​的​<a name="02100702000004;02100702000008" ll="SDBH:אָדָם:000000;SDBH:צַדִּיק:000000">義人</a>​。
    
\v 21 人​所​<a name="02100702100014" ll="SDBH:דבר:001000">說</a>​的​<a name="02100702100010" ll="SDBH:דָּבָר:000000">話</a>​，​你​<a name="02100702100016" ll="SDBH:אַל:000000">不要</a>​<a name="02100702100006">都</a>​<a name="02100702100018">放</a>​在​<a name="02100702100020" ll="SDBH:לֵב:000001">心上</a>​，​免得​<a name="02100702100026">聽見</a>​你​的​<a name="02100702100030" ll="SDBH:עֶבֶד:000000">僕人</a>​<a name="02100702100032" ll="SDBH:קלל:000005">詛咒</a>​你​。 
\v 22 因為​你​<a name="02100702200012" ll="SDBH:לֵב:000001">心</a>​<a name="02100702200012" ll="SDBH:לֵב:000001">裏</a>​<a name="02100702200010">知道</a>​，​自己​也​曾​<a name="02100702200006;02100702200008" ll="SDBH:רַב:000001">屢次</a>​<a name="02100702200022" ll="SDBH:קלל:000005">詛咒</a>​<a name="02100702200024" ll="SDBH:אַחֵר:000000">別人</a>​。
    
\v 23 我​曾​用​<a name="02100702300012" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100702300006" ll="SDBH:נסה:000000">試驗</a>​這​<a name="02100702300002">一切</a>​事​，​我​<a name="02100702300014" ll="SDBH:אמר:000000">說</a>​：​「​要​<a name="02100702300016" ll="SDBH:חכם:000000">得</a>​<a name="02100702300016" ll="SDBH:חכם:000000">智慧</a>​。​」​智慧​卻​離​我​<a name="02100702300022" ll="SDBH:רָחֹוק:000003">遠</a>​。 
\v 24 萬事​之​理​<a name="02100702400002" ll="SDBH:רָחֹוק:000003">遙不可及</a>​，​<a name="02100702400012;02100702400014" ll="SDBH:עָמֹק:000001">太</a>​<a name="02100702400012;02100702400014" ll="SDBH:עָמֹק:000001">深奧</a>​，​誰​能​<a name="02100702400018" ll="SDBH:מצא:000011">測透</a>​呢​？ 
\v 25 我​<a name="02100702500002">轉念</a>​，​<a name="02100702500008" ll="SDBH:לֵב:000001" tl="HOTTP2884">一心</a>​要​<a name="02100702500012">知道</a>​，​要​<a name="02100702500018" ll="SDBH:תור:000003" tl="HOTTP2884">考察</a>​，​要​<a name="02100702500022" ll="SDBH:בקשׁ:000007">尋求</a>​<a name="02100702500024" ll="SDBH:חָכְמָה:000000">智慧</a>​和​<a name="02100702500028" ll="SDBH:חֶשְׁבֹּון:000000">萬事</a>​<a name="02100702500028" ll="SDBH:חֶשְׁבֹּון:000000">的</a>​<a name="02100702500028" ll="SDBH:חֶשְׁבֹּון:000000">來由</a>​，​要​<a name="02100702500034">知道</a>​<a name="02100702500036" ll="SDBH:רֶשַׁע:000001">邪惡</a>​為​<a name="02100702500038" ll="SDBH:כֶּסֶל:002000">愚昧</a>​，​<a name="02100702500044" ll="SDBH:סִכְלוּת:000000">愚昧</a>​為​<a name="02100702500046" ll="SDBH:הֹולֵלֹות:000000">狂妄</a>​。
    
\v 26 我​<a name="02100702600004" ll="SDBH:מצא:000011">發現</a>​有​一​種​<a name="02100702600018" ll="SDBH:אִשָּׁה:000000">婦人</a>​比​<a name="02100702600012" ll="SDBH:מָוֶת:000000">死</a>​還​<a name="02100702600008" ll="SDBH:מַר:001003">苦毒</a>​：​她​本身​是​<a name="02100702600024" ll="SDBH:מָצֹוד:000001">陷阱</a>​，​她​的​<a name="02100702600030" ll="SDBH:לֵב:000001">心</a>​是​<a name="02100702600028" ll="SDBH:חֵרֶם:000000">羅網</a>​，​<a name="02100702600034">手</a>​是​<a name="02100702600032" ll="SDBH:אֵסוּר:000000">鎖鏈</a>​。​凡​<a name="02100702600036;02100702600040" ll="SDBH:טֹוב:000001">蒙</a>​<a name="02100702600044" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100702600036;02100702600040" ll="SDBH:טֹוב:000001">喜愛</a>​的​人​必​能​<a name="02100702600046" ll="SDBH:מלט:000000">躲開</a>​她​；​<a name="02100702600052" ll="SDBH:חטא:001005">有罪</a>​的​人​卻​被​她​<a name="02100702600054" ll="SDBH:לכד:000000">纏住</a>​了​。 
\v 27 <a name="02100702700010" ll="SDBH:קֹהֶלֶת:000000">傳道者</a>​<a name="02100702700008" ll="SDBH:אמר:000000">說</a>​：​「​你​<a name="02100702700002" ll="SDBH:ראה:000000">看</a>​，​我​<a name="02100702700006" ll="SDBH:מצא:000011">考察</a>​<a name="02100702700012;02100702700016" ll="SDBH:אֶחָד:000000">一</a>​<a name="02100702700012;02100702700016" ll="SDBH:אֶחָד:000000">件</a>​<a name="02100702700012;02100702700016" ll="SDBH:אֶחָד:000000">又</a>​<a name="02100702700012;02100702700016" ll="SDBH:אֶחָד:000000">一</a>​<a name="02100702700012;02100702700016" ll="SDBH:אֶחָד:000000">件</a>​，​為​要​<a name="02100702700020" ll="SDBH:מצא:000011">尋求</a>​<a name="02100702700022" ll="SDBH:חֶשְׁבֹּון:000000">萬事</a>​<a name="02100702700022" ll="SDBH:חֶשְׁבֹּון:000000">的</a>​<a name="02100702700022" ll="SDBH:חֶשְׁבֹּון:000000">來由</a>​，​這​是​我​所​尋得​的​： 
\v 28 我​<a name="02100702800004">繼續</a>​<a name="02100702800006" ll="SDBH:בקשׁ:000007">尋找</a>​，​卻​未​<a name="02100702800014" ll="SDBH:מצא:000000">找到</a>​；​<a name="02100702800022" ll="SDBH:אֶלֶף:001000">一千</a>​當中​，​我​<a name="02100702800024" ll="SDBH:מצא:000000">找到</a>​<a name="02100702800018" ll="SDBH:אֶחָד:000000">一</a>​個​<a name="02100702800016" ll="SDBH:אָדָם:000000">男</a>​<a name="02100702800016" ll="SDBH:אָדָם:000000">的</a>​，​但​在​這​<a name="02100702800032">一切</a>​當中​，​卻​<a name="02100702800038" ll="SDBH:מצא:000000">找</a>​不​<a name="02100702800038" ll="SDBH:מצא:000000">到</a>​一​個​<a name="02100702800028" ll="SDBH:אִשָּׁה:000000">女</a>​<a name="02100702800028" ll="SDBH:אִשָּׁה:000000">的</a>​。 
\v 29 你​<a name="02100702900006" ll="SDBH:ראה:000000">看</a>​，​我​所​<a name="02100702900010" ll="SDBH:מצא:000011">找到</a>​的​<a name="02100702900004" ll="SDBH:בַּד:001001">只有</a>​一​件​，​就是​<a name="02100702900018" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100702900014">造</a>​的​<a name="02100702900024" ll="SDBH:אָדָם:000000">人</a>​是​<a name="02100702900026" ll="SDBH:יָשָׁר:000004">正直</a>​的​，​但​他們​卻​<a name="02100702900032" ll="SDBH:בקשׁ:000007">尋出</a>​<a name="02100702900036" ll="SDBH:רַב:000001">許多</a>​<a name="02100702900034" ll="SDBH:חִשָּׁבֹון:000000">詭計</a>​。​」
\c 8
\v 1 誰​如​<a name="02100800100008" ll="SDBH:חָכָם, קסם:000000" tl="HOTTP2885">智慧人</a>​呢​？​誰​<a name="02100800100014">知道</a>​<a name="02100800100018" ll="SDBH:דָּבָר:000002">事情</a>​的​<a name="02100800100016" ll="SDBH:פֵּשֶׁר:000000">解釋</a>​呢​？​<a name="02100800100022" ll="SDBH:אָדָם:000000">人</a>​的​<a name="02100800100020" ll="SDBH:חָכְמָה:000000">智慧</a>​使​他​的​<a name="02100800100026" ll="SDBH:פָּנֶה:000000">臉</a>​<a name="02100800100024" ll="SDBH:אור:000001">發光</a>​，​<a name="02100800100034" ll="SDBH:שׁנה:000004" tl="HOTTP2886">改變</a>​他​<a name="02100800100032" ll="SDBH:פָּנֶה:000000">臉</a>​上​<a name="02100800100030" ll="SDBH:עֹז:000003">暴戾之氣</a>​。
    
\v 2 我​勸​你​<a name="02100800200014" ll="SDBH:דִּבְרָה:000002">因</a>​<a name="02100800200018" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100800200016" ll="SDBH:שְׁבוּעָה:000000">誓言</a>​<a name="02100800200014" ll="SDBH:דִּבְרָה:000002">的</a>​<a name="02100800200014" ll="SDBH:דִּבְרָה:000002">緣故</a>​，​當​<a name="02100800200008" ll="SDBH:שׁמר:000003">遵守</a>​<a name="02100800200006" ll="SDBH:מֶלֶךְ:000000">王</a>​的​<a name="02100800200004" ll="SDBH:פֶּה:000001">命令</a>​。 
\v 3 <a name="02100800300002" ll="SDBH:אַל:000000">不要</a>​<a name="02100800300004" ll="SDBH:בהל:000000;SDBH:בהל:001000">急躁</a>​離開​王​的​<a name="02100800300008">面前</a>​，​<a name="02100800300012" ll="SDBH:אַל:000000">不要</a>​固執​<a name="02100800300018;02100800300020" ll="SDBH:דָּבָר:000002;SDBH:רַע:000005">行惡</a>​，​因為​他​<a name="02100800300024">凡事</a>​都​<a name="02100800300028" ll="SDBH:חפץ:000002">隨</a>​<a name="02100800300028" ll="SDBH:חפץ:000002">自己</a>​<a name="02100800300028" ll="SDBH:חפץ:000002">心意</a>​而​<a name="02100800300030">行</a>​。 
\v 4 <a name="02100800400008" ll="SDBH:מֶלֶךְ:000000">王</a>​的​<a name="02100800400006" ll="SDBH:דָּבָר:000000">話</a>​本​有​<a name="02100800400010" ll="SDBH:שִׁלְטֹון:000000">權力</a>​，​誰​能​對​他​<a name="02100800400016" ll="SDBH:אמר:000000">說</a>​：​「​你​在​<a name="02100800400022">做</a>​甚麼​？​」 
\v 5 凡​<a name="02100800500002" ll="SDBH:שׁמר:000003">遵守</a>​<a name="02100800500004" ll="SDBH:מִצְוָה:000000">命令</a>​的​，​必​不​<a name="02100800500008">經歷</a>​<a name="02100800500010;02100800500012" ll="SDBH:דָּבָר:000002;SDBH:רַע:000004">禍患</a>​；​<a name="02100800500026" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​的​<a name="02100800500024" ll="SDBH:לֵב:000001">心</a>​<a name="02100800500022">知道</a>​適當​的​<a name="02100800500016" ll="SDBH:עֵת:000000">時機</a>​和​必經​的​<a name="02100800500020" ll="SDBH:מִשְׁפָּט:000005">過程</a>​。 
\v 6 <a name="02100800600006">各樣</a>​<a name="02100800600008" ll="SDBH:חֵפֶץ:000003">事務</a>​都​<a name="02100800600010">有</a>​<a name="02100800600012" ll="SDBH:עֵת:000000">時機</a>​和​<a name="02100800600016" ll="SDBH:מִשְׁפָּט:000005">過程</a>​，​但​<a name="02100800600024" ll="SDBH:אָדָם:000000">人</a>​有​<a name="02100800600020" ll="SDBH:רָעָה:000002">苦難</a>​<a name="02100800600026" ll="SDBH:רַב:000002">重壓</a>​在​身​。 
\v 7 他​<a name="02100800700004">不</a>​<a name="02100800700006">知道</a>​將來​的​事​，​其實​將來​如何​，​誰​能​<a name="02100800700024" ll="SDBH:נגד:000000">告訴</a>​他​呢​？ 
\v 8 <a name="02100800800002">沒有</a>​<a name="02100800800004" ll="SDBH:אָדָם:000000">人</a>​能​<a name="02100800800006" ll="SDBH:שַׁלִּיט:000000">掌握</a>​<a name="02100800800012" ll="SDBH:רוּחַ:000003">生命</a>​，​將​<a name="02100800800022" ll="SDBH:רוּחַ:000003">生命</a>​<a name="02100800800016" ll="SDBH:כלא:000003">留住</a>​；​也​<a name="02100800800026">沒有</a>​人​有​<a name="02100800800028" ll="SDBH:שִׁלְטֹון:000000">權力</a>​掌管​<a name="02100800800032;02100800800036" ll="SDBH:יֹום:000004;SDBH:מָוֶת:000000">死期</a>​。​這​場​<a name="02100800800048" ll="SDBH:מִלְחָמָה:000000">爭戰</a>​<a name="02100800800040">無</a>​人​能​<a name="02100800800042" ll="SDBH:מִשְׁלַחַת:000000">免</a>​；​<a name="02100800800056" ll="SDBH:רֶשַׁע:000001">邪惡</a>​也​不​能​<a name="02100800800054" ll="SDBH:מלט:000001">救</a>​那​行​邪惡​的​<a name="02100800800060" ll="SDBH:בַּעַל:000005">人</a>​。 
\v 9 這​<a name="02100800900004">一切</a>​我​都​<a name="02100800900008" ll="SDBH:ראה:000000">見</a>​過​，​我​<a name="02100800900012;02100800900016" ll="SDBH:לֵב:000001">專心</a>​考察​<a name="02100800900032" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100800900026">發生</a>​的​<a name="02100800900020">一切</a>​<a name="02100800900022" ll="SDBH:מַעֲשֶׂה:000000">事</a>​，​<a name="02100800900034" ll="SDBH:עֵת:000000">有時</a>​這​<a name="02100800900042" ll="SDBH:אָדָם:000000">人</a>​<a name="02100800900038" ll="SDBH:שׁלט:000000">管轄</a>​那​<a name="02100800900046" ll="SDBH:אָדָם:000000">人</a>​，​令​他​<a name="02100800900050" ll="SDBH:רַע:000004">受害</a>​。
    
\v 10 我​<a name="02100801000008" ll="SDBH:ראה:000000">見</a>​<a name="02100801000010" ll="SDBH:רָשָׁע:000000">惡人</a>​被​<a name="02100801000012" ll="SDBH:קבר:000000" il="Bolen00090;Tombs-rock-cut;tb110800210" tl="HOTTP2887">埋葬</a>​；​從前​他們​<a name="02100801000016;02100801000026" ll="SDBH:הלך:000002" tl="HOTTP2887">進出</a>​<a name="02100801000022;02100801000024" ll="SDBH:מָקֹום:000000;SDBH:קָדֹושׁ:000002" tl="HOTTP2887">聖地</a>​，​他們​在​<a name="02100801000036" ll="SDBH:עִיר:000000">城</a>​中​的​作為​被​人​<a name="02100801000030" ll="SDBH:שׁכח:000000" tl="HOTTP2888">忘記</a>​。​這​也​是​<a name="02100801000048" ll="SDBH:הֶבֶל:000002">虛空</a>​。 
\v 11 <a name="02100801100008;02100801100010;02100801100014" ll="SDBH:מַעֲשֶׂה:000001;SDBH:פִּתְגָם:000000;SDBH:רָעָה:000000">判罪</a>​之後​<a name="02100801100004">不</a>​<a name="02100801100016" ll="SDBH:מְהֵרָה:000000">立刻</a>​<a name="02100801100006">執行</a>​，​<a name="02100801100020">所以</a>​<a name="02100801100026;02100801100030" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​<a name="02100801100022" ll="SDBH:מלא:000024">滿懷</a>​<a name="02100801100036;02100801100038" ll="SDBH:רַע:000005">作惡</a>​的​<a name="02100801100024" ll="SDBH:לֵב:000001">心思</a>​。 
\v 12 <a name="02100801200004" ll="SDBH:חטא:001005">罪人</a>​雖然​<a name="02100801200006;02100801200008" ll="SDBH:רַע:000005">作惡</a>​<a name="02100801200010" ll="SDBH:מֵאָה:000000" tl="HOTTP2889">百</a>​次​，​倒​享​<a name="02100801200014" ll="SDBH:ארך:000005">長壽</a>​；​然而​我​也​<a name="02100801200022">知道</a>​，​<a name="02100801200030" ll="SDBH:טֹוב:000002">福樂</a>​必​<a name="02100801200028">臨到</a>​<a name="02100801200034" ll="SDBH:יָרֵא:000000">敬畏</a>​<a name="02100801200038" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100801200034" ll="SDBH:יָרֵא:000000">的</a>​人​，​就是​在​他​<a name="02100801200048">面前</a>​<a name="02100801200042" ll="SDBH:ירא:000000">心</a>​<a name="02100801200042" ll="SDBH:ירא:000000">存</a>​<a name="02100801200042" ll="SDBH:ירא:000000">敬畏</a>​的​人​。 
\v 13 <a name="02100801300014" ll="SDBH:רָשָׁע:000000">惡人</a>​卻​不​<a name="02100801300008">得</a>​<a name="02100801300004" ll="SDBH:טֹוב:000002">福樂</a>​，​他​的​<a name="02100801300022" ll="SDBH:יֹום:000004">日子</a>​好像​<a name="02100801300028" ll="SDBH:צֵל:000000">影兒</a>​不​得​<a name="02100801300020" ll="SDBH:ארך:000005">長久</a>​，​因為​他​<a name="02100801300032">不</a>​<a name="02100801300034" ll="SDBH:יָרֵא:000000">敬畏</a>​<a name="02100801300042" ll="SDBH:אֱלֹהִים:000002">上帝</a>​。
    
\v 14 <a name="02100801400014" ll="SDBH:אֶרֶץ:000000">世上</a>​<a name="02100801400002">有</a>​一​件​<a name="02100801400004" ll="SDBH:הֶבֶל:000002">虛空</a>​的​事​，​就是​<a name="02100801400020" ll="SDBH:צַדִּיק:000000">義人</a>​所​<a name="02100801400024" ll="SDBH:נגע:000006">遭遇</a>​的​，​反而​照​<a name="02100801400034" ll="SDBH:רָשָׁע:000000">惡人</a>​<a name="02100801400030" ll="SDBH:מַעֲשֶׂה:000001">所</a>​<a name="02100801400030" ll="SDBH:מַעֲשֶׂה:000001">做</a>​<a name="02100801400030" ll="SDBH:מַעֲשֶׂה:000001">的</a>​；​<a name="02100801400040" ll="SDBH:רָשָׁע:000000">惡人</a>​所​<a name="02100801400044" ll="SDBH:נגע:000006">遭遇</a>​的​，​反而​照​<a name="02100801400054" ll="SDBH:צַדִּיק:000000">義人</a>​<a name="02100801400050" ll="SDBH:מַעֲשֶׂה:000001">所</a>​<a name="02100801400050" ll="SDBH:מַעֲשֶׂה:000001">做</a>​<a name="02100801400050" ll="SDBH:מַעֲשֶׂה:000001">的</a>​。​我​<a name="02100801400056" ll="SDBH:אמר:000000">說</a>​，​這​也​是​<a name="02100801400064" ll="SDBH:הֶבֶל:000002">虛空</a>​。 
\v 15 我​就​<a name="02100801500004" ll="SDBH:שׁבח:000000">稱讚</a>​<a name="02100801500012" ll="SDBH:שִׂמְחָה:000000">快樂</a>​，​原來​<a name="02100801500024" ll="SDBH:אָדָם:000000">人</a>​在​<a name="02100801500030" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​，​<a name="02100801500016;02100801500018" ll="SDBH:טֹוב:000002">最大</a>​的​福氣​莫過於​<a name="02100801500038;02100801500044" ll="SDBH:אכל:000000;SDBH:שׁתה:000000">吃喝</a>​<a name="02100801500050" ll="SDBH:שׂמח:000000">快樂</a>​；​他​在​<a name="02100801500080" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​，​<a name="02100801500074" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100801500068">賜</a>​他​<a name="02100801500064" ll="SDBH:חַיִּים:000000">一生</a>​的​<a name="02100801500062" ll="SDBH:יֹום:000004">日子</a>​，​要​從​<a name="02100801500060" ll="SDBH:עָמָל:000000">勞碌</a>​中​享受​所​得​。
    
\v 16 我​<a name="02100801600006;02100801600010" ll="SDBH:לֵב:000001">專心</a>​想要​<a name="02100801600014">明白</a>​<a name="02100801600016" ll="SDBH:חָכְמָה:000000">智慧</a>​，​要​<a name="02100801600022" ll="SDBH:ראה:000000">觀看</a>​<a name="02100801600038" ll="SDBH:אֶרֶץ:000000">世上</a>​所​<a name="02100801600032">發生</a>​的​<a name="02100801600028" ll="SDBH:עִנְיָן:000000">事</a>​。​有人​<a name="02100801600048;02100801600056" ll="SDBH:יֹום:000000;SDBH:לַיְלָה:000000">晝夜</a>​<a name="02100801600064">不</a>​得​<a name="02100801600062" ll="SDBH:עַיִן:000000">闔眼</a>​<a name="02100801600058" ll="SDBH:שֵׁנָה:000000">睡覺</a>​。 
\v 17 我​<a name="02100801700004" ll="SDBH:ראה:000000">觀看</a>​<a name="02100801700014" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100801700008">一切</a>​的​<a name="02100801700010" ll="SDBH:מַעֲשֶׂה:000000">作為</a>​，​知道​<a name="02100801700024" ll="SDBH:אָדָם:000000">人</a>​不​<a name="02100801700020" ll="SDBH:יכל:000000">能</a>​<a name="02100801700028" ll="SDBH:מצא:000011">探求</a>​<a name="02100801700044" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100801700038">發生</a>​的​<a name="02100801700034" ll="SDBH:מַעֲשֶׂה:000000">事</a>​；​任憑​他​<a name="02100801700054" ll="SDBH:עמל:000000">費</a>​多少​<a name="02100801700054" ll="SDBH:עמל:000000">力</a>​<a name="02100801700062" ll="SDBH:בקשׁ:000007">探索</a>​，​都​<a name="02100801700068" ll="SDBH:מצא:000011">找</a>​不​<a name="02100801700068" ll="SDBH:מצא:000011">出來</a>​，​<a name="02100801700080" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​雖​<a name="02100801700076" ll="SDBH:אמר:000000">說</a>​他​<a name="02100801700084">明白</a>​，​仍​不​<a name="02100801700088" ll="SDBH:יכל:000000">能</a>​<a name="02100801700092" ll="SDBH:מצא:000011">找</a>​<a name="02100801700092" ll="SDBH:מצא:000011">出來</a>​。
\c 9
\v 1 我​將​這​<a name="02100900100006">一切</a>​事​<a name="02100900100010">放</a>​在​<a name="02100900100014" ll="SDBH:לֵב:000001" tl="HOTTP2890">心上</a>​，​詳細​<a name="02100900100020" ll="SDBH:בור:000000;SDBH:ברר:000000">研究</a>​這些​，​就​知道​<a name="02100900100032" ll="SDBH:צַדִּיק:000000">義人</a>​和​<a name="02100900100038" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​，​並​他們​的​<a name="02100900100042" ll="SDBH:עֲבָד:000000">作為</a>​<a name="02100900100024">都</a>​在​<a name="02100900100050" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100900100046">手</a>​中​；​或是​<a name="02100900100054" ll="SDBH:אַהֲבָה:000000">愛</a>​，​或是​<a name="02100900100058" ll="SDBH:שִׂנְאָה:000000">恨</a>​，​<a name="02100900100070">都</a>​在​他們​<a name="02100900100074">面前</a>​，​但​<a name="02100900100066" ll="SDBH:אָדָם:000000">人</a>​<a name="02100900100060">不</a>​能​<a name="02100900100062">知道</a>​。 
\v 2 <a name="02100900200004">凡</a>​臨到​<a name="02100900200014">眾人</a>​<a name="02100900200004">的</a>​<a name="02100900200016" ll="SDBH:מִקְרֶה:000001">際遇</a>​都​一樣​：​<a name="02100900200024" ll="SDBH:צַדִּיק:000000">義人</a>​和​<a name="02100900200032" ll="SDBH:רָשָׁע:000000">惡人</a>​，​<a name="02100900200038" ll="SDBH:טֹוב:000001" tl="HOTTP2892">好人</a>​，​<a name="02100900200046" ll="SDBH:טָהֹור:000000">潔淨</a>​的​人​和​<a name="02100900200054" ll="SDBH:טָמֵא:000000">不</a>​<a name="02100900200054" ll="SDBH:טָמֵא:000000">潔淨</a>​的​人​，​<a name="02100900200062" ll="SDBH:זבח:000001">獻祭</a>​的​和​<a name="02100900200070">不</a>​<a name="02100900200072" ll="SDBH:זבח:000001">獻祭</a>​的​，​都​<a name="02100900200018" ll="SDBH:אֶחָד:000000">一樣</a>​。​<a name="02100900200078" ll="SDBH:טֹוב:000001">好人</a>​如何​，​<a name="02100900200084" ll="SDBH:חטא:001005">罪人</a>​也​如何​；​<a name="02100900200088" ll="SDBH:שׁבע:000000">起誓</a>​的​如何​，​<a name="02100900200096" ll="SDBH:ירא:000000">怕</a>​<a name="02100900200094" ll="SDBH:שְׁבוּעָה:000000">起誓</a>​的​也​如何​。 
\v 3 在​<a name="02100900300018" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100900300012">發生</a>​的​<a name="02100900300008">一切</a>​事​中​有​一​件​<a name="02100900300004" ll="SDBH:רַע:000005">禍患</a>​，​就是​<a name="02100900300030">眾人</a>​的​<a name="02100900300022" ll="SDBH:מִקְרֶה:000001">際遇</a>​都​<a name="02100900300024" ll="SDBH:אֶחָד:000000">一樣</a>​，​並且​<a name="02100900300038;02100900300042" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​的​<a name="02100900300036" ll="SDBH:לֵב:000001">心</a>​<a name="02100900300044" ll="SDBH:מלא:000008">充滿</a>​了​<a name="02100900300046" ll="SDBH:רַע:000005">惡</a>​；​<a name="02100900300058" ll="SDBH:חַיִּים:000000">活</a>​<a name="02100900300058" ll="SDBH:חַיִּים:000000">着</a>​的​時候​<a name="02100900300054" ll="SDBH:לֵבָב:000001">心</a>​<a name="02100900300054" ll="SDBH:לֵבָב:000001">裏</a>​<a name="02100900300050" ll="SDBH:הֹולֵלֹות:000000">狂妄</a>​，​後來​就​歸​<a name="02100900300068" ll="SDBH:מות:000000">死人</a>​那裏​去​了​。 
\v 4 與​<a name="02100900400014">一切</a>​<a name="02100900400018" ll="SDBH:חַי:000000">活人</a>​<a name="02100900400010" ll="SDBH:חבר:000006">相連</a>​的​，​那​人​還​<a name="02100900400020">有</a>​<a name="02100900400022" ll="SDBH:בִּטָּחֹון:000000">指望</a>​，​因為​<a name="02100900400030" ll="SDBH:חַי:000000">活</a>​<a name="02100900400030" ll="SDBH:חַי:000000">着</a>​的​<a name="02100900400028" ll="SDBH:כֶּלֶב:000000">狗</a>​<a name="02100900400034" ll="SDBH:טֹוב:000002">勝過</a>​<a name="02100900400044" ll="SDBH:מות:000000">死</a>​了​的​<a name="02100900400040" ll="SDBH:אַרְיֵה:000000">獅子</a>​。 
\v 5 <a name="02100900500006" ll="SDBH:חַי:000000">活</a>​着​的​人​<a name="02100900500008">知道</a>​必​<a name="02100900500012" ll="SDBH:מות:000000">死</a>​；​<a name="02100900500018" ll="SDBH:מות:000000">死</a>​了​的​人​<a name="02100900500020;02100900500022;02100900500024" ll="SDBH:מְאוּמָה:000000">毫無所知</a>​，​也​<a name="02100900500028;02100900500030">不再</a>​得​<a name="02100900500034" ll="SDBH:שָׂכָר:000000">賞賜</a>​，​因為​他們​的​<a name="02100900500040" ll="SDBH:זֵכֶר:000000">名</a>​已​被​<a name="02100900500038" ll="SDBH:שׁכח:000000">遺忘</a>​。 
\v 6 他們​的​<a name="02100900600004" ll="SDBH:אַהֲבָה:000000">愛</a>​，​他們​的​<a name="02100900600008" ll="SDBH:שִׂנְאָה:000000">恨</a>​，​他們​的​<a name="02100900600012" ll="SDBH:קִנְאָה:000001">嫉妒</a>​，​<a name="02100900600014">早就</a>​<a name="02100900600016" ll="SDBH:אבד:000006">消滅</a>​了​。​在​<a name="02100900600044" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​所​<a name="02100900600038">發生</a>​的​<a name="02100900600034">一切</a>​事​，​他們​<a name="02100900600030" ll="SDBH:עֹולָם:000000">永</a>​<a name="02100900600022;02100900600026">不再</a>​有​<a name="02100900600020" ll="SDBH:חֵלֶק:000005">份</a>​了​。
    
\v 7 你​只管​<a name="02100900700008" ll="SDBH:שִׂמְחָה:000000">歡歡喜喜</a>​<a name="02100900700004" ll="SDBH:אכל:000000">吃</a>​你​的​<a name="02100900700010" ll="SDBH:לֶחֶם:000000">飯</a>​，​<a name="02100900700018" ll="SDBH:לֵב:000001">心</a>​<a name="02100900700018" ll="SDBH:לֵב:000001">中</a>​<a name="02100900700020" ll="SDBH:טֹוב:000002">快樂</a>​<a name="02100900700014" ll="SDBH:שׁתה:000000">喝</a>​你​的​<a name="02100900700022" ll="SDBH:יַיִן:000000">酒</a>​，​因為​<a name="02100900700032" ll="SDBH:אֱלֹהִים:000002">上帝</a>​<a name="02100900700026">已經</a>​<a name="02100900700028" ll="SDBH:רצה:000000">悅納</a>​你​的​<a name="02100900700036" ll="SDBH:מַעֲשֶׂה:000000">作為</a>​。
    
\v 8 你​的​<a name="02100900800010" ll="SDBH:בֶּגֶד:000001">衣服</a>​要​<a name="02100900800004;02100900800006" ll="SDBH:עֵת:000001">時時</a>​<a name="02100900800012" ll="SDBH:לָבָן:000000">潔白</a>​，​你​<a name="02100900800020" ll="SDBH:רֹאשׁ:000000">頭</a>​上​也​<a name="02100900800022" ll="SDBH:אַל:000000">不要</a>​<a name="02100900800024" ll="SDBH:חסר:000000">缺少</a>​<a name="02100900800016" ll="SDBH:שֶׁמֶן:000000">膏油</a>​。
    
\v 9 在​你​<a name="02100900900018" ll="SDBH:חַיִּים:000000">一生</a>​<a name="02100900900020" ll="SDBH:הֶבֶל:000002">虛空</a>​的​<a name="02100900900016" ll="SDBH:יֹום:000004">日子</a>​，​就是​上帝​<a name="02100900900024">賜</a>​你​在​<a name="02100900900032" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100900900038" ll="SDBH:הֶבֶל:000002" tl="HOTTP2894">虛空</a>​的​<a name="02100900900036" ll="SDBH:יֹום:000004" tl="HOTTP2894">日子</a>​，​當​與​你​所​<a name="02100900900012" ll="SDBH:אהב:000000">愛</a>​的​<a name="02100900900008" ll="SDBH:אִשָּׁה:000000">妻</a>​<a name="02100900900002;02100900900004" ll="SDBH:חַיִּים:000000;SDBH:ראה:000011">快活</a>​<a name="02100900900002;02100900900004" ll="SDBH:חַיִּים:000000;SDBH:ראה:000011">度日</a>​，​因為​那​是​你​<a name="02100900900050" ll="SDBH:חַיִּים:000000">一生</a>​中​在​<a name="02100900900068" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02100900900056;02100900900062" ll="SDBH:עָמֵל:000000;SDBH:עָמָל:000000">勞碌</a>​所​得​的​<a name="02100900900044" ll="SDBH:חֵלֶק:000004">報償</a>​。 
\v 10 <a name="02100901000002">凡</a>​你​<a name="02100901000008">手</a>​所​當​<a name="02100901000012">做</a>​的​事​，​要​<a name="02100901000016" ll="SDBH:כֹּחַ:000000">盡力</a>​去​<a name="02100901000018">做</a>​；​因為​在​你​所​必須​<a name="02100901000046" ll="SDBH:הלך:000007">去</a>​的​<a name="02100901000040" ll="SDBH:שְׁאֹול:000000">陰間</a>​<a name="02100901000022">沒有</a>​<a name="02100901000024" ll="SDBH:מַעֲשֶׂה:000000">工作</a>​，​沒有​<a name="02100901000028" ll="SDBH:חֶשְׁבֹּון:000000">謀算</a>​，​沒有​<a name="02100901000032" ll="SDBH:דַּעַת:000000">知識</a>​，​也​沒有​<a name="02100901000036" ll="SDBH:חָכְמָה:000000">智慧</a>​。
    
\v 11 我​<a name="02100901100002" ll="SDBH:שׁוב:000041">轉</a>​而​<a name="02100901100006" ll="SDBH:ראה:000000">回顧</a>​<a name="02100901100012" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​，​<a name="02100901100022" ll="SDBH:קַל:000000">快</a>​<a name="02100901100022" ll="SDBH:קַל:000000">跑</a>​<a name="02100901100022" ll="SDBH:קַל:000000">的</a>​未必​能​贏​，​<a name="02100901100036" ll="SDBH:גִּבֹּור:000000">強壯</a>​的​未必​戰勝​，​<a name="02100901100052" ll="SDBH:חָכָם, קסם:000000">智慧</a>​的​未必​得​<a name="02100901100054" ll="SDBH:לֶחֶם:000000">糧食</a>​，​<a name="02100901100066" ll="SDBH:בין:000000">聰明</a>​的​未必​得​<a name="02100901100068" ll="SDBH:עֹשֶׁר:000000">財富</a>​，​<a name="02100901100080">有</a>​<a name="02100901100080">學問</a>​的​未必​得​人​<a name="02100901100082" ll="SDBH:חֵן:000001">喜悅</a>​，​全​在乎​<a name="02100901100096">各人</a>​<a name="02100901100092">遇上</a>​的​<a name="02100901100086" ll="SDBH:עֵת:000000">時候</a>​和​<a name="02100901100090">機會</a>​。 
\v 12 <a name="02100901200012" ll="SDBH:אָדָם:000000">人</a>​不​<a name="02100901200008">知道</a>​自己​的​<a name="02100901200016" ll="SDBH:עֵת:000000">定期</a>​。​<a name="02100901200022" ll="SDBH:דָּג:000000">魚</a>​被​<a name="02100901200032" ll="SDBH:רַע:000004" tl="HOTTP2895">險惡</a>​的​<a name="02100901200030" ll="SDBH:מָצֹוד:000001">網</a>​<a name="02100901200026" ll="SDBH:אחז:000002">圈住</a>​，​<a name="02100901200040" ll="SDBH:צִפֹּור:000001">鳥</a>​被​<a name="02100901200050" ll="SDBH:פַּח:000000">羅網</a>​<a name="02100901200044" ll="SDBH:אחז:000002">捉住</a>​，​<a name="02100901200066" ll="SDBH:רָעָה:000002">禍患</a>​的​<a name="02100901200064" ll="SDBH:עֵת:000000">時刻</a>​<a name="02100901200076" ll="SDBH:פִּתְאֹם:000000">忽然</a>​<a name="02100901200072" ll="SDBH:נפל:000021">臨到</a>​，​<a name="02100901200056;02100901200060" ll="SDBH:אָדָם:000000;SDBH:בֵּן:000003">世人</a>​<a name="02100901200054" ll="SDBH:יקשׁ:000000">陷</a>​在​其中​也​是​如此​。
    
\v 13 我​<a name="02100901300006" ll="SDBH:ראה:000000">見</a>​<a name="02100901300014" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​有​一​樣​<a name="02100901300008" ll="SDBH:חָכְמָה:000000">智慧</a>​，​在​我​看來​是​<a name="02100901300018" ll="SDBH:גָּדֹול:000003">偉大</a>​的​， 
\v 14 就是​有​一​<a name="02100901400008">人口</a>​<a name="02100901400012" ll="SDBH:מְעַט:000000">稀少</a>​的​<a name="02100901400004" ll="SDBH:קָטָן:000000">小</a>​<a name="02100901400002" ll="SDBH:עִיר:000000">城</a>​，​遇​<a name="02100901400022" ll="SDBH:גָּדֹול:000002">大</a>​<a name="02100901400020" ll="SDBH:מֶלֶךְ:000000">君王</a>​<a name="02100901400016">前來</a>​攻擊​，​<a name="02100901400032" ll="SDBH:בנה:000000">修築</a>​<a name="02100901400036" ll="SDBH:מָצֹוד:002000" il="Assyrian_siege;SiegeTower-02-031;Siegeworks-02-029b" tl="HOTTP2896">營壘</a>​，​將​城​<a name="02100901400026">圍困</a>​。 
\v 15 城​中​<a name="02100901500004" ll="SDBH:מצא:000017">有</a>​一​個​<a name="02100901500010" ll="SDBH:מִסְכֵּן:000000">貧窮</a>​的​<a name="02100901500008;02100901500012" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​，​他​用​<a name="02100901500028" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100901500016" ll="SDBH:מלט:000001">救</a>​了​那​<a name="02100901500024" ll="SDBH:עִיר:000000">城</a>​，​卻​沒有​<a name="02100901500032" ll="SDBH:אָדָם:000000">人</a>​<a name="02100901500036" ll="SDBH:זכר:000000">記念</a>​那​<a name="02100901500042;02100901500046" ll="SDBH:מִסְכֵּן:000000">窮人</a>​。 
\v 16 我​就​<a name="02100901600004" ll="SDBH:אמר:000000">說</a>​，​<a name="02100901600010" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100901600008" ll="SDBH:טֹוב:000002">勝過</a>​<a name="02100901600014" ll="SDBH:גְּבוּרָה:000000">勇力</a>​；​然而​那​<a name="02100901600022" ll="SDBH:מִסְכֵּן:000000">貧窮人</a>​的​<a name="02100901600018" ll="SDBH:חָכְמָה:000000">智慧</a>​被​人​<a name="02100901600024" ll="SDBH:בזה:000000">藐視</a>​，​他​的​<a name="02100901600028" ll="SDBH:דָּבָר:000000">話</a>​也​<a name="02100901600030">無</a>​人​<a name="02100901600032">聽從</a>​。
    
\v 17 寧可​<a name="02100901700010">聽</a>​<a name="02100901700004" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​<a name="02100901700008" ll="SDBH:נַחַת:001001">安靜</a>​的​<a name="02100901700002" ll="SDBH:דָּבָר:000000">話語</a>​，​不​聽​<a name="02100901700016" ll="SDBH:משׁל:001002">掌權者</a>​在​<a name="02100901700022" ll="SDBH:כְּסִיל:000000">愚昧人</a>​中​的​<a name="02100901700014" ll="SDBH:זְעָקָה:000000">喊聲</a>​。 
\v 18 <a name="02100901800004" ll="SDBH:חָכְמָה:000000">智慧</a>​<a name="02100901800002" ll="SDBH:טֹוב:000002">勝過</a>​<a name="02100901800010" ll="SDBH:קְרָב:000000">打仗</a>​的​<a name="02100901800008" ll="SDBH:כְּלִי:000000">兵器</a>​；​但​<a name="02100901800016" ll="SDBH:אֶחָד:000000" tl="HOTTP2897">一</a>​個​<a name="02100901800014" ll="SDBH:חטא:001005" tl="HOTTP2897">罪人</a>​能​<a name="02100901800018" ll="SDBH:אבד:000007">敗壞</a>​<a name="02100901800022">許多</a>​<a name="02100901800020" ll="SDBH:טֹובָה:000001">善事</a>​。
\c 10
\v 1 <a name="02101000100004" ll="SDBH:מָוֶת:000000" tl="HOTTP2898">死</a>​<a name="02101000100002" ll="SDBH:זְבוּב:000000" il="Fauna:6.4" tl="HOTTP2898">蒼蠅</a>​使​<a name="02101000100012" ll="SDBH:רקח:000000">做</a>​<a name="02101000100012" ll="SDBH:רקח:000000">香</a>​的​<a name="02101000100010" ll="SDBH:שֶׁמֶן:000000">膏油</a>​<a name="02101000100008" ll="SDBH:נבע:000001" tl="HOTTP2899">散發</a>​<a name="02101000100006">臭氣</a>​；​同樣​，​<a name="02101000100026" ll="SDBH:מְעַט:000001">一</a>​<a name="02101000100026" ll="SDBH:מְעַט:000001">點</a>​<a name="02101000100024" ll="SDBH:סִכְלוּת:000000">愚昧</a>​也​能​壓倒​<a name="02101000100018" ll="SDBH:חָכְמָה:000000" tl="HOTTP2900">智慧</a>​和​<a name="02101000100022" ll="SDBH:כָּבֹוד:000000" tl="HOTTP2900">尊榮</a>​。
    
\v 2 <a name="02101000200004" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​的​<a name="02101000200002" ll="SDBH:לֵב:000001">心</a>​居​<a name="02101000200008" ll="SDBH:יָמִין:000000">右</a>​；​<a name="02101000200014" ll="SDBH:כְּסִיל:000000">愚昧人</a>​的​<a name="02101000200012" ll="SDBH:לֵב:000001">心</a>​居​<a name="02101000200018" ll="SDBH:שְׂמֹאל:000000">左</a>​。
    
\v 3 <a name="02101000300018">愚昧人</a>​的​<a name="02101000300010;02101000300020" ll="SDBH:דֶּרֶךְ:000003">行徑</a>​顯出​<a name="02101000300022;02101000300024" ll="SDBH:הלך:000001;SDBH:סָכָל:000000">無知</a>​，​對​<a name="02101000300034">眾人</a>​<a name="02101000300028" ll="SDBH:חָסֵר:000001">說</a>​，​他​是​<a name="02101000300038">愚昧人</a>​。
    
\v 4 <a name="02101000400008" ll="SDBH:משׁל:001002">掌權者</a>​的​<a name="02101000400004" ll="SDBH:רוּחַ:000002">怒氣</a>​若​向​你​<a name="02101000400010" ll="SDBH:עלה:000022">發作</a>​，​<a name="02101000400016" ll="SDBH:אַל:000000">不要</a>​<a name="02101000400018" ll="SDBH:נוח:000001">離開</a>​你​的​<a name="02101000400014" ll="SDBH:מָקֹום:000000">本位</a>​，​因為​<a name="02101000400022" ll="SDBH:מַרְפֵּא:001000">鎮定</a>​能​<a name="02101000400024">平息</a>​<a name="02101000400026;02101000400028" ll="SDBH:גָּדֹול:000003;SDBH:חֵטְא:000001">大過</a>​。
    
\v 5 我​<a name="02101000500006" ll="SDBH:ראה:000000">見</a>​<a name="02101000500012" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​之下​<a name="02101000500002">有</a>​一​件​<a name="02101000500004" ll="SDBH:רָעָה:000000">禍患</a>​，​似乎​<a name="02101000500020" ll="SDBH:יצא:000025">出於</a>​<a name="02101000500030" ll="SDBH:שַׁלִּיט:000000">統治者</a>​的​<a name="02101000500016" ll="SDBH:שְׁגָגָה:000000">錯誤</a>​，
    
\v 6 就是​<a name="02101000600006" ll="SDBH:סֶכֶל:000000" tl="HOTTP2901">愚昧人</a>​<a name="02101000600002">立</a>​在​<a name="02101000600012" ll="SDBH:מָרֹום:000002" tl="HOTTP2902">高位</a>​；​<a name="02101000600018" ll="SDBH:עָשִׁיר:000000" tl="HOTTP2902">有錢</a>​<a name="02101000600018" ll="SDBH:עָשִׁיר:000000" tl="HOTTP2902">人</a>​卻​<a name="02101000600026" ll="SDBH:ישׁב:000000">坐</a>​在​<a name="02101000600024" ll="SDBH:שֵׁפֶל:000000">低位</a>​。
    
\v 7 我​<a name="02101000700002" ll="SDBH:ראה:000000">見</a>​<a name="02101000700004" ll="SDBH:עֶבֶד:000000">僕人</a>​<a name="02101000700008" ll="SDBH:סוּס:000000">騎馬</a>​，​<a name="02101000700012" ll="SDBH:שַׂר:000000">王子</a>​像​<a name="02101000700018" ll="SDBH:עֶבֶד:000000">僕人</a>​在​<a name="02101000700024" ll="SDBH:אֶרֶץ:000000">地</a>​<a name="02101000700024" ll="SDBH:אֶרֶץ:000000">上</a>​<a name="02101000700014" ll="SDBH:הלך:000001">步行</a>​。
    
\v 8 <a name="02101000800002" ll="SDBH:חפר:000002">挖</a>​<a name="02101000800004" ll="SDBH:גּוּמָּץ:000000">陷坑</a>​的​，​自己​必​<a name="02101000800008" ll="SDBH:נפל:000000">陷</a>​在​其中​；​<a name="02101000800012" ll="SDBH:פרץ:000002">拆</a>​<a name="02101000800014" ll="SDBH:גָּדֵר:000000">城牆</a>​的​，​自己​必​<a name="02101000800016" ll="SDBH:נשׁך:000000">被</a>​<a name="02101000800018" ll="SDBH:נָחָשׁ:000000">蛇</a>​<a name="02101000800016" ll="SDBH:נשׁך:000000">咬</a>​。
    
\v 9 <a name="02101000900002" ll="SDBH:נסע:000000">開鑿</a>​<a name="02101000900004" ll="SDBH:אֶבֶן:000007">石頭</a>​的​，​會​受​<a name="02101000900006" ll="SDBH:עצב:000000">損傷</a>​；​<a name="02101000900010" ll="SDBH:בקע:000001">劈開</a>​<a name="02101000900012" ll="SDBH:עֵץ:000001">木頭</a>​的​，​必​遭​<a name="02101000900014" ll="SDBH:סכן:002000">危險</a>​。
    
\v 10 <a name="02101001000008" ll="SDBH:בַּרְזֶל:000000">鐵器</a>​<a name="02101001000004" ll="SDBH:קהה:000001">鈍</a>​了​，​若​不​將​<a name="02101001000016" ll="SDBH:פָּנֶה:000000" tl="HOTTP2903">刃</a>​<a name="02101001000018" ll="SDBH:קלל:000008" tl="HOTTP2903">磨快</a>​，​就​必​<a name="02101001000024" ll="SDBH:גבר:000001">多</a>​費​<a name="02101001000022" ll="SDBH:חַיִל:000000">力氣</a>​；​但​<a name="02101001000034" ll="SDBH:חָכְמָה:000000">智慧</a>​的​<a name="02101001000028" ll="SDBH:יִתְרֹון:000000">益處</a>​在於​使​人​<a name="02101001000030" ll="SDBH:כשׁר:000002">成功</a>​。
    
\v 11 尚未​行​<a name="02101001100014" ll="SDBH:לַחַשׁ:000001">法術</a>​，​<a name="02101001100008" ll="SDBH:נָחָשׁ:000000">蛇</a>​若​<a name="02101001100004" ll="SDBH:נשׁך:000000">咬</a>​人​，​<a name="02101001100024;02101001100028" ll="SDBH:בַּעַל:000008;SDBH:לָשֹׁון:000001">行</a>​<a name="02101001100024;02101001100028" ll="SDBH:בַּעַל:000008;SDBH:לָשֹׁון:000001">法術</a>​<a name="02101001100024;02101001100028" ll="SDBH:בַּעַל:000008;SDBH:לָשֹׁון:000001">的</a>​<a name="02101001100024;02101001100028" ll="SDBH:בַּעַל:000008;SDBH:לָשֹׁון:000001">人</a>​就​得​<a name="02101001100018">不</a>​到​甚麼​<a name="02101001100020" ll="SDBH:יִתְרֹון:000000">好處</a>​了​。
    
\v 12 <a name="02101001200006" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​的​<a name="02101001200004" ll="SDBH:פֶּה:000000">口</a>​說出​<a name="02101001200002;02101001200008" ll="SDBH:דָּבָר:000000;SDBH:חֵן:000002">恩言</a>​；​<a name="02101001200014" ll="SDBH:כְּסִיל:000000">愚昧人</a>​的​<a name="02101001200012" ll="SDBH:שָׂפָה:000001">嘴</a>​<a name="02101001200016" ll="SDBH:בלע:000001">吞滅</a>​自己​，
    
\v 13 他​<a name="02101001300006" ll="SDBH:פֶּה:000000">口</a>​中​的​<a name="02101001300004" ll="SDBH:דָּבָר:000000">話語</a>​<a name="02101001300002" ll="SDBH:תְּחִלָּה:000000">起頭</a>​是​<a name="02101001300008" ll="SDBH:סִכְלוּת:000000">愚昧</a>​，​<a name="02101001300012" ll="SDBH:אַחֲרִית:000001">終局</a>​是​<a name="02101001300018" ll="SDBH:רָעָה:000000">邪惡</a>​的​<a name="02101001300016" ll="SDBH:הֹולֵלוּת:000000">狂妄</a>​。
    
\v 14 <a name="02101001400006" ll="SDBH:סָכָל:000000">愚昧人</a>​<a name="02101001400008">多</a>​有​<a name="02101001400010" ll="SDBH:דָּבָר:000000">話語</a>​。​<a name="02101001400018" ll="SDBH:אָדָם:000000">人</a>​不​<a name="02101001400014">知</a>​將來​會​<a name="02101001400024">發生</a>​甚麼​事​，​他​身​後​的​事​誰​能​<a name="02101001400038" ll="SDBH:נגד:000000">告訴</a>​他​呢​？
    
\v 15 <a name="02101001500006" ll="SDBH:כְּסִיל:000000" tl="HOTTP2904">愚昧人</a>​的​<a name="02101001500002" ll="SDBH:עָמָל:000000" tl="HOTTP2904">勞碌</a>​使​自己​<a name="02101001500008" ll="SDBH:יגע:000001" tl="HOTTP2904">困乏</a>​，​連​<a name="02101001500018;02101001500022" ll="SDBH:הלך:000001;SDBH:עִיר:000000">進城</a>​的​路​他​也​不​<a name="02101001500014">知道</a>​。
    
\v 16 <a name="02101001600006" ll="SDBH:אֶרֶץ:000000">邦國</a>​啊​，​你​的​<a name="02101001600010" ll="SDBH:מֶלֶךְ:000000">君王</a>​若​<a name="02101001600012" ll="SDBH:נַעַר:000000">年少</a>​，​你​的​<a name="02101001600016" ll="SDBH:שַׂר:000000">羣臣</a>​<a name="02101001600022" ll="SDBH:בֹּקֶר:000000">早晨</a>​<a name="02101001600024" ll="SDBH:אכל:000000">宴樂</a>​，​你​就​有​禍​了​！
    
\v 17 <a name="02101001700004" ll="SDBH:אֶרֶץ:000000">邦國</a>​啊​，​你​的​<a name="02101001700008" ll="SDBH:מֶלֶךְ:000000">君王</a>​若​是​<a name="02101001700012" ll="SDBH:חֹר:001000">貴族</a>​之​<a name="02101001700010" ll="SDBH:בֵּן:000003">子</a>​，​你​的​<a name="02101001700016" ll="SDBH:שַׂר:000000">羣臣</a>​<a name="02101001700022" ll="SDBH:עֵת:000000">按時</a>​<a name="02101001700024" ll="SDBH:אכל:000000">吃喝</a>​，​是​為​強​身​，​不​為​<a name="02101001700038" ll="SDBH:שְׁתִי:001000">酒醉</a>​，​你​就​有​福​了​！
    
\v 18 因​人​<a name="02101001800004" ll="SDBH:עֲצַלְתַּיִם:000000">懶惰</a>​，​<a name="02101001800010" ll="SDBH:מְקָרֶה:000000">房頂</a>​<a name="02101001800006" ll="SDBH:מכך:000001">塌下</a>​；​因​人​<a name="02101001800018">手</a>​<a name="02101001800016" ll="SDBH:שִׁפְלוּת:000000">懶</a>​，​<a name="02101001800024" ll="SDBH:בַּיִת:000000">房屋</a>​<a name="02101001800020" ll="SDBH:דלף:000000">滴漏</a>​。
    
\v 19 <a name="02101001900006">擺設</a>​<a name="02101001900008" ll="SDBH:לֶחֶם:000000">宴席</a>​是​為​<a name="02101001900004" ll="SDBH:שְׂחֹוק:000000">歡樂</a>​。​<a name="02101001900012" ll="SDBH:יַיִן:000000">酒</a>​能​使​<a name="02101001900016" ll="SDBH:חַי:000000">人</a>​<a name="02101001900014" ll="SDBH:שׂמח:000001">快活</a>​，​<a name="02101001900022" ll="SDBH:כֶּסֶף:000000">錢</a>​能​叫​<a name="02101001900030">萬事</a>​<a name="02101001900024" ll="SDBH:ענה:000000">應心</a>​。
    
\v 20 <a name="02101002000010" ll="SDBH:אַל:000000">不</a>​可​<a name="02101002000012" ll="SDBH:קלל:000005">詛咒</a>​<a name="02101002000008" ll="SDBH:מֶלֶךְ:000000">君王</a>​，​連​<a name="02101002000006" ll="SDBH:מַדָּע:000001">起意</a>​也​不​可​，​在​<a name="02101002000018;02101002000020" ll="SDBH:חֶדֶר:000000;SDBH:מִשְׁכָּב:000000">臥室</a>​裏​也​<a name="02101002000022" ll="SDBH:אַל:000000">不</a>​可​<a name="02101002000024" ll="SDBH:קלל:000005">詛咒</a>​<a name="02101002000026" ll="SDBH:עָשִׁיר:000000">富人</a>​；​因為​<a name="02101002000034" ll="SDBH:שָׁמַיִם:000000">空中</a>​的​<a name="02101002000030" ll="SDBH:עֹוף:000000">飛鳥</a>​必​<a name="02101002000036" ll="SDBH:הלך:000003">傳揚</a>​這​<a name="02101002000042">聲音</a>​，​<a name="02101002000046" ll="SDBH:בַּעַל:000003">有</a>​<a name="02101002000050" ll="SDBH:כָּנָף:000000">翅膀</a>​<a name="02101002000046" ll="SDBH:בַּעַל:000003">的</a>​必​<a name="02101002000052" ll="SDBH:נגד:000000">述說</a>​這​<a name="02101002000054" ll="SDBH:דָּבָר:000000">事</a>​。
\c 11
\v 1 當​將​你​的​<a name="02101100100004" ll="SDBH:לֶחֶם:000000">糧食</a>​<a name="02101100100002" ll="SDBH:שׁלח:000006">撒</a>​在​<a name="02101100100008;02101100100012" ll="SDBH:מַיִם:000000">水面</a>​上​，​因為​<a name="02101100100022" ll="SDBH:יֹום:000002">日子</a>​<a name="02101100100018" ll="SDBH:רֹב:000000">久</a>​了​，​你​必​能​<a name="02101100100024" ll="SDBH:מצא:000012">得着</a>​它​。
    
\v 2 將​你​所​擁有​的​<a name="02101100200002">分給</a>​<a name="02101100200008" ll="SDBH:שֶׁבַע:000000">七</a>​人​，​或​<a name="02101100200016" ll="SDBH:שְׁמֹנֶה:000000">八</a>​人​，​因為​你​不​<a name="02101100200022">知道</a>​會​<a name="02101100200026">有</a>​甚麼​<a name="02101100200028" ll="SDBH:רָעָה:000002">災禍</a>​臨到​<a name="02101100200034" ll="SDBH:אֶרֶץ:000000">地</a>​<a name="02101100200034" ll="SDBH:אֶרֶץ:000000">上</a>​。
    
\v 3 <a name="02101100300008" ll="SDBH:עָב:000000">雲</a>​若​<a name="02101100300004" ll="SDBH:מלא:000000">滿</a>​了​<a name="02101100300010" ll="SDBH:גֶּשֶׁם:000000">雨</a>​，​就​必​<a name="02101100300018" ll="SDBH:ריק:000000">傾倒</a>​在​<a name="02101100300016" ll="SDBH:אֶרֶץ:000000">地</a>​<a name="02101100300016" ll="SDBH:אֶרֶץ:000000">上</a>​。​<a name="02101100300026" ll="SDBH:עֵץ:000000">樹</a>​向​<a name="02101100300032" ll="SDBH:דָּרֹום:000000">南</a>​<a name="02101100300024" ll="SDBH:נפל:000000">倒</a>​，​或​向​<a name="02101100300042" ll="SDBH:צָפֹון:000001">北</a>​倒​，​<a name="02101100300052" ll="SDBH:עֵץ:000000">樹</a>​<a name="02101100300048" ll="SDBH:נפל:000000">倒</a>​在​何處​，​就​留​在​<a name="02101100300054" ll="SDBH:שָׁם:000000">何處</a>​。
    
\v 4 <a name="02101100400002" ll="SDBH:שׁמר:000000">看</a>​<a name="02101100400004" ll="SDBH:רוּחַ:000004">風</a>​的​，​必​不​<a name="02101100400008" ll="SDBH:זרע:000000">撒種</a>​；​<a name="02101100400012" ll="SDBH:ראה:000000">望</a>​<a name="02101100400018" ll="SDBH:עָב:000000">雲</a>​的​，​必​不​<a name="02101100400022" ll="SDBH:קצר:000006">收割</a>​。
    
\v 5 你​<a name="02101100500006">不</a>​<a name="02101100500008">知道</a>​<a name="02101100500016" ll="SDBH:רוּחַ:000003">氣息</a>​<a name="02101100500012" ll="SDBH:דֶּרֶךְ:000000">如何</a>​進入​<a name="02101100500024;02101100500028" ll="SDBH:בֶּטֶן:000000;SDBH:מָלֵא:000004">孕婦</a>​的​<a name="02101100500020" ll="SDBH:עֶצֶם:000000">骨頭</a>​裏​；​<a name="02101100500030" ll="SDBH:כָּכָה:000000">照樣</a>​，​<a name="02101100500046">造</a>​<a name="02101100500052">萬物</a>​之​<a name="02101100500042" ll="SDBH:אֱלֹהִים:000002">上帝</a>​的​<a name="02101100500038" ll="SDBH:מַעֲשֶׂה:000002">作為</a>​，​你​也​無從​<a name="02101100500034">得知</a>​。
    
\v 6 <a name="02101100600006" ll="SDBH:בֹּקֶר:000000">早晨</a>​要​<a name="02101100600008;02101100600012" ll="SDBH:זֶרַע:000000;SDBH:זרע:000000">撒種</a>​，​<a name="02101100600020" ll="SDBH:עֶרֶב:000000">晚上</a>​也​<a name="02101100600022" ll="SDBH:אַל:000000">不要</a>​<a name="02101100600024;02101100600026" ll="SDBH:נוח:000001">歇手</a>​，​因為​你​<a name="02101100600030">不</a>​<a name="02101100600032">知道</a>​哪​一​樣​<a name="02101100600038" ll="SDBH:כשׁר:000001">發旺</a>​；​前者​或​後者​，​或​<a name="02101100600052" ll="SDBH:שְׁנַיִם:000000">兩者</a>​都​<a name="02101100600056" ll="SDBH:אֶחָד:000000">一樣</a>​<a name="02101100600058" ll="SDBH:טֹוב:000002">好</a>​。
    
\v 7 <a name="02101100700008" ll="SDBH:אֹור:000000">光</a>​是​<a name="02101100700004" ll="SDBH:מָתֹוק:000001">甜美</a>​的​，​<a name="02101100700018" ll="SDBH:עַיִן:000000">眼見</a>​<a name="02101100700028" ll="SDBH:שֶׁמֶשׁ:000000">日光</a>​是​多麼​<a name="02101100700012" ll="SDBH:טֹוב:000002">好</a>​啊​！
    
\v 8 <a name="02101100800014" ll="SDBH:אָדָם:000000">人</a>​<a name="02101100800010" ll="SDBH:חיה:000000">活</a>​多少​<a name="02101100800006" ll="SDBH:שָׁנָה:000000">年</a>​，​就​當​<a name="02101100800020" ll="SDBH:שׂמח:000000">快樂</a>​多少​年​，​然而​也​當​<a name="02101100800024" ll="SDBH:זכר:000000">想到</a>​<a name="02101100800032" ll="SDBH:חֹשֶׁךְ:000000">黑暗</a>​的​<a name="02101100800028" ll="SDBH:יֹום:000003">日子</a>​；​因為​這樣​的​日子​必​<a name="02101100800036">多</a>​，​所​要​<a name="02101100800044">來臨</a>​的​<a name="02101100800040">全</a>​是​<a name="02101100800046" ll="SDBH:הֶבֶל:000002">虛空</a>​。
    
\v 9 <a name="02101100900004" ll="SDBH:בָּחוּר:000000">年輕</a>​<a name="02101100900004" ll="SDBH:בָּחוּר:000000">人</a>​哪​，​你​在​<a name="02101100900008" ll="SDBH:יַלְדוּת:000000">年少</a>​<a name="02101100900008" ll="SDBH:יַלְדוּת:000000">時</a>​當​<a name="02101100900002" ll="SDBH:שׂמח:000000">快樂</a>​；​在​<a name="02101100900020">年輕</a>​<a name="02101100900018" ll="SDBH:יֹום:000004">時</a>​使​你​的​<a name="02101100900014" ll="SDBH:לֵב:000001">心</a>​<a name="02101100900012" ll="SDBH:יטב:000004">歡暢</a>​，​<a name="02101100900024" ll="SDBH:הלך:000004">做</a>​你​<a name="02101100900030" ll="SDBH:לֵב:000001">心</a>​<a name="02101100900028" ll="SDBH:דֶּרֶךְ:000007">所</a>​願​<a name="02101100900028" ll="SDBH:דֶּרֶךְ:000007">做</a>​<a name="02101100900028" ll="SDBH:דֶּרֶךְ:000007">的</a>​，​看​你​<a name="02101100900038" ll="SDBH:עַיִן:000000">眼</a>​<a name="02101100900036" ll="SDBH:מַרְאֶה:000000">所</a>​愛​<a name="02101100900036" ll="SDBH:מַרְאֶה:000000">看</a>​<a name="02101100900036" ll="SDBH:מַרְאֶה:000000">的</a>​；​卻​要​<a name="02101100900042">知道</a>​，​為​這​<a name="02101100900048">一切</a>​，​<a name="02101100900056" ll="SDBH:אֱלֹהִים:000002">上帝</a>​必​<a name="02101100900052;02101100900062" ll="SDBH:מִשְׁפָּט:000000">審問</a>​你​。
    
\v 10 所以​，​當​從​<a name="02101101000010" ll="SDBH:לֵב:000001">心</a>​中​<a name="02101101000004" ll="SDBH:סור:000008">除掉</a>​<a name="02101101000006" ll="SDBH:כַּעַס:000000">愁煩</a>​，​從​<a name="02101101000020" ll="SDBH:בָּשָׂר:000001">肉體</a>​<a name="02101101000014">除去</a>​<a name="02101101000016" ll="SDBH:רָעָה:000002">痛苦</a>​；​因為​<a name="02101101000026" ll="SDBH:יַלְדוּת:000000">年少</a>​和​<a name="02101101000032" ll="SDBH:שַׁחֲרוּת:000000;SDBH:שַׁחֲרוּת:001000">年輕</a>​<a name="02101101000032" ll="SDBH:שַׁחֲרוּת:000000;SDBH:שַׁחֲרוּת:001000">之</a>​<a name="02101101000032" ll="SDBH:שַׁחֲרוּת:000000;SDBH:שַׁחֲרוּת:001000">時</a>​，​全​是​<a name="02101101000034" ll="SDBH:הֶבֶל:000002">虛空</a>​。
\c 12
\v 1 你​<a name="02101200100012" ll="SDBH:יֹום:000004">趁着</a>​<a name="02101200100014">年輕</a>​、​<a name="02101200100028" ll="SDBH:רָעָה:000002">衰老</a>​的​<a name="02101200100024" ll="SDBH:יֹום:000004">日子</a>​尚未​<a name="02101200100022">來到</a>​，​就​是​你​所​<a name="02101200100038" ll="SDBH:אמר:000000">說</a>​，​我​<a name="02101200100040">毫無</a>​<a name="02101200100046" ll="SDBH:חֵפֶץ:000002">喜悅</a>​的​那些​<a name="02101200100034" ll="SDBH:שָׁנָה:000000">歲月</a>​<a name="02101200100032" ll="SDBH:נגע:000006">來臨</a>​之前​，​當​<a name="02101200100004" ll="SDBH:זכר:000000">記念</a>​<a name="02101200100008" ll="SDBH:ברא:000001">造</a>​你​的​<a name="02101200100008" ll="SDBH:ברא:000001">主</a>​。 
\v 2 不要​等到​<a name="02101200200012" ll="SDBH:שֶׁמֶשׁ:000000">太陽</a>​、​<a name="02101200200018" ll="SDBH:אֹור:000000">光明</a>​、​<a name="02101200200024" ll="SDBH:יָרֵחַ:000000">月亮</a>​、​<a name="02101200200030" ll="SDBH:כֹּוכָב:000000">星宿</a>​變為​<a name="02101200200008" ll="SDBH:חשׁך:000000">黑暗</a>​，​<a name="02101200200044" ll="SDBH:גֶּשֶׁם:000000">雨</a>​後​<a name="02101200200038" ll="SDBH:עָב:000000">雲</a>​又​<a name="02101200200034" ll="SDBH:שׁוב:000022">返回</a>​； 
\v 3 <a name="02101200300012" ll="SDBH:שׁמר:000007">看守</a>​<a name="02101200300016" ll="SDBH:בַּיִת:000000">房屋</a>​的​<a name="02101200300010" ll="SDBH:זוע:000000">發顫</a>​，​<a name="02101200300022;02101200300026" ll="SDBH:חַיִל:000000">強壯</a>​<a name="02101200300022;02101200300026" ll="SDBH:חַיִל:000000">的</a>​<a name="02101200300020" ll="SDBH:עות:000000">屈身</a>​，​<a name="02101200300034" ll="SDBH:טחן:000000">推磨</a>​<a name="02101200300034" ll="SDBH:טחן:000000">的</a>​婦女​因​人​<a name="02101200300038" ll="SDBH:מעט:000006">少</a>​而​<a name="02101200300030" ll="SDBH:בטל:000000">停工</a>​，​從​<a name="02101200300052" ll="SDBH:אֲרֻבָּה:000000">窗戶</a>​往​外​<a name="02101200300046" ll="SDBH:ראה:000000">看</a>​的​眼光​<a name="02101200300042" ll="SDBH:חשׁך:000003" tl="HOTTP2905">變為</a>​<a name="02101200300042" ll="SDBH:חשׁך:000003" tl="HOTTP2905">昏暗</a>​； 
\v 4 <a name="02101200400006;02101200400012" ll="SDBH:דֶּלֶת:000003;SDBH:שׁוּק:000000">街門</a>​<a name="02101200400004" ll="SDBH:סגר:000000">關閉</a>​，​<a name="02101200400022" ll="SDBH:טַחֲנָה:000000">推磨</a>​的​<a name="02101200400018">聲音</a>​<a name="02101200400016" ll="SDBH:שׁפל:000003">微小</a>​，​<a name="02101200400034" ll="SDBH:צִפֹּור:000001" il="LB00071;PikiWiki_Israel_31440" tl="HOTTP2906">鳥</a>​一​<a name="02101200400030">叫</a>​，​就​<a name="02101200400026">驚醒</a>​，​<a name="02101200400046" ll="SDBH:שִׁיר:000000">唱歌</a>​<a name="02101200400042" ll="SDBH:בַּת:000007">女子</a>​的​聲音​也​<a name="02101200400040">都</a>​<a name="02101200400038" ll="SDBH:שׁחח:000003" tl="HOTTP2907">微弱</a>​； 
\v 5 人​<a name="02101200500008" ll="SDBH:ירא:000000">怕</a>​<a name="02101200500006" ll="SDBH:גָּבֹהַּ:000000">高處</a>​，​<a name="02101200500018" ll="SDBH:דֶּרֶךְ:000000">路</a>​上​有​<a name="02101200500012" ll="SDBH:חַתְחַת:000000">驚慌</a>​；​<a name="02101200500026" ll="SDBH:שָׁקֵד:000000">杏樹</a>​<a name="02101200500022" ll="SDBH:נצץ:000001">開花</a>​，​<a name="02101200500034" ll="SDBH:חָגָב:000000">蚱蜢</a>​<a name="02101200500030" ll="SDBH:סבל:000002">成為</a>​<a name="02101200500030" ll="SDBH:סבל:000002">重擔</a>​，​<a name="02101200500042" ll="SDBH:אֲבִיֹּונָה:000000">慾望</a>​<a name="02101200500038" ll="SDBH:פרר:000001" tl="HOTTP2908">不再</a>​<a name="02101200500038" ll="SDBH:פרר:000001" tl="HOTTP2908">挑起</a>​；​因為​<a name="02101200500050" ll="SDBH:אָדָם:000000">人</a>​<a name="02101200500046" ll="SDBH:הלך:000007">歸</a>​他​<a name="02101200500056" ll="SDBH:עֹולָם:000000">永遠</a>​的​<a name="02101200500054" ll="SDBH:בַּיִת:000000">家</a>​，​<a name="02101200500070" ll="SDBH:ספד:000000">弔喪</a>​的​在​<a name="02101200500066" ll="SDBH:שׁוּק:000000">街</a>​上​<a name="02101200500060">往來</a>​。 
\v 6 不要​等到​<a name="02101200600012;02101200600016" ll="SDBH:חֶבֶל:000000;SDBH:כֶּסֶף:000000">銀鏈</a>​<a name="02101200600010" ll="SDBH:רתק:001000" tl="HOTTP2909">折斷</a>​，​<a name="02101200600026" ll="SDBH:זָהָב:000000">金</a>​<a name="02101200600022" ll="SDBH:גֻּלָּה:000000">罐</a>​<a name="02101200600020" ll="SDBH:רוץ:001000">破裂</a>​，​<a name="02101200600032" ll="SDBH:כַּד:000000">瓶子</a>​在​<a name="02101200600038" ll="SDBH:מַבּוּעַ:000000">泉</a>​旁​<a name="02101200600030" ll="SDBH:שׁבר:000000">損壞</a>​，​<a name="02101200600046" ll="SDBH:גַּלְגַּל:000001">水輪</a>​在​<a name="02101200600052" ll="SDBH:בֹּור:000000">井口</a>​<a name="02101200600042" ll="SDBH:רצץ:000000">斷裂</a>​， 
\v 7 <a name="02101200700008" ll="SDBH:עָפָר:000000">塵土</a>​仍​<a name="02101200700004" ll="SDBH:שׁוב:000036">歸於</a>​<a name="02101200700014" ll="SDBH:אֶרֶץ:000000">地</a>​，​像​原來​一樣​，​<a name="02101200700026" ll="SDBH:רוּחַ:000003">氣息</a>​仍​<a name="02101200700028" ll="SDBH:שׁוב:000022">歸於</a>​<a name="02101200700038">賜</a>​氣息​的​<a name="02101200700034" ll="SDBH:אֱלֹהִים:000002">上帝</a>​。 
\v 8 <a name="02101200800010" ll="SDBH:קֹהֶלֶת:000000">傳道者</a>​<a name="02101200800006" ll="SDBH:אמר:000000">說</a>​：​「​<a name="02101200800004" ll="SDBH:הֶבֶל:000002">虛空</a>​的​<a name="02101200800002" ll="SDBH:הֶבֶל:000002">虛空</a>​，​<a name="02101200800014">全</a>​是​<a name="02101200800016" ll="SDBH:הֶבֶל:000002">虛空</a>​。​」
    
\v 9 再者​，​<a name="02101200900010" ll="SDBH:קֹהֶלֶת:000000">傳道者</a>​因​<a name="02101200900008">有</a>​<a name="02101200900012" ll="SDBH:חָכָם, קסם:000000">智慧</a>​，​將​<a name="02101200900018" ll="SDBH:דַּעַת:000000">知識</a>​<a name="02101200900016" ll="SDBH:למד:000001">教導</a>​<a name="02101200900024" ll="SDBH:עַם:000000">眾人</a>​；​他​<a name="02101200900028" ll="SDBH:אזן:000002">思量</a>​，​<a name="02101200900032" ll="SDBH:חקר:000000">考察</a>​，​並​<a name="02101200900034" ll="SDBH:תקן:000002">列舉</a>​<a name="02101200900034" ll="SDBH:תקן:000002">出</a>​<a name="02101200900038">許多</a>​<a name="02101200900036" ll="SDBH:מָשָׁל:000000">箴言</a>​。 
\v 10 <a name="02101201000004" ll="SDBH:קֹהֶלֶת:000000">傳道者</a>​專心​<a name="02101201000002" ll="SDBH:בקשׁ:000005">尋求</a>​<a name="02101201000012" ll="SDBH:חֵפֶץ:000002">可</a>​<a name="02101201000012" ll="SDBH:חֵפֶץ:000002">喜悅</a>​<a name="02101201000012" ll="SDBH:חֵפֶץ:000002">的</a>​<a name="02101201000010" ll="SDBH:דָּבָר:000000">言語</a>​，​是​憑​<a name="02101201000018" ll="SDBH:יֹשֶׁר:000000">正直</a>​<a name="02101201000016" ll="SDBH:כתב:000000" il="Scribe at work;WritingScroll-ReedPen-01-065d;tb032014452" tl="HOTTP2910">寫</a>​的​<a name="02101201000020;02101201000022" ll="SDBH:אֱמֶת:000000;SDBH:דָּבָר:000000">誠實話</a>​。
    
\v 11 <a name="02101201100004" ll="SDBH:חָכָם, קסם:000000">智慧人</a>​的​<a name="02101201100002" ll="SDBH:דָּבָר:000000">話語</a>​如同​<a name="02101201100010" ll="SDBH:דָּרְבָן:000000">刺棒</a>​；​這些​<a name="02101201100020;02101201100022" ll="SDBH:אֲסֻפָּה:000000;SDBH:בַּעַל:000005">嘉言</a>​好像​<a name="02101201100018" ll="SDBH:נטע:000000">釘穩</a>​的​<a name="02101201100016" ll="SDBH:מַשְׂמֵרָה:000000">釘子</a>​，​都​是​<a name="02101201100030" ll="SDBH:אֶחָד:000000">一</a>​個​<a name="02101201100028" ll="SDBH:רעה:000003">牧者</a>​所​<a name="02101201100024">賜</a>​的​。 
\v 12 我​<a name="02101201200010" ll="SDBH:בֵּן:000009">兒</a>​，​<a name="02101201200004" ll="SDBH:יֹותֵר:000002">還有</a>​一​點​，​你​當​受​<a name="02101201200012" ll="SDBH:זהר:001000">勸戒</a>​：​<a name="02101201200014">著</a>​<a name="02101201200016">書</a>​<a name="02101201200018">多</a>​，​<a name="02101201200020">沒有</a>​<a name="02101201200022" ll="SDBH:קֵץ:000000">窮盡</a>​；​<a name="02101201200026" ll="SDBH:לַהַג:000000">讀書</a>​<a name="02101201200028">多</a>​，​<a name="02101201200032" ll="SDBH:בָּשָׂר:000001">身體</a>​<a name="02101201200030" ll="SDBH:יְגִיעָה:000000">疲倦</a>​。
    
\v 13 這些​<a name="02101201300004" ll="SDBH:דָּבָר:000002">事</a>​<a name="02101201300008">都</a>​已​<a name="02101201300010">聽見</a>​了​，​<a name="02101201300002" ll="SDBH:סֹוף:000001">結論</a>​就是​：​<a name="02101201300018" ll="SDBH:ירא:000000">敬畏</a>​<a name="02101201300016" ll="SDBH:אֱלֹהִים:000002">上帝</a>​，​<a name="02101201300026" ll="SDBH:שׁמר:000003">謹守</a>​他​的​<a name="02101201300024" ll="SDBH:מִצְוָה:000000">誡命</a>​，​這​是​<a name="02101201300036" ll="SDBH:אָדָם:000000" tl="HOTTP2911">人</a>​當​盡​的​本分​。 
\v 14 因為​人​<a name="02101201400008" ll="SDBH:מַעֲשֶׂה:000001">所</a>​<a name="02101201400008" ll="SDBH:מַעֲשֶׂה:000001">做</a>​<a name="02101201400008" ll="SDBH:מַעֲשֶׂה:000001">的</a>​<a name="02101201400008" ll="SDBH:מַעֲשֶׂה:000001">事</a>​，​連​<a name="02101201400022">一切</a>​<a name="02101201400024" ll="SDBH:עלם:000003">隱藏</a>​的​事​，​無論​是​<a name="02101201400028" ll="SDBH:טֹוב:000002">善</a>​是​<a name="02101201400034" ll="SDBH:רַע:000005">惡</a>​，​<a name="02101201400012" ll="SDBH:אֱלֹהִים:000002">上帝</a>​都​必​<a name="02101201400014;02101201400018" ll="SDBH:מִשְׁפָּט:000000">審問</a>​。
